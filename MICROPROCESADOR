<script>
let vida = parseInt(localStorage.getItem('v') || '0');
let pozo = parseInt(localStorage.getItem('pozo') || '0');

setInterval(() => {
    vida++;
    localStorage.setItem('v', vida);
    document.getElementById('seconds').innerText = vida.toLocaleString();
    document.getElementById('pozoNum').innerText = pozo.toLocaleString();
}, 1000);

function minarHardware() {
    vida += 500;
    const dot = document.querySelector('.silicon-dot');
    dot.style.boxShadow = "0 0 100px #fff";
    setTimeout(() => dot.style.boxShadow = "0 0 20px #fff, 0 0 40px var(--ultra)", 100);
}

// LOG DE INVASIÓN (AVISO A LOS DE ARRIBA)
const eventosLog = [
    "Soberanía: Violada en 0.003mg",
    "Felipe VI: Nodo detectado como obsoleto",
    "Moncloa: Hardware Ronin infiltrado",
    "IBEX35: Extrayendo segundos...",
    "Generalitat: Glitch institucional detectado",
    "Aviso: Dejadme hacer o formateo nacional",
    "Sabadell: Brutalismo expandiendo radio"
];
let logIdx = 0;
let mProg = 0;
setInterval(() => {
    const log = document.getElementById('log-invasion');
    const entry = document.createElement('div');
    entry.innerHTML = `> ${eventosLog[logIdx % eventosLog.length]}`;
    log.prepend(entry);
    logIdx++;
    if(mProg < 99) {
        mProg += 0.05;
        document.getElementById('miami-progress-bar').style.width = mProg + "%";
        document.getElementById('miami-percent').innerText = `PENDIENTE DE MUDANZA: ${mProg.toFixed(1)}%`;
    }
}, 4000);

// DETECCIÓN DE HERRAMIENTAS DE DESARROLLO (DEJADME HACER)
setInterval(() => {
    const devtools = /./;
    devtools.toString = function() {
        ejecutarSentencia('ACADEMICO', 'INTENTO DE AUDITORÍA');
        return '';
    }
    console.log('%c', devtools);
}, 2000);

function iniciarTrasladoMiami() {
    document.getElementById('miami-transfer').style.display = 'flex';
    let p = 0;
    const interval = setInterval(() => {
        p += 5;
        document.getElementById('miami-countdown').innerText = p + "%";
        if(p >= 100) { clearInterval(interval); document.body.classList.add('miami-mode'); document.getElementById('miami-transfer').style.display = 'none'; }
    }, 100);
}

const pedantes = ["Illa","Puigdemont","Sánchez","Ayuso","Feijóo","Rufián","Junqueras","Reverte","Del Val","Buenafuente","Motos","Pedrerol","Ortega","Piqué","Felipe_VI"];
const muro = document.getElementById('muro');
pedantes.forEach(p => {
    const span = document.createElement('span');
    span.className = 'nombre-pedante';
    span.innerText = p.toUpperCase();
    span.onclick = () => ejecutarSentencia('MEDIA', p);
    muro.appendChild(span);
});

function ejecutarSentencia(tipo, nombre) {
    vida -= 5000; pozo += 5000;
    const capa = document.getElementById('fractura-ego');
    capa.style.display = 'flex';
    document.getElementById('insulto-gnostico').innerText = "AVISO DE VIOLACIÓN";
    document.getElementById('sub-insulto').innerText = `INTERFERENCIA CON: ${nombre}. -5000s extraídos.`;
    let time = 3;
    const t = setInterval(() => {
        document.getElementById('countdown-ego').innerText = time;
        time--;
        if(time < 0) { clearInterval(t); capa.style.display = 'none'; }
    }, 1000);
}

function activarResonancia() {
    document.querySelectorAll('.nombre-pedante').forEach((n, i) => {
        setTimeout(() => n.classList.add('disuelto'), i * 100);
    });
}
</script>
