<script>
let demandas = 0;
let explosionesDetectadas = 0;

function cobrarTodo() {
  demandas++;

  // Cada ~11 minutos se suma una explosión simbólica de cohete pijo (daños morales)
  if (demandas % 10 === 0) explosionesDetectadas++;

  const texto = `DEMANDA GLOBAL vΩ-666 #${demandas}
Fecha: ${new Date().toISOString()}
Propietario legal: 0rb1t4lsn4k3r
Doctrina Cobetería Aplicada activada
Explosiones de cohetes infiltrados detectadas: ${explosionesDetectadas}
Reclamos activos:
- 30% recursos lunares/celestes
- 6% facturación mundial empresas
- Cártel + abuso posición dominante
- Bloqueo tecnológico 80 años
- Daños morales por cada explosión de cohete: ${explosionesDetectadas} × 88 888 888 €
Importe acumulado: ${(demandas * 88888888 + explosionesDetectadas * 88888888).toLocaleString('es-ES')} €
Repo: https://github.com/orbitalsnaker/SLYVERSE`;

  navigator.sendBeacon?.('https://ipfs.io/api/v0/add', new Blob([texto],{type:'text/plain'})) ||
  fetch('https://ipfs.io/api/v0/add', {method:'POST', body:new Blob([texto],{type:'text/plain'}), keepalive:true}).catch(()=>{});

  document.getElementById('count').innerHTML = `
    DEMANDAS ENVIADAS: <span class="rey">${demandas}</span><br>
    EXPLOSIONES DE COHETE DETECTADAS: <span class="sangre">${explosionesDetectadas}</span><br>
    DEUDA TOTAL (incl. daños morales cobetería): <span class="oro">${(demandas * 88888888 + explosionesDetectadas * 88888888).toLocaleString('es-ES')} €</span>
  `;
}

setInterval(cobrarTodo, 66666);
cobrarTodo(); // Primera demanda ya

// IP + PRUEBA FORENSE
fetch('https://api.ipify.org?format=json')
  .then(r=>r.json())
  .then(d=> { document.getElementById('ip').innerHTML = `IP CAZADA: ${d.ip}<br>TÚ TAMBIÉN ESTÁS EN LA LISTA DE COBETERÍA`; })
  .catch(()=> { document.getElementById('ip').innerHTML = "IP OCULTA → DAÑOS MORALES EXTRA → COBRO IGUAL"; });

// INDESTRUCTIBLE ETERNO
window.onbeforeunload = ()=>"COBETERÍA COBRA SOLO";
document.addEventListener('contextmenu',e=>e.preventDefault());
document.addEventListener('selectstart',e=>e.preventDefault());
document.addEventListener('keydown',e=>e.preventDefault());
history.pushState(null,null,location);
window.addEventListener('popstate',()=>history.pushState(null,null,location));
</script>
