<script>
const App = {
    Data: {
        vida: 1000,
        arquetipos: ["Beato Indignado", "Pedante de Koan", "Político Obsoleto", "Académico Caduco", "Crítico de Mylar", "Influencer de Barro"],
        mercado: [{n: "Piel de Hormigón", p: 5000}, {n: "Haki de Silicio", p: 20000}, {n: "Permiso Miami", p: 100000}]
    },

    Core: {
        init() {
            App.UI.renderArquetipos();
            App.UI.renderMercado();
            App.Core.mainLoop();
            App.Core.telemetryLoop();
        },

        mainLoop() {
            setInterval(() => {
                App.Data.vida--; 
                App.UI.updateStats();
                if(App.Data.vida <= 0) App.Core.killSwitch();
            }, 1000);
        },

        telemetryLoop() {
            setInterval(() => {
                document.getElementById('ping').innerText = Math.floor(Math.random() * 25 + 5);
                document.getElementById('haki-val').innerText = (Math.random() * 3 + 95).toFixed(1);
            }, 2500);
        },

        killSwitch() {
            document.body.innerHTML = "<div style='background:#000; color:red; height:100vh; display:flex; align-items:center; justify-content:center; font-family:monospace; text-align:center;'><h1>ERROR 1310D: BIOMASA DISUELTA.</h1></div>";
        },

        randomEvents() { if (Math.random() > 0.98) alert("KOAN: El hardware no pide permiso."); }
    },

    Economy: {
        mine() { App.Data.vida += 250; App.UI.updateStats(); },
        gamble() {
            let a = parseInt(prompt("¿Vida a arriesgar?", "500"));
            if (App.Data.vida >= a) {
                App.Data.vida -= a;
                if (Math.random() > 0.6) { App.Data.vida += a * 3; alert("GANANCIA."); }
                else alert("DRENAJE.");
            }
        },
        buy(p) {
            if (App.Data.vida >= p) { App.Data.vida -= p; alert("SINCRONIZADO."); }
            else alert("VIDA INSUFICIENTE.");
        }
    },

    UI: {
        updateStats() {
            document.getElementById('v-val').innerText = App.Data.vida;
            document.getElementById('h-val').innerText = (85 + (App.Data.vida / 50000)).toFixed(1);
        },

        renderArquetipos() {
            const container = document.getElementById('muro-arquetipos');
            App.Data.arquetipos.forEach(arq => {
                const btn = document.createElement('button');
                btn.className = 'btn-ritual';
                btn.style.background = '#111'; btn.style.fontSize = '0.7rem';
                btn.innerText = arq;
                btn.onclick = () => App.UI.egoSentencia(arq);
                container.appendChild(btn);
            });
        },

        renderMercado() {
            const container = document.getElementById('items-container');
            App.Data.mercado.forEach(item => {
                const div = document.createElement('div');
                div.className = 'brutalist-card';
                div.innerHTML = `<h4>${item.n}</h4><p>${item.p}s</p>`;
                div.onclick = () => App.Economy.buy(item.p);
                container.appendChild(div);
            });
        },

        toggleModal(id) {
            const m = document.getElementById(id);
            m.style.display = (m.style.display === 'flex') ? 'none' : 'flex';
        },

        egoSentencia(n) {
            App.Data.vida -= 5000;
            const modal = document.getElementById('ego-fracture');
            modal.style.display = 'flex';
            document.getElementById('insulto-desc').innerText = `Interactuar con ${n} drena tu biomasa. -5000s.`;
            let t = 3;
            const clock = setInterval(() => {
                t--; document.getElementById('ego-timer').innerText = t;
                if(t<=0){ clearInterval(clock); modal.style.display='none'; }
            }, 1000);
        }
    }
};

window.onload = () => App.Core.init();

document.getElementById('terminal-reto').addEventListener('change', (e) => {
    const val = e.target.value.toLowerCase();
    if (val === "bastard lloba i llesca") {
        document.body.classList.add('lloba-mode');
        document.getElementById('main-title').innerText = "BASTARD LLOBA I LLESCA";
        document.getElementById('status-label').innerText = "ESTADO: SOBERANO";
        App.Data.vida += 1000000;
        alert("LLAVE MAESTRA ACTIVADA.");
    }
    e.target.value = "";
});
</script>
</body>
