const TELEGRAM_WEBHOOK = "https://api.telegram.org/bot[TOKEN]/sendMessage?chat_id=[CHAT_ID]&text="; // ← agrega tu webhook real

// Check success param
if (new URLSearchParams(window.location.search).get('success')) {
  document.querySelectorAll('.buy').forEach(b => b.classList.add('success'));
  setTimeout(() => alert('¡Empoderamiento activado! Envío desde Shenzhen en 7-14 días.'), 1000);
}

document.querySelectorAll('.buy').forEach(b => {
  b.onclick = () => {
    const price = b.dataset.p;
    const item  = b.dataset.i;
    b.textContent = "INICIANDO PAGO SEGURO...";
    b.disabled = true;

    CrossmintPay.buy({
      projectId: PROJECT_ID,
      mintConfig: false,
      paymentMethod: "fiat-and-crypto",
      price: price + " EUR",
      recipient: { wallet: MY_WALLET },
      successRedirectUrl: window.location.href + "?success=1",
      onPaymentSuccess: (data) => {
        if (TELEGRAM_WEBHOOK) {
          const msg = encodeURIComponent(`NEW EMPOWERMENT ORDER\nItem: ${item}\n${price} EUR\nClient: ${data.email || "anónimo"}\nTX: ${data.transactionHash}\n→ Enviar desde almacén Shenzhen`);
          fetch(TELEGRAM_WEBHOOK + msg);
        }
        // Post to X? Opcional: Integra Twitter API para auto-tweet "Nuevo ronin empoderado! #SLYVERSE"
      }
    });
  };
});

// Efecto sangre
setInterval(()=>{ for(let i=0;i<88;i++){
  const g=document.createElement('div'); g.className='gore';
  g.style.left=Math.random()*100+'vw';
  g.style.animationDuration=(0.3+Math.random()*0.6)+'s';
  document.getElementById('bg').appendChild(g);
  setTimeout(()=>g.remove(),2200);
}},28);

// Fondo ondulante
const c=document.getElementById('c'),x=c.getContext('2d');
c.width=innerWidth; c.height=innerHeight;
window.addEventListener('resize', () => { c.width=innerWidth; c.height=innerHeight; });
(function w(){
  x.clearRect(0,0,c.width,c.height);
  const t=Date.now()*0.001;
  x.strokeStyle='#ff0033'; x.lineWidth=16;
  x.beginPath();
  for(let i=0;i<c.width;i+=3){
    const y=c.height/2 + Math.sin(i*0.012+t*28)*220 + Math.cos(i*0.007+t*18)*160;
    i===0?x.moveTo(i,y):x.lineTo(i,y);
  }
  x.stroke();
  requestAnimationFrame(w);
})();
