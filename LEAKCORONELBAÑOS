<script>
    function initMessage() {
        try {
            const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
            const oscillator = audioCtx.createOscillator();
            oscillator.type = 'sawtooth';
            oscillator.frequency.setValueAtTime(58, audioCtx.currentTime); 
            oscillator.connect(audioCtx.destination);
            oscillator.start();
            oscillator.stop(audioCtx.currentTime + 0.8);
        } catch(e){}

        setTimeout(() => {
            const msg = new SpeechSynthesisUtterance("Iker, casi te muerde. Ábalos cayó para que tú pudieras seguir sujetando la correa. El análisis ha terminado. Bienvenida la soberanía.");
            msg.lang = 'es-ES';
            msg.rate = 0.85;
            msg.pitch = 0.5; // Voz más grave y siniestra
            window.speechSynthesis.speak(msg);
        }, 1200);
    }
</script>

