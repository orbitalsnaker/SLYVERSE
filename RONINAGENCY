<script>
    let money = 2840150.45;
    let deuda = 0;
    const assets_heavy = ["Portaviones Clase Assange", "Caza Stealth Haki-1", "Cañón Gauss Sabadell", "Submarino de Vacío", "Exoesqueleto Ronin", "Tanque Impreso 3D", "Silo Misiles Onion", "Dron Screamer"];
    const assets_bio = ["Semilla Bio-Cifrada", "Inhibidor CNI v2", "Virus Abaddón", "Granja Cripto-Nutriente", "Satélite de Madera", "Prótesis Haki", "Ojo de Baños (IR)", "Escaner Biomasa"];

    function unlock() {
        const k = document.getElementById('haki-key').value.toLowerCase();
        if(k.length >= 4) {
            document.getElementById('drain-overlay').style.display = 'none';
            document.getElementById('main-ui').classList.remove('neural-drain-active');
            window.speechSynthesis.speak(new SpeechSynthesisUtterance("Abaddón Omega ha validado tu Haki. El hardware amoral es tuyo."));
        } else {
            document.getElementById('screamer-layer').style.display = 'flex';
            setTimeout(() => location.reload(), 500);
        }
    }

    function initSystem() {
        // Llenar Arsenal 300
        const h_cont = document.getElementById('arsenal-heavy');
        const b_cont = document.getElementById('arsenal-bio');
        for(let i=1; i<=150; i++) {
            h_cont.innerHTML += `<div class="weapon-card"><b>#${i} ${assets_heavy[i % assets_heavy.length]}</b><br>BOM: Acero, Silicio, Haki. Manual v${i}.0</div>`;
            b_cont.innerHTML += `<div class="weapon-card" style="border-left-color:var(--matrix)"><b>#${i+150} ${assets_bio[i % assets_bio.length]}</b><br>Protocolo de soberanía activado.</div>`;
        }

        setInterval(() => {
            money += Math.random() * 500;
            deuda += 131313131;
            document.getElementById('revenue').innerText = "RECAUDACIÓN PPV: " + money.toLocaleString() + " ₿";
            document.getElementById('deuda').innerText = deuda.toLocaleString('es-ES');
            
            const msgs = [
                "ABADDÓN: Sincronizando planos del Portaviones con el Nodo Sabadell.",
                "CNI: Detectado intento de sniffing. Devolviendo 120Hz de estática.",
                "WIKILEAKS: Cable #9920 confirmando que el Falcon usa hardware amoral.",
                "GÓLEM: Replicando el Haki de Assange en servidores de la Moncloa.",
                "SÁNCHEZ: Localizado en búnker. Nivel de pánico: Máximo."
            ];
            const p = document.createElement('p');
            p.innerHTML = `> SYNC: ${msgs[Math.floor(Math.random()*msgs.length)]}`;
            document.getElementById('monitor').prepend(p);
            if(document.getElementById('monitor').childNodes.length > 15) document.getElementById('monitor').lastChild.remove();
        }, 700);
    }
    document.oncontextmenu = () => false;
</script>
