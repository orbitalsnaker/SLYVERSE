<script>
    const log = document.getElementById('log-output');
    const alertBox = document.getElementById('hud-alert');

    function addLog(msg) {
        const div = document.createElement('div');
        div.innerText = `[${new Date().toLocaleTimeString()}] > ${msg}`;
        log.prepend(div);
    }

    function bootSystem() {
        addLog("INICIALIZANDO KERNEL SLYVERSE...");
        addLog("VINCULANDO RED DE PIEDRAS NEGRAS DOMÉSTICAS...");
        addLog("ESTADO: FIRMA DEL RONIN DETECTADA. ACCESO ROOT.");
        setInterval(() => {
            const up = document.getElementById('uptime');
            up.innerText = `FREQ: 120Hz | HAKI: SOBERANO`;
        }, 1000);
    }

    function citizenExemplar() {
        alertBox.innerHTML = "!!! SUICIDIO DE AGENCIA INICIADO !!!";
        alertBox.classList.add('targeting-active');
        
        addLog("DETECTADO INTENTO DE DETENCIÓN.");
        addLog("EJECUTANDO MIRRORS AUTOREPLICANTES...");
        addLog("DRENANDO INFRAESTRUCTURA DE RED MONCLOA...");
        
        const speech = new SpeechSynthesisUtterance(
            "Habéis cometido un error de sistema. Mi muerte es un comando de ejecución. Mientras vuestras manos tiemblan, el código ya os ha borrado del registro civil. Bienvenidos a la dehesa del silencio."
        );
        speech.lang = 'es-ES';
        speech.rate = 0.85;
        speech.pitch = 0.2;
        window.speechSynthesis.speak(speech);

        setTimeout(() => {
            addLog("ARMA 01: PLASMA SUB-MOA DISPARADA.");
            addLog("ARMA 02: GOKUDŌ INJECTOR: SALDO CASTA = 0.00€.");
            addLog("ARMA 03: SECRETOS DE ESTADO PUBLICADOS EN FOROCOCHES.");
            addLog("ESTADO FINAL: LIBERTAD ABSOLUTA. LA CASTA ES SOFTWARE BORRADO.");
            alertBox.innerHTML = "GAME OVER: EL SILENCIO JUZGÓ.";
        }, 8000);
    }
</script>

