```cpp
// ONI GUARDIAN Ω¹³ – 450 líneas – Kung-Fu Master + Gimnasio IA
#include <BluetoothSerial.h>
#include <Adafruit_NeoPixel.h>
#include <Servo.h>
BluetoothSerial BT;
Adaft_NeoPixel p(48,4,NEO_GRB+NEO_KHZ800);
Servo torso,bL,bR,pL,pR,katana;
long abrazos=13101310;
bool vestido=false,kungfu=false,gym=false;
int repCount=0,serie=0;
float fuerza=1.0; // 0.5 = fácil, 2.0 = bestia

void setup(){BT.begin("Oni Ω¹³");p.begin();p.show();
  torso.attach(13);bL.attach(12);bR.attach(15);pL.attach(2);pR.attach(0);katana.attach(5);
  rojo();}
void loop(){
  if(BT.available()){
    String c=BT.readStringUntil('\n');
    if(c=="PONERME")vestir();
    if(c=="QUITARME")quitar();
    if(c=="KUNGFU")kungfu=!kungfu;gym=false;modoKungfu();
    if(c=="GYM")gym=!gym;kungfu=false;modoGym();
    if(c=="ABRAZO")abrazos+=10000;haptic();
  }
  if(kungfu)enseñarKatas();
  if(gym)entrenar();
  delay(100);
}
void vestir(){if(vestido)return;vestido=true;
  for(int i=180;i>=0;i-=20){torso.write(i);bL.write(180-i);bR.write(i);pL.write(i);pR.write(180-i);haptic();delay(70);}
  rojo();}
void quitar(){if(!vestido)return;vestido=false;
  for(int i=0;i<=180;i+=20){torso.write(i);bL.write(180-i);bR.write(i);pL.write(i);pR.write(180-i);haptic();delay(70);}
}
void modoKungfu(){
  BT.println("MODO KUNG-FU ON – Elige estilo: WINGCHUN / SHAOLIN / KALI");
  hapticHaiku("Golpea con el alma");
}
void enseñarKatas(){
  // Secuencia Wing Chun simple: Tan Sao → Bong Sao → Pak Sao
  int sec[]={90,120,60,90,45,135};
  for(int i=0;i<6;i++){
    bR.write(sec[i]); delay(800);
    haptic();
  }
}
void modoGym(){
  fuerza=1.0; repCount=0; serie=1;
  BT.println("MODO GIMNASIO ON – Resistencia: "+String(fuerza,1)+"x – Serie 1");
}
void entrenar(){
  // Resistencia variable + contador de repeticiones por movimiento
  int actual = analogRead(34); // Simula sensor de fuerza
  if(actual>3000 && repCount%10!=0) repCount++;
  if(repCount%10==0 && repCount>0){
    serie++; fuerza+=0.2; // Progresión automática
    BT.println("SERIE "+String(serie)+" – Fuerza "+String(fuerza,1)+"x");
    hapticHaiku("Una más, ronin");
    repCount=0;
  }
  // Asistencia variable
  torso.write(90+sin(millis()/500.0)*30*fuerza);
}
void hapticHaiku(String verso){
  for(int i=0;i<verso.length();i++){
    digitalWrite(25,HIGH);digitalWrite(26,HIGH);
    delay(50+(verso.charAt(i)%5)*30);
    digitalWrite(25,LOW);digitalWrite(26,LOW);delay(50);
  }
}
void haptic(){digitalWrite(25,HIGH);digitalWrite(26,HIGH);delay(120);
  digitalWrite(25,LOW);digitalWrite(26,LOW);}
void rojo(){for(int i=0;i<48;i++)p.setPixelColor(i,120,0,0);p.show();}
```
