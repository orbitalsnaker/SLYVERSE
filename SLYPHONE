<script>
// Gore rain + theta canvas
setInterval(()=>{for(let i=0;i<35;i++){
  const g=document.createElement('div');g.className='gore';
  g.style.left=Math.random()*100+'vw';
  g.style.animationDuration=0.3+Math.random()*0.4+'s';
  document.getElementById('bg').appendChild(g);
  setTimeout(()=>g.remove(),1600);
}},30);

const c=document.getElementById('c'),x=c.getContext('2d');
c.width=innerWidth;c.height=innerHeight;
let oni=false;
function theta(){x.clearRect(0,0,c.width,c.height);
  const e=Date.now()*0.001,f=6.6,a=80;
  x.strokeStyle=oni?'#ff0033':var(--g);x.lineWidth=4;x.beginPath();
  for(let i=0;i<c.width;i+=2){
    const o=c.height/2+Math.sin(i*0.006+e*f)*a;
    i===0?x.moveTo(i,o):x.lineTo(i,o);
  }x.stroke();requestAnimationFrame(theta);}
theta();

// Abrazos eternos
let hugs=+(localStorage.hugs||131310);
document.getElementById('hugs').innerHTML=`ABRAZOS: ${hugs}`;
setInterval(()=>{hugs++;localStorage.hugs=hugs;document.getElementById('hugs').innerHTML=`ABRAZOS: ${hugs}`;},1310*2);

function toggleInfo(){document.getElementById('info').classList.toggle('show');}
function oniMode(){
  oni=!oni;
  document.getElementById('modo').textContent=oni?'ONI 666%':'DOJO';
  document.body.style.setProperty('--g',oni?'#ff0033':'#66ff33');
  speechSynthesis.speak(new SpeechSynthesisUtterance(oni?
    "ONI 666%. Katana orbital activada. Jack Parsons sonríe desde el más allá.":
    "Dojo ronin. Theta 6.6 Hz. Mate eterno activado."));
  navigator.vibrate(oni?[200,100,200,100,200,100,200,100,800]:[700]);
}

onload=()=>{hugs++;localStorage.hugs=hugs;};
</script>
