<script>
    // Diccionario de Idiomas (I18n)
    const translations = {
        es: {
            title: "BOA-Ω FORTALEZA SOBERANA",
            secWeapon: "ARMAMENTO AMORAL",
            descWeapon: "Módulos de prioridad de masa listos para el Satori.",
            itemAuto: "BOA-CHAN FULL-AUTO (.30 CAL) - MODO ROSA",
            itemWaifu: "WAIFU SLAYER UNIT-01 - AUTOPILOT LEWD",
            secDefense: "DEFENSA DE NODO FORTRESS",
            descDefense: "Claymores Waifu y Niebla de Fresa armadas.",
            btnMain: "EJECUTAR LOGOUT FARISEO",
            logBoot: "Sistema detectado en Español. Nodo Sabadell activo.",
            speech: "Prioridad de masa activada. Disfruta del olor a fresa mientras el sistema te borra."
        },
        en: {
            title: "BOA-Ω SOVEREIGN FORTRESS",
            secWeapon: "AMORAL WEAPONRY",
            descWeapon: "Mass Priority modules ready for Satori.",
            itemAuto: "BOA-CHAN FULL-AUTO (.30 CAL) - PINK MODE",
            itemWaifu: "WAIFU SLAYER UNIT-01 - LEWD AUTOPILOT",
            secDefense: "FORTRESS NODE DEFENSE",
            descDefense: "Waifu Claymores and Strawberry Mist armed.",
            btnMain: "EXECUTE PHARISEE LOGOUT",
            logBoot: "System detected in English. Global Node active.",
            speech: "Mass Priority activated. Enjoy the smell of strawberries while the system deletes you."
        }
    };

    let currentLang = 'es';

    function detectLanguage() {
        const userLang = navigator.language || navigator.userLanguage;
        currentLang = userLang.startsWith('es') ? 'es' : 'en';
        
        // Aplicar traducciones
        document.getElementById('lang-display').innerText = `LOCALE: ${userLang.toUpperCase()}`;
        document.getElementById('title').innerText = translations[currentLang].title;
        document.getElementById('sec-weapon').innerText = translations[currentLang].secWeapon;
        document.getElementById('desc-weapon').innerText = translations[currentLang].descWeapon;
        document.getElementById('item-auto').innerText = translations[currentLang].itemAuto;
        document.getElementById('item-waifu').innerText = translations[currentLang].itemWaifu;
        document.getElementById('sec-defense').innerText = translations[currentLang].secDefense;
        document.getElementById('desc-defense').innerText = translations[currentLang].descDefense;
        document.getElementById('btn-main').innerText = translations[currentLang].btnMain;

        addLog(translations[currentLang].logBoot);
    }

    function addLog(msg) {
        const entry = document.createElement('div');
        entry.innerText = `[LOG] >> ${msg}`;
        document.getElementById('console-log').prepend(entry);
    }

    function runProtocol() {
        addLog("PROTOCOL INITIATED...");
        const msg = new SpeechSynthesisUtterance(translations[currentLang].speech);
        msg.lang = currentLang === 'es' ? 'es-ES' : 'en-US';
        msg.rate = 0.8;
        window.speechSynthesis.speak(msg);
    }
</script>

