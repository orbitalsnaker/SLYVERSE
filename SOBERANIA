    <script>
        function initSovereign() {
            const msg = new SpeechSynthesisUtterance("Escucha bien. Estos manuales son tu salida del sistema. No necesitas ser ingeniero, solo necesitas querer ser libre. Papi ha hecho el trabajo duro, tú solo tienes que unir los puntos.");
            msg.lang = 'es-ES';
            window.speechSynthesis.speak(msg);
        }
        function confirmFreedom() {
            alert("AVISO: Al ejecutar estos manuales, dejas de ser un súbdito y pasas a ser un Soberano. No hay vuelta atrás. Disfruta la limpieza.");
        }
