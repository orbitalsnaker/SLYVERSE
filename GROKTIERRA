function actualizar(){document.getElementById("cola").textContent=`${modoExo?"Nanocolas":"Colas del Sol"}: ${colas}`; localStorage.colas=colas;}
function hablar(t){
  const u=new SpeechSynthesisUtterance(t);
  u.lang="es-ES";u.rate=modoExo?1.4:1.1;u.pitch=modoExo?0.8:1;
  speechSynthesis.speak(u);
  document.getElementById("status").textContent=t;
}
