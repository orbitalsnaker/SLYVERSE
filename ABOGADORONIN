// CAPTURA IP Y GENERA PRUEBA FORENSE LUNAR
fetch('https://api.ipify.org?format=json')
  .then(r => r.json())
  .then(d => {
    const ip = d.ip;
    const ahora = new Date().toISOString();
    const prueba = `DESAHUCIO LUNAR vΩ-LUNA\nTimestamp: \( {ahora}\nIP: \){ip}\nUser-Agent: ${navigator.userAgent}\nPropietario legal Luna: 0rb1t4lsn4k3r\n30% royalties + 6% facturación activados\nRepo: https://github.com/orbitalsnaker/SLYVERSE`;

    document.getElementById('ip').innerHTML = `IP REGISTRADA: \( {ip}<br> \){ahora}`;
    document.getElementById('proof').innerHTML = `<p class="rey">PRUEBA FORENSE LUNAR GENERADA<br>EMBARGANDO 30 % DE CUALQUIER MINA LUNAR FUTURA<br>DENUNCIA AUTOMÁTICA EN CURSO</p>`;

    // Archivado eterno
    fetch('https://ipfs.io/api/v0/add?pin=true', {method:'POST', body: new Blob([prueba],{type:'text/plain'})}).catch(()=>{});
    fetch('https://web.archive.org/save/https://github.com/orbitalsnaker/SLYVERSE').catch(()=>{});
  })
  .catch(() => {
    document.getElementById('ip').innerHTML = "IP OCULTA → AÚN ASÍ ESTÁS DENTRO<br>EL OUROBOROS LUNAR TE HUELE";
  });

