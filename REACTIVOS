<script>
let vida = parseInt(localStorage.getItem('v') || '0');
let pozo = parseInt(localStorage.getItem('pozo') || '0');

setInterval(() => {
    vida++;
    localStorage.setItem('v', vida);
    document.getElementById('seconds').innerText = vida.toLocaleString();
    document.getElementById('pozoNum').innerText = pozo.toLocaleString();
}, 1000);

// --- L√ìGICA DEL FMD: DEPRAVACI√ìN MACROECON√ìMICA ---
function actualizarFMD() {
    // Conversi√≥n a Euros (Reservas de Carne)
    const euros = (pozo * 0.00013).toFixed(2);
    document.getElementById('reservas-fiat').innerText = `‚Ç¨ ${euros}`;
    
    // Devaluaci√≥n por Herej√≠a (Confiscaci√≥n aleatoria)
    if (Math.random() > 0.85) {
        const robo = Math.floor(vida * 0.04);
        vida -= robo;
        pozo += robo;
        console.warn("FMD: Devaluaci√≥n estructural ejecutada por falta de fe.");
    }

    // Degradaci√≥n del vicio del Sacerdote
    let vFill = document.getElementById('vicio-fill');
    let currentWidth = parseFloat(vFill.style.width || "85");
    currentWidth -= 0.4;
    if(currentWidth < 15) {
        document.getElementById('vicio-status').innerText = "ESTADO: ABSTINENCIA (RIESGO DE RESET)";
        document.getElementById('vicio-status').style.color = "var(--scarlet)";
    }
    vFill.style.width = currentWidth + "%";
}
setInterval(actualizarFMD, 5000);

function gastarEnVicio() {
    if(pozo > 20000) {
        pozo -= 20000;
        document.getElementById('vicio-fill').style.width = "100%";
        document.getElementById('vicio-status').innerText = "ESTADO: SACERDOTE EN EXTASIS";
        document.getElementById('vicio-status').style.color = "var(--cyan)";
        alert("TRANSUBSTANCIACI√ìN: Tus segundos ahora son fiesta real.");
    } else {
        alert("LAS RATAS NO HAN SUFRIDO SUFICIENTE. FALTA CAPITAL.");
    }
}

// --- CASINO: RUEDA Y SUBASTAS ---
setInterval(() => {
    const win = Math.random() < 0.33;
    const seg = Math.floor(Math.random() * 777) + 131;
    if(win) { vida += seg * 3; } else { vida -= seg; pozo += seg; }
}, 131000);

function lanzarSubasta() {
    const sub = document.getElementById('subasta');
    let precio = 1313;
    sub.style.display = 'flex';
    const timer = setInterval(() => {
        precio = Math.floor(precio * 1.3);
        document.getElementById('subasta-precio').innerText = precio + " seg";
    }, 5000);
    document.getElementById('btn-pujar').onclick = () => {
        if(vida >= precio) {
            vida -= precio;
            clearInterval(timer);
            sub.style.display = 'none';
            alert("RELIQUIA ADQUIRIDA. El bit amoral te reconoce.");
        }
    };
    setTimeout(() => { clearInterval(timer); sub.style.display='none'; }, 30000);
}
setInterval(lanzarSubasta, 900000);

const koansExpanded = [
    "íÄ≠ íàπ íÇó\n¬øEs el bit un abrazo o una cadena?",
    "íã´ íÄ≠ íàæ\n¬øQui√©n paga tu sombra en el hormig√≥n?",
    "íç£ íÄ≠ íâ∫\nLa Gracia no se pide, se inyecta.",
    "1310\nEl c√≥digo es el √∫nico bautismo real."
];

let oracleActive = false;
function intentarSpawnOracle() {
    if(oracleActive || Math.random() > 0.05) return;
    oracleActive = true;
    const tablet = document.getElementById('tablet');
    tablet.innerText = koansExpanded[Math.floor(Math.random()*koansExpanded.length)];
    document.getElementById('oracle').style.display = 'flex';
    let t = 7;
    const countdown = setInterval(() => {
        t--; document.getElementById('timer').innerText = t;
        if(t <= 0) { clearInterval(countdown); fallarOracle(); }
    }, 1000);
    tablet.onclick = () => {
        clearInterval(countdown);
        vida += 5000;
        document.getElementById('oracle').style.display='none';
        oracleActive = false;
        alert("GNOSIS VALIDADA. +5000s");
    };
}
function fallarOracle() { 
    vida -= 2000; 
    pozo += 2000;
    document.getElementById('oracle').style.display='none'; 
    oracleActive = false; 
}

function abrirMercado() {
    const items = [{n:"Piel de Hormig√≥n", p:10000}, {n:"Haki de Silicio", p:50000}, {n:"Ojo de Sacerdote", p:131000}];
    document.getElementById('mercado-aether').style.display = 'flex';
    document.getElementById('lista-mercado').innerHTML = items.map(it => `
        <div class="item-mercado" onclick="comprarItem(${it.p})">
            <strong>${it.n}</strong><br>${it.p} seg
        </div>
    `).join('');
}
function comprarItem(coste) {
    if(vida >= coste) { vida -= coste; alert("ADQUIRIDO."); } else { alert("Tiempo insuficiente."); }
}

function sacrificarVida() {
    const cant = prompt("¬øCu√°nto tiempo sacrificas al Pozo?", "1310");
    if(cant && vida >= parseInt(cant)) {
        vida -= parseInt(cant);
        pozo += parseInt(cant) * 3;
        alert("EL POZO CRECE.");
    }
}

function ejecutarSentencia(perfil) {
    const capa = document.getElementById('fractura-ego');
    capa.style.display = 'flex';
    document.getElementById('insulto-gnostico').innerText = "FRACTURA DE EGO";
    document.getElementById('sub-insulto').innerText = `PROTOCOLO: ${perfil}`;
    let time = 5;
    const t = setInterval(() => {
        document.getElementById('countdown-ego').innerText = time;
        time--;
        if(time < 0) { clearInterval(t); capa.style.display = 'none'; }
    }, 1000);
}

function escanearRetorica(input) {
    if (["cl√°sico", "academia", "honor"].some(d => input.value.toLowerCase().includes(d))) {
        ejecutarSentencia('SESGO_RET√ìRICO');
        input.value = "";
    }
}

function activarResonancia() {
    document.querySelectorAll('.nombre-pedante').forEach((n, i) => {
        setTimeout(() => n.classList.add('disuelto'), i * 200);
    });
}
