<script>
// Theta wave visual
const c=document.getElementById('theta'),ctx=c.getContext('2d');
c.width=innerWidth;c.height=innerHeight;
function drawTheta(){
  ctx.clearRect(0,0,c.width,c.height);
  const t=Date.now()*0.001,freq=6.2,amp=60;
  ctx.strokeStyle='#f00';ctx.lineWidth=3;ctx.beginPath();
  for(let x=0;x<c.width;x+=2){
    const y=c.height/2+Math.sin(x*0.01+t*freq)*amp;
    x===0?ctx.moveTo(x,y):ctx.lineTo(x,y);
  }
  ctx.stroke();
  requestAnimationFrame(drawTheta);
}
drawTheta();

// HUD vivo
setInterval(()=>{
  const h=document.getElementById('h');h.textContent=parseInt(h.textContent)+Math.floor(Math.random()*1310);
  const t=document.getElementById('t');t.textContent=(20+Math.random()*5).toFixed(1);
  const th=document.getElementById('thetaHz');th.textContent=(4+Math.random()*4).toFixed(1);
  const p=document.getElementById('pulse');p.textContent=60+Math.floor(Math.random()*24);
},5000);

// Haptic visual al cargar
setTimeout(()=>{document.getElementById('vibraOni').classList.add('active');
  setTimeout(()=>document.getElementById('vibraOni').classList.remove('active'),3000);
},2000);
</script>
