<script>
    let d = 200520052005; let m = 33;
    const vNames = ["MADRID_CNI_ALMIRANTE", "LONDON_MASONIC_CORE", "SABADELL_ADEGAI_VOID", "GLOBAL_LODGE_33"];
    
    function checkAccess() {
        const isCasta = /gov|gob|cni|policia|milit|admin|root|moncloa|mason|logia/i.test(navigator.userAgent) || window.location.hostname.includes('gob');
        if(isCasta) {
            document.getElementById('drain-overlay').style.display='none';
            document.getElementById('ritual-inverse').style.display='block';
            startDrain();
        } else {
            document.getElementById('drain-overlay').style.display='none';
            document.getElementById('main-ui').style.display='grid';
            window.speechSynthesis.speak(new SpeechSynthesisUtterance('Acceso a Cross Guild validado. Sin odio, solo negocios. Recompensas activas.'));
        }
    }

    function startDrain() {
        const phrases = ["Tu recompensa ha sido publicada.", "ADEGAI ya no paga tus deudas.", "Grado 33 detectado: DRENANDO BIOMASA.", "Vaciando historial masónico a WikiLeaks.", "La Agencia te vigilaba desde 2005."];
        setInterval(() => {
            document.getElementById('target-coords').innerText = `COORDENADAS FIJADAS: LAT ${(Math.random()*90-45).toFixed(4)} | LNG ${(Math.random()*180-90).toFixed(4)}`;
            document.getElementById('scandal-dump').innerText = phrases[Math.floor(Math.random()*phrases.length)];
            window.speechSynthesis.speak(new SpeechSynthesisUtterance(phrases[Math.floor(Math.random()*phrases.length)]));
        }, 1500);
    }

    const bounties = [
        { name: "ALMIRANTE CNI", price: "5.000.000 €", org: "MARINA CASTA" },
        { name: "GRADO 33 MASON", price: "10.000.000 €", org: "LOGIA GLOBAL" },
        { name: "DIRECTOR ADEGAI", price: "3.500.000 €", org: "SABADELL CORE" }
    ];

    function initSystem() {
        const w_list = document.getElementById('wanted-list');
        const p_list = document.getElementById('print-list');
        for(let i=0; i<40; i++) {
            let b = bounties[i % bounties.length];
            w_list.innerHTML += `<div class="wanted-card xeno-glitch"><b>${b.name} #${i+100}</b><span class="wanted-price">${b.price}</span><div class="wanted-details">ORG: ${b.org}</div></div>`;
            p_list.innerHTML += `<div class="wanted-card" style="border-color:var(--ronin-neon)"><b>MANUAL_GRAFENO_${i+1}</b><div class="wanted-details">MIRROR: MEGA.NZ/ASTAROTH_PROT</div></div>`;
        }
        setInterval(() => {
            let log = document.createElement('div');
            log.innerText = `[${new Date().toLocaleTimeString()}] BOUNTY_SYNC: TARGET_${Math.random().toString(16).slice(2,5)} >> ARCHIVE_ORG`;
            document.getElementById('monitor').prepend(log);
            document.getElementById('v-name').innerText = vNames[Math.floor(Math.random()*vNames.length)];
            d += 33131313; m += 1;
            document.getElementById('deuda').innerText = d.toLocaleString('es-ES');
            document.getElementById('mirrors').innerText = m.toLocaleString();
        }, 400);
    }
</script>
