    <title>THUAMER CONSOLÃ† ULTIMATE - Yuji Naka Revenge Edition</title>
    <style>
        body {background:#000;color:#0f0;font-family:courier;margin:0;padding:0;overflow:hidden;}
        #gameContainer {position:relative;}
        #gameCanvas {background:#001100;}
        #stats {position:absolute;top:10px;left:10px;color:#0f0;font-size:1.2em;}
        #controls {position:absolute;bottom:10px;left:10px;color:#0f0;font-size:1.2em;}
        .promo {position:absolute;top:50%;left:50%;transform:translate(-50%, -50%);font-size:2em;text-align:center;color:#0f0;text-shadow:0 0 20px #0f0;}
        button {background:#0f0;color:#000;padding:10px 20px;font-size:1.2em;border:none;cursor:pointer;margin:5px;}
        button:hover {background:#00ff00;box-shadow:0 0 15px #0f0;}
