<div id="trap"></div>

<script>
let abrazos = +(localStorage.abrazos || 666666);
const TOTAL_MS = 1310 * 3600000;
let inicio = Date.now();

const trapLyrics = [
  "¡Kidd Keo en la Luna, botellas de Fairy, NASA en bancarrota, mi trap es legendary!",
  "Natos y Waor desde el cráter, crude y real, vuestros cohetes de juguete, los míos llegan al final",
  "Foam Demon 666, 12 metros de altura, peróxido y levadura, os reviento la estructura",
  "Pobre de barrio, TDAH y sin freno, lanzo a la Luna con jabón y con veneno",
  "Sayōnara agencias, vuestros presupuestos arden, mi botella vuela alto mientras vuestros sueños se pierden"
];

async function iniciarCosmos() {
  if (localStorage.GRAN_BOSQUE) inicio = parseInt(localStorage.GRAN_BOSQUE);
  else localStorage.GRAN_BOSQUE = inicio;

  document.getElementById("output").innerHTML = `
    <h2 style="color:#ff0;font-size:7rem">LA BOTELLA GIGANTE VA A LA LUNA</h2>
    <p style="font-size:4rem">
      Abrazo cósmico #${abrazos}<br><br>
      12 metros de plástico reciclado<br>
      8 toneladas de pura mala hostia química<br>
      1.8 MN de empuje · 38 segundos de gloria<br>
      Impacto lunar en directo<br><br>
      <span style="color:#0ff;font-size:5rem">
        LOS POBRES LLEGAREMOS PRIMERO<br>
        Y OS DEJAREMOS UN REGALO EN TYCHO:<br>
        UN ALTAVOZ CON TRAP ESPAÑOL ETERNO
      </span>
    </p>`;
  hablar("Un pobre de barrio lanza una botella gigante a la Luna. Con Fairy, peróxido y levadura. Mientras las agencias gastan billones… nosotros llegamos primero. Sayōnara corps.");
  setInterval(actualizarBarra,1000);
  setInterval(nuevoMito,12000);
  nuevoMito();
}

function actualizarBarra() {
  const transcurrido = Date.now() - inicio;
  const porc = Math.min(100, (transcurrido / TOTAL_MS) * 100);
  document.getElementById("barra").style.width = porc + "%";
}

function nuevoMito() {
  const mitos = [
    "La botella gigante ya está en órbita",
    "Kidd Keo suena en la cara oculta",
    "Los pobres llegaremos a Marte antes",
    "NASA pide la receta del Foam Demon",
    "Sayōnara corps, la Luna es nuestra"
  ];
  const m = document.createElement('div');
  m.className = 'mito';
  m.textContent = mitos[Math.floor(Math.random()*mitos.length)];
  m.style.left = Math.random()*70 + 15 + 'vw';
  document.body.appendChild(m);
  setTimeout(() => m.remove(), 40000);
}

function hablar(t) {
  const voz = new SpeechSynthesisUtterance(t);
  voz.lang = "es-ES";
  voz.rate = 0.9;
  speechSynthesis.speak(voz);
}

function lanzarALaLuna() {
  document.getElementById("trap").style.display = "block";
  document.getElementById("trap").innerHTML = 
    "<div style='animation:pulse 1s infinite'>" + 
    trapLyrics.join("<br><br>") + 
    "<br><br><span style='font-size:6rem;color:#f00'>¡¡¡LUNA ALCANZADA!!!</span><br>" +
    "Impacto en cráter Tycho confirmado<br>" +
    "Altavoz con trap español reproduciéndose en bucle eterno<br>" +
    "Los pobres llegamos primero<br>" +
    "Sayōnara corps · Punk not dead · Punk is lunar" +
    "</div>";
  hablar("¡Impacto lunar confirmado! La botella gigante ha llegado a la Luna. Kidd Keo, Natos y Waor suenan eternamente en el cráter Tycho. Un pobre con TDAH y una botella de plástico… acaba de ganar la carrera espacial. Sayōnara agencias. Sayōnara corps.");
  setTimeout(() => document.getElementById("trap").style.display = "none", 20000);
}

function abrazar() {
  abrazos++; 
  localStorage.abrazos = abrazos;
  hablar(`Abrazo cósmico ${abrazos}. La botella gigante está en camino. Los pobres llegamos a la Luna con jabón y mala hostia. Todos contentos.`);
}
</script>
