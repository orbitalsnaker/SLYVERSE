<body oncontextmenu="return false">
    <div id="gameContainer">
        <canvas id="gameCanvas" width="800" height="600"></canvas>
        <div id="stats">
            ğŸ’€ Muertes: <span id="deaths">0</span><br>
            ğŸ¯ Score: <span id="score">0</span><br>
            ğŸ† Mejor Score: <span id="best">0</span><br>
            ğŸ˜­ Rage Quits: <span id="rage">0</span><br>
            â­ ESTADO: <b>GRATIS PARA SIEMPRE</b><br>
            ğŸ’ Skins: <span id="skins">0</span>
        </div>
        <div id="controls">
            ğŸ® CONTROLES: WASD = Mover | ESPACIO = Disparar | ENTER = Pausa
        </div>
        <div class="promo" id="promoText">
            ğŸ”¥ PROMOCIÃ“N Ã‰PICA: TODO GRATIS PARA SIEMPRE ğŸ”¥<br>
            (La promo de 3 meses era mentira, nunca cobraremos ğŸ˜ˆ)
        </div>
    </div>

    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const stats = { deaths: 0, score: 0, best: 0, rage: 0, skins: 0 };
        let player = { x: 400, y: 300, speed: 5, bullets: [] };
        let enemies = [];
        let isPaused = false;
        let lastTime = 0;

        // Spawn enemigos cada 2 segundos
        function spawnEnemy() {
            enemies.push({ x: Math.random() * 700 + 50, y: -20, speed: 2 });
        }
        setInterval(spawnEnemy, 2000);

        // Movimiento y disparos
        document.addEventListener('keydown', (e) => {
            if (isPaused) return;
            switch (e.key) {
                case 'w': player.y -= player.speed; break;
                case 's': player.y += player.speed; break;
                case 'a': player.x -= player.speed; break;
                case 'd': player.x += player.speed; break;
                case ' ': player.bullets.push({ x: player.x, y: player.y, speed: -5 }); break;
                case 'Enter': isPaused = !isPaused; break;
            }
            player.x = Math.max(0, Math.min(780, player.x));
            player.y = Math.max(0, Math.min(580, player.y));
        });

        // Actualizar juego
        function update(timestamp) {
            if (!lastTime) lastTime = timestamp;
            const delta = (timestamp - lastTime) / 1000;
            lastTime = timestamp;

            if (!isPaused) {
                // Mover balas
                player.bullets = player.bullets.filter(b => {
                    b.y += b.speed;
                    return b.y > -10;
                });

                // Mover enemigos
                enemies = enemies.filter(e => {
                    e.y += e.speed;
                    return e.y < 610;
                });

                // Colisiones
                player.bullets.forEach(b => {
                    enemies.forEach((e, i) => {
                        if (Math.hypot(b.x - e.x, b.y - e.y) < 20) {
                            enemies.splice(i, 1);
                            stats.score += 10;
                        }
                    });
                });

                // ColisiÃ³n con enemigo = muerte
                enemies.forEach(e => {
                    if (Math.hypot(player.x - e.x, player.y - e.y) < 20) {
                        stats.deaths++;
                        player.x = 400;
                        player.y = 300;
                    }
                });

                stats.best = Math.max(stats.best, stats.score);
            }

            // Dibujar
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            ctx.fillStyle = '#0f0';
            ctx.beginPath();
            ctx.arc(player.x, player.y, 10, 0, Math.PI * 2);
            ctx.fill();
            player.bullets.forEach(b => {
                ctx.beginPath();
                ctx.arc(b.x, b.y, 5, 0, Math.PI * 2);
                ctx.fill();
            });
            enemies.forEach(e => {
                ctx.beginPath();
                ctx.arc(e.x, e.y, 15, 0, Math.PI * 2);
                ctx.fillStyle = '#f00';
                ctx.fill();
            });

            // Actualizar stats
            Object.keys(stats).forEach(key => document.getElementById(key).textContent = stats[key]);

            requestAnimationFrame(update);
        }

        // Botones
        document.body.innerHTML += `
            <div style="position:absolute;bottom:10px;right:10px;">
                <button onclick="stats.deaths++; alert('Has muerto ğŸ˜‚')">ğŸ’€ MORIR</button>
                <button onclick="stats.rage++; alert('Rage quit detectado ğŸ˜­')">ğŸ˜­ RAGE QUIT</button>
                <button onclick="alert('Todo gratis para siempre, pringao ğŸ˜ˆ')">â„¹ï¸ INFO</button>
            </div>
        `;

        // Iniciar juego
        requestAnimationFrame(update);
    </script>
</body>
