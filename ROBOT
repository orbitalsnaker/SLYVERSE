<script>
    const canvas = document.getElementById('arena');
    const ctx = canvas.getContext('2d');
    const log = document.getElementById('log');

    let homer = { x: 200, y: 250, angle: 0, spin: 0, mode: 0, hp: 100, color: '#00aaff' };
    let enemy = { x: 600, y: 250, angle: 0, spin: 0, hp: 100, color: '#ff0000' };
    let particles = [];
    let animationId;
    let fightRunning = false;

    const modes = ['Champion', 'Gender Bender', 'Destructor'];

    function logMessage(msg) {
        log.innerHTML += msg + '<br>';
        log.scrollTop = log.scrollHeight;
    }

    function drawRobot(robot, label) {
        ctx.save();
        ctx.translate(robot.x, robot.y);
        ctx.rotate(robot.angle);

        // Body
        ctx.fillStyle = robot.mode === 1 ? '#ff66ff' : robot.color;
        ctx.fillRect(-40, -50, 80, 100);

        // Spinner weapon
        ctx.rotate(robot.spin);
        ctx.fillStyle = robot.mode === 2 ? '#ff0000' : '#ffff00';
        ctx.beginPath();
        ctx.moveTo(40, 0);
        for (let i = 0; i < 8; i++) {
            ctx.lineTo(40 + Math.cos(i * Math.PI / 4) * 30, 40 + Math.sin(i * Math.PI / 4) * 30);
            ctx.lineTo(50 + Math.cos((i + 0.5) * Math.PI / 4) * 20, 50 + Math.sin((i + 0.5) * Math.PI / 4) * 20);
        }
        ctx.closePath();
        ctx.fill();

        // Troll details
        if (robot.mode === 1) { // Gender Bender
            ctx.fillStyle = '#ffccff';
            ctx.fillRect(-30, -70, 60, 20); // tutu
            ctx.fillStyle = '#ffff00';
            ctx.beginPath();
            ctx.arc(0, -80, 10, 0, Math.PI * 2);
            ctx.fill(); // blonde hair ball
        }

        ctx.restore();

        // Label
        ctx.fillStyle = '#fff';
        ctx.font = '16px Arial';
        ctx.fillText(label, robot.x - 40, robot.y - 60);
        ctx.fillText(`HP: ${robot.hp}`, robot.x - 40, robot.y + 70);
    }

    function createParticles(x, y, count, color) {
        for (let i = 0; i < count; i++) {
            particles.push({
                x, y,
                vx: Math.random() * 10 - 5,
                vy: Math.random() * 10 - 5,
                life: 60,
                color
            });
        }
    }

    function update() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);

        // Draw arena floor
        ctx.fillStyle = '#333';
        ctx.fillRect(50, 50, 700, 400);

        // Update robots
        homer.angle += 0.02;
        enemy.angle -= 0.03;

        homer.spin += 0.3 + homer.mode * 0.2;
        enemy.spin -= 0.2;

        // Simple AI movement
        const dx = enemy.x - homer.x;
        const dy = enemy.y - homer.y;
        const dist = Math.sqrt(dx*dx + dy*dy);

        if (dist > 100) {
            homer.x += dx * 0.005;
            homer.y += dy * 0.005;
            enemy.x -= dx * 0.003;
            enemy.y -= dy * 0.003;
        }

        // Collision & damage
        if (dist < 80) {
            enemy.hp -= 2 + homer.mode * 3;
            createParticles((homer.x + enemy.x)/2, (homer.y + enemy.y)/2, 20, '#ff6600');

            if (Math.random() < 0.1) {
                homer.mode = (homer.mode + 1) % 3;
                logMessage(`<strong>PERSONA SWITCH: ${modes[homer.mode]} MODE ACTIVATED!</strong>`);
                if (homer.mode === 2) logMessage(`<span style="color:red;">"I WILL DESTROY YOU!"</span>`);
                if (homer.mode === 1) logMessage(`<span style="color:pink;">"I'm pretty!"</span>`);
            }
        }

        // Enemy attack
        if (dist < 100 && Math.random() < 0.3) {
            homer.hp -= 1;
            createParticles(homer.x, homer.y, 10, '#ff0000');
        }

        drawRobot(homer, 'KNOCK-A-HOMER');
        drawRobot(enemy, 'DESTRUCTOR CLONE');

        // Particles
        particles = particles.filter(p => {
            p.x += p.vx;
            p.y += p.vy;
            p.life--;
            ctx.fillStyle = p.color + Math.floor(p.life * 4).toString(16);
            ctx.fillRect(p.x, p.y, 6, 6);
            return p.life > 0;
        });

        // Victory check
        if (enemy.hp <= 0 && fightRunning) {
            logMessage('<strong style="color:gold;">VICTORY! Chief Knock-A-Homer destroys the arena!</strong>');
            logMessage('<strong>"Bite my shiny metal ass!" + "D\'OH!"</strong>');
            fightRunning = false;
            cancelAnimationFrame(animationId);
        } else if (homer.hp <= 0) {
            logMessage('<strong style="color:red;">DEFEAT... but we\'ll be back with more cheap motors!</strong>');
            fightRunning = false;
            cancelAnimationFrame(animationId);
        }

        if (fightRunning) animationId = requestAnimationFrame(update);
    }

    function startFight() {
        if (fightRunning) return;
        fightRunning = true;
        homer = { x: 200, y: 250, angle: 0, spin: 0, mode: 0, hp: 100, color: '#00aaff' };
        enemy = { x: 600, y: 250, angle: 0, spin: 0, hp: 100, color: '#ff0000' };
        particles = [];
        log.innerHTML = '<strong>FIGHT START!</strong><br>';
        logMessage('Chief Knock-A-Homer enters in Champion Mode...');
        update();
    }

    function resetFight() {
        cancelAnimationFrame(animationId);
        fightRunning = false;
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        log.innerHTML = '';
    }
</script>

</body>
