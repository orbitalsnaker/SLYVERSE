<script>
// Gore rain más denso y rápido
setInterval(()=>{for(let i=0;i<48;i++){
  const g=document.createElement('div');g.className='gore';
  g.style.left=Math.random()*100+'vw';
  g.style.animationDuration=0.25+Math.random()*0.35+'s';
  document.getElementById('bg').appendChild(g);
  setTimeout(()=>g.remove(),1400);
}},26);

// Theta canvas más agresivo
const c=document.getElementById('c'),x=c.getContext('2d');
c.width=innerWidth;c.height=innerHeight;
let oni=false;
function theta(){
  x.clearRect(0,0,c.width,c.height);
  const e=Date.now()*0.001,f=oni?13.2:6.6,a=oni?120:90;
  x.strokeStyle=oni?'#ff0033':var(--g);x.lineWidth=5;x.beginPath();
  for(let i=0;i<c.width;i+=2){
    const o=c.height/2+Math.sin(i*0.007+e*f)*a + Math.cos(i*0.003+e*3)*30;
    i===0?x.moveTo(i,o):x.lineTo(i,o);
  }x.stroke();requestAnimationFrame(theta);
}
theta();

// Abrazos eternos (más rápido en v6)
let hugs=+(localStorage.hugs||131666);
document.getElementById('hugs').innerHTML=`ABRAZOS: ${hugs}`;
setInterval(()=>{hugs+=2;localStorage.hugs=hugs;document.getElementById('hugs').innerHTML=`ABRAZOS: ${hugs}`;},1310);

function toggleInfo(){document.getElementById('info').classList.toggle('show');}
function oniMode(){
  oni=!oni;
  document.getElementById('modo').textContent=oni?'ONI 666%':'KATANA EXO';
  document.body.style.setProperty('--g',oni?'#ff0033':'#66ff33');
  speechSynthesis.speak(new SpeechSynthesisUtterance(oni?
    "ONI 666%. Katana orbital desenvainada. Parsons escupe fuego desde el infierno.":
    "Katana Exo. 165 Hz. 120 W. Abrazo eterno a máxima velocidad."));
  navigator.vibrate(oni?[100,50,100,50,100,50,100,50,200,50,800]:[100,200,100,200,800]);
}

onload=()=>{hugs+=3;localStorage.hugs=hugs;};
