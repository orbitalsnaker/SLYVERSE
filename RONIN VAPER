<script>
// Configuraci√≥n
const WALLET = "0xfddb91bd8157dafb735d4087cff8823b42eaadc7";
const PRICE_ETH = "0.0235"; // ‚âà62 ‚Ç¨ (actualiza cada pocos d√≠as seg√∫n cotizaci√≥n)
const PRODUCT = "oni_pod_v1_zirconio";
const LOG = document.getElementById("log");

async function buy() {
  if (!window.ethereum) {
    alert("Instala MetaMask o cualquier wallet Ethereum");
    return;
  }

  try {
    const accounts = await ethereum.request({ method: 'eth_requestAccounts' });
    const web3 = new Web3(window.ethereum);

    const txHash = await ethereum.request({
      method: 'eth_sendTransaction',
      params: [{
        from: accounts[0],
        to: WALLET,
        value: web3.utils.toHex(web3.utils.toWei(PRICE_ETH, "ether")),
        gas: "0x5208",
      }],
    });

    // Actualiza log en tiempo real
    const time = new Date().toJSON().slice(0,19).replace("T"," ");
    LOG.innerHTML += `‚Ä¢ ${time} ‚Üí 1 ud ‚Üí procesando‚Ä¶ +38 ‚Ç¨<br>`;
    LOG.scrollTop = LOG.scrollHeight;

    // Env√≠o autom√°tico a f√°brica (cambia esta URL por tu webhook real)
    fetch("https://api.shenzhen131.is/order", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        product: PRODUCT,
        qty: 1,
        tx: txHash,
        wallet: accounts[0],
        price_eur: 62,
        timestamp: Date.now()
      })
    });

    setTimeout(() => {
      alert("¬°Orden enviada a f√°brica!\n\nRecibir√°s el tracking DHL por email o Telegram en menos de 24 h.\n\nGracias, diablo üî•");
    }, 1200);

  } catch (error) {
    alert("Transacci√≥n cancelada o error: " + error.message);
  }
}
