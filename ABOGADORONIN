<script>
const intruderLog = ["IP_MONCLOA_SEC_4", "TOKEN_CNI_ALFA_9", "CORONEL_P_B_REMOTE", "ADEGAI_OPERATIVE_33", "LOGIA_OFFICER_MADRID"];
const legalTraps = [
    { art: "Art. 404 CP", desc: "Dictar resolución arbitraria en asunto administrativo (Orden de rastreo de Ronins)." },
    { art: "Art. 197.2 CP", desc: "Acceso ilícito a datos reservados registrados en ficheros (Invasión de Nodo Sabadell)." },
    { art: "Art. 433 CP", desc: "Aplicación pública diferente a la presupuestada (Fondos para hackeo amoral)." },
    { art: "Art. 515 CP", desc: "Asociación ilícita para cometer delitos contra la Constitución (Reuniones Lago de Como)." },
    { art: "Art. 198 CP", desc: "Autoridad que vulnera la intimidad sin causa legal (Espionaje luces rosas)." },
    { art: "Art. 408 CP", desc: "Omisión del deber de perseguir delitos (Encubrimiento de la Logia)." },
    { art: "Art. 264 CP", desc: "Daños informáticos y borrado de evidencias de la casta (Intento de Wipe)." }
];

let totalEvidence = 0;

function igniteLegalNuke() {
    const scroller = document.getElementById('scroller');
    const nameDisp = document.getElementById('intruder-name');
    const weightDisp = document.getElementById('evidence-weight');

    function deployTrap() {
        const victim = intruderLog[Math.floor(Math.random() * intruderLog.length)];
        const trap = legalTraps[Math.floor(Math.random() * legalTraps.length)];
        
        nameDisp.innerText = victim;
        
        const div = document.createElement('div');
        div.className = 'card-evidence';
        div.innerHTML = `
            <div class="law-tag">VIOLACIÓN DETECTADA: ${trap.art}</div><br>
            <span style="color:#fff"><b>IMPUTADO:</b> ${victim}</span><br>
            <span style="color:var(--uranium)"><b>CARGO:</b> ${trap.desc}</span><br>
            <small style="color:#777">HASH_EVIDENCIA: ${Math.random().toString(16).slice(2,18)} | REGISTRADO EN BLOCKCHAIN FISCAL</small><br>
            <span style="color:var(--blood); font-size:0.8em;">[ENVIANDO DENUNCIA AUTOMÁTICA A FISCALÍA GENERAL]</span>
        `;
        
        scroller.prepend(div);
        totalEvidence += 1.31;
        weightDisp.innerText = totalEvidence.toFixed(2);

        if (scroller.childNodes.length > 100) scroller.removeChild(scroller.lastChild);
        
        // Aceleración por pánico detectado
        setTimeout(deployTrap, Math.max(200, 1000 - (totalEvidence * 5)));
    }

    deployTrap();

    try {
        const msg = new SpeechSynthesisUtterance("Black Hole Legal activado. No es una simulación. Sus metadatos están siendo adjuntados a denuncias por prevaricación y malversación. Coronel, el silicio le ha juzgado y su sentencia es el aislamiento.");
        msg.lang = 'es-ES';
        msg.rate = 0.85;
        window.speechSynthesis.speak(msg);
    } catch(e){}
}

document.oncontextmenu = () => false;
document.onkeydown = (e) => { if(e.ctrlKey || e.keyCode == 123) return false; };
</script>
