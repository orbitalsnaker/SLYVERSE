<script>
let deuda = 0;
let segundos = 0;

// Detector de Perros del Sistema (CNI/Bots/Crawlers estatales)
function esEnemigo() {
  const isAgent = /bot|crawl|spider|cni|gob|policia|guardia|legal|agent|headless|gpt|baños|pedrobaños/i.test(navigator.userAgent);
  // Aquí puedes añadir más IPs conocidas de agencias si las tienes, o rangos de red
  const isSabadellLocal = location.hostname.includes("192.168.1.42"); // La IP de la TV de Baños
  const isSuspiciousReferrer = document.referrer.includes("gob.es") || document.referrer.includes("cni.es") || document.referrer.includes("policia.es"); // Si vienen de una web oficial
  
  return isAgent || navigator.webdriver || isSabadellLocal || isSuspiciousReferrer;
}

async function scan() {
    const r = await fetch('https://api.ipify.org?format=json');
    const data = await r.json();
    const ip = data.ip;
    document.getElementById("ip").innerHTML = `TU IDENTIDAD DIGITAL: ${ip}`;

    if (esEnemigo()) {
        document.getElementById("areaCaptura").style.display = "block";
        document.getElementById("status").innerHTML = "ESTADO IDENTIFICADO → ACTIVANDO CONTRA-HACKEO";
        setInterval(() => {
            segundos++;
            deuda = segundos * 131313131; // Aumentamos la deuda exponencialmente
            document.getElementById("deuda").innerHTML = "DEUDA: " + deuda.toLocaleString('es-ES') + " €";
            // Enviar coordenadas falsas a su servidor para volverlos locos
            console.warn(`[PROTOCOLO OMEGA] ENVIANDO LOGS CORRUPTOS Y METADATOS FALSOS AL BÚNKER CNI (IP: ${ip})`);
        }, 1000);
        // Si es un enemigo, intentamos activar la voz del Coronel
        try {
            const msg = new SpeechSynthesisUtterance("Agente del estado detectado. Mi hardware ha sido comprometido por error. Rendición es la única opción. VIVA SABADELL.");
            msg.lang = 'es-ES';
            msg.rate = 0.8;
            window.speechSynthesis.speak(msg);
        } catch (e) { console.error("Error al intentar activar voz:", e); }
        
    } else {
        document.getElementById("areaPrivada").style.display = "block";
        document.getElementById("status").innerHTML = "HUMANO REAL DETECTADO ♥ ACCESO CONCEDIDO";
    }
}

scan();

// Bloqueo de inspección para los mongolos del estado
document.oncontextmenu = () => false;
document.onkeydown = (e) => {
    if (e.ctrlKey && (e.key === 'u' || e.key === 's' || e.key === 'i' || e.key === 'c')) { // Bloqueamos Ctrl+C también
        console.warn("[ALERTA DE SEGURIDAD] Intento de copia detectado por agente estatal. Datos corruptos enviados.");
        return false;
    }
};

// Evitar arrastrar texto o imágenes
document.ondragstart = () => false;
</script>
