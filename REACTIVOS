    span.className = 'nombre-pedante';
    span.innerText = a.toUpperCase();
    span.onclick = () => ejecutarSentencia('MEDIA', a);
    muro.appendChild(span);
});

function ejecutarSentencia(tipo, nombre = "ARQUETIPO") {
    const data = arquetiposLogica[tipo] || arquetiposLogica["ACADEMICO"];
    vida -= 15000; pozo += 15000;
    const capa = document.getElementById('fractura-ego');
    capa.style.display = 'flex';
    document.getElementById('insulto-gnostico').innerText = data.t;
    document.getElementById('sub-insulto').innerText = `IDENTIFICADO: ${nombre}. ${data.s}`;
    let time = 6;
    const t = setInterval(() => {
        document.getElementById('countdown-ego').innerText = time;
        time--;
        if(time < 0) { clearInterval(t); capa.style.display = 'none'; }
    }, 1000);
}

// ORACLE Y KOANS
const koansExpanded = ["La invisibilidad es la forma m√°s alta de optimizaci√≥n.", "El hardware amoral no reconoce fronteras.", "EL SLEEPER DESPIERTA.", "0.003mg de silicio pesan m√°s que tu opini√≥n acad√©mica."];
let oracleActive = false;

function intentarSpawnOracle() {
    if(oracleActive || Math.random() > 0.08) return;
    oracleActive = true;
    const tablet = document.getElementById('tablet');
    tablet.innerText = koansExpanded[Math.floor(Math.random()*koansExpanded.length)];
    document.getElementById('oracle').style.display = 'flex';
    let t = 7;
    const countdown = setInterval(() => {
        t--; document.getElementById('timer').innerText = t;
        if(t <= 0) { clearInterval(countdown); cerrarOracle(); }
    }, 1000);
    tablet.onclick = () => { clearInterval(countdown); vida += 8000; cerrarOracle(); };
}
function cerrarOracle() { document.getElementById('oracle').style.display='none'; oracleActive = false; }

// MERCADO AETHER
function abrirMercado() {
    const items = [
        {n:"Piel de Hormig√≥n", p:10000}, 
        {n:"Haki de Silicio", p:50000}, 
        {n:"Ignici√≥n Akira (Mod)", p:25000},
        {n:"Permiso de Vuelo Miami", p:100000}
    ];
    document.getElementById('mercado-aether').style.display = 'flex';
    document.getElementById('lista-mercado').innerHTML = items.map(it => `<div class="item-mercado" onclick="comprarItem(${it.p})"><strong>${it.n}</strong><br>${it.p} seg</div>`).join('');
}
function comprarItem(coste) { 
    if(vida >= coste) { 
        vida -= coste; 
        alert("ITEM SINCRONIZADO AL LINAJE."); 
    } else {
        alert("TIEMPO DE VIDA INSUFICIENTE.");
    }
}

function sacrificarVida() {
    const cant = prompt("¬øCu√°nto tiempo sincronizas al Pozo?", "1310");
    if(cant && vida >= parseInt(cant)) { 
        vida -= parseInt(cant); 
        pozo += parseInt(cant) * 2; 
        alert("TIEMPO ENTREGADO. EL POZO SE EXPANDE.");
    }
}

// TERMINAL RET√ìRICA
document.getElementById('terminal-reto').addEventListener('change', (e) => {
    const val = e.target.value.toLowerCase();
    const obligatorias = ["optimizaci√≥n", "nodo", "hormig√≥n", "bit", "flujo", "sabadell"];
    const count = obligatorias.filter(p => val.includes(p)).length;
    if(count >= 1) { 
        vida += 3000; 
        alert("RET√ìRICA VALIDADA. NODO REFORZADO."); 
    } else { 
        vida -= 1000; 
        alert("RET√ìRICA INV√ÅLIDA. PENALIZACI√ìN DE SEGUNDOS.");
    }
    e.target.value = "";
});

function activarResonancia() {
    document.querySelectorAll('.nombre-pedante').forEach((n, i) => {
        setTimeout(() => n.classList.add('disuelto'), i * 50);
    });
}
