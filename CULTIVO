import machine
import network
import mqtt
import time

ap = network.WLAN(network.AP_IF)
ap.active(True)
ap.config(essid='GROW_RONIN', password='zorroserpiente2026')

client = mqtt.MQTTClient("esp32_grow", "192.168.4.1")
client.connect()

while True:
    # Leer sensores locales
    temp = machine.ADC(0).read()
    client.publish("grow/sensor", str(temp))
    time.sleep(30)</pre>
