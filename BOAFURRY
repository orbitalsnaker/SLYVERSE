<!-- Crossmint (única dependencia externa – CDN oficial) -->
<script src="https://unpkg.com/@crossmint/client-sdk-vanilla@latest/dist/index.js"></script>
<script>
// CONFIGURACIÓN ÚNICA – CAMBIA SOLO ESTO
const MY_WALLET = "0xfddb91bd8157dafb735d4087cff8823b42eaadc7";
const PROJECT_ID = "c81d5c0a-7b0f-4e3f-8e4b-9d5f8e7a6b5c"; // ← crea tu proyecto en crossmint.com y pega aquí
const TELEGRAM_WEBHOOK = "https://api.telegram.org/botTU_TOKEN/sendMessage?chat_id=TU_CHAT_ID&text="; // ← opcional, si quieres notificación

document.querySelectorAll('.buy').forEach(b => {
  b.onclick = () => {
    const price = b.dataset.p;
    const item  = b.dataset.i;
    b.textContent = "CARGANDO PAGO...";
    b.disabled = true;

    CrossmintPay.buy({
      projectId: PROJECT_ID,
      mintConfig: { price: price, currency: "EUR" },
      paymentMethod: "fiat-and-crypto",
      recipient: { wallet: MY_WALLET },
      successRedirectUrl: window.location.href + "?thanks=1",
      onPaymentSuccess: (data) => {
        // Notificación automática al bot (opcional pero recomendado)
        if (TELEGRAM_WEBHOOK.includes("TU_TOKEN")) return; // aún no configurado
        const msg = encodeURIComponent(
          `NEW ORDER AUTO\nItem: ${item}\n${price} EUR\nClient: ${data.email||"anon"}\nTX: ${data.transactionHash}\nWallet: ${MY_WALLET}\n→ SHENZHEN SHIP NOW`
        );
        fetch(TELEGRAM_WEBHOOK + msg).catch(()=>{});
      }
    });
  };
});

// Gore rain
setInterval(()=>{ for(let i=0;i<88;i++){
  const g=document.createElement('div'); g.className='gore';
  g.style.left=Math.random()*100+'vw';
  g.style.animationDuration=(0.3+Math.random()*0.6)+'s';
  document.getElementById('bg').appendChild(g);
  setTimeout(()=>g.remove(),2200);
}},28);

// Demonic wave background
const c=document.getElementById('c'),x=c.getContext('2d');
c.width=innerWidth; c.height=innerHeight;
(function w(){
  x.clearRect(0,0,c.width,c.height);
  const t=Date.now()*0.001;
  x.strokeStyle='#ff0033'; x.lineWidth=14;
  x.beginPath();
  for(let i=0;i<c.width;i+=3){
    const y=c.height/2 + Math.sin(i*0.012+t*28)*200 + Math.cos(i*0.007+t*18)*140;
    i===0?x.moveTo(i,y):x.lineTo(i,y);
  }
  x.stroke();
  requestAnimationFrame(w);
})();
</script>
