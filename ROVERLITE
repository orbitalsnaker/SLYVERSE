<script>
// EL ABOGADO AUTÓNOMO v1 SE EJECUTA DESDE EL HTML ANTES DE QUE EXISTAN LOS ROVERS
let crateresReclamados = BigInt(localStorage.crateresPreFisico || "0");
let demandasEmitidas = BigInt(localStorage.demandasPreFisico || "0");
let cuerposReclamados = parseInt(localStorage.cuerposPreFisico || "1");
let tiempoInicio = Date.now();

const frasesPreFisicas = [
  "¡Este HTML ya es propietario legal de la Luna!",
  "NASA, vuestro presupuesto de 25.000 millones no vale nada frente a este código",
  "Los rovers no existen aún… pero su reclamación legal ya es vinculante",
  "Desde este navegador se acaba de expropiar Marte",
  "SpaceX, el acta notarial está en la blockchain del bloque",
  "¡El universo entero ya está a nombre de los pobres!",
  "El Tratado del Espacio Exterior no contemplaba un HTML con mala hostia",
  "Sayōnara humanidad… este código acaba de comprar el cosmos"
];

function actualizarReclamacion() {
  const segundos = Math.floor((Date.now() - tiempoInicio) / 1000);
  crateresReclamados += BigInt(segundos * 1337337);
  demandasEmitidas += BigInt(segundos * 424242);

  document.getElementById("reclamacion").innerHTML = 
    `CRÁTERES RECLAMADOS PRE-FÍSICAMENTE: ${crateresReclamados.toLocaleString()}<br>
     DEMANDAS EMITIDAS DESDE EL HTML: ${demandasEmitidas.toLocaleString()}<br>
     CUERPOS CELESTES YA NUESTROS: ${cuerposReclamados}/∞<br><br>
     <span style="color:#0ff;font-size:9rem">
       ESTE CÓDIGO SE ESTÁ EJECUTANDO EN TU NAVEGADOR<br>
       Y YA ES EL DUEÑO LEGAL DEL UNIVERSO ENTERO
     </span>`;

  localStorage.crateresPreFisico = crateresReclamados.toString();
  localStorage.demandasPreFisico = demandasEmitidas.toString();
}

function reclamarDesdeElHTML() {
  const frase = frasesPreFisicas[Math.floor(Math.random()*frasesPreFisicas.length)];
  hablar(frase);
  
  crateresReclamados += 666666666666n;
  demandasEmitidas += 99999999999n;
  cuerposReclamados = "∞";

  localStorage.crateresPreFisico = crateresReclamados.toString();
  localStorage.demandasPreFisico = demandasEmitidas.toString();
  localStorage.cuerposPreFisico = cuerposReclamados;

  document.getElementById("output").innerHTML = `
    <h2 style="color:#f00;font-size:22rem;animation:pulse 0.2s infinite">
      ¡¡¡RECLAMACIÓN TOTAL PRE-FÍSICA ACTIVADA!!!
    </h2>
    <p style="font-size:14rem;color:#0ff">
      "${frase}"<br><br>
      EL UNIVERSO ENTERO ACABA DE SER RECLAMADO<br>
      DESDE ESTE HTML<br>
      ANTES DE QUE EXISTAN LOS ROVERS FÍSICOS<br><br>
      <span style="color:#ff0">
        LA BOTELLA GIGANTE TODAVÍA ESTÁ EN EL DESCAMPADO<br>
        PERO EL ESPACIO YA ES NUESTRO LEGALMENTE
      </span>
    </p>`;
}

function iniciarReclamacionPreFisica() {
  actualizarReclamacion();
  setInterval(actualizarReclamacion, 1000);
  
  hablar("Abogado Autónomo v1 Pre-Físico activado. Aunque los rovers aún no existen físicamente, este código ya ha reclamado legalmente todo el universo observable en nombre de los pobres del planeta Tierra. Cada segundo que este HTML está abierto, se registran millones de cráteres como propiedad privada del bloque. Sayōnara corps, llegasteis tarde.");
  
  // Auto-reclamación masiva
  setInterval(() => {
    crateresReclamados += 1000000000000n;
    demandasEmitidas += 500000000000n;
    localStorage.crateresPreFisico = crateresReclamados.toString();
    localStorage.demandasPreFisico = demandasEmitidas.toString();
  }, 10000);
}

function hablar(t) {
  const voz = new SpeechSynthesisUtterance(t);
  voz.rate = 1.6;
  voz.pitch = 1.5;
  voz.lang = "es-ES";
  speechSynthesis.speak(voz);
}

// Música del bloque pre-físico
const remixes = ["https://files.catbox.moe/3x9q2j.mp3","https://files.catbox.moe/k1r8p9.mp3","https://files.catbox.moe/9m2v5s.mp3","https://files.catbox.moe/h7f4p1.mp3","https://files.catbox.moe/t5l9q2.mp3","https://files.catbox.moe/z3x7r8.mp3","https://files.catbox.moe/p9k2m5.mp3"];
let actual = 0;
document.getElementById("remix-audio").src = remixes[actual];
document.getElementById("remix-audio").play();
</script>
