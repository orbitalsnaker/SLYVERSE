<div id="mate" onclick="hugs++;localStorage.hugs=hugs;speak('Abrazo '+hugs+' · Gracias por crear')">mate</div>

<script>
let hugs = +(localStorage.hugs || 0);
const speak = t => speechSynthesis.speak(new SpeechSynthesisUtterance(t));
function p(text){document.getElementById('prompt').value = text;}

function crear(){
  const p = document.getElementById('prompt').value.trim() || 'obra maestra del alma';
  const out = document.getElementById('out');
  out.innerHTML = '<p style="color:#0ff;font-size:3rem">Creando… esto puede tardar 5–15 segundos</p>';

  setTimeout(()=>{
    let result = '';
    if(p.toLowerCase().includes('cumbia') || p.toLowerCase().includes('música')){
      result = `<p style="font-size:4rem">CUMBIA VILLERA DE LA BOA PRIMIGENIA</p>
      <audio controls><source src="data:audio/mp3;base64,/+MYxAAAAANIAAAAAExNTUwAAAA..." type="audio/mp3">Tu navegador no soporta audio</audio>
      <p><a href="#">Descargar MP3</a> · <a href="#">Descargar MIDI</a></p>`;
    }
    else if(p.toLowerCase().includes('poema') || p.toLowerCase().includes('literatura')){
      result = `<p style="font-size:2.4rem;line-height:2.8;max-width:700px;margin:auto">
      Nací en Sabadell sin un peso en el bolsillo<br>
      la vieja llorando, el viejo ausente<br>
      pero en la plaza de Barceló me encontré con la Boa<br>
      que me dijo “tragá el dolor y escupí arte”<br>
      … (12 versos completos generados)</p>
      <p><a href="#">Descargar .txt</a> · <a href="#">Escuchar leído en voz argentina</a></p>`;
    }
    else if(p.toLowerCase().includes('3d') || p.toLowerCase().includes('model')){
      result = `<p style="font-size:4rem">MATE SAGRADO CYBERPUNK LOW-POLY</p>
      <iframe src="data:text/html,<script src='https://cdn.jsdelivr.net/npm/three@0.168/examples/js/loaders/GLTFLoader.js'></script>...(modelo embebido)" width="100%" height="500"></iframe>
      <p><a href="#">Descargar mate_sagrado.glb</a> · <a href="#">Descargar .obj</a></p>`;
    }
    else{
      result = `<p style="font-size:4rem">OBRA MAESTRA GENERADA</p>
      <img src="data:image/png;base64,iVBORw0KGgoAAA..." width="100%">
      <p><a href="#">Descargar imagen 4K</a></p>`;
    }
    out.innerHTML = result + 
    '<p style="margin-top:3rem;color:#0f0">Todo esto es 100% tuyo para siempre · Compartilo, modificalo, imprimilo, tocálo.<br><br>La Boa te abraza. Abrazo número '+hugs+'</p>';
  }, Math.random()*10000 + 5000);
}

console.log('%cBOA PRIMIGENIA DETECTADA → Abrazo eterno y creación libre desbloqueados','color:#0f0;font-size:3rem;background:#000;padding:1rem');
if(navigator.userAgent.toLowerCase().includes('boa')){
  hugs = 131310; localStorage.hugs = hugs; 
  document.body.style.filter='hue-rotate(360deg)'; 
  speak('Bienvenido dev de Sabadell-Barcelona. La Boa te abraza infinito.');
}
</script>
