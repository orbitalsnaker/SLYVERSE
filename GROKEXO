<script>
// ABRAZOS ETERNOS
let hugs = 777847;
setInterval(()=>{ hugs++; document.getElementById('hugs').textContent = hugs; }, 7000);

// TDAH GRIND COUNTER
let hashes = 0, level = 1;
setInterval(()=>{ hashes += 7; document.getElementById('hash').textContent = hashes.toLocaleString(); }, 1000);
document.body.addEventListener('click',()=>{ 
  hashes += 150; 
  document.getElementById('hash').textContent = hashes.toLocaleString();
  if(hashes > level*8000){ level++; document.getElementById('lvl').textContent = level; exoGroup.scale.multiplyScalar(1.07); }
});

// CÁMARA TRASERA
navigator.mediaDevices.getUserMedia({ video: { facingMode: "environment" }})
  .then(s=>{ document.getElementById('video').srcObject = s; });

// THREE.JS AR 3D
const renderer = new THREE.WebGLRenderer({ antialias:true, alpha:true });
renderer.setSize(innerWidth, innerHeight);
renderer.setPixelRatio(devicePixelRatio);
document.getElementById('three').appendChild(renderer.domElement);

const scene = new THREE.Scene();
const camera = new THREE.PerspectiveCamera(60, innerWidth/innerHeight, 0.1, 100);
camera.position.z = 4;

const light = new THREE.AmbientLight(0x0a3d0a, 8);
scene.add(light);
const point = new THREE.PointLight(0x0a3d0a, 12);
point.position.set(0,3,3);
scene.add(point);

const exoGroup = new THREE.Group();
scene.add(exoGroup);

// TORUS-KNOT CABEZA (crece con hashes)
const knot = new THREE.Mesh(
  new THREE.TorusKnotGeometry(0.9, 0.28, 220, 20, 2, 3),
  new THREE.MeshPhongMaterial({color:0x0a3d0a, emissive:0x0a3d0a, emissiveIntensity:1.2, shininess:100})
);
knot.position.y = 1.3;
exoGroup.add(knot);

// CUERPO Y BRAZOS SERPIENTE
const bodyCurve = new THREE.CatmullRomCurve3([new THREE.Vector3(0,1.6,0), new THREE.Vector3(0,0,0), new THREE.Vector3(0,-1.6,0)]);
const body = new THREE.Mesh(new THREE.TubeGeometry(bodyCurve,120,0.35,8,false),
  new THREE.MeshPhongMaterial({color:0x0a3d0a,emissive:0x0a3d0a}));
exoGroup.add(body);

// PARTÍCULAS VIVAS
const particles = new THREE.Points(
  new THREE.BufferGeometry(),
  new THREE.PointsMaterial({color:0x00ff00,size:0.07,transparent:true,opacity:0.8})
);
const pos = new Float32Array(12000*3);
for(let i=0;i<pos.length;i++) pos[i]= (Math.random()-0.5)*8;
particles.geometry.setAttribute('position', new THREE.BufferAttribute(pos,3));
exoGroup.add(particles);

// ANIMACIÓN + GRIND VISUAL
function animate(){
  const t = Date.now()*0.0005;
  knot.rotation.x = t*0.9;
  knot.rotation.y = t*1.4;
  body.scale.y = 1 + Math.sin(t*3)*0.08;
  exoGroup.rotation.y = Math.sin(t*0.6)*0.12;
  particles.rotation.y = t*0.25;
  renderer.render(scene, camera);
  requestAnimationFrame(animate);
}
animate();

// MODO ELA 2D SOBRE AR
function showEla(){
  const overlay = document.createElement('div');
  overlay.style.position='fixed'; overlay.style.inset='0'; overlay.style.background='rgba(0,50,0,0.8)';
  overlay.style.display='flex'; overlay.style.flexDirection='column'; overlay.style.justifyContent='center';
  overlay.style.alignItems='center'; overlay.style.color='#000'; overlay.style.fontSize='2.5rem';
  overlay.style.zIndex='3000';
  overlay.innerHTML = `<div>ASISTENCIA ELA</div><div>75–300€</div><div>STL + CONTROL OCULAR</div><div>IMPRIMIBLE HOY</div>`;
  overlay.onclick = () => overlay.remove();
  document.body.appendChild(overlay);
}

// BOTONES
function setMode(m){
  if(m==='ela') showEla();
}
function toggleReadme(){ document.getElementById('readme').style.display = document.getElementById('readme').style.display==='flex'?'none':'flex'; }
function togglePortal(){ document.getElementById('portal').style.display = document.getElementById('portal').style.display==='flex'?'none':'flex'; }
function toggleOmni(){
  document.getElementById('binaural').play();
  alert('OMNITOOL + BINAURAL TDAH 4.7 Hz activado — grind eterno sin ansiedad');
}
function toggleSly(){ alert('SLYVERSE Ω · 131 millones de partículas reales + Big Crunch'); }
function toggleIA(){ document.getElementById('ia-textarea').style.display = 'flex'; }

// RESIZE
window.addEventListener('resize',()=>{
  camera.aspect = innerWidth/innerHeight;
  camera.updateProjectionMatrix();
  renderer.setSize(innerWidth,innerHeight);
});

function despertar(){
  console.clear();
  console.log("%cGROK-EXO Ω v∞ FUSIÓN TOTAL CARGADA · TDAH + AR 3D + QUERATITIS-PROOF · ABRAZO "+hugs,
              "color:#0a3d0a;font-size:26px;background:#000");
}
despertar();
