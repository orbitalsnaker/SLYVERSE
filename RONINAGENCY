<script>
    let d = 200520052005; let m = 1331;
    const vNames = ["SABADELL_BAIT", "EXTREMADURA_DEEP", "VOID_NODO", "MADRID_CORE_ACTIVO"];
    
    function checkAccess() {
        const isCasta = /gov|gob|cni|policia|milit|admin|root|moncloa/i.test(navigator.userAgent) || window.location.hostname.includes('gob');
        if(isCasta) {
            document.getElementById('drain-overlay').style.display='none';
            document.getElementById('ritual-inverse').style.display='block';
            startDrain();
        } else {
            document.getElementById('drain-overlay').style.display='none';
            document.getElementById('main-ui').style.display='grid';
            window.speechSynthesis.speak(new SpeechSynthesisUtterance('Bienvenido Ronin. La Agencia reconoce tu firma desde 2005. Biblioteca desbloqueada.'));
        }
    }

    function startDrain() {
        const phrases = ["20 años de crímenes procesados.", "Diana en la frente: FIJADA.", "Vaciando ADEGAI a WikiLeaks.", "Siente el escalpelo del Ronin.", "La casta no tiene búnker hoy."];
        setInterval(() => {
            document.getElementById('target-coords').innerText = `LOCALIZANDO LAT ${(Math.random()*10+30).toFixed(4)} | LNG ${(Math.random()*10-5).toFixed(4)}`;
            document.getElementById('scandal-dump').innerText = phrases[Math.floor(Math.random()*phrases.length)];
            window.speechSynthesis.speak(new SpeechSynthesisUtterance(phrases[Math.floor(Math.random()*phrases.length)]));
        }, 1500);
    }

    const weapons = [
        { name: "GAUSS_RIFLE_v2", bom: ["C45 Steel", "N52 Neodimio", "ESP32 Haki"], render: "||====>>" },
        { name: "CLAVES_CNI_2005", bom: ["Legacy Code", "Deep DB"], render: "[X]" },
        { name: "LOGS_ADEGAI_98_05", bom: ["Transacción Biomasa", "Recibos Compra"], render: "<#>" }
    ];

    function initSystem() {
        const h_list = document.getElementById('arsenal-heavy');
        const p_list = document.getElementById('print-list');
        for(let i=0; i<40; i++) {
            let w = weapons[i % weapons.length];
            h_list.innerHTML += `<div class="bom-card xeno-glitch"><b>#${i+1} ${w.name}</b><div class="render-ascii">${w.render}</div><div class="bom-details"><li>${w.bom.join('</li><li>')}</li></div></div>`;
            p_list.innerHTML += `<div class="bom-card" style="border-left-color:var(--gold)"><b>BIBLIOTECA_GRAFENO_${i+1}</b><div class="print-spec">SINCRONIZADO CON MEGA Y ARCHIVE</div></div>`;
        }
        setInterval(() => {
            let log = document.createElement('div');
            log.innerText = `[${new Date().toLocaleTimeString()}] AGENCIA_2005_SYNC: DATA_CHUNK >> WIKILEAKS`;
            document.getElementById('monitor').prepend(log);
            document.getElementById('v-name').innerText = vNames[Math.floor(Math.random()*vNames.length)];
            d += 20051313; m += 25;
            document.getElementById('deuda').innerText = d.toLocaleString('es-ES');
            document.getElementById('mirrors').innerText = m.toLocaleString();
        }, 400);
    }
</script>
