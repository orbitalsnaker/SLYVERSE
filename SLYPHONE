<script>
// Gore ligero
setInterval(()=>{for(let i=0;i<40;i++){
  const g=document.createElement('div');g.className='gore';
  g.style.left=Math.random()*100+'vw';
  g.style.animationDuration=0.3+Math.random()*0.4+'s';
  document.getElementById('bg').appendChild(g);
  setTimeout(()=>g.remove(),1600);
}},35);

// Theta waves
const c=document.getElementById('c'),x=c.getContext('2d');
c.width=innerWidth;c.height=innerHeight;
let oni=false;
function theta(){
  x.clearRect(0,0,c.width,c.height);
  const t=Date.now()*0.001,f=oni?26:10,a=oni?220:140;
  x.strokeStyle=oni?'#ff0033':var(--ultra);x.lineWidth=9;
  x.beginPath();
  for(let i=0;i<c.width;i+=3){
    const y=c.height/2 + Math.sin(i*0.007+t*f)*a + Math.cos(i*0.003+t*8)*80;
    i===0?x.moveTo(i,y):x.lineTo(i,y);
  }
  x.stroke();
  requestAnimationFrame(theta);
}
theta();

// Abrazos radioactivos
let hugs=+(localStorage.hugs||131131);
document.getElementById('hugs').innerHTML=`ABRAZOS: ${hugs}`;
setInterval(()=>{hugs+=17;localStorage.hugs=hugs;document.getElementById('hugs').innerHTML=`ABRAZOS: ${hugs}`;},650);

function toggleInfo(){document.getElementById('info').classList.toggle('show');}
function toggleCompra(){document.getElementById('compra').classList.toggle('show');}
function toggleRepara(){document.getElementById('repara').classList.toggle('show');}
function toggleApks(){document.getElementById('apks').classList.toggle('show');}

function comprar(){
  const u = document.querySelector('input[type=number]').value || 1;
  const t = 132 * u;
  alert(`COMPRA CONFIRMADA\n${u} SLYPHONE 131 v1\nTotal: ${t} €\n\nMargen 100 % quemado en:\n0xfddb91bd8157dafb735d4087cff8823b42eaadc7\n\nShenzhen soldando con piezas que Apple tiró.`);
  speechSynthesis.speak(new SpeechSynthesisUtterance(`${u} bestias confirmadas. APKs que violan WhatsApp ya en la SD. Margen on-chain forever.`));
  navigator.vibrate([300,100,300,100,500,200,1000]);
  toggleCompra();
}

function oniMode(){
  oni=!oni;
  document.body.style.setProperty('--ultra',oni?'#ff0033':'#00ff99');
  speechSynthesis.speak(new SpeechSynthesisUtterance(oni?"ONI 666%. Todo arde. APKs violadores activados.":"Bestia reparable con APKs que queman la competencia."));
}

