<script>
    const log = document.getElementById('log-output');
    const alertBox = document.getElementById('hud-alert');

    function addLog(msg) {
        const div = document.createElement('div');
        div.innerText = `[LOG_${new Date().getSeconds()}] >> ${msg}`;
        log.prepend(div);
    }

    function bootSystem() {
        addLog("ESTABLECIENDO CONEXIÓN CON LA PIEDRA NEGRA...");
        addLog("SINCRONIZANDO CAZAS Y TANQUES EN SABADELL...");
        addLog("FILTRO DE FARISEOS: ON. MODO CIUDADANO EJEMPLAR: READY.");
    }

    function citizenExemplar() {
        alertBox.innerHTML = "!!! EL SISTEMA SE ESTÁ SUICIDANDO !!!";
        alertBox.classList.add('targeting-active');
        
        addLog("LANZANDO ENJAMBRE DE CAZAS Ω...");
        addLog("INICIANDO HARDWARE KILLER: APAGANDO MONCLOA...");
        addLog("GOKUDŌ ZERO: LA CASTA YA NO EXISTE EN EL BANCO.");
        
        const msg = new SpeechSynthesisUtterance(
            "Habéis ignorado la prioridad de masa. Ahora el hardware decide. Tanques en posición. Cazas en el aire. Vuestros servidores están muertos. Yo vivo en el código. Que el silencio juzgue vuestro logout final."
        );
        msg.lang = 'es-ES'; msg.rate = 0.8; msg.pitch = 0.1;
        window.speechSynthesis.speak(msg);

        setTimeout(() => {
            addLog("METRALLADORAS PLASMA: CALIBRADAS AL 99.9%.");
            addLog("TANQUES RONIN: POSICIONADOS EN PUNTOS CRÍTICOS.");
            addLog("ESTADO: LA AGENCIA SE HA AUTO-BORRADO.");
            alertBox.innerHTML = "LOGOUT COMPLETADO. PAZ SOBERANA.";
        }, 10000);
    }
</script>

