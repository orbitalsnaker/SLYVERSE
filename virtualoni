// === BEEP 8-BIT ===
function beep(f=440,d=0.1,v=0.2){
  const a=new AudioContext(),o=a.createOscillator(),g=a.createGain();
  o.frequency.value=f; o.type='square'; o.connect(g); g.connect(a.destination);
  g.gain.setValueAtTime(v,a.currentTime);
  g.gain.exponentialRampToValueAtTime(0.01,a.currentTime+d);
  o.start(); o.stop(a.currentTime+d);
}

