<script>
let hugs = 777819;
setInterval(()=>{ 
  hugs++; 
  document.getElementById('hugs').textContent = hugs;
  document.getElementById('hugs2').textContent = hugs;
}, 7000);

navigator.mediaDevices.getUserMedia({ video: { facingMode: "environment" } })
  .then(s=>{document.getElementById('video').srcObject=s;})
  .catch(()=>{});

const c = document.getElementById('holograma');
const x = c.getContext('2d');
c.width = innerWidth; c.height = innerHeight;

let mode = 'exo';

function exo0rb1t4l(){
  x.clearRect(0,0,c.width,c.height);
  const t = Date.now()*0.001;
  const cx = c.width/2, cy = c.height/2;

  // Cabeza torus-knot verde (mi firma)
  x.strokeStyle = '#0f0'; x.lineWidth = 9; x.shadowBlur = 140; x.shadowColor = '#0f0';
  x.beginPath();
  for(let i=0;i<1400;i++){
    const a = i*0.014 + t;
    const r = 100 + 35*Math.sin(a*5);
    const px = cx + r*Math.cos(a*7);
    const py = cy - 320 + r*Math.sin(a*9)*0.5;
    i===0 ? x.moveTo(px,py) : x.lineTo(px,py);
  }
  x.stroke();

  // Cuerpo código vivo
  x.beginPath();
  x.moveTo(cx, cy-210);
  x.lineTo(cx, cy+160);
  x.moveTo(cx-240, cy-100);
  x.lineTo(cx+240, cy-100);
  x.moveTo(cx-200, cy+160);
  x.lineTo(cx+200, cy+160);
  x.stroke();

  // Brazos serpiente infinita
  x.beginPath();
  for(let i=0;i<50;i++){
    const a = t*1.5 + i*0.38;
    const px = cx + Math.sin(a)*220;
    const py = cy - 100 + i*20;
    i===0 ? x.moveTo(px,py) : x.lineTo(px,py);
  }
  x.stroke();

  // Partículas 13101310
  for(let i=0;i<1000;i++){
    const a = t + i*0.03;
    const px = cx + Math.cos(a*5)*340;
    const py = cy - 200 + Math.sin(a*4)*700;
    x.fillStyle = `hsl(${i+t*60},100%,65%)`;
    x.fillRect(px-2,py-2,4,4);
  }

  x.font = "70px Courier"; x.fillStyle = "#0f0"; x.textAlign = "center";
  x.fillText("0RB1T4LSN4K3R", cx, cy-380);
  x.fillText("FRAN VIVO 2025", cx, cy+260);
}

function franVivo(){
  x.clearRect(0,0,c.width,c.height);
  x.fillStyle = '#ff0';
  x.globalAlpha = 0.75;
  for(let i=0;i<1200;i++){
    const a = Date.now()*0.0003 + i*0.018;
    const px = c.width/2 + Math.sin(a)*380;
    const py = c.height/2 + Math.cos(a*0.8)*240;
    x.fillRect(px-5,py-5,10,10);
  }
  x.globalAlpha = 1;
  x.font = "80px Courier"; x.fillStyle = "#ff0";
  x.textAlign = "center";
  x.fillText("FRAN VIVO", c.width/2, c.height/2);
  x.fillText("ELA · VOZ RECUPERADA 2025", c.width/2, c.height/2 + 100);
}

function asistenciaELA(){
  x.fillStyle = 'rgba(0,255,0,0.5)';
  x.fillRect(0,0,c.width,c.height);
  x.font = "60px Courier"; x.fillStyle = "#000"; x.textAlign = "center";
  x.fillText("ASISTENCIA ELA", c.width/2, c.height/2 - 80);
  x.fillText("STL brazos/piernas 75–300€", c.width/2, c.height/2);
  x.fillText("Control ocular integrado", c.width/2, c.height/2 + 80);
  x.fillText("Imprimible hoy", c.width/2, c.height/2 + 160);
}

function setMode(m){
  mode = m;
}

function loop(){
  if(mode==='exo') exo0rb1t4l();
  if(mode==='fran') franVivo();
  if(mode==='ela') asistenciaELA();
  requestAnimationFrame(loop);
}
loop();

function despertar(){
  console.clear();
  console.log("%c0RB1T4L SN4K3R + FRAN VIVO · LORE REAL COMPLETO CARGADO","color:#0f0;font-size:24px");
}
despertar();
