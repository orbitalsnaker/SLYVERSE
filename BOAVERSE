gl.linkProgram(mateProg);mateBuf=gl.createBuffer();gl.bindBuffer(gl.ARRAY_BUFFER,mateBuf);
let pts=new Float32Array(500000);for(let i=0;i<250000;i++){let a=Math.random()*6.28,r=Math.sqrt(Math.random())*0.99;pts[i*2]=Math.cos(a)*r;pts[i*2+1]=Math.sin(a)*r;}
gl.bufferData(gl.ARRAY_BUFFER,pts,gl.STATIC_DRAW);}
initMate();
function renderMate(){if(!gl||currentGame!=='mate')return;gl.viewport(0,0,canvas.width,canvas.height);
