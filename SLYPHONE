<script>
// Gore rain (verde neón para AIRWEAVE vibe)
setInterval(()=>{for(let i=0;i<20;i++){
  const g=document.createElement('div');g.className='gore';
  g.style.left=Math.random()*100+'vw';
  g.style.animationDuration=0.5+Math.random()*0.5+'s';
  document.getElementById('bg').appendChild(g);
  setTimeout(()=>g.remove(),1500);
}},50);

// Particles WebGL (25k theta waves)
const c=document.getElementById('c'),x=c.getContext('2d');
c.width=innerWidth;c.height=innerHeight;
function t(){x.clearRect(0,0,c.width,c.height);
  const e=Date.now()*0.001,f=6.6,a=50;
  x.strokeStyle=var(--g);x.lineWidth=2;x.beginPath();
  for(let i=0;i<c.width;i+=3){
    const o=c.height/2+Math.sin(i*0.01+e*f)*a;
    i===0?x.moveTo(i,o):x.lineTo(i,o);
  }x.stroke();requestAnimationFrame(t);}
t();

// Contador abrazos eterno
let hugs=+(localStorage.hugs||131310);
document.getElementById('hugs').textContent=hugs;
setInterval(()=>{hugs++;localStorage.hugs=hugs;document.getElementById('hugs').textContent=hugs;},1310*3); // Cada ~1min

let oni=false;
function toggleInfo(){document.getElementById('info').classList.toggle('show');}
function oniMode(){
  oni=!oni;
  document.getElementById('modo').textContent=oni?'ONI ACTIVADO':'OFF';
  document.body.style.setProperty('--g',oni?'#f00':'#66ff33');
  document.querySelector('button[onclick="oniMode()"]').style.background=oni?'var(--m)':'var(--b');
  speechSynthesis.speak(new SpeechSynthesisUtterance(oni?"ONI MODE: Overclock 3.6GHz, theta rojo sangre. La competencia llora.":"Modo normal: Barrio puro."));
  navigator.vibrate(oni?[1000,500,1000]:[500]);
}

// Auto-abrazo en load
window.onload=()=>{hugs++;localStorage.hugs=hugs;};
</script>
