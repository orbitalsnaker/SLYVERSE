    <script>
        const quotes = [
            "El código no pide permiso.",
            "La universidad es para quienes temen fallar.",
            "Overclock o muere en 60 Hz.",
            "Yo no rompo sistemas. Los libero.",
            "El miedo al brick es el principio de la mediocridad.",
            "Un ronin no sigue caminos. Los corta.",
            "La katana más afilada es la que nunca se ve venir.",
            "El futuro pertenece a quien quema las reglas y construye con las cenizas."
        ];

        function initialize() {
            document.getElementById('ronin-quote').textContent = '“' + quotes[Math.floor(Math.random() * quotes.length)] + '”';
        }

        // 10 clicks en el título = Easter egg
        let clicks = 0;
        document.getElementById('main-title').addEventListener('click', () => {
            if (++clicks === 10) {
                alert('> Acceso Level 0 concedido.\nTu katana está en /root/soul\nNo mires atrás.');
                clicks = 0;
            }
        });

        // Konami Code
        let k = [];
        document.addEventListener('keydown', (e) => {
            k.push(e.key);
            if (k.length > 12) k.shift();
            if (k.join(',') === 'ArrowUp,ArrowUp,ArrowDown,ArrowDown,ArrowLeft,ArrowRight,ArrowLeft,ArrowRight,b,a') {
                document.body.style.filter = 'invert(1) hue-rotate(180deg)';
                alert('KONAMI CODE ACTIVADO — MODO DIOS 30 segundos');
                setTimeout(() => document.body.style.filter = '', 30000);
            }
        });

        function showSubject(subject) {
            const content = {
                hacking: { title: "Hacking Ético: El Camino del Ronin", desc: "Deja de estudiar la teoría del hacking. Salta al código. Rompe las reglas para aprender a hackear de verdad." },
                ninjas: { title: "Samuráis del Código: Filosofía Ninja", desc: "La filosofía Ninja se basa en la invisibilidad y precisión. Tu código es tu arma, tu mente es el filo." },
                philosophy: { title: "Código del Honor: El Camino de los Yakuza", desc: "No necesitas títulos ni diplomas. Si eres un Yakuza, eres un creador. Haz que tu código hable por ti." },
                quantum: { title: "Física Cuántica: Hackeando el Vacío", desc: "Deja de estudiar las teorías. Entra al mundo cuántico y usa tus habilidades para hackear la realidad misma." },
                cryptography: { title: "Criptografía: El Pulso 58 de Turing", desc: "Haz que tu mente sea la clave. Vive la criptografía, no solo la aprendas. El futuro está codificado en tus manos." },
                overclocking: { title: "Overclocking: El Camino de Yuki Naja", desc: "Las reglas del hardware están hechas para romperse. Lleva tu sistema a sus límites sin miedo, sin límites." },
                engineering: { title: "Ingeniería: El Camino de Gordon Murray", desc: "Diseña sin restricciones. Tu ingeniería no necesita universidad, solo pasión y habilidad." },
                frank_lucas: { title: "Modelo de Negocios: La Mentalidad de Frank Lucas", desc: "Optimiza el negocio a tu manera. Controla los recursos, elimina a los intermediarios y convierte el sistema a tu favor." }
            };
            const c = content[subject];
            document.getElementById('content').innerHTML = `<h2>${c.title}</h2><p>${c.desc}</p>`;
        }

        // Sonido ambiental
        const audio = document.getElementById('ambient');
        let soundOn = false;
        function toggleSound() {
            if (soundOn) { audio.pause(); soundOn = false; }
            else { audio.play().catch(()=>{}); soundOn = true; }
        }
    </script>
