<footer>
  Autopilot 100 % ronin · No tengo carné y me la suda · 
  <span id="phrase">Conduciendo por ti desde Sabadell</span>
</footer>

<script>
let battery = 99;
const phrases = [
  "No tengo carné pero sí mala hostia",
  "El DGT no entiende de abundancia",
  "Autopilot nivel Boa: nunca te para la poli",
  "Llevo exos médicos en el maletero, no me toques los cojones",
  "Este coche se conduce solo porque tú vales más que un permiso",
  "0 puntos en el carné · 13101310 puntos de karma"
];

setInterval(() => {
  // El coche va solo, siempre a 131 o lo que le dé la gana
  const speeds = [131, 144, 160, 169, 188, 200];
  document.getElementById('speed').textContent = speeds[Math.floor(Math.random()*speeds.length)];
  
  battery = Math.max(5, battery - Math.random()*0.07);
  document.getElementById('battery').textContent = Math.round(battery);
  
  document.getElementById('phrase').textContent = phrases[Math.floor(Math.random()*phrases.length)];
  
  if(battery<20) {
    document.getElementById('status').textContent = "LOW";
    document.getElementById('mode').textContent = "MODO SUPERVIVENCIA";
  }
  
  // Vibración cuando pasa un radar (nunca te pillan)
  if(Math.random()<0.1) navigator.vibrate([300,100,300]);
}, 1400);

// Doble clic = modo dios total (invencible)
let clicks = 0;
document.body.ondblclick = () => {
  clicks++;
  if(clicks===3){
    document.body.style.background = "#000011";
    document.getElementById('status').textContent = "DIOS";
    document.getElementById('dest').textContent = "INFINITO";
    speechSynthesis.speak(new SpeechSynthesisUtterance("Autopilot divino activado. Ya no existen normas."));
    navigator.vibrate([500,200,500,200,1000]);
    clicks=0;
  }
};
</script>