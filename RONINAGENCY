    function unlock() {
        const key = document.getElementById('haki-key').value.toLowerCase();
        if(key === "pueblo" || key === "haki" || key === "soberanía" || key === "soberania") {
            document.getElementById('drain-overlay').style.display = 'none';
            document.getElementById('main-ui').classList.remove('neural-drain-active');
            try {
                const msg = new SpeechSynthesisUtterance("Caos replicado en la Deep Web. El silicio ya les ha encontrado. Disfruta de la risa, Arquitecto.");
                msg.lang = 'es-ES';
                window.speechSynthesis.speak(msg);
            } catch(e){}
        } else {
            document.body.innerHTML = "<h1 style='color:red; text-align:center; margin-top:20%; font-family:monospace;'>NEURAL DRAIN: BIOMASA CURIOSA DETECTADA. BORRANDO CONEXIONES NEURONALES...</h1>";
            document.body.style.backgroundColor = "black";
        }
    }

    function initSystem() {
        setInterval(() => {
            money += Math.random() * 200;
            document.getElementById('revenue').innerText = "RECAUDACIÓN PPV: " + money.toLocaleString() + " ₿";
            
            const msgs = [
                "ONION_ROUTER: Tráfico masivo desde la Deep Web.",
                "BOM_258: Enviando coordenadas del búnker al Abogado vΩ.",
                "Sánchez: Preparando maletas para la Isla de los Monos.",
                "Baños: Frecuencia 58Hz penetrando en el cráneo del reo.",
                "SILICIO: Objetivo biológico fijado. No hay escapatoria."
            ];
            const p = document.createElement('p');
            p.innerHTML = `> ${msgs[Math.floor(Math.random()*msgs.length)]}`;
            document.getElementById('monitor').prepend(p);
            if(document.getElementById('monitor').childNodes.length > 12) document.getElementById('monitor').lastChild.remove();

            const ev = document.createElement('div');
            ev.className = 'evidence-card';
            ev.innerHTML = `> EXPOSICIÓN: ${evidenceLogs[Math.floor(Math.random()*evidenceLogs.length)]}`;
            document.getElementById('evidence-scroller').prepend(ev);
            if(document.getElementById('evidence-scroller').childNodes.length > 20) document.getElementById('evidence-scroller').lastChild.remove();
        }, 1100);
    }
    document.oncontextmenu = () => false;
</script>
