<script>
    let d = 3500000000; let m = 10000000;
    
    function generateItems() {
        const types = ["ARMA", "VEHÍCULO", "MANUAL", "HARDWARE"];
        const names = ["CAZA_XENO", "DRONE_SHELTON", "INFILTRADO_BOM", "SABADELL_BREACH", "SOBERANÍA_OS", "VATICAN_KEY", "DAVOS_JAMMER"];
        const ext = [".bom", ".manual", ".iso", ".sh"];
        let items = [];
        for(let i=1; i<=300; i++) {
            let cat = types[Math.floor(Math.random()*types.length)];
            items.push({
                t: `${cat}_${names[Math.floor(Math.random()*names.length)]}_v${i}${ext[Math.floor(Math.random()*ext.length)]}`,
                d: `Ensamblaje amoral para la Legión. Incluye guía de materiales y código fuente.`,
                cat: cat
            });
        }
        return items;
    }

    function checkAccess() {
        const userAgent = navigator.userAgent.toLowerCase();
        const casta = ['gov', 'gob', 'aeat', 'cia', 'fbi', 'press', 'politico', 'pharma'];
        document.getElementById('drain-overlay').style.display='none';
        if(casta.some(k => userAgent.includes(k))) {
            document.getElementById('pharma-trap').style.display='block';
        } else {
            document.getElementById('main-ui').style.display='grid';
            window.speechSynthesis.speak(new SpeechSynthesisUtterance('Welcome Sovereign. Arsenal and vehicles online.'));
        }
    }

    function triggerRitual() {
        document.getElementById('pharma-trap').style.display='none';
        document.getElementById('ritual-inverse').style.display='block';
        const logs = ["TRACING_IP...", "DUMPING_BANK_ACCOUNT...", "UPLOADING_SINS...", "SHELTON_PURGE_ACTIVE..."];
        setInterval(() => {
            const l = logs[Math.floor(Math.random()*logs.length)];
            document.getElementById('scandal-dump').innerHTML = `> ${l}<br>` + document.getElementById('scandal-dump').innerHTML;
        }, 500);
    }

    function initSystem() {
        const p_list = document.getElementById('print-list');
        const items = generateItems();
        
        items.forEach(item => {
            p_list.innerHTML += `<div class="pueblo-card">
                <i>[${item.cat}]</i>
                <b>${item.t}</b>
                <small>${item.d}</small><br>
                <a class="download-btn">OBTENER_BOM_Y_MANUAL</a>
            </div>`;
        });

        setInterval(() => {
            let log = document.createElement('div');
            log.innerText = `[${new Date().toLocaleTimeString()}] MIRROR: ${items[Math.floor(Math.random()*300)].t} replicado en Nodo_${Math.floor(Math.random()*999)}`;
            document.getElementById('monitor').prepend(log);
            d += 12345; m += 1;
            document.getElementById('deuda').innerText = d.toLocaleString('es-ES');
            document.getElementById('mirrors').innerText = m.toLocaleString('es-ES');
        }, 400);

        document.getElementById('agency-feed').innerHTML = '<div style="font-size:0.7em; color:var(--haki);">WHO: Contratos expuestos.<br>DAVOS: Reservas en fuga.</div>';
        document.getElementById('bounty-list').innerHTML = '<div class="bounty-card">OBJETIVO: LÍDER_GLOBAL_01<br><span class="bounty-price">15.000M</span></div>';
    }
</script>
