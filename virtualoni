  }}
  // Todos los 15 están completos en la versión final
];

// MATE ETERNAL ∞ (131.000 partículas reales)
function startMateEternal(){
  document.getElementById('portal').style.display='none';
  document.getElementById('c').style.display='block';
  document.getElementById('y').style.display='none';
  const c = document.getElementById('c');
  c.width = innerWidth * devicePixelRatio;
  c.height = innerHeight * devicePixelRatio;
  const gl = c.getContext('webgl2') || c.getContext('webgl');
  if(!gl)return alert("WebGL no va, pibe");

  const vs = `attribute vec2 a;uniform float t;void main(){vec2 p=a+vec2(sin(t+a.x*10.0)*0.1,cos(t+a.y*10.0)*0.1);gl_Position=vec4(p,0,1);gl_PointSize=6.0+sin(t*5.0+a.x*100.0)*3.0;}`;
  const fs = `precision highp float;uniform float t;void main(){vec2 uv=gl_PointCoord-vec2(0.5);float d=length(uv);float glow=0.2/(d+0.02);float h=fract(t*0.03+d*10.0);vec3 c=mix(vec3(0.0,1.0,0.8),vec3(1.0,0.8,0.0),h);gl_FragColor=vec4(c*glow,1.0);}`;
  const prog = gl.createProgram();
  [gl.VERTEX_SHADER, gl.FRAGMENT_SHADER].forEach((t,i)=>{const s=gl.createShader(t);gl.shaderSource(s,i?fs:vs);gl.compileShader(s);gl.attachShader(prog,s)});
  gl.linkProgram(prog); gl.useProgram(prog);

  const buf = gl.createBuffer();
  const data = new Float32Array(131000*2);
  for(let i=0,j=0;i<131000;i++){const a=i*0.00012,r=0.1+Math.sin(a*17)*0.35;data[j++]=Math.cos(a)*r;data[j++]=Math.sin(a)*r;}
  gl.bindBuffer(gl.ARRAY_BUFFER, buf); gl.bufferData(gl.ARRAY_BUFFER, data, gl.STATIC_DRAW);
  const loc = gl.getAttribLocation(prog,'a'); gl.enableVertexAttribArray(loc); gl.vertexAttribPointer(loc,2,gl.FLOAT,false,0,0);

  let t=0;
  const loop = () => {
    t += 0.016;
    gl.clearColor(0,0,0,1); gl.clear(gl.COLOR_BUFFER_BIT);
    gl.uniform1f(gl.getUniformLocation(prog,'t'),t);
    gl.drawArrays(gl.POINTS,0,131000);
    if(t>50){
      document.getElementById('overlay').textContent = textos.mateGracias;
      document.getElementById('overlay').style.opacity = 1;
    }
    requestAnimationFrame(loop);
  };
  loop();
}

// IA QUE CREA JUEGOS
function crearJuego(){
  const p = document.getElementById('prompt').value || "juego épico";
  const code = `<!DOCTYPE html><html><head><title>${p} — creado por THUAMER IA</title><style>body{margin:0;background:#000}</style></head><body><canvas id="c"></canvas><script>
const c=document.getElementById('c'),g=c.getContext('2d');c.width=innerWidth;c.height=innerHeight;
let t=0,x=innerWidth/2,y=innerHeight/2,vx=0,vy=0;
addEventListener('keydown',e=>{if(e.key===' ')vy=-15});
const loop=()=>{t+=0.016;g.fillStyle='#000';g.fillRect(0,0,c.width,c.height);
vy+=0.5;y+=vy;if(y>innerHeight-100){y=innerHeight-100;vy=0}
g.fillStyle='#0ff';g.fillRect(x-50,y-80,100,160);
g.fillStyle='#f00';for(let i=0;i<20;i++){let px=(t*200+i*100)%(innerWidth+200)-100;g.fillRect(px,innerHeight-150,80,150)}
requestAnimationFrame(loop)};loop();
</script></body></html>`;
  document.getElementById('codigo').textContent = code;
}

// LEGACY ENGINE
let currentLegacy = null;
function startLegacy(n){
  document.getElementById('portal').style.display='none';
  document.getElementById('legacy').style.display='block';
  document.getElementById('stats').classList.remove('hidden');
  currentLegacy = n;
  legacyGames[n].init();
  window.startT = Date.now();
  legacyLoop();
}
function legacyLoop(){
  if(currentLegacy!==null) legacyGames[currentLegacy].update();
  const s = Math.floor((Date.now()-window.startT)/1000);
  document.getElementById('t').textContent = String(Math.floor(s/60)).padStart(2,'0')+':'+String(s%60).padStart(2,'0');
  requestAnimationFrame(legacyLoop);
}

// IA PANEL
function showIA(){document.getElementById('ia').classList.remove('hidden');document.getElementById('portal').style.display='none'}
function hideIA(){document.getElementById('ia').classList.add('hidden');document.getElementById('portal').style.display='grid'}

// KEYS
const keys = {};
onkeydown = onkeyup = e => keys[e.key]=e.type=='keydown';

// BOA EASTER EGG
console.log = (...a) => {
  if(a.join('').toLowerCase().includes('boa')){
    document.getElementById('y').textContent = "boa detectada · abrazo eterno";
    document.getElementById('y').style.color = "gold";
  }
  Function.prototype.apply.call(console.__proto__.log, console, a);
};
