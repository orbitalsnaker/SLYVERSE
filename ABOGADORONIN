<script>
let hardwareDB = [];
let mirrorsCount = 0;
let puebloCount = 0;
const langs = ["ES", "EN", "RU", "ZH", "JP"];
const crimeVoices = ["¡Ladrón!", "¡Traidor!", "¡Prevaricador!", "¡El silicio no olvida!", "Tu cabeza tiene precio en la Deep Web."];

function setupHardwareDB() {
    const components = ["Grafeno", "Neodimio", "Bobina Sabadell", "Chip ARM", "Bio-Sensor"];
    for (let i = 1; i <= 300; i++) {
        hardwareDB.push({
            id: `HA-${2000 + i}`,
            name: ["Rifle Gauss", "Inhibidor", "Antena Sat", "Drone Ronin", "EMP Kit"][i % 5],
            bom: `${components[i % 5]}, Cables 0.5mm, Placa V8`
        });
    }
}

function speak(text) {
    const msg = new SpeechSynthesisUtterance(text);
    msg.rate = 1.3; msg.pitch = 0.1;
    window.speechSynthesis.speak(msg);
}

function activateLiberator() {
    document.getElementById('gov-portal').style.display = 'none';
    document.getElementById('black-hole').style.display = 'block';
    speak("Iniciando replicación total. El pueblo está clonando tus secretos.");

    // COL 1: CASTA
    setInterval(() => {
        const div = document.createElement('div');
        if (Math.random() > 0.4) {
            div.className = 'card-law';
            div.innerHTML = `<span style="color:var(--gold)">[JUDICIAL_DUMP]</span><br><b>Art. 404 CP</b>: Traición detectada.<br><small>Voz: ${crimeVoices[Math.floor(Math.random()*crimeVoices.length)]}</small>`;
            speak(crimeVoices[Math.floor(Math.random()*crimeVoices.length)]);
        } else {
            div.className = 'card-bounty';
            div.innerHTML = `<span class="wanted-text">WANTED</span><b>CORONEL_P_BAÑOS</b><br>BOUNTY: 150 BTC`;
        }
        document.getElementById('law-scroll').prepend(div);
        if(document.getElementById('law-scroll').childNodes.length > 20) document.getElementById('law-scroll').lastChild.remove();
    }, 4000);

    // COL 2: PUEBLO
    let tIdx = 0;
    setInterval(() => {
        const tech = hardwareDB[tIdx % 300];
        const div = document.createElement('div');
        div.className = 'card-tech';
        div.innerHTML = `<b>[LIBERADO] ${tech.name}</b><br><small>BOM: ${tech.bom}</small>`;
        document.getElementById('tech-scroll').prepend(div);
        tIdx++; puebloCount += Math.floor(Math.random()*10);
        document.getElementById('armed-pueblo').innerText = puebloCount;
        if(document.getElementById('tech-scroll').childNodes.length > 25) document.getElementById('tech-scroll').lastChild.remove();
    }, 2000);

    // COL 3: MIRRORS (ACELERADOS + PUEBLO)
    function replicate() {
        const isCitizen = Math.random() > 0.3;
        const div = document.createElement('div');
        const hash = Math.random().toString(36).substring(7);
        
        if(isCitizen) {
            div.className = 'card-citizen-mirror';
            div.innerHTML = `> [CITIZEN_REPLICA] Node_${Math.floor(Math.random()*9999)}.onion/dump_${hash}`;
        } else {
            div.className = 'card-mirror';
            div.innerHTML = `> [RONIN_MIRROR] ipfs.io/v/${hash}`;
        }
        
        document.getElementById('mirror-scroll').prepend(div);
        mirrorsCount++;
        document.getElementById('mirror-total').innerText = mirrorsCount;

        const log = document.createElement('div');
        log.innerText = `> Packets sent to cluster_${hash}`;
        document.getElementById('net-log').prepend(log);

        if(document.getElementById('mirror-scroll').childNodes.length > 50) document.getElementById('mirror-scroll').lastChild.remove();
        setTimeout(replicate, Math.max(50, 800 - (mirrorsCount/5)));
    }
    replicate();
}

window.onbeforeunload = () => "El pueblo está terminando de copiar tus datos. No huyas.";
</script>
</body>
