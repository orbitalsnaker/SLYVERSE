<script>
// Dirección del wallet del templo
const walletAddress = "0xfDdB91bD8157DaFb735D4087cFf8823b42EaADC7"; // checksum correcto

// Proveedor público (no necesita MetaMask)
const provider = new Web3.providers.HttpProvider("https://eth-mainnet.g.alchemy.com/v2/public"); // o cualquier public RPC
const web3 = new Web3(provider);

let totalReceived = 0;
let lastCheckedBlock = 0;

async function updateGlow() {
  try {
    const balance = await web3.eth.getBalance(walletAddress);
    const ethBalance = web3.utils.fromWei(balance, 'ether');
    totalReceived = parseFloat(ethBalance);

    // Nivel progresivo: de 0.2 (inicial) a 1.0 (máximo) basado en ETH recibidos
    let level = 0.2 + Math.min(totalReceived / 5, 0.8); // ejemplo: 5 ETH = glow máximo
    document.documentElement.style.setProperty('--glow-level', level.toFixed(2));

    const message = document.getElementById('glow-message');
    if (totalReceived === 0) {
      message.innerHTML = `Glow actual: bajo · El fuego del 36 espera tu óbolo voluntario para arder eterno`;
    } else {
      message.innerHTML = `Glow amplificado por ${totalReceived.toFixed(4)} ETH tributados · El misterio arde más fuerte gracias al linaje · 1936–∞`;
    }
  } catch (e) {
    console.error("Error actualizando glow:", e);
  }
}

// Actualizar al cargar y cada 60 segundos
updateGlow();
setInterval(updateGlow, 60000);
</script>

