<script>
// Autodetecció d'idioma i mostra el text corresponent
document.addEventListener('DOMContentLoaded', () => {
  const lang = navigator.language || navigator.userLanguage;
  const code = lang.substr(0,2).toLowerCase();
  document.querySelectorAll('.multi-lang').forEach(block => {
    const p = block.querySelector(`p[lang="${code}"]`);
    if (p) p.style.display = 'block';
    else block.querySelector('p[lang="ca"]').style.display = 'block'; // Default català
  });
});
</script>
