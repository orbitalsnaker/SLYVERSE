gl.bindBuffer(gl.ARRAY_BUFFER,mateBuf);gl.vertexAttribPointer(0,2,gl.FLOAT,false,0,0);
gl.uniform1f(gl.getUniformLocation(mateProg,'t'),t*0.05);gl.drawArrays(gl.POINTS,0,250000);t++;requestAnimationFrame(renderMate);}

