<script>
    let d = 4200000000; let m = 15000000;
    
    function checkAccess() {
        const ua = navigator.userAgent.toLowerCase();
        const casta = ['gov', 'gob', 'aeat', 'cia', 'fbi', 'press', 'journal', 'politico', 'pharma', 'who', 'cni'];
        document.getElementById('drain-overlay').style.display='none';
        if(casta.some(k => ua.includes(k))) { 
            document.getElementById('pharma-trap').style.display='block'; 
        } else { 
            document.getElementById('main-ui').style.display='grid';
            try { window.speechSynthesis.speak(new SpeechSynthesisUtterance('Global Legion 2.0 active.')); } catch(e){}
        }
    }

    function triggerRitual() {
        document.getElementById('pharma-trap').style.display='none';
        document.getElementById('ritual-inverse').style.display='block';
        const logs = ["TRACING_IP...", "IDENTIFYING_BIOMETRICS...", "DUMPING_BANK_ACCOUNTS...", "SHARING_SINS_TO_MIRROR...", "SHELTON_PURGE_ACTIVE..."];
        setInterval(() => {
            const l = logs[Math.floor(Math.random()*logs.length)];
            document.getElementById('scandal-dump').innerHTML = `> ${l}<br>` + document.getElementById('scandal-dump').innerHTML;
        }, 400);
    }

    function initSystem() {
        const p_list = document.getElementById('print-list');
        const b_list = document.getElementById('bounty-list');

        // Generar Arsenal
        const cats = ["HARDWARE", "VEHÍCULO", "MANUAL_GUERRILLA", "SABOTAJE_VIAL", "DRENADOR_BANCARIO"];
        const hardware = ["Inhibidor_5G_Xeno", "Scanner_Viales_Nano", "Rastreador_ADN_Hibrido", "Jammer_CNI", "Caja_Negra_Astaroth"];
        for(let i=1; i<=50; i++) {
            let cat = cats[Math.floor(Math.random()*cats.length)];
            let name = hardware[Math.floor(Math.random()*hardware.length)] || "PROTOCOLO_X";
            p_list.innerHTML += `<div class="pueblo-card"><i>[${cat}]</i><b>${name}_v${i}.bom</b><br><a class="download-btn">OBTENER_BOM</a></div>`;
        }

        // Bounties
        const targets = [
            {n: "DIRECTOR_CNI_CARCASA", p: "5.000M", tag: "INFECTADO_DESECHADO"},
            {n: "EL_LOBO_LEJARZA", p: "2.500M", tag: "TRAICIÓN_PROCESADA"},
            {n: "FERRERAS_NODE", p: "1.800M", tag: "PRENSA_MERCENARIA"},
            {n: "DAVOS_ELITE_01", p: "25.000M", tag: "GENOCIDA_PROGRAMADO"}
        ];
        targets.forEach(b => {
            b_list.innerHTML += `<div class="bounty-card"><span class="target-tag">[${b.tag}]</span><br><b>OBJETIVO: ${b.n}</b><br><span class="bounty-price">${b.p}</span></div>`;
        });

        // Monitor Live
        setInterval(() => {
            const t = ["Casteleiro_Loc", "Sanz_Roldan_Cam", "Bank_Drain", "Mirror_Sync"][Math.floor(Math.random()*4)];
            let log = document.createElement('div');
            log.innerText = `[${new Date().toLocaleTimeString()}] MIRROR: Live stream activo en ${t}_Nodo_${Math.floor(Math.random()*999)}`;
            document.getElementById('monitor').prepend(log);
            d += 12500;
            document.getElementById('deuda').innerText = d.toLocaleString('es-ES');
        }, 500);
    }
</script>
