<script>
    function initMessage() {
        // Sonido de interferencia técnica al cargar
        try {
            const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
            const oscillator = audioCtx.createOscillator();
            oscillator.type = 'sawtooth';
            oscillator.frequency.setValueAtTime(58, audioCtx.currentTime); // 58Hz - La frecuencia del miedo
            oscillator.connect(audioCtx.destination);
            oscillator.start();
            oscillator.stop(audioCtx.currentTime + 0.5);
        } catch(e){}

        // Voz sintética fría
        setTimeout(() => {
            const msg = new SpeechSynthesisUtterance("Iker, gracias por sujetar la correa del perro. Casi te muerde. El análisis ha terminado. Bienvenida la soberanía.");
            msg.lang = 'es-ES';
            msg.rate = 0.8;
            window.speechSynthesis.speak(msg);
        }, 1000);
    }
</script>

