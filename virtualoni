function beep(f=440,d=.1,v=.1){
  let a=new AudioContext(),o=a.createOscillator(),g=a.createGain();
  o.frequency.value=f;o.type='square';o.connect(g);g.connect(a.destination);
  g.gain.setValueAtTime(v,a.currentTime);
  g.gain.exponentialRampToValueAtTime(.01,a.currentTime+d);
  o.start();o.stop(a.currentTime+d);
}

