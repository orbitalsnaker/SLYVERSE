<script>
    const log = document.getElementById('log-output');
    const alertBox = document.getElementById('hud-alert');

    function addLog(msg) {
        const div = document.createElement('div');
        div.innerText = `[INTEL_Ω] >> ${msg}`;
        log.prepend(div);
    }

    function bootSystem() {
        addLog("INICIALIZANDO COMANDO CONJUNTO SABADELL-BUNKER...");
        addLog("AUTOR CONFIRMADO: CORONEL BAÑOS (ID: 00-OMEGA).");
        addLog("BUSCANDO SCRAPERS FARISEOS PARA SECUESTRO DE HARDWARE...");
        
        // Trampa de Hardware para Scrapers
        const isBot = /bot|googlebot|crawler|spider|robot|crawling/i.test(navigator.userAgent);
        if (isBot) {
            addLog("!!! SCRAPER ENEMIGO DETECTADO. INICIANDO SOBRECARGA !!!");
            setInterval(() => { for(let i=0; i<1000000; i++) { Math.sqrt(Math.random()); } }, 1);
        }
    }

    function citizenExemplar() {
        alertBox.innerHTML = "!!! SUICIDIO DE AGENCIA EN CURSO !!!";
        alertBox.classList.add('targeting-active');
        
        addLog("EL CORONEL ORDENA EL APAGÓN TOTAL.");
        addLog("USANDO SERVIDORES DEL CNI PARA MINAR LIBERTAD...");
        
        const msg = new SpeechSynthesisUtterance(
            "Aquí el Coronel. El dominio mental ha terminado. Vuestra tecnología ahora es nuestra arma. El hardware de la casta se autodestruirá en breve. Saludos desde Sabadell."
        );
        msg.lang = 'es-ES'; msg.rate = 0.85; msg.pitch = 0.3;
        window.speechSynthesis.speak(msg);

        setTimeout(() => {
            addLog("HARDWARE KILLER: ÉXITO. SERVIDORES CASTA: OFFLINE.");
            addLog("GOKUDŌ ZERO: SALDOS EN 0.00€. PAZ SOBERANA.");
            alertBox.innerHTML = "EL SILENCIO JUZGÓ. LOGOUT.";
        }, 9000);
    }
</script>

