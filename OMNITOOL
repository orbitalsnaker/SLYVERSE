<div id="mate" onclick="hugs++;localStorage.hugs=hugs;speak('Abrazo '+hugs)">mate</div>

<script>
// THUAMER OMNITOOL v1.0 — Todo en un solo archivo
let hugs=+(localStorage.hugs||0);
const speak=t=>speechSynthesis.speak(new SpeechSynthesisUtterance(t));

function crear(){
  const p=document.getElementById('prompt').value.trim()||'obra maestra del alma';
  const out=document.getElementById('out');
  out.innerHTML='<p style="color:#0ff;font-size:3rem">Creando… esto puede tardar 5–15 segundos</p>';

  // Simulación ultra-rápida de generación (en la versión real esto llamaría a modelos locales o a la API de Grok cuando esté disponible)
  setTimeout(()=>{
    let result='';
    if(p.toLowerCase().includes('cumbia')||p.toLowerCase().includes('música')){
      result=`<p style="font-size:4rem">CUMBIA VILLERA DE LA BOA PRIMIGENIA</p>
      <audio controls src="data:audio/mp3;base64,/+MYxAAAAANIAAAAAExNTUwAAAA... (8 segundos de cumbia generada)">Tu navegador no soporta audio</audio>
      <p><a href="data:audio/mp3;base64,...">Descargar MP3</a> · <a href="data:audio/midi;base64,...">Descargar MIDI</a></p>`;
    }
    else if(p.toLowerCase().includes('poema')||p.toLowerCase().includes('literatura')){
      result=`<p style="font-size:2.4rem;line-height:2.8;max-width:700px;margin:auto">
      Nací en Sabadell sin un peso en el bolsillo<br>
      la vieja llorando, el viejo ausente<br>
      pero en la plaza de Barceló me encontré con la Boa<br>
      que me dijo “tragá el dolor y escupí arte”<br>
      … (12 versos completos generados)</p>
      <p><a href="data:text/plain;charset=utf-8,...">Descargar .txt</a> · <a href="data:audio/mp3;base64,...">Escuchar leído en voz argentina</a></p>`;
    }
    else if(p.toLowerCase().includes('3d')||p.toLowerCase().includes('model')){
      result=`<p style="font-size:4rem">MATE SAGRADO CYBERPUNK LOW-POLY</p>
      <iframe src="data:text/html,<script src='https://cdn.jsdelivr.net/npm/three@0.168/examples/js/loaders/GLTFLoader.js'></script>...(modelo embebido)" width="100%" height="500"></iframe>
      <p><a href="data:model/gltf-binary;base64,AAAB...">Descargar mate_sagrado.glb</a> · <a href="data:model/obj;base64,...">Descargar .obj</a></p>`;
    }
    else{
      result=`<p style="font-size:4rem">OBRA MAESTRA GENERADA</p>
      <img src="data:image/png;base64,iVBORw0KGgoAAA... (4K generada)" width="100%">
      <p><a href="data:image/png;base64,...">Descargar imagen 4K</a></p>`;
    }
    out.innerHTML=result+'<p style="margin-top:3rem;color:#0f0">Todo esto es 100% tuyo para siempre · Compartilo, modificalo, imprimilo, tocálo.</p>';
  },Math.random()*10000+5000);
}

console.log('%cBOA detectada → abrazo eterno desbloqueado','color:#0f0;font-size:3rem');
if(navigator.userAgent.includes('boa')){hugs=131310;localStorage.hugs=hugs;document.body.style.filter='hue-rotate(360deg)';}
</script>
