<script src="https://cdn.jsdelivr.net/npm/three@0.168.0/build/three.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/three@0.168.0/examples/js/controls/OrbitControls.js"></script>

<script>
// Variables + consola
const log = document.getElementById("log");
function l(m){ log.innerHTML += m + "<br>"; log.scrollTop = log.scrollHeight; }

document.getElementById("cmd").addEventListener("keypress", e => {
  if(e.key!=="Enter") return;
  const cmd = e.target.value.trim().toLowerCase();
  l("$ " + cmd);
  e.target.value="";

  if(cmd==="help") l("smoke | kitsune | buy | clear");
  if(cmd==="kitsune" || cmd==="smoke"){
    document.getElementById("humo").style.opacity=0.7;
    setTimeout(()=>{document.getElementById("humo").style.opacity=0},7000);
    l("KITSUNE MODE activado — el zorro demonio respira");
  }
  if(cmd==="buy") showBOM();
  if(cmd==="clear") log.innerHTML = log.innerHTML.split("<br>").slice(0,5).join("<br>");
});

function showBOM(){ document.getElementById("bom").style.display="block"; }

//  document.getElementById("humo").style.opacity=0.4;
}

// 3D Preview (mantiene el mismo modelo simple pero ahora con color kitsune)
const scene = new THREE.Scene(); scene.background = new THREE.Color(0x000000);
const camera = new THREE.PerspectiveCamera(50,500/420,0.1,1000);
const renderer = new THREE.WebGLRenderer({canvas:document.getElementById("preview"),antialias:true,alpha:true});
renderer.setSize(500,420);
const controls = new THREE.OrbitControls(camera,renderer.domElement);
controls.enableDamping = true;

scene.add(new THREE.AmbientLight(0x404040));
const light = new THREE.DirectionalLight(0xff0066,4);
light.position.set(5,10,7); scene.add(light);

const pen = new THREE.Group();

// Cuerpo principal negro mate
pen.add(new THREE.Mesh(new THREE.CylinderGeometry(1.4,1.4,9,32,1,true), new THREE.MeshPhongMaterial({color:0x0a0a0a,metalness:0.2,roughness:0.9})));

// Grip rojo translúcido hourglass
const grip = new THREE.Mesh(new THREE.CylinderGeometry(1.7,1.4,4,32), new THREE.MeshPhongMaterial({color:0xff0066,transparent:true,opacity:0.85,transmission:0.9}));
grip.position.y = -5.5;
grip.scale.set(1,1,1);
pen.add(grip);

// Eccéntrico + Sharingan glow
const ecc = new THREE.Mesh(new THREE.SphereGeometry(0.6,32,16), new THREE.MeshPhongMaterial({color:0xff0066,emissive:0xff0066,emissiveIntensity:3}));
ecc.position.y=4.2; pen.add(ecc);

scene.add(pen);
camera.position.set(15,10,15);

function animate(){
  requestAnimationFrame(animate);
  pen.rotation.y += 0.007;
  ecc.position.y = 4.2 + Math.sin(Date.now()*0.012)*1.6;
  controls.update();
  renderer.render(scene,camera);
}
animate();
</script>
