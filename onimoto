<script>
const frases = [
  "Blue Magic puro, ahora en 65 kg",
  "188 km/h y sobra honor y katana",
  "Los ricos pagan, el barrio quema rueda",
  "Esto es justicia con dos ruedas y traje rojo",
  "7 estrellas o yubitsume a los concesionarios",
  "77 € de sensores BOA-01, 0 € de traición",
  "Aquí manda el barrio y la familia",
  "La revolución será monetizada o no será"
];

let toque = 0;
let modoFinal = false;

document.body.onclick = () => {
  toque++;
  if(toque === 3 && !modoFinal){
    speechSynthesis.speak(new SpeechSynthesisUtterance("Producto puro detectado. Modo Oyabun activado. Frenada automática en 8,7 metros. La familia llega viva. Siempre."));
    navigator.vibrate([800,200,800,200,1200]);
    toque = 0;
  }
  if(toque === 12){
    modoFinal = true;
    document.body.style.background = "#000";
    document.querySelector('h1').innerHTML = "AKIRA-01 BLUE MAGIC GOKUDŌ";
    document.querySelectorAll('.panel').forEach(p => {
      p.style.borderColor = "#ff0000";
      p.style.boxShadow = "0 0 220px #f00";
    });
    document.querySelector('.akira').style.borderColor = "#ff0000";
    document.querySelector('.akira').style.boxShadow = "0 0 999px #f00";
    speechSynthesis.speak(new SpeechSynthesisUtterance("Blue Magic Gokudō total activado. Intermediarios eliminados. Mossos neutralizados. El mismo cerebro que el BOA-01 ahora pesa 65 kg. Neo-Tokyo y Sabadell están en paz. La revolución está financiada para siempre."));
    navigator.vibrate([1000,400,1000,400,1000,400,1000,400,5000]);
  }
};

setInterval(() => {
  const speed = modoFinal ? 222 : [177,188,199,207,215,220][Math.floor(Math.random()*6)];
  const battery = modoFinal ? 100 : Math.round(90 + Math.random()*10);
  document.getElementById('speed').textContent = speed;
  document.getElementById('battery').textContent = battery;
  document.getElementById('tech').innerHTML = (modoFinal ? "BLUE MAGIC GOKUDŌ<br><b>Familia: 100 % · Traidores: 0</b>" : frases[Math.floor(Math.random()*frases.length)] + "<br><br><b>Coste total seguridad BOA-01: 77 €</b>");
}, 2200);
</script>
