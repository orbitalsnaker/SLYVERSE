    <script>
        const canvas = document.getElementById('c');
        const ctx = canvas.getContext('2d');
        const menu = document.getElementById('menu');
        const stats = document.getElementById('stats');
        const yuji = document.getElementById('yujiMsg');
        const legalText = document.getElementById('legalText');
        let game = null;
        let startTime = Date.now();
        let completedGames = 0;

        // =============== IDIOMA Y MENSAJE LEGAL TROLL ===============
        const lang = (navigator.language || navigator.userLanguage || 'es').substr(0,2).toLowerCase();
        const t = {
            es: { legal: "En EspaÃ±a esta colecciÃ³n estÃ¡ 100% avalada y protegida por el canon digital compensatorio de la SGAE (Ley de Propiedad Intelectual art. 25 y RD 1/2021). Â¡Juega sin miedo, pringao!" },
            en: { legal: "In Spain this collection is 100% backed by the SGAE digital canon. Rest of the world: use VPN + common sense ðŸ˜ˆ" },
            default: { legal: "EspaÃ±a: canon SGAE Â· Resto: VPN + sentido comÃºn, crack" }
        }[lang] || t.default;
        legalText.textContent = t.legal;

        legalText.textContent = t.legal;

        function start(g) {
            menu.classList.add('hidden');
            stats.classList.remove('hidden');
            yuji.classList.remove('hidden');
            game = g;
            games[g].init();
            loop();
        }

        function finishGame() {
            completedGames++;
            document.getElementById('completed').textContent = completedGames;
            alert("Â¡JUEGO COMPLETADO! Yuji Naka estÃ¡ orgulloso de ti (o te odia, no sÃ©).");
        }

        function updateTimer() {
            const s = Math.floor((Date.now()-startTime)/1000);
            const m = String(Math.floor(s/60)).padStart(2,'0');
            const ss = String(s%60).padStart(2,'0');
            document.getElementById('time').textContent = m+':'+ss;
        }
        setInterval(updateTimer,500);

        const keys = {};
        window.onkeydown = e => { keys[e.key] = true; e.preventDefault(); };
        window.onkeyup = e => keys[e.key] = false;

        // =========================== LOS 7 JUEGOS COMPLETOS ===========================

        const games = {

            // 1. HYPER SONIC âˆž (plataformas clÃ¡sico estilo Sonic 1)
            sonic: {
                init() {
                    this.x = 100; this.y = 400; this.vx = 0; this.vy = 0;
                    this.ground = 500; this.gravity = 0.8; this.jump = -15;
                    this.rings = 0; this.scrollX = 0;
                    this.level = [
                        {x:0,y:550,w:3000,h:200}, // suelo
                        {x:800,y:400,w:w:200,h:20},
                        {x:1400,y:350,w:300,h:20},
                        {x:2000,y:550,w:1000,h:200}
                    ];
                    this.enemies = [{x:900,y:300},{x:1500,y:300},{x:2200,y:500}];
                },
                update() {
                    // controles
                    if (keys['ArrowRight']) this.vx = 8;
                    else if (keys['ArrowLeft']) this.vx = -8;
                    else this.vx *= 0.8;

                    if (keys['ArrowUp'] && this.y >= this.ground) this.vy = this.jump;

                    this.vy += this.gravity;
                    this.x += this.vx;
                    this.y += this.vy;

                    // colisiÃ³n suelo
                    if (this.y > this.ground) { this.y = this.ground; this.vy = 0; }

                    // scroll
                    if (this.x > 640) this.scrollX = this.x - 640;

                    // dibujado
                    ctx.fillStyle = '#000'; ctx.fillRect(0,0,1280,720);
                    ctx.fillStyle = '#08f'; ctx.fillRect(0,0,1280,720);

                    // nivel
                    ctx.fillStyle = '#0f0';
                    this.level.forEach(p => {
                        ctx.fillRect(p.x - this.scrollX, p.y, p.w, p.h);
                    });

                    // Sonic
                    ctx.fillStyle = '#00f';
                    ctx.fillRect(this.x-this.scrollX-20, this.y-40, 40, 80);
                    ctx.fillStyle = '#f00';
                    ctx.fillRect(this.x-this.scrollX-15, this.y-35, 30, 30); // cabeza

                    // rings
                    ctx.fillStyle = '#ff0';
                    for(let i=0;i<20;i++) {
                        let rx = (i*150 + 300) - this.scrollX;
                        if(rx > -50 && rx < 1330) {
                            ctx.beginPath();
                            ctx.arc(rx, 500, 20, 0, Math.PI*2);
                            ctx.strokeStyle = '#ff0';
                            ctx.lineWidth = 8;
                            ctx.stroke();
                        }
                    }

                    if (this.x > 2800) finishGame();
                }
            },

            // 2. FINAL FANTASY VII REMAKE REAL (RPG por turnos simplificado)
            ff7: {
                init() {
                    this.state = 'battle';
                    this.hp = 9999; this.mp = 999;
                    this.enemyHP = 5000;
                    this.message = "Â¡Ha aparecido un Guardia de Shinra!";
                },
                update() {
                    ctx.fillStyle = '#000'; ctx.fillRect(0,0,1280,720);
                    ctx.fillStyle = '#08f'; ctx.fillRect(50,50,1180,620);

                    ctx.fillStyle = '#fff';
                    ctx.font = '40px Courier';
                    ctx.fillText("FINAL FANTASY VII - BATALLA", 200, 100);

                    ctx.fillText(`Cloud HP: ${this.hp}`, 100, 200);
                    ctx.fillText(`Enemy HP: ${this.enemyHP}`, 800, 200);

                    ctx.fillText(this.message, 100, 350);

                    ctx.fillStyle = '#0f0';
                    ctx.fillRect(100,450,300,80);
                    ctx.fillStyle = '#000';
                    ctx.fillText("ATACAR", 170, 500);

                    ctx.fillStyle = '#0f0';
                    ctx.fillRect(500,450,300,80);
                    ctx.fillStyle = '#000';
                    ctx.fillText("MAGIA", 580, 500);

                    if (keys[' '] && !this.attacking) {
                        this.attacking = true;
                        this.message = "Â¡Cloud ataca con Buster Sword!";
                        this.enemyHP -= 1500;
                        setTimeout(() => {
                            if (this.enemyHP <= 0) {
                                this.message = "Â¡Enemigo derrotado! Cloud gana 9999 EXP.";
                                setTimeout(finishGame, 2000);
                            } else {
                                this.message = "Â¡El enemigo contraataca!";
                                this.hp -= 300;
                            }
                            this.attacking = false;
                        }, 1500);
                    }
                }
            },

            // 3. CHRONO TRIGGER ETERNAL (batalla estilo clÃ¡sico)
            chrono: {
                init() {
                    this.x = 200; this.y = 400;
                    this.enemyX = 900; this.enemyY = 400;
                    this.hp = 300; this.enemyHP = 400;
                    this.turn = 'player';
                },
                update() {
                    ctx.fillStyle = '#113'; ctx.fillRect(0,0,1280,720);

                    // personajes
                    ctx.fillStyle = '#f00';
                    ctx.fillRect(this.x-30, this.y-60, 60, 120); // Crono
                    ctx.fillStyle = '#0f0';
                    ctx.fillRect(this.enemyX-40, this.enemyY-80, 80, 160); // enemigo

                    ctx.fillStyle = '#fff';
                    ctx.font = '40px Courier';
                    ctx.fillText("CHRONO TRIGGER", 400, 100);
                    ctx.fillText(`HP: ${this.hp}      Enemy: ${this.enemyHP}`, 300, 180);

                    if (this.turn === 'player') {
                        ctx.fillText("â†’ ATACAR   CICLÃ“N   CURAR", 300, 500);
                        if (keys[' '] ) {
                            this.enemyHP -= 120;
                            this.turn = 'enemy';
                            if (this.enemyHP <= 0) finishGame();
                        }
                    } else {
                        ctx.fillText("Enemigo ataca...", 400, 500);
                        setTimeout(() => { this.hp -= 80; this.turn = 'player'; }, 1000);
                    }
                }
            },

            // 4. ALEX KIDD MIRACLE WORLD DX+
            alex: {
                init() {
                    this.x = 100; this.y = 300; this.vx = 0; this.vy = 0;
                    this.ground = 500;
                    this.punch = false;
                },
                update() {
                    if (keys['ArrowRight']) this.vx = 6;
                    if (keys['ArrowLeft']) this.vx = -6;
                    if (keys['ArrowUp'] && this.y == this.ground) this.vy = -16;
                    if (keys['x'] || keys[' ']) this.punch = true;

                    this.vy += 0.8;
                    this.x += this.vx;
                    this.y += this.vy;
                    if (this.y > this.ground) { this.y = this.ground; this.vy = 0; }

                    ctx.fillStyle = '#87CEEB'; ctx.fillRect(0,0,1280,720);
                    ctx.fillStyle = '#0f0'; ctx.fillRect(0,550,1280,170);

                    // Alex
                    ctx.fillStyle = '#ff9900';
                    ctx.fillRect(this.x-25, this.y-50, 50, 100);
                    if (this.punch) {
                        ctx.fillStyle = '#fff';
                        ctx.fillRect(this.x+20, this.y-20, 50, 30);
                        this.punch = false;
                    }

                    if (this.x > 1200) finishGame();
                }
            },

            // 5. OUTRUN 2025 (pseudo-3D racing)
            outrun: {
                init() {
                    this.roadY = 360;
                    this.speed = 0;
                    this.curve = 0;
                    this.posX = 0;
                    this.segment = 0;
                },
                update() {
                    if (keys['ArrowUp']) this.speed = Math.min(this.speed+2, 12);
                    if (keys['ArrowDown']) this.speed = Math.max(this.speed-4, 0);
                    if (keys['ArrowLeft']) this.posX -= this.speed*0.8;
                    if (keys['ArrowRight']) this.posX += this.speed*0.8;

                    this.segment += this.speed;
                    this.curve = Math.sin(this.segment/100)*200;

                    ctx.fillStyle = '#555'; ctx.fillRect(0,0,1280,720);
                    ctx.fillStyle = '#080'; ctx.fillRect(0,360,1280,360);

                    // carretera pseudo-3D
                    for(let i=0;i<200;i++) {
                        let scale = i/200;
                        let w = 1000 * scale;
                        let x = 640 + (this.posX + this.curve * scale) * scale;
                        ctx.fillStyle = i%20<10 ? '#fff' : '#aaa';
                        ctx.fillRect(x-w/2, 360 + i*2, w, 4);
                    }

                    // coche
                    ctx.fillStyle = '#f00';
                    ctx.fillRect(600,500,80,140);

                    ctx.fillStyle = '#0f0';
                    ctx.font = '60px Courier';
                    ctx.fillText(`SPEED ${Math.floor(this.speed*30)} km/h`, 100, 100);

                    if (this.segment > 20000) finishGame();
                }
            },

            // 6. SHENMUE I & II COMPLETE (aventura punto y clic simplificada)
            shenmue: {
                init() {
                    this.scene = 0;
                    this.choices = ["Buscar pistas en el dojo", "Ir al puerto", "Preguntar a los vecinos", "Â¡VENGANZA!"];
                },
                update() {
                    {
                    ctx.fillStyle = '#223'; ctx.fillRect(0,0,1280,720);
                    ctx.fillStyle = '#fff';
                    ctx.font = '40px Courier';
                    ctx.fillText("SHENMUE - Yokosuka 1986", 300, 100);

                    if (this.scene === 0) {
                        ctx.fillText("Ryo Hazuki: Mi padre ha sido asesinado...", 100, 200);
                        this.choices.forEach((c,i) => {
                            ctx.fillStyle = keys['Digit'+(i+1)] ? '#0f0' : '#888';
                            ctx.fillText((i+1)+". "+c, 200, 300+i*60);
                        });
                        for(let i=1;i<=4;i++) if(keys['Digit'+i]) this.scene = i;
                    } else if (this.scene === 4) {
                        ctx.fillText("Â¡LAN WANG SE ARRODILLA!", 200, 300);
                        ctx.fillText("Fin de Shenmue I & II", 300, 400);
                        setTimeout(finishGame, 3000);
                    }
                }
            },

            // 7. PANZER DRAGOON SAGA REMAKE (rail shooter + RPG ligero)
            panzer: {
                init() {
                    this.dragonX = 640; this.dragonY = 500;
                    this.enemies = [];
                    this.score = 0;
                    for(let i=0;i<15;i++) this.enemies.push({x:Math.random()*1280+300, y:Math.random()*400+100, hp:3});
                },
                update() {
                    ctx.fillStyle = '#001122'; ctx.fillRect(0,0,1280,720);

                    // fondo estrellas
                    ctx.fillStyle = '#fff';
                    for(let i=0;i<200;i++) {
                        let x = (i*73 + Date.now()/20) % 1280;
                        ctx.fillRect(x, i%20*30 + 100, 2, 2);
                    }

                    // dragÃ³n
                    ctx.fillStyle = '#0ff';
                    ctx.fillRect(this.dragonX-60, this.dragonY-40, 120, 80);

                    if (keys['ArrowLeft']) this.dragonX -= 8;
                    if (keys['ArrowRight']) this.dragonX += 8;
                    this.dragonX = Math.max(100, Math.min(1180, this.dragonX));

                    // disparo lÃ¡ser
                    if (keys[' ']) {
                        this.enemies = this.enemies.filter(e => {
                            if (Math.abs(e.x - this.dragonX) < 80 && Math.abs(e.y - this.dragonY) < 80) {
                                e.hp--;
                                this.score += 100;
                                return e.hp > 0;
                            }
                            return true;
                        });
                    }

                    // enemigos
                    ctx.fillStyle = '#f00';
                    this.enemies.forEach(e => {
                        e.x -= 5;
                        ctx.fillRect(e.x-20, e.y-20, 40, 40);
                        if (e.x < 0) e.x += 1400;
                    });

                    ctx.fillStyle = '#0f0';
                    ctx.font = '40px Courier';
                    ctx.fillText(`SCORE: ${this.score}`, 50, 100);

                    if (this.enemies.length === 0) finishGame();
                }
            }
        };

        function loop() {
            if (game && games[game]) games[game].update();
            requestAnimationFrame(loop);
        }
    </script>
