  <!-- Three.js + GLTFLoader -->
  <script src="https://cdn.jsdelivr.net/npm/three@0.168.0/build/three.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/three@0.168.0/examples/js/controls/OrbitControls.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/three@0.168.0/examples/js/loaders/GLTFLoader.js"></script>

  <script>
    // Escena base
    const scene = new THREE.Scene();
    scene.background = new THREE.Color(0x000000);

    const camera = new THREE.PerspectiveCamera(45, innerWidth/innerHeight, 0.1, 1000);
    camera.position.set(8, 6, 10);

    const renderer = new THREE.WebGLRenderer({antialias:true});
    renderer.setSize(innerWidth, innerHeight);
    renderer.setPixelRatio(devicePixelRatio);
    document.body.appendChild(renderer.domElement);

    // Luces neon
    scene.add(new THREE.AmbientLight(0x00ff00, 0.4));
    const topLight = new THREE.DirectionalLight(0x00ff00, 1);
    topLight.position.set(10, 20, 10);
    scene.add(topLight);
    const redLight = new THREE.DirectionalLight(0xff0000, 0.8);
    redLight.position.set(-10, 10, -10);
    scene.add(redLight);

    // Controles orbitales
    const controls = new THREE.OrbitControls(camera, renderer.domElement);
    controls.enableDamping = true;
    controls.dampingFactor = 0.05;
    controls.rotateSpeed = 0.6;

    // Cargar modelo 3D (AVANGEL 58 GLB – subido a catbox porque GitHub no deja >100 MB)
    const loader = new THREE.GLTFLoader();
    loader.load('https://files.catbox.moe/5j1q9v.glb', (gltf) => {
      const avangel = gltf.scene;
      avangel.scale.set(2.5,2.5,2.5);
      avangel.traverse((node) => {
        if (node.isMesh) {
          node.material.emissive = new THREE.Color(0x001100);
          node.material.emissiveIntensity = 0.4;
        }
      });
      scene.add(avangel);

      // Luces de sirena rotando
      const sirenLight = new THREE.PointLight(0x0000ff, 3, 20);
      sirenLight.position.set(0, 3, 2.2);
      avangel.add(sirenLight);
      const sirenLight2 = new THREE.PointLight(0xff0000, 3, 20);
      sirenLight2.position.set(0, 3, -2.2);
      avangel.add(sirenLight2);

      // Animación sirenas + rotación lenta
      function animate() {
        requestAnimationFrame(animate);
        avangel.rotation.y += 0.003;
        const time = Date.now() * 0.003;
        sirenLight.intensity = Math.abs(Math.sin(time*8)) * 5;
        sirenLight2.intensity = Math.abs(Math.cos(time*8)) * 5;
        controls.update();
        renderer.render(scene, camera);
      }
      animate();
    }, undefined, () => {
      // Fallback si no carga el GLB: crea un cubo placeholder con colores gokudō
      const geo = new THREE.BoxGeometry(4, 2, 8);
      const mat = new THREE.MeshStandardMaterial({color:0x00ff00, emissive:0x00ff00, emissiveIntensity:0.6});
      const placeholder = new THREE.Mesh(geo, mat);
      scene.add(placeholder);
      placeholder.position.y = 1;
    });

    // Resize
    window.addEventListener('resize', () => {
      camera.aspect = innerWidth/innerHeight;
      camera.updateProjectionMatrix();
      renderer.setSize(innerWidth, innerHeight);
    });
  </script>
</body>
