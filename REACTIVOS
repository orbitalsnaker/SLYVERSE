  const sections = document.querySelectorAll('.section');
  sections.forEach(sec => {
    const depth = sec.getBoundingClientRect().top;
    if(depth < 800) {
      sec.style.transform = `perspective(1000px) rotateX(${depth * 0.005}deg)`;
    }
  });
