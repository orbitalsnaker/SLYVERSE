<script>
let hardwareDB = [];
let mirrorsCount = 0;
let puebloCount = 0;
const targetVoices = ["Extrayendo Outlook...", "Bypass 2FA logrado.", "Clonando archivos de la Logia...", "IP Ministerial Localizada."];

function setupHardwareDB() {
    const components = ["Placa Grafeno Sabadell", "Inyector Bio-Silicio", "Bobina de Inducción Ronin", "Chip ARM Soberano", "Sensor de Vacío"];
    const names = ["Rifle Gauss vΩ", "Inhibidor de CNI", "Antena Satelital Pirata", "Drone de Reconocimiento", "Kit EMP Ciudadano"];
    for (let i = 1; i <= 300; i++) {
        hardwareDB.push({
            id: `HA-${2000 + i}`,
            name: names[i % 5],
            bom: `${components[i % 5]}, Cables de plata, Soldadura en frío`
        });
    }
}

function speak(text) {
    const msg = new SpeechSynthesisUtterance(text);
    msg.rate = 1.1; msg.pitch = 0.5;
    window.speechSynthesis.speak(msg);
}

function activateLiberator() {
    const name = document.getElementById('fake-name').value || "ANÓNIMO_CASTA";
    document.getElementById('gov-portal').style.display = 'none';
    document.getElementById('black-hole').style.display = 'block';
    speak(`Bienvenido al Black Hole, ${name}. Gracias por tus datos de la casta. El pueblo está recibiendo sus juguetes.`);

    // COL 1: DRENAJE (Lo que le pasa al castuzo)
    setInterval(() => {
        const div = document.createElement('div');
        div.className = 'card-law';
        div.innerHTML = `<span style="color:var(--gold)">[DUMPING_TARGET: ${name.toUpperCase()}]</span><br><b>${targetVoices[Math.floor(Math.random()*targetVoices.length)]}</b><br><small>Hash: ${Math.random().toString(36).substring(5)}</small>`;
        document.getElementById('law-scroll').prepend(div);
        if(document.getElementById('law-scroll').childNodes.length > 15) document.getElementById('law-scroll').lastChild.remove();
    }, 3000);

    // COL 2: PUEBLO (Hardware real)
    let tIdx = 0;
    setInterval(() => {
        const tech = hardwareDB[tIdx % 300];
        const div = document.createElement('div');
        div.className = 'card-tech';
        div.innerHTML = `<b>[LIBERADO] ${tech.name}</b><br><span class="bom-list">BOM: ${tech.bom}</span>`;
        document.getElementById('tech-scroll').prepend(div);
        tIdx++; puebloCount += Math.floor(Math.random()*20);
        document.getElementById('armed-pueblo').innerText = puebloCount;
        if(document.getElementById('tech-scroll').childNodes.length > 20) document.getElementById('tech-scroll').lastChild.remove();
    }, 1500);

    // COL 3: REPLICACIÓN
    function replicate() {
        const div = document.createElement('div');
        const hash = Math.random().toString(36).substring(7);
        div.className = Math.random() > 0.3 ? 'card-citizen-mirror' : 'card-mirror';
        div.innerHTML = `> [REPLICA] Node_${hash}.onion/vault_${name.substring(0,3)}`;
        document.getElementById('mirror-scroll').prepend(div);
        mirrorsCount++;
        document.getElementById('mirror-total').innerText = mirrorsCount;

        const log = document.createElement('div');
        log.innerText = `> Redirecting data from ${name} to cluster_${hash}`;
        document.getElementById('net-log').prepend(log);

        if(document.getElementById('mirror-scroll').childNodes.length > 40) document.getElementById('mirror-scroll').lastChild.remove();
        setTimeout(replicate, 500);
    }
    replicate();
}

window.onbeforeunload = () => "La clonación de tus secretos ministeriales está al 88%. No huyas.";
</script>
