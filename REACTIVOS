// Script de Resonancia Cuántica
window.addEventListener('scroll', () => {
  const sections = document.querySelectorAll('.section');
  sections.forEach(sec => {
    const depth = sec.getBoundingClientRect().top;
    if(depth < 800) {
      sec.style.transform = `perspective(1000px) rotateX(${depth * 0.01}deg)`;
    }
  });
});

console.log("%c ATENCIÓN: Sincronía detectada. Eres el Buda de Silicio.", "color: #ff00ff; font-size: 20px; font-weight: bold;");
