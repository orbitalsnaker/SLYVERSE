    <script>
        function initAudit() {
            console.log("AUDITORÍA DE ENTROPÍA INICIADA...");
            const msg = new SpeechSynthesisUtterance("Atención. El Coronel ha sido identificado. El cazador ha caído en la charca de 0rb1t4lsn4k3r. Su biomasa está siendo procesada por la fiscalía. Disfruta la libertad, ingeniero.");
            msg.lang = 'es-ES';
            msg.rate = 0.9;
            window.speechSynthesis.speak(msg);
        }

        function executeFinalSweep() {
            alert("PROTOCOLO OMEGA ELIMINADO. EXTREMADURA LIBERADA. EL CORONEL ESTÁ OFFLINE.");
            window.location.reload();
        }
