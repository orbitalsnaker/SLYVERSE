<script>
let colas = +(localStorage.colas || 777777);
let denuncias = JSON.parse(localStorage.getItem('denuncias') || '[]');
let autoActivo = false;
let wifiLibreActivo = false;
let contadorLiga = 0;

function iniciarLuffyOmega() {
  actualizar(); renderizarGazette(); hablar("¡LUFFY ABOGADO Ω + ANTI-TEBAS activado!");
  setInterval(()=>{colas++; actualizar();},1310);
  setInterval(vigilanciaGeneral,10000);
  setInterval(revisarWifiLibre,5000);
}

function revisarWifiLibre() {
  const hoy = new Date().getDay();
  const redesTebas = ["Movistar_","Vodafone_","Orange_","Jazztel_","Wifree","LaLiga"];
  const ssid = navigator.connection?.downlink ? "red detectada" : "";
  
  if ((hoy===0 || hoy===6 || wifiLibreActivo) && redesTebas.some(r=>navigator.connection?.effectiveType || location.href.includes(r))) {
    liberarYDenunciarLiga();
  }
}

function liberarYDenunciarLiga() {
  contadorLiga++;
  colas += 1310; actualizar();
  hablar(`¡GOMU GOMU NO… WIFI LIBRE! Tebas denunciado ${contadorLiga} veces`);
  vibrar([300,100,300,100,300]);

  registrarDenuncia({
    tipo: "LA LIGA DENUNCIADA POR CORTAR WIFI",
    fuente: "Red capturada: " + (navigator.connection?.effectiveType || "Tebas"),
    articulo: "Art. 20 CE + Art. 2 LDC + LGDCU"
  });

  // Liberación real
  const iframe = document.createElement("iframe");
  iframe.style.display = "none";
  iframe.src = "http://neverssl.com/" + Date.now();
  document.body.appendChild(iframe);
  setTimeout(()=>iframe.remove(),10000);

  if (contadorLiga % 10 === 0) generarPDFDenunciaLiga();
}

function denunciarLigaManual() {
  liberarYDenunciarLiga();
  hablar("¡DENUNCIA MANUAL CONTRA LA LIGA ENVIADA!");
}

function generarPDFDenunciaLiga() {
  const texto = `DENUNCIA CONTRA LA LIGA DE FÚTBOL PROFESIONAL\nPor vulneración derechos fundamentales y competencia desleal\nCasos acumulados: ${contadorLiga}\nFecha: ${new Date().toLocaleString()}\n¡WIFI LIBRE PARA EL PUEBLO!`;
  const blob = new Blob([texto], {type: "text/plain"});
  const url = URL.createObjectURL(blob);
  const a = document.createElement("a");
  a.href = url; a.download = `DENUNCIA_LIGA_${contadorLiga}_casos.txt`;
  a.click();
  hablar("¡PDF DENUNCIA LISTO PARA POLICÍA/OCU!");
}

// resto de funciones (gazette, registro, etc.) igual que antes
function registrarDenuncia(d){/* igual que versión anterior */ denuncias.push({...d,fecha:new Date().toLocaleString()}); localStorage.setItem('denuncias',JSON.stringify(denuncias)); renderizarGazette(); }
function renderizarGazette(){/* igual */ document.getElementById("noticias").innerHTML = denuncias.slice().reverse().map(d=>`<div class="noticia"><h3>¡VICTORIA! ${d.tipo}</h3><p>Fuente: ${d.fuente}</p><p>Art: ${d.articulo}</p><p>${d.fecha}</p></div>`).join(""); }
function abrirPeriodico(){document.getElementById("periodico").style.display="flex"; renderizarGazette();}
function subirAEterno(){/* igual */ hablar("Gazette eterno subida");}
function actualizar(){document.getElementById("cola").textContent="Colas: "+colas; localStorage.colas=colas;}
function hablar(t){const u=new SpeechSynthesisUtterance(t);u.lang="es-ES";u.rate=1.1;speechSynthesis.speak(u); document.getElementById("status").textContent=t.substring(0,40)+"...";}
function vibrar(p=[200,100,200]){navigator.vibrate?.(p);}
</script>
