        const log = document.getElementById('log');
        const bar = document.getElementById('bar1');
        const status = document.getElementById('status');
        
        // Fases del Haki
        const steps = [
            { t: "Escaneando topología de red local...", b: 20 },
            { t: "Inyectando payload en Router_Gateway...", b: 35 },
            { t: "Extrayendo lista de contactos (WhatsApp/Telegram/Gmail)...", b: 50 },
