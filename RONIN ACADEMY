        function showSubject(subject) {
            if (subject === 'coheteria') {
                currentAudio.pause();
                currentAudio = document.getElementById('rocket');
                currentAudio.play().catch(()=>{});
            } else {
                if (currentAudio !== document.getElementById('ambient')) {
                    currentAudio.pause();
                    currentAudio = document.getElementById('ambient');
                    currentAudio.play().catch(()=>{});
                }
            }

