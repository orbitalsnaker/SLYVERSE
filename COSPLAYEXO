    <h2>C√≥digo completo integrado (ESP32-S3 ¬∑ Arduino IDE)</h2>
    <pre>
// ONI GUARDIAN SUIT v1 ‚Äî Todo en un solo firmware
// Flashea ‚Üí Board: "ESP32S3 Dev Module", PSRAM: Enabled

#include <WiFi.h>
#include <BluetoothSerial.h>
#include <Adafruit_NeoPixel.h>
#include <Wire.h>
#include <Adafruit_MLX90614.h>
#include <Servo.h>
#include <ArduinoOTA.h>

#define NEO_PIN      3
#define NUM_LEDS     96
Adafruit_NeoPixel pixels(NUM_LEDS, NEO_PIN, NEO_GRB + NEO_KHZ800);
Adafruit_MLX90614 mlx = Adafruit_MLX90614();
Servo servoIzq, servoDer;
BluetoothSerial SerialBT;

#define FSR_PIN 6
#define H1 7   // h√°pticos
#define H2 8
#define H3 9
#define H4 10
#define AUDIO 11
#define SERVO_IZQ 1
#define SERVO_DER 2

float temp;
long abrazos = 13101310;
unsigned long last = 0;

void setup() {
  Serial.begin(115200);
  SerialBT.begin("Oni Guardian Œ©");
  Wire.begin(4,5);
  mlx.begin();
  servoIzq.attach(SERVO_IZQ);
  servoDer.attach(SERVO_DER);
  pixels.begin();
  pinMode(FSR_PIN, INPUT);
  pinMode(H1, OUTPUT); pinMode(H2, OUTPUT); pinMode(H3, OUTPUT); pinMode(H4, OUTPUT);
  pinMode(AUDIO, OUTPUT);
  ArduinoOTA.begin();
  oniEyes(255,0,0,30);
}

void loop() {
  ArduinoOTA.handle();
  if (millis() - last > 1000) {
    temp = mlx.readObjectTempC();
    SerialBT.printf("Temp:%.2f¬∞C | Abrazos:%ld\n", temp, abrazos);
    if (temp > 37.5) { modoBerserker(); }
    last = millis();
  }

  int fsr = analogRead(FSR_PIN);
  if (fsr > 1000) {
    abrazos++;
    hapticAbrazo();
    SerialBT.printf("¬°ABRAZO! ‚Üí %ld\n", abrazos);
    delay(600);
  }

  if (SerialBT.available()) {
    String c = SerialBT.readStringUntil('\n');
    if (c=="KATANA") { katanaOn(); }
    if (c=="NINJA")  { pixels.clear(); pixels.show(); }
  }
}

void oniEyes(int r,int g,int b,int br) {
  pixels.setBrightness(br);
  for(int i=0;i<NUM_LEDS;i++) pixels.setPixelColor(i, pixels.Color(r,g,b));
  pixels.show();
}

void hapticAbrazo() {
  for(int i=0;i<25;i++) {
    digitalWrite(H1,HIGH); digitalWrite(H2,HIGH); digitalWrite(H3,HIGH); digitalWrite(H4,HIGH);
    delay(125);
    digitalWrite(H1,LOW); digitalWrite(H2,LOW); digitalWrite(H3,LOW); digitalWrite(H4,LOW);
    delay(125);
  }
}

void modoBerserker() {
  oniEyes(0,0,255,150); // azul fr√≠o
  tone(AUDIO,150,1000);
}

void katanaOn() {
  oniEyes(255,50,0,255);
  tone(AUDIO,80,800);
  for(int p=0;p<180;p+=10) { servoDer.write(p); delay(15); }
}

// ¬°Flashea y el Oni despierta!
