<script src="https://cdn.jsdelivr.net/npm/three@0.168.0/build/three.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/three@0.168.0/examples/js/controls/OrbitControls.js"></script>

<script>
// Variables globales
let stroke=96, volt=8.3, haptic=88, modo="BARRIO", oniInt=50;
const log = document.getElementById("log");
function l(m){ log.innerHTML += m + "<br>"; log.scrollTop = log.scrollHeight; }

// Consola
document.getElementById("cmd").addEventListener("keypress", e => {
  if(e.key!=="Enter") return;
  const cmd = e.target.value.trim().toLowerCase();
  l("$ " + cmd);
  e.target.value="";

  if(cmd==="help") l("smoke | onimode | buy | clear | oni 0-100");
  if(cmd==="smoke" || cmd==="onimode"){
    modo="ONI"; document.getElementById("modoSelect").value="ONI";
    document.getElementById("modo").textContent="ONI";
    document.getElementById("humo").style.opacity=0.65;
    setTimeout(()=>{document.getElementById("humo").style.opacity=0},6000);
    l("ONI MODE activado — máscara procedural offline");
    generarOniProcedural();
  }
  if(cmd.startsWith("oni ")){
    oniInt = Math.min(100,Math.max(0,parseInt(cmd.split(" ")[1])||50));
    updateOniInt(); l(`Intensidad ONI → ${oniInt}%`);
    generarOniProcedural();
  }
  if(cmd==="buy") showBOM();
  if(cmd==="clear") log.innerHTML = log.innerHTML.split("<br>").slice(0,6).join("<br>");
});

// Sliders
["stroke","volt","haptic","oni"].forEach(p=>{
  document.getElementById(p+"Slider").addEventListener("input",e=>{
    const val = p==="volt" ? e.target.value/10 : +e.target.value;
    window[p==="oni"?"oniInt":p] = val;
    document.getElementById(p==="oni"?"oniInt":p).textContent = val;
    const perc = p==="volt"?(val-5)/4*100 : p==="oni"?val : p==="stroke"?(val-60)/50*100 : val;
    document.getElementById("fill_"+(p==="oni"?"o":p[0])).style.width = perc+"%";
    if(p==="oni") generarOniProcedural();
  });
});

document.getElementById("modoSelect").onchange = e=>{
  modo = e.target.value;
  document.getElementById("modo").textContent = modo;
  if(modo==="ONI") generarOniProcedural();
};

function updateOniInt(){
  document.getElementById("oniSlider").value = oniInt;
  document.getElementById("oniInt").textContent = oniInt;
  document.getElementById("fill_o").style.width = oniInt+"%";
}
function showBOM(){ document.getElementById("bom").style.display="block"; }

// 3D
const scene = new THREE.Scene(); scene.background = new THREE.Color(0x000000);
const camera = new THREE.PerspectiveCamera(50,500/420,0.1,1000);
const renderer = new THREE.WebGLRenderer({canvas:document.getElementById("preview"),antialias:true});
renderer.setSize(500,420);
const controls = new THREE.OrbitControls(camera,renderer.domElement);
controls.enableDamping = true;

scene.add(new THREE.AmbientLight(0x404040));
const light = new THREE.DirectionalLight(0x00ffff,3);
light.position.set(5,10,7); scene.add(light);

const pen = new THREE.Group();
pen.add(new THREE.Mesh(new THREE.CylinderGeometry(1,1,9,32), new THREE.MeshPhongMaterial({color:0x0f0f0f,metalness:0.9})));
pen.add(()=>{const g=new THREE.Mesh(new THREE.CylinderGeometry(1.4,1.6,4,32),new THREE.MeshPhongMaterial({color:0xff3366}));g.position.y=-5.5;return g;}());
const ecc = new THREE.Mesh(new THREE.SphereGeometry(0.6,32,16),new THREE.MeshPhongMaterial({color:0x00ffff,emissive:0x00ffff,emissiveIntensity:2}));
ecc.position.y=4.2; pen.add(ecc);

const skin = new THREE.Mesh(new THREE.PlaneGeometry(12,12), new THREE.MeshBasicMaterial({color:0xffdbac,side:THREE.DoubleSide}));
skin.rotation.x = -Math.PI/2; skin.position.y = -6;
scene.add(skin); scene.add(pen);
camera.position.set(15,10,15);

// Generador ONI procedural 100 % offline
const canvas = document.createElement("canvas");
canvas.width=512; canvas.height=512;
const ctx = canvas.getContext("2d");

function generarOniProcedural(){
  l("Generando oni procedural offline… intensidad "+oniInt+"%");
  ctx.fillStyle="#fff"; ctx.fillRect(0,0,512,512);

  // ruido tinta
  for(let i=0;i<9000;i++){
    ctx.fillStyle=`rgba(0,0,0,${Math.random()*0.05})`;
    ctx.fillRect(Math.random()*512,Math.random()*512,4,4);
  }

  ctx.save();
  ctx.translate(256,256);
  const scale = 1 + oniInt/100*0.4;
  ctx.scale(scale,scale);

  // cara
  ctx.fillStyle="#000";
  ctx.beginPath(); ctx.ellipse(0,0,180,220,0,0,Math.PI*2); ctx.fill();

  // cuernos
  for(let i=0;i<2;i++){
    const s=i?1:-1;
    const len=80+Math.random()*60+oniInt*0.5;
    ctx.beginPath();
    ctx.moveTo(s*60,-80);
    ctx.quadraticCurveTo(s*140,-len*0.7,s*90,-len);
    ctx.quadraticCurveTo(s*40,-len*0.3,s*30,-len*0.6);
    ctx.closePath(); ctx.fillStyle="#8B0000"; ctx.fill();
  }

  // ojos
  for(let i=0;i<2;i++){
    const s=i?1:-1;
    ctx.beginPath(); ctx.arc(s*70,-40,28+oniInt/8,0,Math.PI*2);
    ctx.fillStyle="#ff0066"; ctx.fill();
    ctx.shadowColor="#ff0066"; ctx.shadowBlur=20+oniInt; ctx.fill();
    ctx.shadowBlur=0;
    ctx.beginPath(); ctx.arc(s*70,-40,10,0,Math.PI*2); ctx.fillStyle="#000"; ctx.fill();
  }

  // colmillos
  ctx.fillStyle="#fff";
  for(let i=0;i<6;i++) ctx.fillRect((i%2?1:-1)*(35+i*18),70,16,35+Math.random()*25+oniInt/4);

  ctx.restore();

  if(oniInt>70){
    ctx.globalAlpha=0.35;
    for(let i=0;i<100;i++){
      ctx.strokeStyle="#8B0000"; ctx.lineWidth=2+Math.random()*5;
      ctx.beginPath(); ctx.moveTo(Math.random()*512,Math.random()*512);
      ctx.lineTo(Math.random()*512,Math.random()*512); ctx.stroke();
    }
    ctx.globalAlpha=1;
  }

  skin.material.map = new THREE.CanvasTexture(canvas);
  skin.material.needsUpdate = true;
}

// Inicio
ctx.fillStyle="#000"; ctx.font="bold 48px Courier"; ctx.fillText("BARRIO",160,260);

function animate(){
  requestAnimationFrame(animate);
  pen.rotation.y += 0.006;
  ecc.position.y = 4.2 + Math.sin(Date.now()*0.012)*(stroke/100*1.8);
  controls.update();
  renderer.render(scene,camera);
}
animate();
</script>
</body>
