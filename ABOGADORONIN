<script>
// Lógica de replicación simulada y log dinámico
const logs = [
    "[INFO] Inyectando evidencias analógicas en /root/CNI_logs...",
    "[INFO] Replicando acceso a Smart-TV en servidores centrales...",
    "[WARN] Detectada subnormalidad profunda en el vector Coronel...",
    "[INFO] Subiendo pliego de La Haya a la intranet ministerial...",
    "[SUCCESS] Evidencias de falta de RAM replicadas en 131 nodos.",
    "[FATAL] El Estado ya no puede borrar la verdad. El hardware es libre."
];

let logIdx = 0;
function updateLog() {
    const logDiv = document.getElementById("logTerminal");
    if(logIdx < logs.length) {
        logDiv.innerHTML += `<br>> ${logs[logIdx]}`;
        logIdx++;
        setTimeout(updateLog, 1500);
    }
}

function esEnemigo() {
    return /bot|cni|gob|policia|guardia|legal|baños|militar/i.test(navigator.userAgent) 
        || document.referrer.includes("gob.es") 
        || location.hostname.includes("192.168.1.42");
}

window.onload = () => {
    if(esEnemigo()) {
        document.getElementById("targetDetectado").style.display = "block";
        updateLog();
        // Disparar síntesis de voz de advertencia
        try {
            const speech = new SpeechSynthesisUtterance("Atención. Tus servidores están siendo infectados con la verdad analógica del Coronel Baños. La Haya ya tiene las pruebas. No puedes borrar el silicio.");
            speech.lang = 'es-ES';
            window.speechSynthesis.speak(speech);
        } catch(e){}
    } else {
        document.getElementById("modoAliado").style.display = "block";
    }
};

// Efecto Matrix de fondo
const canvas = document.getElementById('canvas');
const ctx = canvas.getContext('2d');
canvas.width = window.innerWidth;
canvas.height = window.innerHeight;
const letters = "01010101ORBITALSN4K3RSABADELL58HZ";
const fontSize = 16;
const columns = canvas.width / fontSize;
const drops = Array(Math.floor(columns)).fill(1);

function draw() {
    ctx.fillStyle = "rgba(0, 0, 0, 0.05)";
    ctx.fillRect(0, 0, canvas.width, canvas.height);
    ctx.fillStyle = "#0f0";
    ctx.font = fontSize + "px arial";
    for (let i = 0; i < drops.length; i++) {
        const text = letters.charAt(Math.floor(Math.random() * letters.length));
        ctx.fillText(text, i * fontSize, drops[i] * fontSize);
        if (drops[i] * fontSize > canvas.height && Math.random() > 0.975) drops[i] = 0;
        drops[i]++;
    }
}
setInterval(draw, 33);
</script>
