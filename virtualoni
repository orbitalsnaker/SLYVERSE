<script>
// === DESBLOQUEO PERSISTENTE + KONAMI CODE REAL ===
let mateEternalUnlocked = localStorage.getItem('yujiRevenge2025') === 'true';
if(mateEternalUnlocked) document.getElementById('mateBtn').onclick = () => s(39);

let konami = '';
const code = '38384040373937396665'; // ↑↑↓↓←→←→BA
document.addEventListener('keydown', e => {
  konami += {ArrowUp:38,ArrowDown:40,ArrowLeft:37,ArrowRight:39,b:66,B:66,a:65,A:65}[e.key] || '';
  if(konami.length > 20) konami = konami.slice(-20);
  if(konami.includes(code)) revenge();
});

function checkKonami(){ if(!mateEternalUnlocked) beep(100,1,0.3); }

// === SONIDO DE ARRANQUE DREAMCAST ===
setTimeout(() => {
  const ctx = new AudioContext();
  const o = ctx.createOscillator();
  const g = ctx.createGain();
  o.type = 'sawtooth';
  o.frequency.setValueAtTime(180, ctx.currentTime);
  o.frequency.exponentialRampToValueAtTime(880, ctx.currentTime + 0.8);
  o.frequency.exponentialRampToValueAtTime(440, ctx.currentTime + 1.6);
  g.gain.setValueAtTime(0.4, ctx.currentTime);
  g.gain.exponentialRampToValueAtTime(0.01, ctx.currentTime + 2);
  o.connect(g); g.connect(ctx.destination);
  o.start(); o.stop(ctx.currentTime + 2);
}, 500);

// === PARTÍCULAS DE FONDO (estilo Dreamcast swirl) ===
const c = document.getElementById('c');
c.width = innerWidth; c.height = innerHeight;
const ctx = c.getContext('2d');
let particles = [];
for(let i=0;i<80;i++){
  particles.push({x:Math.random()*c.width,y:Math.random()*c.height,a:Math.random()*Math.PI*2,s:0.5+Math.random()});
}
function draw(){
  ctx.fillStyle = 'rgba(0,0,0,0.05)'; ctx.fillRect(0,0,c.width,c.height);
  particles.forEach(p=>{
    ctx.fillStyle = `hsl(${Date.now()*0.02%360},100%,70%)`;
    ctx.fillRect(c.width/2 + Math.cos(p.a)*p.s*200, c.height/2 + Math.sin(p.a)*p.s*200, 3, 3);
    p.a += 0.01; p.s += 0.002;
  });
  requestAnimationFrame(draw);
} draw();

