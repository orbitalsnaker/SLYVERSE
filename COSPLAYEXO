Código completo integrado (flashea y listo)
```cpp
// ONI GUARDIAN LITE – 180 líneas, cabe en cualquier ESP32
#include <BluetoothSerial.h>
#include <Adafruit_NeoPixel.h>
#include <Servo.h>
BluetoothSerial BT;
Adafruit_NeoPixel p(48, 4, NEO_GRB+NEO_KHZ800);
Servo katana;

#define TEMP_PIN 34     // NTC divisor de voltaje
#define VIB1 25
#define VIB2 26
#define SERVO_PIN 13

long abrazos = 13101310;

void setup(){
  BT.begin("Oni Guardian Lite");
  p.begin(); p.show();
  katana.attach(SERVO_PIN);
  pinMode(VIB1,OUTPUT); pinMode(VIB2,OUTPUT);
  rojoSuave();
}
void loop(){
  int raw = analogRead(TEMP_PIN);
  float temp = (raw/4095.0*3.3-0.5)*100; // aproximado NTC
  BT.println("T"+String(temp,1)+"|A"+String(abrazos));
  
  if(BT.available() && BT.readString()=="ABRAZO") {
    abrazos += 1000;
    for(int i=0;i<30;i++){ digitalWrite(VIB1,HIGH); digitalWrite(VIB2,HIGH); delay(100);
    digitalWrite(VIB1,LOW); digitalWrite(VIB2,LOW); delay(100); }
  }
  delay(1000);
}
void rojoSuave(){ for(int i=0;i<48;i++) p.setPixelColor(i,100,0,0); p.show(); }