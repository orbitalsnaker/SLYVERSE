<script src="https://cdn.jsdelivr.net/npm/three@0.168.0/build/three.min.js"></script>
<script>
// === VARIABLES GLOBALES ===
let colas = parseInt(localStorage.getItem('colas') || '7777777');
let modoExo = false;
let accesibilidadOn = false;
let silencioTotal = false;

// === INICIO ===
function iniciarEscudoUniversal() {
  actualizar();
  hablar("Escudo Universal de Derechos Humanos activado. Todo el mundo puede defenderse. Nadie queda atrás.");
}

// === ACCESIBILIDAD TOTAL ===
function toggleAccesibilidad() {
  accesibilidadOn = !accesibilidadOn;
  if (accesibilidadOn) {
    document.body.classList.add("alto-contraste");
    document.querySelectorAll("*").forEach(el => el.style.fontSize = "150%");
    hablar("Modo accesibilidad máxima activado. Todo legible y audible.");
  } else {
    document.body.classList.remove("alto-contraste");
    hablar("Modo accesibilidad desactivado.");
  }
}

// === ESCUDO SOS GLOBAL (el botón rojo del centro) ===
function generarEscudoSOS() {
  hablar("Generando Escudo SOS Internacional en 11 idiomas…");
  const derechos = `
LUFFY ABOGADO Ω · ESCUDO SOS GLOBAL
Fecha: ${new Date().toLocaleString()}

TUS DERECHOS (Declaración Universal DDHH):
Artículo 3 – Derecho a la vida, libertad y seguridad
Artículo 5 – Nadie será sometido a tortura ni tratos inhumanos
Artículo 12 – Protección contra ataques a honor y reputación
Artículo 19 – Libertad de opinión y expresión

DENUNCIA INTERNACIONAL LISTA PARA ENVIAR:
Asunto: Violación grave de derechos humanos + doxxing
Enviar a: ohchr-info@un.org · cidhdenuncias@oas.org · info@tcij.org

PLANTILLA EN 11 IDIOMAS DISPONIBLE EN 3… 2… 1…
  `;
  
  const blob = new Blob([derechos], {type: "text/plain"});
  const url = URL.createObjectURL(blob);
  const a = document.createElement("a");
  a.href = url;
  a.download = `ESCUDO_SOS_${Date.now()}.txt`;
  a.click();
  
  hablar("Escudo SOS generado y descargado. Nadie te toca. Somos millones.");
  vibrar([500,200,500,200,1000]);
  alert("¡ESCUDO SOS DESCARGADO! Envíalo a las autoridades internacionales. ¡ESTÁS PROTEGIDO!");
}

// === UTILIDADES (igual que antes pero mejoradas) ===
function hablar(texto) {
  if (silencioTotal) {
    document.getElementById("status").textContent = texto;
    return;
  }
  if ('speechSynthesis' in window) {
    speechSynthesis.cancel();
    const u = new SpeechSynthesisUtterance(texto);
    u.lang = "es-ES";
    u.rate = 1.2;
    speechSynthesis.speak(u);
  }
  document.getElementById("status").textContent = texto;
}

function actualizar() {
  document.getElementById("cola").textContent = `Colas del Sol: ${colas.toLocaleString()}`;
  localStorage.setItem('colas', colas);
  colas += 77;
  setTimeout(actualizar, 1111);
}

// === MANTENEMOS EL RESTO (Gear 5, Exo, etc.) ===
function activarGear5() { /* mismo código anterior */ modoExo = false; hablar("¡Libertad total!"); }
function activarHologramaExo() { /* mismo código anterior */ modoExo = true; hablar("¡Holograma desplegado!"); }
function roadPoneglyph() { hablar("Archive Eterno activado."); }

setInterval(() => colas += 77, 1111);
actualizar();
</script>
</body>
