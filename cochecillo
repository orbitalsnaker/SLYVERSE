function p(id){document.getElementById(id).classList.add('show');}
function c(id){
  document.getElementById(id).classList.remove('show');
  if(id==='game'){document.getElementById('game').classList.remove('show');document.getElementById('bg').style.display='block';}
}

function showCinema(){
  const cinema = document.getElementById('cinema');
  const text = document.getElementById('cinemaText');
  cinema.classList.add('show');
  text.innerHTML = "";
  let i=0;
  const lines = ["2025","Los hypercars cobran millones","por hacer lo que este coche hace","por 4.200 €","BUSQUE, COMPARE","Y SI ENCUENTRA ALGO MEJOR","CÓMPRELO","SLYRONIN v1 BOZOKOU GT","ABRAZOS BOZOKOU: 13101310"];
  const int = setInterval(()=>{if(i<lines.length){text.innerHTML+=lines[i++]+'<br><br>';}else{clearInterval(int);setTimeout(()=>cinema.classList.remove('show'),6000);}},700);
}
