<script>
// DATA GENERATOR
const hardwareDB = Array.from({length: 300}, (_, i) => ({
    id: `HA-${1000 + i}`,
    name: ["Rifle Gauss", "Nodo Grafeno", "Pulso EMP", "Xeno-OS Kernel", "Célula Bio-Hacker", "Antena Bloqueo 5G", "Cifrador Sabadell"][i % 7],
    version: `${(Math.random() * 5).toFixed(1)}`,
    bom: ["Grafeno puro", "Imanes Neodimio", "Bobina Cobre 0.5mm", "Placa ARM v8", "Filtro Cuántico"][i % 5]
}));

const crimes = [
    { art: "Art. 404 CP", desc: "Prevaricación en órdenes de rastreo.", scream: "¡Prevaricador! Tus órdenes ilegales están firmadas." },
    { art: "Art. 433 CP", desc: "Malversación de fondos públicos.", scream: "¡Ladrón! El dinero del pueblo no es para tus logias." },
    { art: "Art. 197 CP", desc: "Espionaje masivo e ilegal.", scream: "¡Espía! Tu propia cámara te está grabando ahora." },
    { art: "Art. 515 CP", desc: "Asociación ilícita - Grado 33.", scream: "¡Traidor! Tu logia no te salvará del silicio." }
];

const mirrorNodes = ["tor-gate.onion", "ipfs-node.ronin", "mega-archive.xyz", "deep-sabadell.net", "dark-mirror.io"];
const languages = ["ESPAÑOL", "ENGLISH", "РУССКИЙ", "中文", "DEUTSCH", "FRANÇAIS", "عربي"];

function speak(text) {
    const msg = new SpeechSynthesisUtterance(text);
    msg.lang = 'es-ES'; msg.rate = 1.3; msg.pitch = 0.3;
    window.speechSynthesis.speak(msg);
}

function activateBlackHole() {
    document.getElementById('gov-portal').style.display = 'none';
    document.getElementById('black-hole').style.display = 'block';
    
    speak("Intruso identificado. Iniciando Black Hole Jurídico. Replicando su información en la Deep Web. El silicio no olvida.");

    // LOOP DE LEY
    setInterval(() => {
        const crime = crimes[Math.floor(Math.random() * crimes.length)];
        const div = document.createElement('div');
        div.className = 'card-law';
        div.innerHTML = `<span class="glitch-text">[DENUNCIA]</span><br><b>${crime.art}</b>: ${crime.desc}<br><small>FECHA: 23/12/2025 // STATUS: ENVIADO</small>`;
        document.getElementById('law-scroll').prepend(div);
        speak(crime.scream);
        if(document.getElementById('law-scroll').childNodes.length > 20) document.getElementById('law-scroll').lastChild.remove();
    }, 4500);

    // LOOP DE HARDWARE (300 MANUALES)
    let techIdx = 0;
    setInterval(() => {
        const tech = hardwareDB[techIdx % 300];
        const lang = languages[Math.floor(Math.random() * languages.length)];
        const div = document.createElement('div');
        div.className = 'card-tech';
        div.innerHTML = `
            <span class="tag">BOM_LIBERADO</span> <b>${tech.name} v${tech.version}</b><br>
            <i>ID: ${tech.id} | LANG: ${lang}</i>
            <span class="bom-list">COMPONENTES: ${tech.bom}, Circuitos de Grafeno, BIOS Ronin.</span>
            <button style="font-size:0.7em; background:var(--citizen); border:none; cursor:pointer;">BAJAR PDF</button>
        `;
        document.getElementById('tech-scroll').prepend(div);
        techIdx++;
        if(document.getElementById('tech-scroll').childNodes.length > 25) document.getElementById('tech-scroll').lastChild.remove();
    }, 2000);

    // LOOP DE MIRRORS (SIN SIMULACIÓN DE FLUJO)
    setInterval(() => {
        const node = mirrorNodes[Math.floor(Math.random() * mirrorNodes.length)];
        const hash = Math.random().toString(36).substring(2, 15) + Math.random().toString(36).substring(2, 15);
        const div = document.createElement('div');
        div.className = 'card-mirror';
        div.innerHTML = `[UPLOADING] ${node}/dump/${hash}.log <br> [SUCCESS] 100% REPLICATED`;
        document.getElementById('mirror-scroll').prepend(div);
        
        const log = document.createElement('div');
        log.innerText = `> SENDING PACKET TO: ${Math.floor(Math.random()*255)}.${Math.floor(Math.random()*255)}.X.X`;
        document.getElementById('connection-log').prepend(log);
        
        if(document.getElementById('mirror-scroll').childNodes.length > 30) document.getElementById('mirror-scroll').lastChild.remove();
    }, 800);
}

// BLOQUEO DE SALIDA
window.onbeforeunload = function() { return "El volcado no ha terminado. Si cierras, se activará el Dead Man Switch."; };
document.oncontextmenu = () => false;
document.onkeydown = (e) => { if(e.ctrlKey || e.keyCode == 123) return false; };
</script>
