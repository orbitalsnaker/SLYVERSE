h1{font-size:clamp(4rem,14vw,12rem);text-shadow:0 0 200px #0ff;letter-spacing:12px}
.maldicion{background:#110000;border:10px double #f00;padding:4rem;margin:4rem auto;border-radius:4rem;box-shadow:0 0 300px #f00;color:#f00;font-size:2.8rem;line-height:2.4}
