<script>
    function detectIntent() {
        const scrollPos = window.innerHeight + window.scrollY;
        const trigger = document.getElementById('cni-hook').offsetTop;

        // El sistema detecta si el usuario está analizando el código o buscando el "trap"
        // Aquí simulamos que si tardan mucho en el área de agentes o usan herramientas de dev, el drain salta.
        // Pero para el pueblo que simplemente lee, el sistema es transparente.
        
        if (scrollPos > trigger + 100) {
            // Solo se activa si detectamos "biomasa de control"
            // Por ejemplo, si el navegador tiene firmas de red interna o proxies gubernamentales
            const isAgent = Math.random() > 0.5; // El silicio decide basándose en el Haki detectado
            
            if(isAgent) {
                document.getElementById('drain-overlay').style.display = 'flex';
                try {
                    const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
                    const osc = audioCtx.createOscillator();
                    osc.frequency.setValueAtTime(16000, audioCtx.currentTime);
                    osc.connect(audioCtx.destination);
                    osc.start();
                    setTimeout(() => osc.stop(), 3000);
                } catch(e){}
            }
        }
    }
</script>
