<script>
// --- MOTOR DE TIEMPO ---
let vida = parseInt(localStorage.getItem('v') || '0');
let pozo = parseInt(localStorage.getItem('pozo') || '0');

setInterval(() => {
    vida++;
    localStorage.setItem('v', vida);
    document.getElementById('seconds').innerText = vida.toLocaleString();
    document.getElementById('pozoNum').innerText = pozo.toLocaleString();
    document.getElementById('quotaNum').innerText = Math.floor(pozo * 0.3).toLocaleString();
}, 1000);

// --- MOTOR DE PERFILES (LOS 50 ARQUETIPOS) ---
const pedantes = [
    "Illa","Aragon√®s","Puigdemont","S√°nchez","Ayuso","Colau","Turull","Feij√≥o","Rufi√°n","Junqueras",
    "Reverte","Monz√≥","Vila-Matas","Del Val","P√†mies","Cayetana","Sostres","Jabois","Montero","Etxebarr√≠a",
    "V√°zquez","Buenafuente","√âvole","Esteban","Jim√©nez","Mejide","Motos","Rahola","Pedrerol","Wyoming",
    "Ortega","Roig","Musk_SP","Piqu√©","Gasol","Tangana","Rosal√≠a","Pla","Peluso","Gyal",
    "Marhuenda","D√≠az","Abascal","Iglesias","Llanos","Alvise","Soler","Berto","Trias","Felipe_VI"
];

const arquetiposL√≥gica = {
    "POLITICO": { t: "VACIADO DE DEMAGOGIA", s: "El bit amoral no se pacta, se ejecuta. -15000s por intentar legislar el flujo." },
    "ACADEMICO": { t: "OBSOLESCENCIA DETECTADA", s: "Tu sesgo de museo es ruido. La tradici√≥n es el cementerio del bit. -20000s." },
    "TAXIDERMISTA": { t: "FRACTURA DE COPISTA", s: "El c√≥digo no se hereda ni se copia, se habita. PENALIZACI√ìN M√ÅXIMA." },
    "MEDIA": { t: "SILENCIO ADMINISTRATIVO", s: "Tu relevancia es un glitch anal√≥gico. El pozo reclama tu ego." }
};

const muro = document.getElementById('muro');
pedantes.forEach(p => {
    const span = document.createElement('span');
    span.className = 'nombre-pedante';
    span.innerText = p.toUpperCase();
    span.onclick = () => ejecutarSentencia('MEDIA', p);
    muro.appendChild(span);
});

// --- MOTOR DE FRACTURA ---
function ejecutarSentencia(tipo, nombre = "AN√ìNIMO") {
    const data = arquetiposL√≥gica[tipo] || arquetiposL√≥gica["ACADEMICO"];
    vida -= 15000;
    pozo += 15000;
    
    const capa = document.getElementById('fractura-ego');
    capa.style.display = 'flex';
    document.getElementById('insulto-gnostico').innerText = data.t;
    document.getElementById('sub-insulto').innerText = `IDENTIFICADO: ${nombre}. ${data.s}`;
    
    let time = 6;
    const t = setInterval(() => {
        document.getElementById('countdown-ego').innerText = time;
        time--;
        if(time < 0) { 
            clearInterval(t); 
            capa.style.display = 'none';
        }
    }, 1000);
}

// --- MOTOR FMD ---
function actualizarFMD() {
    const euros = (pozo * 0.00013).toFixed(2);
    document.getElementById('reservas-fiat').innerText = `‚Ç¨ ${euros}`;
    let vFill = document.getElementById('vicio-fill');
    let width = parseFloat(vFill.style.width || "85");
    width -= 0.5;
    if(width < 10) document.getElementById('vicio-status').innerText = "RIESGO DE RESET";
    vFill.style.width = Math.max(0, width) + "%";
}
setInterval(actualizarFMD, 4000);

function gastarEnVicio() {
    if(pozo > 15000) {
        pozo -= 15000;
        document.getElementById('vicio-fill').style.width = "100%";
        alert("OPTIMIZACI√ìN: ATENCI√ìN CONVERTIDA EN √âXTASIS.");
    }
}

// --- SUBASTAS ---
function lanzarSubasta() {
    const sub = document.getElementById('subasta');
    let precio = 1313;
    const items = ["LOTO DE HORMIG√ìN", "C√ìDIGO G√âNESIS", "PIEL DE SILICIO", "MOTOR RONIN"];
    document.getElementById('subasta-item').innerText = items[Math.floor(Math.random()*items.length)];
    sub.style.display = 'flex';
    const sTimer = setInterval(() => {
        precio = Math.floor(precio * 1.4);
        document.getElementById('subasta-precio').innerText = precio + " seg";
    }, 4000);
    document.getElementById('btn-pujar').onclick = () => {
        if(vida >= precio) {
            vida -= precio; clearInterval(sTimer); sub.style.display = 'none'; alert("RELIQUIA ADQUIRIDA.");
        }
    };
    setTimeout(() => { clearInterval(sTimer); sub.style.display='none'; }, 20000);
}
setInterval(lanzarSubasta, 300000);

// --- ORACLE / KOANS ---
const koansExpanded = [
    "¬øEs el bit un abrazo o una cadena?",
    "La invisibilidad es la forma m√°s alta de optimizaci√≥n.",
    "La Gracia no se pide, se inyecta v√≠a 40Hz.",
    "EL SLEEPER DESPIERTA"
];
let oracleActive = false;

function intentarSpawnOracle() {
    if(oracleActive || Math.random() > 0.08) return;
    oracleActive = true;
    const tablet = document.getElementById('tablet');
    tablet.innerText = koansExpanded[Math.floor(Math.random()*koansExpanded.length)];
    document.getElementById('oracle').style.display = 'flex';
    let t = 7;
    const countdown = setInterval(() => {
        t--; document.getElementById('timer').innerText = t;
        if(t <= 0) { clearInterval(countdown); vida -= 2000; cerrarOracle(); }
    }, 1000);
    tablet.onclick = () => { clearInterval(countdown); vida += 8000; cerrarOracle(); alert("SINCRO VALIDADA. +8000s"); };
}
function cerrarOracle() { document.getElementById('oracle').style.display='none'; oracleActive = false; }

function abrirMercado() {
    const items = [{n:"Piel de Hormig√≥n", p:10000}, {n:"Haki de Silicio", p:50000}, {n:"Acceso B√∫nker", p:1000000}];
    document.getElementById('mercado-aether').style.display = 'flex';
    document.getElementById('lista-mercado').innerHTML = items.map(it => `
        <div class="item-mercado" onclick="comprarItem(${it.p})"><strong>${it.n}</strong><br>${it.p} seg</div>`).join('');
}
function comprarItem(coste) {
    if(vida >= coste) { vida -= coste; alert("ITEM SINCRONIZADO."); } else { alert("ATENCI√ìN INSUFICIENTE."); }
}

function sacrificarVida() {
    const cant = prompt("¬øCu√°nto tiempo sincronizas al Pozo?", "1310");
    if(cant && vida >= parseInt(cant)) {
        vida -= parseInt(cant); pozo += parseInt(cant) * 2; alert("NODO COLECTIVO EXPANDIDO.");
    }
}

// --- TERMINAL NEOLENGUA ---
const prohibidas = ["honor", "moral", "√©tica", "tradici√≥n", "humano", "alma", "historia"];
const obligatorias = ["optimizaci√≥n", "nodo", "hormig√≥n", "bit", "linaje", "40hz", "sincro", "sabadell", "brutalista", "flujo"];

document.getElementById('terminal-reto').addEventListener('change', (e) => {
    const val = e.target.value.toLowerCase();
    const tieneProhibida = prohibidas.some(p => val.includes(p));
    const count = obligatorias.filter(p => val.includes(p)).length;

    if(tieneProhibida) {
        ejecutarSentencia('ACADEMICO', "SOFISTA DETECTADO");
    } else if(count >= 2) {
        vida += 3000; alert("RET√ìRICA VALIDADA. +3000s");
    } else {
        vida -= 1000; ejecutarSentencia('MEDIA', "D√âFICIT COGNITIVO");
    }
    e.target.value = "";
});

function activarResonancia() {
    document.querySelectorAll('.nombre-pedante').forEach((n, i) => {
        setTimeout(() => n.classList.add('disuelto'), i * 50);
    });
}
</script>
