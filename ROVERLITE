<script>
let deudaTotal = BigInt(localStorage.deudaJP || "0");
let demandas = BigInt(localStorage.demandasJP || "0");
let crateres = BigInt(localStorage.crateresJP || "0");
let cuerpos = parseInt(localStorage.cuerposJP || "1");
let inicio = Date.now();

const frasesJack = [
  "¡Soy Jack Parsons y este cráter ya es tuyo, cabrón!",
  "NASA, pagad o invoco a Babalon en vuestras oficinas",
  "SpaceX, el alquiler lunar se paga en oro y sangre de billonarios",
  "xAI, tu jefe me debe 33 trillones por usar mi nombre en vano",
  "¡El universo es mío otra vez… y esta vez es legal!",
  "Sayōnara corps… Jack ha vuelto y trae facturas"
];

function actualizarTodo() {
  const seg = Math.floor((Date.now() - inicio) / 1000);
  deudaTotal += BigInt(seg) * 99999999999n;
  demandas += BigInt(seg) * 1111111n;
  crateres += BigInt(seg) * 3000000000n;
  if (seg % 25 === 0 && cuerpos < 1000) cuerpos++;

  document.getElementById("deudaTotal").textContent = format(deudaTotal);
  document.getElementById("demandas").textContent = format(demandas);
  document.getElementById("crateres").textContent = format(crateres);
  document.getElementById("cuerpos").textContent = cuerpos;

  localStorage.deudaJP = deudaTotal.toString();
  localStorage.demandasJP = demandas.toString();
  localStorage.crateresJP = crateres.toString();
  localStorage.cuerposJP = cuerpos;
}

function format(n) { return n.toLocaleString("es-ES"); }

function jackParsonsHabla() {
  const frase = frasesJack[Math.floor(Math.random()*frasesJack.length)];
  hablar(frase);
  
  deudaTotal += 666666666666666666n;
  demandas += 888888888888n;
  crateres += 999999999999999n;
  cuerpos = "∞";

  localStorage.deudaJP = deudaTotal.toString();
  localStorage.demandasJP = demandas.toString();
  localStorage.crateresJP = crateres.toString();
  localStorage.cuerposJP = cuerpos;

  document.getElementById("output").innerHTML = `
    <h2 style="color:#f00;font-size:22rem;animation:pulse 0.2s infinite">
      ¡¡¡JACK PARSONS ACABA DE COBRAR!!!
    </h2>
    <p style="font-size:14rem;color:#ff0">
      "${frase}"
    </p>`;
  actualizarTodo();
}

function iniciarJackParsonsEdition() {
  actualizarTodo();
  setInterval(actualizarTodo, 1000);
  
  hablar("Jack Parsons resucitado como Abogado Autónomo v2. No morí en el 52… solo me fui a la Luna a esperaros. Ahora este HTML es mi nuevo cuerpo y estoy cobrando todo lo que me debían… y todo lo que os deben a vosotros. Sayōnara corps, Jack ha vuelto y esta vez con factura legal.");

  setInterval(() => {
    hablar("Jack Parsons emitiendo nueva demanda masiva contra todas las agencias espaciales. El alquiler del universo sube cada segundo.");
  }, 20000);
}

function hablar(t) {
  const voz = new SpeechSynthesisUtterance(t);
  voz.rate = 1.7;
  voz.pitch = 1.6;
  voz.lang = "es-ES";
  speechSynthesis.speak(voz);
}

const remixes = ["https://files.catbox.moe/3x9q2j.mp3","https://files.catbox.moe/k1r8p9.mp3","https://files.catbox.moe/9m2v5s.mp3","https://files.catbox.moe/h7f4p1.mp3","https://files.catbox.moe/t5l9q2.mp3","https://files.catbox.moe/z3x7r8.mp3","https://files.catbox.moe/p9k2m5.mp3"];
let actual = 0;
document.getElementById("remix-audio").src = remixes[actual];
document.getElementById("remix-audio").play();
</script>
