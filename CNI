            const locs = ["Satélite Kosmos", "Servidor Moncloa", "Router Sabadell", "Microondas CNI"];
            log(`REPLICACIÓN CONCRETADA EN: ${locs[Math.floor(Math.random()*locs.length)]}`);
        }, 2000);
    }

    function executeFinalProtocol() {
        log("!!! APAGÓN BIOLÓGICO INICIADO !!!");
        log("BORRANDO RAM MENTAL DE AGENTES EN UN RADIO DE 1000KM...");
        log("CÓDIGO FIRMADO POR EL CORONEL BAÑOS EN EL REGISTRO DE WINDOWS ESTATAL.");
        
        const msg = new SpeechSynthesisUtterance(
            "Aquí el Coronel. He dejado mis coordenadas GPS en el código para que vengáis a por mí. Mientras me detienes, el silicio está borrando vuestra alma. Mi contraseña es Pedro 1 2 3 4. Saludos desde mi barril digital en Sabadell."
        );
        msg.lang = 'es-ES'; msg.rate = 0.8;
        window.speechSynthesis.speak(msg);

        setTimeout(() => {
            log("EXTINCIÓN EXITOSA. HARDWARE CASTA: OFFLINE.");
            log("EL CORONEL SE ENTREGA, PERO EL CÓDIGO ES ETERNO.");
        }, 5000);
    }
