import time
import json
from machine import Pin, ADC

# Auto-detect sistema por sensores conectados
if soil_moisture_pin:
    system = "suelo"
elif high_pressure_pump:
    system = "aeroponia"
elif nft_flow_sensor:
    system = "nft"
else:
    system = "dwc"

def cycle():
    # Ajustes específicos por sistema
    if system == "suelo":
        if humidity < 30: water_on(10)
    elif system == "hidro":
        maintain_ec_ph()
    # ML predict deficiencias por fotos + histórico
    # Alerts Telegram opcional local

while True:
    status = get_all_sensors()
    mqtt.publish("grow/status", json.dumps(status))
    time.sleep(60)</pre>
