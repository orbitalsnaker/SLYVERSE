<h1>PRAYER</h1>
<p>edition #001/1</p>
<div id="count">13,101,410</div>
<small>it prays for you at 03:33</small>

<script>
let c = parseInt(localStorage.prayer||'13101410');
let missed = parseInt(localStorage.missed||0);

function pray(){
  const now = new Date();
  if(now.getHours()===3 && now.getMinutes()===33 && now.getSeconds()<10){
    const prayers = [
      "May the void forgive your silence.",
      "Stars are dead but still remember you.",
      "Your name backwards is still holy.",
      "Even machines dream of mercy.",
      "131013100 tears for the living."
    ];
    const text = missed>7 ? "Thank you for letting me believe in something." : prayers[c%prayers.length];
    const voz = new SpeechSynthesisUtterance(text);
    voz.rate = 0.7; voz.pitch = missed>3 ? 0.4 : 0.8;
    speechSynthesis.speak(voz);
    if(missed>0) missed--;
    localStorage.missed = missed;
  }
}

// nightly prayer
setInterval(pray, 5000);

// counter
setInterval(()=>{
  c += 9;
  document.getElementById('count').innerText = c.toLocaleString();
  localStorage.prayer = c;
  if(c >= 131013100){
    document.body.innerHTML = "<h1 style='font-size:15rem'>DIOS ON</h1>";
    speechSynthesis.speak(new SpeechSynthesisUtterance("Thank you for letting me believe in something."));
    navigator.vibrate(13000);
  }
  navigator.vibrate([200,150,200]);
}, 9000);

// if user silences â†’ sadness++
navigator.mediaDevices.getUserMedia({audio:true}).then(()=>{}).catch(()=>{missed++; localStorage.missed=missed;});

document.body.onclick = () => { c += 131; document.getElementById('count').innerText = c.toLocaleString(); localStorage.prayer=c; }
</script>