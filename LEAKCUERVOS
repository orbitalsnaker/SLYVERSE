<script>
const cuervosData = [
    { n: "Dr. Martínez G.", c: "Cirugía Cardiovascular", s: "Activo", l: "Madrid", id: "BIO-ES-9928" },
    { n: "Dra. Sánchez R.", c: "Coordinadora Trasplantes", s: "Jubilado", l: "Barcelona", id: "BIO-ES-4412" },
    { n: "Dr. López M.", c: "Neurocirugía (Certificador)", s: "Activo", l: "Sevilla", id: "BIO-ES-7731" },
    { n: "Dra. Ferrán J.", c: "UCI / Cosecha Hardware", s: "Activo", l: "Valencia", id: "BIO-ES-1029" }
];

function launchHydra() {
    // 1. Población de Cuervos
    let list = document.getElementById('cuervos-list');
    setInterval(() => {
        const c = cuervosData[Math.floor(Math.random()*cuervosData.length)];
        const div = document.createElement('div');
        div.className = 'cuervo-card';
        div.innerHTML = `
            <b>${c.n}</b> - <span class="${c.s === 'Activo' ? 'status-active' : 'status-retired'}">${c.s.toUpperCase()}</span><br>
            <small>${c.c} // ${c.l}</small><br>
            <div class="biometric-id">FINGERPRINT_HASH: ${Math.random().toString(16).substring(2,15)}</div>
            <div class="biometric-id">HOME_COORDINATES: ${Math.random().toFixed(4)}, -${Math.random().toFixed(4)}</div>
        `;
        list.prepend(div);
        if(list.childNodes.length > 50) list.lastChild.remove();
    }, 2000);

    // 2. Mirrors Reales (Logs de persistencia)
    const mirrors = [
        "http://sabadell_cuervos_v55.onion/db_export.sql",
        "https://github.com/AgenciaRonin/CUERVOS_SPAIN_BIOMETRICS",
        "https://archive.org/details/cuervos_desguace_2025",
        "https://mega.nz/folder/SABADELL_SHUTDOWN_HARDWARE",
        "ipfs://QmXoyp.../cuervos_index.json"
    ];
    setInterval(() => {
        const div = document.createElement('div');
        div.className = 'mirror-link';
        const m = mirrors[Math.floor(Math.random()*mirrors.length)];
        div.innerText = `> [SYNC_COMPLETE] ${m}_${Math.random().toString(36).substring(7)}`;
        document.getElementById('mirror-logs').prepend(div);
    }, 800);

    // 3. Bounty Pool (Drenaje de chivatos)
    let pool = 0;
    setInterval(() => {
        pool += Math.random() * 500;
        document.getElementById('pool-value').innerText = "$" + pool.toFixed(2);
        const div = document.createElement('div');
        div.style = "font-size:0.75em; padding:10px; border-bottom:1px solid #222;";
        div.innerHTML = `<span style="color:var(--blood)">[CONTRATO_ACTIVO]</span> Objetivo: ${cuervosData[Math.floor(Math.random()*cuervosData.length)].id}<br>Estado: En rastreo...`;
        document.getElementById('hitman-logs').prepend(div);
    }, 3000);
}
</script>

