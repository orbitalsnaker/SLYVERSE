<script>
const frases = [
  "16 ultrasonidos chinos ven tu alma antes que tu madre",
  "Frena a 188 km/h y todavía sobra tiempo pa un ramen",
  "LiDAR de 1,8 € salva más vidas que tu seguro privado",
  "El BOA-01 no tiene ESP… tiene un oni dentro",
  "7 estrellas Euro NCAP o seppuku corporativo",
  "Por 89 € de seguridad te sobra pa 300 katanas térmicas",
  "Tesla FSD quien? Aquí manda el demonio de la Orange Pi",
  "El pobre también merece morir con honor… o mejor, no morir"
];

let toque = 0;
let modoOni = false;

document.body.onclick = () => {
  toque++;
  if(toque === 3 && !modoOni){
    speechSynthesis.speak(new SpeechSynthesisUtterance("¡Frenada automática oni activada! Detención en 1,4 segundos desde 188 km/h. Siete estrellas chinas. ¡Honor y gloria!"));
    navigator.vibrate([1000,300,1000,300,1500]);
    toque = 0;
  }
  if(toque === 9){
    modoOni = true;
    document.body.style.background = "#000";
    document.querySelector('h1').innerHTML = "BOA-01 鬼殺隊 EDITION";
    document.querySelectorAll('.panel').forEach(p => {
      p.style.borderColor = "#00ff00";
      p.style.boxShadow = "0 0 120px #0f0";
    });
    document.querySelector('.boa5').style.borderColor = "#00ff00";
    document.querySelector('.boa5').style.boxShadow = "0 0 500px #0f0";
    document.querySelector('.boa5::after').textContent = "BOA-01 鬼殺隊";
    speechSynthesis.speak(new SpeechSynthesisUtterance("Hashira del low-cost activado. El demonio ha despertado. Precio seguridad: 0 ¥. Todos los pobres al paraíso."));
    navigator.vibrate([1000,1000,1000,2000,500,500,500,3000]);
  }
};

setInterval(() => {
  const speed = modoOni ? 420 : [166,177,188,199,207,215][Math.floor(Math.random()*6)];
  const battery = modoOni ? 99 : Math.round(88 + Math.random()*11);
  document.getElementById('speed').textContent = speed;
  document.getElementById('battery').textContent = battery;
  document.getElementById('tech').innerHTML = (modoOni ? "MODO 鬼殺隊 ACTIVADO<br><b>Coste seguridad: 0 ¥ · Todos salvan</b>" : frases[Math.floor(Math.random()*frases.length)] + "<br><br><b>Coste total seguridad: 89 €</b>");
}, 2600);
</script>