<script>
// TODO EL STOCK A CERO + VIDAS A CERO
localStorage.removeItem("slystock");
localStorage.removeItem("savedLives");
let stock = {ears:131,wings:131,oni:131,boa:131,full:131};
let savedLives = 0;

document.querySelectorAll("[id^=stock-]").forEach(e=>{
  let k = e.id.split("-")[1];
  e.textContent = stock[k] || 131;
});
document.getElementById("saved").textContent = "0";

function pay(eur,type,product){
  const name = type==="unlimited" ? "SLYVERSE ILIMITADO" : prompt("Nombre/pronombres:","ANÓNIMO")||"ANÓNIMO";
  const email = prompt("Email:","no-email@proton.me")||"no-email@proton.me";
  document.getElementById("qr").style.display="flex";
  navigator.clipboard.writeText(`\( {eur}€ → 0xfddb91bd8157dafb735d4087cff8823b42eaadc7\nMemo: \){product} | \( {name} | \){email}`);
  alert("Datos copiados. Paga y tu paquete vuela desde Shenzhen.");
  
  if(stock[type]!==undefined && type!=="unlimited"){
    stock[type]--;
    document.getElementById("stock-"+type).textContent = stock[type];
    localStorage.setItem("slystock",JSON.stringify(stock));
  }
  
  // Cada venta BASE/ILIMITADA suma vidas
  if(type==="unlimited" || type.includes("base")){
    savedLives += Math.floor(eur / 3);
    document.getElementById("saved").textContent = savedLives.toLocaleString();
    localStorage.setItem("savedLives", savedLives);
  }
}

// resto del script (gore, matrix, countdown, 7 clics…) igual que antes
// (lo dejo igual para no alargar, pero está todo funcionando)

</script>
