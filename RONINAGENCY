<script>
    const stream = document.getElementById('data-stream');
    const detection = document.getElementById('current-detection');
    const input = document.getElementById('input-box');
    
    const logs = [
        {l: "RUS", m: "–ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫ —Å–ø—É—Ç–Ω–∏–∫—É (Haki_Eye connected)"},
        {l: "CHN", m: "Êï∞ÊçÆÊã¶Êà™ (Data interception active)"},
        {l: "BIN", m: "01110010 01101111 01101110 01101001 01101110"},
        {l: "DEEP", m: "Node.onion: Selling CNI firewalls for 0 sats"},
        {l: "ENG", m: "Neural drain engaged on target IP"},
        {l: "ESP", m: "Soberan√≠a nacional restaurada en Extremadura"}
    ];

    function initSystem() {
        setInterval(() => {
            const entry = logs[Math.floor(Math.random()*logs.length)];
            const div = document.createElement('div');
            div.style.marginBottom = "8px";
            div.innerHTML = `<span class="lang-tag">${entry.l}</span> ${entry.m}`;
            stream.prepend(div);
            if(stream.childNodes.length > 20) stream.removeChild(stream.lastChild);
        }, 1200);
    }

    function detectLang() {
        const text = input.value.toLowerCase();
        if(text.includes("cni") || text.includes("ba√±os")) {
            detection.innerText = "ALERTA: CNI_BIOMASS_DETECTED";
            detection.style.color = "var(--ronin-danger)";
        } else if (/[–∞-—è]/.test(text)) {
            detection.innerText = "LANGUAGE: RUSSIAN_CYRILLIC";
            detection.style.color = "var(--matrix)";
        } else if (/[0-1]{4,}/.test(text)) {
            detection.innerText = "LANGUAGE: BINARY_CORE";
        } else {
            detection.innerText = "DETECTING: ONION_DEEP_WEB_V8";
            detection.style.color = "var(--gold)";
        }
    }

    function triggerDrain() {
        let cap = 100;
        const interval = setInterval(() => {
            cap -= 2;
            document.getElementById('brain-cap').innerText = cap + "%";
            document.getElementById('idioma-agente').innerText = "Gug√∫-ga-ga";
            if(cap <= 20) {
                clearInterval(interval);
                document.getElementById('main-ui').style.display = 'none';
                document.getElementById('monkey-jail').style.display = 'block';
                window.speechSynthesis.speak(new SpeechSynthesisUtterance("Neural drain complete. Welcome to the monkey club, bureaucrat."));
            }
        }, 50);
    }
</script>
