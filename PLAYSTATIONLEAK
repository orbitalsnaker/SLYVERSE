        let i = 0;
        function executeStep() {
            if (i < steps.length) {
                log.innerHTML += `<p class="mirror-node">[${new Date().toLocaleTimeString()}] ${steps[i].t}</p>`;
                bar.style.width = steps[i].b + "%";
