    ];
    let i = 0;
    setInterval(() => {
        if(i < news.length){
            const div = document.createElement('div');
            div.className = 'leak-item';
            div.innerHTML = `<span class="time">16:50</span><span class="cat">Update</span> ${news[i]}`;
            document.getElementById('terminal').appendChild(div);
            i++;
        }
    }, 3000);
</script>

