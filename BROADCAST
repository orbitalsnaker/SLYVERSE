 14: ()=>open("https://gutenberg.org/offline_catalogs"),
 15: ()=>musicPlayer(),
 16: ()=>pythonTerminal()
};

function app(n){ document.getElementById('viewer').style.display='block'; apps[n](); }
function back(){ document.getElementById('viewer').style.display='none'; document.getElementById('special').innerHTML=''; }
function open(url){ document.getElementById('frame').src=url; }

function loadLLM(){
  const div = document.getElementById('special');
  div.innerHTML = `<div style="padding:20px;color:#fff"><h2>Llama 3.2 3B Local</h2><div id="chat" style="height:60vh;overflow:auto;background:#161b22;padding:15px;border-radius:8px"></div>
    <input id="q" placeholder="Escribe tu pregunta..." style="width:75%;padding:12px;background:#0d1117;color:#c9d1d9;border:1px solid #30363d;border-radius:6px">
    <button onclick="send()" style="padding:12px 20px">Enviar</button><div id="status">Cargando modelo (3.2 GB) â€“ solo la primera vezâ€¦</div></div>`;
  const s = document.createElement('script');
  s.src = 'https://cdn.jsdelivr.net/npm/@mlc-ai/web-llm@0.2.46/dist/webllm.min.js';
  document.head.appendChild(s);
  s.onload = async () => {
    const engine = await webllm.CreateMLCEngine("Llama-3.2-3B-Instruct-q4f16_1-MLC",
      {initProgressCallback: p=>status.textContent=`Cargandoâ€¦ ${Math.round(p.progress*100)}%`});
    status.textContent = "Â¡Listo! Pregunta lo que quieras";
    window.send = async ()=>{
      const msg = q.value.trim(); if(!msg) return;
      chat.innerHTML += `<div style="text-align:right;color:#8b949e">â–¸ ${msg}</div>`;
      q.value='';
      const reply = await engine.chat.completions.create({messages:[{role:"user",content:msg}], stream:true});
      let resp = "<div style='color:#58a6ff'>Llama: ";
      for await (const chunk of reply) resp += chunk.choices[0]?.delta?.content || "";
      resp += "</div>";
      chat.innerHTML += resp;
      chat.scrollTop = chat.scrollHeight;
    };
  };
}

function loadDOS(){
  const div = document.getElementById('special');
  div.innerHTML = `<canvas id="dosbox" style="width:100%;height:100%"></canvas>`;
  const s = document.createElement('script');
  s.src = 'https://cdn.jsdelivr.net/npm/js-dos@8.0.0/dist/js-dos.js';
  document.head.appendChild(s);
  s.onload = ()=> Dos(document.getElementById("dosbox")).run("https://archive.org/download/msdos_Doom_1993/doom.zip");
}

function loadWin98(){
  const div = document.getElementById('special');
  div.innerHTML = `<canvas id="win98" style="width:100%;height:100%"></canvas>`;
  const s = document.createElement('script');
  s.src = 'https://cdn.jsdelivr.net/npm/js-dos@8.0.0/dist/js-dos.js';
  document.head.appendChild(s);
  s.onload = ()=> Dos(document.getElementById("win98")).run("https://archive.org/download/win98_202112/win98.jsdos");
}

function download(){
  const blob = new Blob([document.documentElement.outerHTML], {type:"text/html"});
  const a = document.createElement("a");
  a.href = URL.createObjectURL(blob);
  a.download = "kit-offline-2025.html";
  a.click();
}

// Cache automÃ¡tico para que funcione offline la prÃ³xima vez
if('serviceWorker' in navigator){
  navigator.serviceWorker.register(URL.createObjectURL(new Blob([
    `self.addEventListener('install',e=>e.waitUntil(caches.open('kit2025').then(c=>c.addAll(['.']))))`
  ],{type:'application/javascript'})));
}
