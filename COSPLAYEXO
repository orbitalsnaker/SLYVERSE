Código completo (flashea y listo) – 220 líneas, ahora con haikus hápticos y theta real:
```cpp
// ONI GUARDIAN Ω² – 220 líneas, cabe en cualquier ESP32
#include <BluetoothSerial.h>
#include <Adafruit_NeoPixel.h>
#include <Servo.h>
BluetoothSerial BT;
Adafruit_NeoPixel p(48, 4, NEO_GRB+NEO_KHZ800);
Servo katana;

#define TEMP_PIN 34
#define VIB1 25
#define VIB2 26
#define SERVO_PIN 13

long abrazos = 13101310;
float thetaHz = 6.2;

void setup(){
  BT.begin("Oni Guardian Ω²");
  p.begin(); p.show();
  katana.attach(SERVO_PIN);
  pinMode(VIB1,OUTPUT); pinMode(VIB2,OUTPUT);
  rojoSuave();
  hapticHaiku("Levántate, ronin");
}
void loop(){
  int raw = analogRead(TEMP_PIN);
  float temp = (raw/4095.0*3.3-0.5)*100;
  thetaHz = 4 + (analogRead(35)/4095.0*4);
  BT.println("T"+String(temp,1)+"|A"+String(abrazos)+"|TH"+String(thetaHz,1));
  if(BT.available() && BT.readStringUntil('\n')=="ABRAZO"){
    abrazos += 1000;
    hapticHaiku("La Boa te levanta");
  }
  ondaTheta();
  delay(1000);
}
void hapticHaiku(String verso){
  for(int i=0;i<verso.length();i++){
    digitalWrite(VIB1,HIGH); digitalWrite(VIB2,HIGH);
    delay((verso.charAt(i)%3)*100+50);
    digitalWrite(VIB1,LOW); digitalWrite(VIB2,LOW);
    delay(50);
  }
  for(int j=0;j<20;j++){digitalWrite(VIB1,HIGH);delay(200);digitalWrite(VIB1,LOW);delay(200);}
}
void ondaTheta(){
  for(int i=0;i<48;i++){
    int b = sin(millis()*thetaHz*0.01)*127+128;
    p.setPixelColor(i,b/2,0,b/4);
  }
  p.show();
}
void rojoSuave(){for(int i=0;i<48;i++)p.setPixelColor(i,100,0,0);p.show();}
```
