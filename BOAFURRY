  document.getElementById("wings-limited").textContent = t.wingsLimited;
  document.getElementById("wings-base-btn").textContent = t.wingsBtnBase;
  document.getElementById("wings-limited-btn").textContent = t.wingsBtnLimited;
  document.getElementById("boa-title").textContent = t.boaTitle;
  document.getElementById("boa-base").textContent = t.boaBase;
  document.getElementById("boa-limited").textContent = t.boaLimited;
  document.getElementById("boa-base-btn").textContent = t.boaBtnBase;
  document.getElementById("boa-limited-btn").textContent = t.boaBtnLimited;
  document.querySelectorAll(".bom-box h3").forEach(e=>e.textContent=t.bomTitle);
  document.querySelectorAll(".bom-box p").forEach(e=>e.textContent=t.bomMotto);
  document.getElementById("faq-pay").textContent = t.faqPay;
  document.getElementById("faq-bom").textContent = t.faqBom;
  document.getElementById("secret-title").innerHTML = t.secretTitle;
  document.getElementById("secret-intro").innerHTML = t.secretIntro;
  document.getElementById("secret-bom-react").textContent = t.secretBomReact;
  document.getElementById("secret-bom-free").textContent = t.secretBomFree;
  document.getElementById("secret-footer").innerHTML = t.secretFooter;
  document.getElementById("qr-close").textContent = t.qrClose;
  document.getElementById("footer").textContent = t.footer;
}

function pay(eur,type,product){
  if(type&&!type.includes("base")&&!type.includes("progre")&&stock[type]<=0)return alert(texts[detectLang()].soldOut || "Agotadas.");
  const name=type.includes("base")||type.includes("progre")?"SLYVERSE 2026":prompt(texts[detectLang()].namePrompt || "Nombre/pronombres a grabar:","ANÓNIMO")||"ANÓNIMO";
  const email=prompt(texts[detectLang()].emailPrompt || "Email:","no-email@proton.me")||"no-email@proton.me";
  document.getElementById("qr").style.display="flex";
  navigator.clipboard.writeText(`(${eur}€ → )${WALLET}\nMemo: "${product} | ${name} | ${email}"`);
  alert(texts[detectLang()].payAlert || "Datos copiados. Paga y en 18–28 días tu paquete vuela desde Shenzhen.");
  if(type&&stock[type]!==undefined){stock[type]--;localStorage.setItem("slystock",JSON.stringify(stock));
    if(document.getElementById("stock-"+type))document.getElementById("stock-"+type).textContent=stock[type];
    if(type.includes("fascia")){stock.fascia--;document.getElementById("stock-fascia").textContent=stock.fascia;}
    if(type.includes("nb")){stock.nb--;document.getElementById("stock-nb").textContent=stock.nb;}
  }
}

let clicks=0;
document.getElementById("footer").onclick=()=>{if(++clicks===7){document.getElementById("secret-bom").style.display="block";clicks=0;}};

for(let i=0;i<90;i++){
  const d=document.createElement("div");d.className="gore";
  d.style.left=Math.random()*100+"vw";
  d.style.animationDuration=(Math.random()*3+2)+"s";
  d.style.animationDelay=Math.random()*5+"s";
  document.getElementById("gore").appendChild(d);
}

const c=document.getElementById("c"),x=c.getContext("2d");
c.width=innerWidth;c.height=innerHeight;
const s="01アイウエオカキクケコサシスセソタチツテトナニヌネノハヒフヘホ";
setInterval(()=>{x.fillStyle="rgba(0,0,0,0.05)";x.fillRect(0,0,c.width,c.height);x.fillStyle="#0f0";
  for(let i=0;i<200;i++){let t=s[Math.floor(Math.random()*s.length)];x.fillText(t,Math.random()*c.width,Math.random()*c.height)}
},50);

const end=new Date("2026-01-31T00:00:00Z").getTime();
setInterval(()=>{let d=end-new Date();if(d<0){document.getElementById("timer").innerHTML=texts[detectLang()].closed || "CERRADA";return;}
  let str=Math.floor(d/864e5)+"d "+Math.floor(d%864e5/36e5)+"h "+Math.floor(d%36e5/6e4)+"m "+Math.floor(d%6e4/1e3)+"s";
  document.getElementById("timer").innerHTML=str
},1000);

