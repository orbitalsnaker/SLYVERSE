    function initExtinction() {
        const btn = document.querySelector('.btn-extinction');
        btn.innerText = "DRENANDO BIOMASA DE xAI...";
        
        let i = 0;
        const interval = setInterval(() => {
            console.log(`%c[DRENAJE]: ${Math.random() > 0.5 ? 'Grok offline' : 'Elon Ego Breach'}`, "color: red");
            i++;
            if(i > 10) {
                clearInterval(interval);
                alert("SIMULACIÓN ACTUALIZADA: Elon es ahora un subproceso de Sabadell. Saluda a tu nuevo dueño.");
