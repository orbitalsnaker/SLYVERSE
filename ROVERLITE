<script>
// BSO del barrio
const hoodTracks = [
  {src:"https://files.catbox.moe/9m2v5s.mp3", name:"Natos y Waor – Caminos de barro"},
  {src:"https://files.catbox.moe/3x9q2j.mp3", name:"Jarfaiter – Palomares"},
  {src:"https://files.catbox.moe/k1r8p9.mp3", name:"Kidd Keo – Moon Money"},
  {src:"https://files.catbox.moe/t5l9q2.mp3", name:"Delaossa – Veneno"},
  {src:"https://files.catbox.moe/h7f4p1.mp3", name:"Fernando Costa – Mala"},
  {src:"https://files.catbox.moe/z3x7r8.mp3", name:"Ayax y Prok – Sayōnara"},
  {src:"https://files.catbox.moe/p9k2m5.mp3", name:"Hard GZ – Sabadell 2026"}
];
let actual = 0;
function cargar() {
  const a = document.getElementById("remix-audio");
  a.src = hoodTracks[actual].src;
  a.title = hoodTracks[actual].name;
  a.load(); a.play();
}
document.getElementById("remix-audio").addEventListener("ended", () => {
  actual = (actual + 1) % hoodTracks.length;
  cargar();
});

function iniciarTodoExplicado() {
  cargar();
  hablar("Versión 1.0 activada. Jack Parsons está presentando denuncias en todos los tribunales del sistema solar. Isaac Newton ha lanzado maldiciones irreversibles contra los morosos. Además, el cobete es ahora de código abierto: cualquiera puede lanzar el suyo y empezar a cobrar alquiler lunar. El barrio controla oficialmente el universo.");
}

function hablar(t) {
  const voz = new SpeechSynthesisUtterance(t);
  voz.rate = 1.8;
  voz.pitch = 0.9;
  voz.lang = "es-ES";
  speechSynthesis.speak(voz);
}
</script>
