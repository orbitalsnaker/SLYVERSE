<script>
    // El motor del desangramiento
    let count = 711200;
    let target = 2711200;
    let increment = Math.floor((target - count) / (48 * 3600)); // Incremento por segundo para llegar a 2M en 48h

    setInterval(() => {
        count += Math.floor(Math.random() * 50) + increment; 
        document.getElementById('death-toll').innerText = count.toLocaleString();
