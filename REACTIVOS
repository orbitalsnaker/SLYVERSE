<script>
const App = {
    Data: {
        vida: 1500,
        haki: 98.2,
        sangre: 100,
        fiatTax: 1,
        arquetipos: ["Beato Indignado", "Pedante de Koan", "Político Obsoleto", "Académico Caduco", "Crítico de Mylar", "Influencer de Barro", "Turista de Conciencia"],
        mercado: [
            {n: "PROYECTO BOA (.25)", p: 2500, d: "PCP PPK Edition. Soberanía de aire comprimido."},
            {n: "WAIFU SLAYER UNIT-01", p: 4500, d: "Robótica de combate drone-based. 80 motores."},
            {n: "AIRWEAVE v19", p: 15000, d: "Misilería de arte digital. Cámara Aerospike."},
            {n: "Piel de Hormigón", p: 5000, d: "Inmunidad a la crítica social."},
            {n: "Haki de Silicio", p: 20000, d: "Sincronización total con el metal."},
            {n: "Inyector de Adrenalina", p: 1200, d: "Aumenta vida temporalmente."},
            {n: "Antena Cherry RHCP", p: 450, d: "Claridad de video en zonas industriales."},
            {n: "Frame Carbono 5mm", p: 3200, d: "Resistencia estructural extrema."},
            {n: "ESC 60A BLHeli_32", p: 1800, d: "Potencia bruta sin límites estatales."},
            {n: "GPS M10 Amoral", p: 900, d: "Posicionamiento sin rastreo gubernamental."},
            {n: "Permiso Miami", p: 100000, d: "Exilio dorado sin extradición."}
        ]
    },

    Core: {
        init() {
            App.UI.renderArquetipos();
            App.UI.renderMercado();
            App.Core.mainLoop();
            App.Core.telemetryLoop();
        },

        setTax(mult, label) {
            App.Data.fiatTax = mult;
            document.getElementById('tax-mult').innerText = "x" + mult;
            document.getElementById('fiat-gate').style.display = 'none';
            
            if(mult > 1) {
                let p = 62 * mult;
                document.getElementById('oni-price-tag').innerText = `${p}€ - PRECIO PARA ${label}`;
                document.getElementById('oni-btn-main').innerText = `ONI POD v1 (${p}€)`;
            }
            App.UI.renderMercado();
        },

        mainLoop() {
            setInterval(() => {
                App.Data.vida--; 
                if(App.Data.vida % 10 === 0) App.Data.sangre -= 0.1;
                App.UI.updateStats();
                if(App.Data.vida <= 0) App.Core.killSwitch();
            }, 1000);
        },

        telemetryLoop() {
            setInterval(() => {
                document.getElementById('ping').innerText = Math.floor(Math.random() * 25 + 5);
                document.getElementById('gauss-val').innerText = (Math.random() * 0.5).toFixed(2);
                document.getElementById('vigilancia-val').innerText = Math.random() > 0.8 ? "ALTA" : "BAJA";
                App.Data.haki = (Math.random() * 5 + 94).toFixed(1);
            }, 2000);
        },

        killSwitch() {
            document.body.innerHTML = `<div style='background:#000; color:var(--blood); height:100vh; display:flex; flex-direction:column; align-items:center; justify-content:center; font-family:monospace; text-align:center;'><h1 style="font-size:4rem;">SISTEMA COLAPSADO</h1><p style="font-size:1.5rem;">BIOMASA DISUELTA POR FALTA DE OBJETIVOS.</p><button class="btn-ritual" style="margin-top:30px;" onclick="location.reload()">REENCARNAR</button></div>`;
        },

        randomEvents() { 
            if (Math.random() > 0.99) {
                alert("ADVERTENCIA: El sistema detecta exceso de moralidad. Drenando...");
                App.Data.vida -= 100;
            } 
        }
    },

    Economy: {
        mine() { 
            App.Data.vida += 300; 
            App.UI.updateStats();
        },
        gamble() {
            let a = parseInt(prompt("¿Cuántos segundos apuestas?", "500"));
            if (isNaN(a) || a <= 0) return;
            if (App.Data.vida >= a) {
                App.Data.vida -= a;
                if (Math.random() > 0.65) { 
                    let win = a * 4;
                    App.Data.vida += win; 
                    alert(`GANANCIA: +${win}s`); 
                }
                else alert("DRENAJE.");
            }
        },
        buy(p, name) {
            let finalP = p * App.Data.fiatTax;
            if (App.Data.vida >= finalP) { 
                App.Data.vida -= finalP; 
                alert(`ADQUIRIDO: ${name}.`); 
            }
            else alert("VIDA INSUFICIENTE. EL EGO ES CARO.");
        }
    },

    UI: {
        updateStats() {
            document.getElementById('v-val').innerText = App.Data.vida;
            document.getElementById('haki-val').innerText = App.Data.haki;
            document.getElementById('s-val').innerText = App.Data.sangre.toFixed(1);
            document.getElementById('h-val').innerText = (85 + (App.Data.vida / 10000)).toFixed(1);
        },

        renderArquetipos() {
            const container = document.getElementById('muro-arquetipos');
            App.Data.arquetipos.forEach(arq => {
                const btn = document.createElement('button');
                btn.className = 'btn-ritual';
                btn.style.background = '#0a0a0a'; btn.style.fontSize = '0.75rem'; btn.style.border = "1px solid #333";
                btn.innerText = arq;
                btn.onclick = () => App.UI.egoSentencia(arq);
                container.appendChild(btn);
            });
        },

        renderMercado() {
            const container = document.getElementById('items-container');
            container.innerHTML = "";
            App.Data.mercado.forEach(item => {
                let cost = item.p * App.Data.fiatTax;
                const div = document.createElement('div');
                div.className = 'brutalist-card'; div.style.width = "280px"; div.style.cursor = "pointer";
                div.innerHTML = `<h4 style="color:var(--ultra)">${item.n}</h4><p style="font-size:0.8rem; margin:10px 0;">${item.d}</p><div style="color:var(--gold); font-weight:bold;">${cost}s</div>`;
                div.onclick = () => App.Economy.buy(item.p, item.n);
                container.appendChild(div);
            });
        },

        toggleModal(id) {
            const m = document.getElementById(id);
            m.style.display = (m.style.display === 'flex') ? 'none' : 'flex';
        },

        egoSentencia(n) {
            App.Data.vida -= 3000;
            const modal = document.getElementById('ego-fracture');
            modal.style.display = 'flex';
            document.getElementById('insulto-desc').innerText = `Interactuar con un "${n}" drena tu biomasa. -3000s consumidos.`;
            let t = 3;
            document.getElementById('ego-timer').innerText = t;
            const clock = setInterval(() => {
                t--; document.getElementById('ego-timer').innerText = t;
                if(t <= 0){ clearInterval(clock); modal.style.display = 'none'; }
            }, 1000);
        }
    }
};

window.onload = () => App.Core.init();

document.getElementById('terminal-reto').addEventListener('change', (e) => {
    const val = e.target.value.toLowerCase();
    if (val === "bastard lloba i llesca") {
        document.body.classList.add('lloba-mode');
        document.getElementById('main-title').innerText = "BASTARD LLOBA I LLESCA";
        document.getElementById('main-title').style.color = "var(--magenta)";
        document.getElementById('status-label').innerText = "ESTADO: SOBERANO ABSOLUTO";
        App.Data.vida += 1000000;
        App.Data.fiatTax = 0;
        App.UI.renderMercado();
        alert("LINAJE RECONOCIDO.");
    }
    e.target.value = "";
});
</script>
</body>
</html>