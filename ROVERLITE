<script>
// BSO OFICIAL DEL BARRIO (catbox = sin anuncios)
const hoodTracks = [
  {src:"https://files.catbox.moe/9m2v5s.mp3", name:"Natos y Waor – Caminos de barro"},
  {src:"https://files.catbox.moe/3x9q2j.mp3", name:"Jarfaiter – Palomares"},
  {src:"https://files.catbox.moe/k1r8p9.mp3", name:"Kidd Keo – Moon Money"},
  {src:"https://files.catbox.moe/t5l9q2.mp3", name:"Delaossa – Veneno"},
  {src:"https://files.catbox.moe/h7f4p1.mp3", name:"Fernando Costa – Mala"},
  {src:"https://files.catbox.moe/z3x7r8.mp3", name:"Ayax y Prok – Sayōnara"},
  {src:"https://files.catbox.moe/p9k2m5.mp3", name:"Hard GZ – Sabadell 2026"}
];
let actual = 0;

function cargarTrack() {
  const audio = document.getElementById("remix-audio");
  audio.src = hoodTracks[actual].src;
  document.getElementById("trackname").textContent = hoodTracks[actual].name;
  audio.load();
  audio.play();
}

// Cambio automático cada vez que termina
document.getElementById("remix-audio").addEventListener("ended", () => {
  actual = (actual + 1) % hoodTracks.length;
  cargarTrack();
});

// ESTADÍSTICAS + COBRO + MALDICIONES
let deudaTotal = BigInt(localStorage.deudaHood || "0");
let demandas = BigInt(localStorage.demandasHood || "0");
let crateres = BigInt(localStorage.crateresHood || "0");
let maldiciones = BigInt(localStorage.maldicionesHood || "0");
let inicio = Date.now();

function actualizarTodo() {
  const seg = Math.floor((Date.now() - inicio) / 1000);
  deudaTotal += BigInt(seg) * 133713371337n;
  demandas += BigInt(seg) * 2222222n;
  crateres += BigInt(seg) * 8000000000n;
  maldiciones += BigInt(seg / 25);

  document.getElementById("deudaTotal").textContent = format(deudaTotal);
  document.getElementById("demandas").textContent = format(demandas);
  document.getElementById("crateres").textContent = format(crateres);
  document.getElementById("maldiciones").textContent = format(maldiciones);

  localStorage.deudaHood = deudaTotal.toString();
  localStorage.demandasHood = demandas.toString();
  localStorage.crateresHood = crateres.toString();
  localStorage.maldicionesHood = maldiciones.toString();
}

function format(n) { return n.toLocaleString("es-ES"); }

function jackHabla() {
  hablar("¡Jack Parsons desde el bloque! Acabo de añadir otro trillón al alquiler lunar.");
  deudaTotal += 999999999999999999n;
  actualizarTodo();
}

function newtonMaldice() {
  const maldicion = ["¡Que tu empresa caiga más rápido que un cuerpo en gravedad!", "¡Maldito seas en newtons y en euros!", "¡Que tus acciones valgan menos que bicarbonato!"];
  hablar("¡Isaac Newton maldice! " + maldicion[Math.floor(Math.random()*maldicion.length)]);
  maldiciones += 777777n;
  actualizarTodo();
}

function iniciarHoodEdition() {
  cargarTrack();
  actualizarTodo();
  setInterval(actualizarTodo, 1000);
  setInterval(newtonMaldice, 30000);
  
  hablar("Bienvenido al cobete del barrio. Natos y Waor suenan en la Luna, Jarfaiter en los rovers y Kidd Keo en la botella. El espacio ya no es de los pijos… es del bloque. Y si no pagan, Newton maldice y Jack cobra. Ca n’Oriac 2026.");
}

function hablar(t) {
  const voz = new SpeechSynthesisUtterance(t);
  voz.rate = 1.8;
  voz.pitch = 1.7;
  voz.lang = "es-ES";
  speechSynthesis.speak(voz);
}
</script>
