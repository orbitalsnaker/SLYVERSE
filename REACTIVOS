<script>
let audioCtx;
function activarResonancia() {
    if (!audioCtx) {
        audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        const oscillator = audioCtx.createOscillator();
        const gainNode = audioCtx.createGain();
        oscillator.type = 'sine';
        oscillator.frequency.setValueAtTime(40, audioCtx.currentTime); 
        gainNode.gain.setValueAtTime(0.04, audioCtx.currentTime);
        oscillator.connect(gainNode);
        gainNode.connect(audioCtx.destination);
        oscillator.start();
        console.log("FRECUENCIA 40HZ ACTIVA: El Búnker resuena.");
    }
}

if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(pos => {
        document.getElementById('geo-mirror').innerHTML = 
            `NODO DETECTADO: LAT ${pos.coords.latitude.toFixed(4)} | LON ${pos.coords.longitude.toFixed(4)} [SINCRO OK]`;
    }, () => {
        document.getElementById('geo-mirror').innerHTML = "NODO EN SOMBRA: Ubicación ofuscada.";
    });
}

const mirrorStatus = document.getElementById('mirror-realtime');
const mirrorList = ["Desintegrando cinismo...", "Escaneando ego dialéctico...", "Purificando retórica...", "archive.org", "Sincronizando con el Vacío..."];
let mIdx = 0;
setInterval(() => {
    mirrorStatus.innerText = mirrorList[mIdx];
    mIdx = (mIdx + 1) % mirrorList.length;
}, 3500);

window.addEventListener('scroll', () => {
  const sections = document.querySelectorAll('.section');
  sections.forEach(sec => {
    const depth = sec.getBoundingClientRect().top;
    if(depth < 800) {
      sec.style.transform = `perspective(1000px) rotateX(${depth * 0.005}deg)`;
    }
  });
});

console.log("%c ATENCIÓN: El código es un espejo. Si ves un error, es tu reflejo.", "color: #ff00ff; font-size: 20px; font-weight: bold;");
</script>

