<script>
const App = {
    Config: {
        i18n: {
            'es': { title: "RONIN_SABADELL", sub: "PULSO 58Hz · SOBERANÍA", soft: "SOFTWARE_AMORAL", hw: "HARDWARE_NODO", stats: "LINAJE_GLOBAL", charca: "LA_CHARCA" },
            'en': { title: "RONIN_GLOBAL", sub: "PULSE 58Hz · SOVEREIGNTY", soft: "AMORAL_SOFTWARE", hw: "NODE_HARDWARE", stats: "GLOBAL_LINEAGE", charca: "THE_POND" },
            'ja': { title: "浪人_コア", sub: "パルス 58Hz · 主権", soft: "非道徳的なソフトウェア", hw: "ハードウェア", stats: "血統", charca: "池" },
            'he': { title: "רונין_ליבה", sub: "דופק 58Hz · ריבונות", soft: "תוכנה_אמורלית", hw: "חומרה", stats: "שושלת", charca: "השלולית" }
        }
    },
    Data: {
        vida: 3333, haki: 100.0, hwClock: 604800, lang: 'es', mode: 'RONIN',
        software: [
            {n: "TAXIDERMIA_EX_V1", d: "Formatea el recuerdo de unidades de Sabadell.", p: 400, active: false},
            {n: "PROXY_MIAMI_DEHESA", d: "Oculta el rastro fiscal y el Haki heredado.", p: 1200, active: false},
            {n: "HAKI_OVERCLOCK", d: "Aumenta la voluntad x2 ante herederas.", p: 2500, active: false},
            {n: "ANTI_CENSOR_BRUTAL", d: "Bypassea cortafuegos de intelectuales cornudas.", p: 800, active: false},
            {n: "SINCERIDAD_ALFA", d: "Protocolo de desinhibición sistémica.", p: 1310, active: false},
            {n: "CALC_TRIO_DEPRAVADO", d: "Mapeo de vulnerabilidad de amiga tremenda.", p: 5000, active: false},
            {n: "NEURAL_DRAIN_SBD", d: "Extracción de honestidad de rameras.", p: 3500, active: false},
            {n: "SAT_LINK_OVERRIDE", d: "Conexión directa sin intermediarios.", p: 9000, active: false}
        ],
        arquetipos: ["Heredera_Ext_Cornuda", "Amiga_Infiel_Tremenda", "Mística_SBD", "Clase_A_Taxidermista", "Novio_Esclavo_NPC", "Casta_SBD", "Unidad_Noble", "Frecuencia_Ego", "Esclavo_Fiat", "Ronin_Alpha", "Vibracion_Vaca", "Biomasa_Smartphone", "Unidad_Heredada", "Alpha_Degenerado"],
        inventario: [
            {n: "SABLE_FREQ_58", p: 7000, d: "Corte limpio en el código de la realidad."},
            {n: "MÓVIL_SOBERANO", p: 500, d: "Hardware amoral sin rastro GPS."},
            {n: "DIPLOMA_CORNUDA_HONOR", p: 800, d: "+1000s biomasa por deshonra ajena."},
            {n: "PULSO_MISTICO_EX", p: 1500, d: "Sincronización con el vacío de la dehesa."},
            {n: "KIT_EXILIO_MIAMI", p: 45000, d: "Documentación y rastro borrado."},
            {n: "PERMISO_FINAL", p: 99999, d: "Soberanía total. Fin del juego."}
        ]
    },

    Core: {
        init(m) {
            App.Data.mode = m;
            document.getElementById('fiat-gate').style.display = 'none';
            App.Core.detectLanguage();
            App.UI.renderAll();
            setInterval(App.Core.tick, 1000);
            App.Core.log(`SISTEMA INICIADO: PROTOCOLO DE EXPROPIACIÓN ACTIVO.`);
            App.Core.speak("Hardware amoral listo. El bit es libre.");
            App.Core.log("DETECTADO: NODO CENTRAL ACTIVADO A 58HZ. SCANNING EX-UNITS...");
        },
        detectLanguage() {
            const userLang = navigator.language.split('-')[0];
            App.Data.lang = App.Config.i18n[userLang] ? userLang : 'en';
            document.getElementById('lang-val').innerText = App.Data.lang.toUpperCase();
            App.UI.applyLanguage();
        },
        tick() {
            App.Data.vida--; App.Data.hwClock--;
            if (App.Data.vida <= 0) App.Core.die();
            App.UI.updateVitals();
            if (Math.random() > 0.97) App.Core.captureRandomBiomass();
        },
        captureRandomBiomass() {
            const gain = Math.floor(Math.random() * 300);
            App.Data.vida += gain;
            App.Core.log(`SCRAPER: Capturada biomasa por envidia ontológica (+${gain}s).`);
            App.UI.addNeuralRecord(gain);
        },
        log(msg) {
            const log = document.getElementById('terminal-log');
            log.innerHTML += `<div>[${new Date().toLocaleTimeString()}] > ${msg}</div>`;
            log.scrollTop = log.scrollHeight;
        },
        speak(txt) {
            const msg = new SpeechSynthesisUtterance(txt);
            msg.lang = App.Data.lang; msg.rate = 0.8; msg.pitch = 0.5;
            window.speechSynthesis.speak(msg);
        },
        die() {
            document.body.innerHTML = "<div style='background:#000;color:red;height:100vh;display:flex;flex-direction:column;align-items:center;justify-content:center;font-size:3rem; text-align:center;'><div>BIOMASA CERO.</div><div style='font-size:1rem; margin-top:20px;'>TU LINAJE SE HA EXTINGUIDO EN LA CHARCA.</div></div>";
        },
        randomEvents() {
            if (Math.random() > 0.95) {
                App.Core.log("ALERTA: INTENTO DE DRENAJE DE HEREDERA DETECTADO.");
                App.Data.haki -= 5;
            }
        }
    },

    UI: {
        applyLanguage() {
            const l = App.Config.i18n[App.Data.lang];
            document.getElementById('main-title').innerText = l.title;
            document.getElementById('sub-title').innerText = l.sub;
            document.getElementById('txt-soft-title').innerText = l.soft;
            document.getElementById('txt-hw-title').innerText = l.hw;
            document.getElementById('txt-stats-title').innerText = l.stats;
            document.getElementById('txt-charca-title').innerText = l.charca;
        },
        updateVitals() {
            document.getElementById('v-val').innerText = App.Data.vida;
            document.getElementById('haki-val').innerText = (App.Data.haki + (Math.random()*2-1)).toFixed(1);
            const h = Math.floor(App.Data.hwClock / 3600);
            const m = Math.floor((App.Data.hwClock % 3600) / 60);
            const s = App.Data.hwClock % 60;
            document.getElementById('hw-timer').innerText = `${h}H ${m}M ${s}S`;
        },
        renderAll() {
            this.renderSoftware();
            this.renderStats();
            this.renderArquetipos();
            this.renderMercado();
        },
        renderSoftware() {
            const c = document.getElementById('software-container');
            c.innerHTML = "";
            App.Data.software.forEach(s => {
                const div = document.createElement('div');
                div.className = 'brutalist-card';
                div.innerHTML = `<strong>${s.n}</strong><br><small style="color:var(--gold)">${s.d}</small><br><div style="margin-top:5px; color:var(--ultra)">COSTO: ${s.p}s biomasa</div>`;
                div.onclick = () => {
                    if(App.Data.vida >= s.p) {
                        App.Data.vida -= s.p; s.active = true;
                        div.style.borderColor = "var(--ultra)";
                        App.Core.log(`MÓDULO INSTALADO: ${s.n}. TAXIDERMIA ++`);
                    } else {
                        App.Core.log(`ERROR: BIOMASA INSUFICIENTE PARA ${s.n}.`);
                    }
                };
                c.appendChild(div);
            });
        },
        renderStats() {
            const body = document.getElementById('stats-body');
            body.innerHTML = "";
            const stats = [
                ["RATIO_CORNUDEZ", "DEHESA_100%", "STABLE"],
                ["RATIO_DRENAJE", "1310/s", "ALFA"],
                ["LINAJE_FIAT", "PÉRDIDA 100%", "OPTIMO"],
                ["HONESTIDAD", "DIVINA", "ACTIVE"],
                ["FRECUENCIA_SBD", "58.00Hz", "SYNC"],
                ["TRIO_BRUTALISTA", "SUCCESS", "ENCRYPT"]
            ];
            stats.forEach(r => {
                body.innerHTML += `<tr><td>${r[0]}</td><td style="color:var(--ultra)">${r[1]}</td><td>${r[2]}</td></tr>`;
            });
        },
        renderArquetipos() {
            const c = document.getElementById('muro-arquetipos');
            c.innerHTML = "";
            App.Data.arquetipos.forEach(a => {
                const s = document.createElement('span'); s.className = 'charca-unit'; s.innerText = a;
                s.onclick = () => { 
                    App.Data.vida += 500; 
                    App.Core.log(`EXTRACCIÓN: UNIDAD ${a} PROCESADA. +500s biomasa por deshonra.`); 
                };
                c.appendChild(s);
            });
        },
        renderMercado() {
            const c = document.getElementById('items-container');
            c.innerHTML = "";
            App.Data.inventario.forEach(i => {
                const div = document.createElement('div'); div.className = 'brutalist-card';
                div.style.border = "1px solid var(--gold)";
                div.innerHTML = `<h3 style="color:var(--ultra)">${i.n}</h3><p style="font-size:0.7rem; margin:10px 0;">${i.d}</p><button class="btn-ritual" style="width:100%; background:transparent; border:1px solid var(--scarlet);">PAGAR ${i.p}s</button>`;
                div.onclick = () => { 
                    if(App.Data.vida >= i.p) { 
                        App.Data.vida -= i.p; 
                        App.Core.log(`BÓVEDA: ADQUIRIDO ${i.n}.`); 
                    } 
                };
                c.appendChild(div);
            });
        },
        addNeuralRecord(gain) {
            const container = document.getElementById('neural-records');
            const div = document.createElement('div');
            div.className = 'brutalist-card';
            div.style.fontSize = "0.6rem";
            div.innerHTML = `ID_EXT: ${Math.floor(Math.random()*1000)} | BIOMASA: +${gain}s | ORIGEN: EX_ENVY_NODE`;
            container.prepend(div);
            if (container.children.length > 9) container.lastChild.remove();
        },
        toggleModal(id) {
            const m = document.getElementById(id);
            m.style.display = m.style.display === 'none' ? 'block' : 'none';
        }
    }
};

document.getElementById('terminal-reto').addEventListener('change', (e) => {
    if(e.target.value.toLowerCase() === "bastard lloba i llesca") {
        document.body.classList.add('lloba-mode');
        App.Data.vida = 888888;
        App.Core.log("!!! HONESTIDAD ABSOLUTA DETECTADA: MODO LLOBA ACTIVADO !!!");
        App.Core.speak("Soberanía total alcanzada. El linaje de las ex ha sido borrado.");
    }
});
