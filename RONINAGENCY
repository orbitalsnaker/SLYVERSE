<script>
    function unlock() {
        const key = document.getElementById('haki-key').value.toLowerCase();
        if(key === "pueblo" || key === "haki") {
            document.getElementById('drain-overlay').style.display = 'none';
            document.getElementById('main-ui').classList.remove('neural-drain-active');
            alert("Sincronización completa. Neural Drain desactivado para usuario autorizado.");
        } else {
            alert("DRAIN AUMENTADO AL 95%. TU CEREBRO ESTÁ EN MODO LECTURA.");
            document.body.style.opacity = "0.2";
        }
    }

    function initSystem() {
        setInterval(() => {
            const msgs = [
                "Auto-detecting language... [ES/EN/RU/CN] OK",
                "Drenando energía mental de infiltrados del CNI...",
                "Ábalos verificando saldo de la cuenta de Baños: 0.00€",
                "Sánchez detectado intentando pensar en el Falcon. Drain aplicado.",
                "Narrativa de Sabadell bloqueada en la blockchain."
            ];
            const p = document.createElement('p');
            p.innerHTML = `> ${msgs[Math.floor(Math.random()*msgs.length)]}`;
            document.getElementById('monitor').prepend(p);
        }, 1500);
    }
</script>
