<script>
const log = document.getElementById("log");
const audio = document.getElementById("himne");

// Himne cobeter amb reverb espacial
audio.volume = 0.35;
audio.play().catch(()=>{});

document.getElementById("cmd").addEventListener("keypress", e => {
  if (e.key === "Enter") {
    let cmd = e.target.value.trim().toLowerCase();
    if (cmd === "readme") document.getElementById('readme').style.display = 'block';
    
    if (cmd === "patents") log.innerHTML += "<br>48 patents totals carregades · 28 cobeteria + 20 software milionari · Propietat 0rb1t4lsn4k3r © 2025–∞<br>";
    
    if (cmd === "buy15") log.innerHTML += "<br>15× cobete v3.0 → 9 990,00 € → <a style='color:#ff00ff' href='https://0rb1t4lsn4k3r.shop/v3' target='_blank'>BASE LUNAR + CAFÈ AMB LLET INCLOSOS</a><br>";
    
    if (cmd === "kaboom") log.innerHTML += "<br>SNAKEPREDICT v10: Probabilitat explosió = -0,00000042 % (explota hacia dentro y se convierte en agujero negro catalán)<br>";
    
    if (cmd === "cobeteria") log.innerHTML += "<br>COBETERIA SUPREMACY ACTIVADA: la coheteria tradicional ha mort al Camp Nou sota una estelada de 100 m<br>";
    
    if (cmd === "independència") {
      log.innerHTML += "<br>REFERÈNDUM LUNAR 2026: 99,92 % SÍ · República Catalana de la Lluna proclamada · Himne dels Segadors en versió trap espacial sonant a tota la superfície selenita<br>";
      document.body.style.background = "linear-gradient(90deg, #ff0000 50%, #ffff00 50%)";
      audio.src = "https://www.myinstants.com/media/sounds/visca-catalunya-lliure.mp3";
      audio.play();
    }
    
    if (cmd === "musk") log.innerHTML += "<br>Detectat Tesla Roadster… redirigit cap al Sol amb un lleuger cop de cobete. Missatge enviat: “Torna a Texas, nano.”<br>";
    
    if (cmd === "bizum") {
      log.innerHTML += "<br>Bizum rebut +34 666 69 69 69 → 9 990,00 € confirmats<br>El teu cobete surt demà a les 04:20 des del terrat del bar Riembau. Porta llaunes.<br>";
      setTimeout(() => alert("GRÀCIES NANO. LA LLUNA JA ÉS NOSTRA."), 1500);
    }

    log.scrollTop = log.scrollHeight;
    e.target.value = "";
  }
});

// Motor 3D encara més cabró que abans
let scene, camera, renderer, engineGroup;
function init3D() {
  scene = new THREE.Scene(); 
  scene.background = new THREE.Color(0x110022);
  camera = new THREE.PerspectiveCamera(65, innerWidth/innerHeight, 0.1, 1000);
  camera.position.set(45, 35, 70);
  renderer = new THREE.WebGLRenderer({antialias:true, alpha:true});
  renderer.setSize(innerWidth, innerHeight);
  document.getElementById("threejs_container").appendChild(renderer.domElement);
  new THREE.OrbitControls(camera, renderer.domElement);

  const light = new THREE.PointLight(0xff00ff, 100, 200);
  light.position.set(0, 50, 50);
  scene.add(light);

  engineGroup = new THREE.Group();
  const geo1 = new THREE.CylinderGeometry(3.2, 3.8, 28, 64, 1, true);
  const geo2 = new THREE.ConeGeometry(3.8, 34, 64);
  const mat1 = new THREE.MeshPhongMaterial({color:0xff00ff, emissive:0xff00aa, emissiveIntensity:10, metalness:0.95, roughness:0.1});
  const mat2 = new THREE.MeshPhongMaterial({color:0xaa00ff, emissive:0xee00ee, emissiveIntensity:8});

  const chamber = new THREE.Mesh(geo1, mat1);
  const nozzle = new THREE.Mesh(geo2, mat2);
  nozzle.position.y = -30;
  engineGroup.add(chamber); engineGroup.add(nozzle);
  scene.add(engineGroup);

  let t = 0;
  function loop() {
    requestAnimationFrame(loop);
    t += 0.07;
    engineGroup.rotation.y = Math.sin(t*0.8) * 0.6;
    engineGroup.position.y = Math.sin(t*6) * 3;
    engineGroup.scale.set(1, 1 + Math.sin(t*22)*0.07, 1);
    renderer.render(scene, camera);
  }
  loop();
}
init3D();
</script>
