<script>
// Variables de HUD y minería
let thrust = 166, eco = 133, ang = 0, platino = 0, helio = 0;
let nanorovers = 66, minando = false, repartoActivo = false;
let miningRate = 0.5;
const log = document.getElementById("log");

// Audio Estopa 8-bit
const estopaSound = new Audio("data:audio/wav;base64,UklGRnoGAABXQVZFZm10IBAAAAABAAEAQB8AAEAfAAABAAgAZGF0YQoGAACBhYqFbF1fdJivrJBhNjVgodDbq2EcBj+a2/LDciUFLIHO8tiJNwgZaLvt559NEAxQp+PwtmMcBjiR1/LMeSwFJHfH8N2QQAoUXJzn6NqtMQUdZ7zw3pQ+B");

function logMsg(msg) {
  log.innerHTML += msg + "<br>";
  log.scrollTop = log.scrollHeight;
}

function handleCommand(cmd) {
  cmd = cmd.toLowerCase().trim();
  logMsg(">> " + cmd);

  if (cmd === "readme") {
    document.getElementById('readme').style.display = 'block';
  } else if (cmd === "barrio") {
    repartoActivo = true;
    document.getElementById("reparto").innerHTML = "Reparto barrio: <b>70% ACTIVADO</b>";
    logMsg("70% AL BARRIO · 10% a 0RB1T4LSN4K3R · 20% fondo explosivo");
    logMsg("¡Justicia orbital activada, rey!");
  } else if (cmd === "explosion") {
    logMsg("Los cobetes NO explotan. Explosión = fracaso corporativo. Aprende, pijo.");
  } else if (["spacex","blueorigin","nasa","jeffbezos","elonmusk"].includes(cmd)) {
    document.body.classList.add("glitch","ratio");
    logMsg("RATIO + MALDICIÓN GITANA activada contra " + cmd.toUpperCase());
    logMsg("☠️☠️☠️ 666 años de mala suerte orbital ☠️☠️☠️");
    setTimeout(() => document.body.classList.remove("glitch","ratio"), 6000);
  } else if (cmd === "estopa") {
    estopaSound.currentTime = 0;
    estopaSound.play();
    logMsg("♪♫ La raja de tu falda… ♫♪ (8-bit desde órbita baja)");
  } else if (cmd === "minar") {
    minando = true;
    logMsg("66 nanorovers desplegados. Minería activa con split 2026.");
  } else {
    logMsg("Comando desconocido, rey. Prueba 'barrio' para activar el split justo.");
  }
}

document.getElementById('cmd').addEventListener('keypress', e => {
  if (e.key === 'Enter') {
    handleCommand(e.target.value);
    e.target.value = '';
  }
});

// MINERÍA CON SPLIT 2026
setInterval(() => {
  if (minando) {
    const basePlatino = miningRate;
    const baseHelio = miningRate / 2;

    const barrio = repartoActivo ? 0.70 : 0;
    const orbital = 0.10;
    const fondo = 0.20;

    const platinoBarrio = basePlatino * barrio;
    const helioBarrio = baseHelio * barrio;

    platino += basePlatino;
    helio += baseHelio;

    let mensaje = `+${basePlatino.toFixed(2)}g Platino → ${platino.toFixed(2)}g | +${baseHelio.toFixed(2)}g Helio-3 → ${helio.toFixed(2)}g`;
    
    if (repartoActivo) {
      mensaje += `<br>   ├─ 70% (${platinoBarrio.toFixed(2)}g + ${helioBarrio.toFixed(2)}g) → BARRIO`;
      mensaje += `<br>   ├─ 10% → 0RB1T4LSN4K3R (alquiler orbital)`;
      mensaje += `<br>   └─ 20% → Fondo para el próximo cobete`;
    }
    logMsg(mensaje);
  }
}, 3000);

// Three.js 3D cobete y nanorovers
let scene, camera, renderer, rocketMesh, nanoroverMeshes = [];
function initThreeJS() {
  const container = document.getElementById('threejs_container');
  scene = new THREE.Scene();
  scene.background = new THREE.Color(0x000000);

  camera = new THREE.PerspectiveCamera(60, window.innerWidth/window.innerHeight, 0.1, 1000);
  camera.position.set(5,5,10);

  renderer = new THREE.WebGLRenderer({antialias:true, alpha:true});
  renderer.setSize(window.innerWidth, window.innerHeight);
  container.appendChild(renderer.domElement);

  const controls = new THREE.OrbitControls(camera, renderer.domElement);
  controls.enableDamping = true;

  // Luz
  const ambient = new THREE.AmbientLight(0x404040, 1.2); scene.add(ambient);
  const directional = new THREE.DirectionalLight(0xffffff, 1.4); directional.position.set(10,10,10); scene.add(directional);

  // Cobete
  rocketMesh = new THREE.Group();
  const body = new THREE.Mesh(new THREE.CylinderGeometry(0.5,0.5,2,32), new THREE.MeshPhongMaterial({color:0x0ff}));
  rocketMesh.add(body);
  const booster = new THREE.Mesh(new THREE.CylinderGeometry(0.2,0.2,1,16), new THREE.MeshPhongMaterial({color:0xff0000}));
  booster.position.set(0,-1,0);
  rocketMesh.add(booster);

  scene.add(rocketMesh);

  // Nanorovers
  for(let i=0;i<nanorovers;i++){
    const nano = new THREE.Mesh(new THREE.SphereGeometry(0.05,8,8), new THREE.MeshPhongMaterial({color:0x00ff00}));
    nanoroverMeshes.push(nano);
    scene.add(nano);
  }

  function animate() {
    requestAnimationFrame(animate);
    rocketMesh.rotation.y += 0.01;

    // Nanorovers orbitando
    nanoroverMeshes.forEach((nano,i)=>{
      const angle = ang + i*0.1;
      nano.position.set(Math.cos(angle)*3, Math.sin(angle)*1.5, Math.sin(angle)*3);
    });
    ang += 0.01;

    controls.update();
    renderer.render(scene,camera);
  }
  animate();
}
initThreeJS();

// HUD animado
function animateGauges(){
  const t = document.getElementById('thrust').getContext('2d');
  t.fillStyle='#000'; t.fillRect(0,0,280,60);
  t.fillStyle='#0f0'; t.fillRect(0,0,(thrust/200)*280,60);

  const e = document.getElementById('eco').getContext('2d');
  e.fillStyle='#000'; e.fillRect(0,0,280,60);
  e.fillStyle='#0f0'; e.fillRect(0,0,(eco/200)*280,60);

  const r = document.getElementById('radar').getContext('2d');
  r.clearRect(0,0,240,240);
  r.strokeStyle='#0f0'; r.beginPath(); r.arc(120,120,100,0,Math.PI*2); r.stroke();
  nanoroverMeshes.forEach((_,i)=>{
    let a=ang+i*0.1;
    r.fillStyle='#0f0'; r.fillRect(120+Math.cos(a)*80,120+Math.sin(a)*80,4,4);
  });

  requestAnimationFrame(animateGauges);
}
animateGauges();
</script>
