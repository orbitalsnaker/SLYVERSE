<script>
const App = {
    Data: {
        vida: 2500, haki: 98.2, fiatTax: 1, hwClock: 604800,
        lang: navigator.language || navigator.userLanguage,
        dict: {
            "es": { gate: "KOAN EXTINCTION", sincero: "SINCERO / LINATE REAL", mono: "MONO / TAXIDERMISTA", vault: "BÓVEDA ATREIDES", charca: "LA CHARCA" },
            "en": { gate: "HARDWARE ADDICTION", sincero: "SINCERE / REAL LINEAGE", mono: "MONKEY / ACADEMIA", vault: "ATREIDES VAULT", charca: "THE SWAMP" },
            "ca": { gate: "EXTINCIÓ KOAN", sincero: "SINCER / LLINATGE REAL", mono: "MICO / TAXIDERMISTA", vault: "BÒVEDA ATREIDES", charca: "LA CHARCA" }
        },
        arquetipos: ["Elon Musk (Mono)", "Ingeniero xAI", "Académico de Cuota", "Político de Carrera", "Taxidermista Fiat", "Censor de Red", "Ministra de Resiliencia", "Gurú de Humo"],
        inventario: [
            {n: "MÓVIL SOBERANO", p: 120, d: "Hardware amoral 120€. Sin rastro IMEI."},
            {n: "ONI POD v1", p: 62, d: "Frecuencia Turing 58. Anula fatiga."},
            {n: "X-CORP LEASH", p: 500, d: "Drena el ego de los magnates."},
            {n: "PROYECTO BOA", p: 2500, d: "Blindaje total Sabadell."},
            {n: "MALETÍN 1310", p: 5000, d: "Elimina Impuesto de Ego (Fiat)."}
        ]
    },

    Core: {
        init() {
            App.Core.detectLang();
            App.UI.renderArquetipos();
            App.UI.renderMercado();
            setInterval(App.Core.tick, 1000);
            App.Core.log("RONIN CORE v8.5: 1310/TURING-58 ONLINE.");
        },
        detectLang() {
            const short = App.Data.lang.split('-')[0];
            const t = App.Data.dict[short] || App.Data.dict["en"];
            document.getElementById('gate-title').innerText = t.gate;
            document.getElementById('btn-pueblo').innerText = t.sincero;
            document.getElementById('btn-mono').innerText = t.mono;
            document.getElementById('btn-vault').innerText = t.vault;
            document.getElementById('charca-title').innerText = t.charca;
        },
        tick() {
            App.Data.vida--;
            App.Data.hwClock--;
            if(App.Data.vida <= 0 || App.Data.hwClock <= 0) App.Core.die();
            App.UI.update();
        },
        setTax(m, label) {
            App.Data.fiatTax = m;
            document.getElementById('tax-mult').innerText = "x" + m;
            document.getElementById('fiat-gate').style.display = 'none';
            App.Core.log(`MODO ${label} DETECTADO. CARGA: x${m}`);
        },
        log(msg) {
            const log = document.getElementById('terminal-log');
            log.innerHTML += `<div>[1310-T-58] > ${msg}</div>`;
            log.scrollTop = log.scrollHeight;
        },
        die() {
            const reason = App.Data.hwClock <= 0 ? "HARDWARE ANULADO (IMPAGO SEMANAL)" : "BIOMASA AGOTADA";
            document.body.innerHTML = `<div style='background:#000; color:red; height:100vh; display:flex; align-items:center; justify-content:center; flex-direction:column;'><h1>${reason}</h1><p>REINICIANDO PROTOCOLO 1310</p><button class='btn-ritual' onclick='location.reload()'>REENCARNAR</button></div>`;
        },
        randomEvents() {
            if(Math.random() > 0.97) { App.Core.log("LATIDO 58: Sincronía Turing detectada. Haki +1."); App.Data.haki += 1; }
        }
    },

    Economy: {
        buy(p, name) {
            let cost = p * App.Data.fiatTax;
            if(App.Data.vida >= cost) { App.Data.vida -= cost; App.Core.log(`ADQUIRIDO: ${name}.`); }
            else { App.Core.log("ERROR: BIOMASA INSUFICIENTE."); }
        },
        transmute() {
            App.Core.log("PAGO ACTUALIZACIÓN SEMANAL (1310).");
            App.Data.hwClock = 604800; // Reset 1 semana
            App.Data.vida += 1310;
            App.Data.haki += 58;
            App.Core.log("HARDWARE VALIDADO. FIAT TRANSMUTADO A 4EF2.");
        }
    },

    UI: {
        update() {
            document.getElementById('v-val').innerText = App.Data.vida;
            document.getElementById('haki-val').innerText = (Math.random() * 2 + 98).toFixed(1);
            const h = Math.floor(App.Data.hwClock / 3600);
            const m = Math.floor((App.Data.hwClock % 3600) / 60);
            const s = App.Data.hwClock % 60;
            document.getElementById('hw-timer').innerText = `${h}:${m}:${s}`;
            if(App.Data.hwClock < 86400) document.getElementById('hw-timer').style.color = "var(--blood)";
        },
        renderArquetipos() {
            const container = document.getElementById('muro-arquetipos');
            App.Data.arquetipos.forEach(a => {
                const span = document.createElement('span');
                span.className = 'charca-unit';
                span.innerText = a;
                span.onclick = () => { App.Core.log(`DRENANDO ${a}: +1310 Haki.`); App.Data.vida -= 100; };
                container.appendChild(span);
            });
        },
        renderMercado() {
            const container = document.getElementById('items-container');
            App.Data.inventario.forEach(i => {
                const card = document.createElement('div');
                card.className = 'brutalist-card';
                card.innerHTML = `<h4>${i.n}</h4><p style="font-size:0.7rem; margin:10px 0;">${i.d}</p><b style="color:var(--magenta)">${i.p}s</b>`;
                card.onclick = () => App.Economy.buy(i.p, i.n);
                container.appendChild(card);
            });
        },
        toggleModal(id) {
            const m = document.getElementById(id);
            m.style.display = m.style.display === 'none' ? 'block' : 'none';
        }
    }
};

document.getElementById('terminal-reto').addEventListener('change', (e) => {
    if(e.target.value.toLowerCase() === "bastard lloba i llesca") {
        document.body.classList.add('lloba-mode');
        App.Data.vida = 131058;
        App.Data.hwClock = 999999;
        App.Data.fiatTax = 0;
        App.Core.log("HONESTIDAD ABSOLUTA: HARDWARE AMORAL DESBLOQUEADO.");
        document.getElementById('main-title').innerText = "PRESO HONESTO";
    }
});

window.onload = () => App.Core.init();
</script>
</body>
