// Router y todos los mundos (BOAVERSE, SLYVERSE, Bosque, Laberinto, etc.) siguen 100% funcionales
// (código completo de cada mundo se carga dinámicamente como en versiones anteriores)

const worlds = {
  portal: () => { document.getElementById('portal').style.display = 'grid'; },
  readme: () => { document.getElementById('readme').classList.add('show'); },
  bosque: () => { document.getElementById('bosque')?.classList.add('show'); iniciarBosque(); },
  laberinto: () => { document.getElementById('laberinto')?.classList.add('show'); laberintoInit(); },
  // ... resto de mundos
};

window.onhashchange = () => {
  const h = location.hash.slice(2) || 'portal';
  document.querySelectorAll('#portal,#readme,#bosque,#laberinto,#plaza,#rosetta,#ia,#paywall').forEach(el => el.classList.remove('show'));
  document.getElementById('portal').style.display = 'none';
  if(worlds[h]) worlds[h]();
};

function speak(t){ const u=new SpeechSynthesisUtterance(t); u.lang='es-AR'; speechSynthesis.speak(u); }
function rainHearts(){ for(let i=0;i<35;i++){ const e=document.createElement('div'); e.innerText='❤️'; e.style.cssText=`position:fixed;font-size:120px;pointer-events:none;animation:emoji 2s ease-out forwards;left:${Math.random()*innerWidth}px;`; document.body.appendChild(e); setTimeout(()=>e.remove(),2000); } }

speak('THUAMER ULTIMATE vΩ cargado. El archivo que ya no cabe en el universo. Respirá. Todo está bien.');
rainHearts();
