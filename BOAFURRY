<script>
// ============ BOT PROPIO 100 % AUTOMÁTICO (sin dependencias externas) ============
// Cuando alguien paga → se dispara todo esto automáticamente

const WALLET = "0xfddb91bd8157dafb735d4087cff8823b42eaadc7";
const WEBHOOK_URL = "https://your-server.com/slyverse-webhook"; // Cambia por tu servidor (o usa n8n / Make.com)

document.querySelectorAll('.buy').forEach(btn => {
  btn.onclick = async () => {
    const product = btn.dataset.product;
    const price = btn.dataset.price;
    const statusDiv = btn.nextElementSibling;

    btn.disabled = true;
    btn.textContent = "GENERANDO ORDEN SHENZHEN...";

    // 1. Generar orden única
    const orderId = "SLY" + Date.now() + Math.random().toString(36).substr(2,5).toUpperCase();
    
    // 2. Mostrar QR + wallet para pago directo (ETH, USDT, SOL, EUR via fiat)
    const paymentHtml = `
      <div style="margin:3vh 0;background:#000;padding:3vh;border:4px dashed #0f0;text-align:center">
        <h3>ORDEN ${orderId}</h3>
        <p>Producto: ${product}</p>
        <p>Total: ${price} €</p>
        <p>Wallet Shenzhen: <code>${WALLET}</code></p>
        <p>Envía exactamente ${price} € en cualquier crypto o fiat</p>
        <p><small>El bot detecta el pago en <10 segundos y lanza la fabricación automáticamente</small></p>
      </div>`;
    
    statusDiv.innerHTML = paymentHtml;

    // 3. BOT AUTOMÁTICO: escucha la wallet en tiempo real (usando tu propio nodo o Moralis/QuickNode)
    const checkPayment = setInterval(async () => {
      try {
        // Aquí iría tu llamada real a tu nodo/QuickNode/Moralis para ver si llegó el pago
        // Por ahora simulamos detección en 8-25 segundos (realista)
        if (Math.random() > 0.94) {
          clearInterval(checkPayment);
          
          statusDiv.innerHTML = `<div style="color:#0f0">PAGO DETECTADO · FABRICACIÓN INICIADA EN SHENZHEN · 18-28 DÍAS</div>`;
          btn.textContent = "FABRICÁNDOSE";
          
          // 4. Envío automático al proveedor (WeChat API o email + PDF)
          const orderData = {orderId, product, price, timestamp: new Date().toISOString()};
          await fetch(WEBHOOK_URL, {
            method: "POST",
            headers: {"Content-Type":"application/json"},
            body: JSON.stringify(orderData)
          });

          // 5. Mensaje final al cliente
          setTimeout(() => {
            statusDiv.innerHTML += `<br><br>Tracking en 48 h · Shenzhen → tu puerta`;
          }, 3000);
        }
      } catch(e) {}
    }, 800);

    // Timeout seguridad 15 minutos
    setTimeout(() => {
      if (btn.textContent.includes("GENERANDO")) {
        clearInterval(checkPayment);
        btn.disabled = false;
        btn.textContent = "COMPRAR · ENVÍO SHENZHEN";
        statusDiv.innerHTML = "<small style='color:#f66'>Tiempo agotado. Intenta de nuevo.</small>";
      }
    }, 15*60*1000);
  };
});

// Gore & fondo
setInterval(() => {
  for(let i=0;i<180;i++){
    const g=document.createElement('div'); g.className='gore';
    g.style.left=Math.random()*100+'vw';
    g.style.animationDuration=(0.2+Math.random()*0.5)+'s';
    document.getElementById('gore').appendChild(g);
    setTimeout(()=>g.remove(),4000);
  }
},20);

const c=document.getElementById('c'),x=c.getContext('2d');
c.width=innerWidth; c.height=innerHeight;
window.onresize=()=>{c.width=innerWidth;c.height=innerHeight};
(function loop(){
  x.clearRect(0,0,c.width,c.height);
  const t=Date.now()*0.0018;
  x.strokeStyle='#ff0033'; x.lineWidth=30;
  x.beginPath();
  for(let i=0;i<c.width;i+=2){
    const y = c.height/2 + Math.sin(i*0.016+t*44)*360 + Math.cos(i*0.01+t*32)*280;
    i===0?x.moveTo(i,y):x.lineTo(i,y);
  }
  x.stroke();
  requestAnimationFrame(loop);
})();
</script>
