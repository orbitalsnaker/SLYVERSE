<audio id="estopa" src="data:audio/wav;base64,UklGRnoGAABXQVZFZm10IBAAAAABAAEAQB8AAEAfAAABAAgAZGF0YQoGAACBhYqFbF1fdJivrJBhNjVgodDbq2EcBj+a2/LDciUFLIHO8tiJNwgZaLvt559NEAxQp+PwtmMcBjiR1/LMeSwFJHfH8N2QQAoUXJzn6NqtMQUdZ7zw3pQ+B"></audio>

<script>
const log = document.getElementById("log");
let helio3 = 0, regolito = 0;
let minando = false, barrioMode = false;

function l(m){ log.innerHTML += m + "<br>"; log.scrollTop = log.scrollHeight; }

document.getElementById("cmd").addEventListener("keypress", e => {
  if(e.key === "Enter"){
    const cmd = e.target.value.trim().toLowerCase();
    l(">> " + cmd);
    handle(cmd);
    e.target.value = "";
  }
});

function handle(cmd){
  if(cmd==="activar" || cmd==="minar"){
    if(minando){ l("Los nanorovers ya están desplegados, crack"); return; }
    minando = true;
    document.getElementById("status").innerText = "NANOROVERS ACTIVOS";
    document.getElementById("status").style.color = "#0f0";
    l("6 nanorovers desplegados en cráter Shackleton. Minando Helio-3…");
    l("Comisión del 10% enviada a 0RB1T4LSN4K3R cada ciclo lunar ✓");
    setInterval(minar, 3000);

  } else if(cmd==="stop"){
    minando = false;
    document.getElementById("status").innerText = "Standby selenita";
    document.getElementById("status").style.color = "#0ff";
    l("Nanorovers en hibernación. Vuelve cuando pagues el siguiente mes.");

  } else if(cmd==="barrio"){
    barrioMode = true;
    document.getElementById("reparto").innerHTML = "Barrio: <b>90% ACTIVADO</b>";
    l("90% del Helio-3 se queda en el barrio. Respeto máximo, rey.");

  } else if(cmd==="estopa"){
    document.getElementById("estopa").play();
    l("♪ Tu traición me hace llorar… ♪ (versión 8-bit desde el Mar de la Tranquilidad)");

  } else if(cmd==="info" || cmd==="help"){
    l("<b>Comandos 2026:</b> activar • stop • barrio • estopa • ratio [spacex/nasa] • clear");

  } else if(cmd.startsWith("ratio ")){
    const target = cmd.split(" ")[1].toUpperCase();
    document.body.classList.add("ratio");
    l("RATIO + maldición caló contra " + target);
    setTimeout(()=>document.body.classList.remove("ratio"), 4000);

  } else if(cmd==="clear"){
    log.innerHTML = "";

  } else {
    l("Comando no reconocido, pringao. Escribe 'info' para ayuda.");
  }
}

function minar(){
  if(!minando) return;
  const base = 0.066;
  const ganancia = barrioMode ? base * 0.9 : base;
  const comision = base * 0.10; // 10% a 0RB1T4LSN4K3R
  const bonusRegolito = base * 0.08;

  helio3 += ganancia;
  regolito += bonusRegolito;

  document.getElementById("helio").innerText = helio3.toFixed(4) + " g";
  document.getElementById("rego").innerText = regolito.toFixed(3) + " kg";

  let msg = `+${ganancia.toFixed(4)}g Helio-3 → ${helio3.toFixed(4)}g total`;
  if(barrioMode) msg += " (90% pa'l barrio)";
  msg += ` | Comisión ${comision.toFixed(4)}g → 0RB1T4LSN4K3R`;
  l(msg);
}

// Gauges
function draw(){
  // Helio-3
  const h = document.getElementById("gauge").getContext("2d");
  h.fillStyle="#000"; h.fillRect(0,0,320,60);
  h.fillStyle="#0f0";
  h.fillRect(0,0,(helio3%100)/100*320,60);

  // Regolito
  const r = document.getElementById("regolito").getContext("2d");
  r.fillStyle="#000"; r.fillRect(0,0,320,60);
  r.fillStyle="#0f0";
  r.fillRect(0,0,(regolito%50)/50*320,60);

  requestAnimationFrame(draw);
}
draw();
</script>
