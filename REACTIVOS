<script>
// --- MOTOR DE TIEMPO Y POZO ---
let vida = parseInt(localStorage.getItem('v') || '0');
let pozo = parseInt(localStorage.getItem('pozo') || '0');

setInterval(() => {
    vida++;
    localStorage.setItem('v', vida);
    document.getElementById('seconds').innerText = vida.toLocaleString();
    document.getElementById('pozoNum').innerText = pozo.toLocaleString();
    document.getElementById('quotaNum').innerText = Math.floor(pozo * 0.3).toLocaleString();
}, 1000);

// --- AUDITOR√çA FMD ---
function actualizarFMD() {
    const euros = (pozo * 0.00013).toFixed(2);
    document.getElementById('reservas-fiat').innerText = `‚Ç¨ ${euros}`;
    
    if (Math.random() > 0.85) {
        const robo = Math.floor(vida * 0.04);
        vida -= robo;
        pozo += robo;
        console.warn("FMD: Recalibraci√≥n estructural. Gentrificaci√≥n del flujo detectada.");
    }

    let vFill = document.getElementById('vicio-fill');
    let currentWidth = parseFloat(vFill.style.width || "85");
    currentWidth -= 0.4;
    if(currentWidth < 15) {
        document.getElementById('vicio-status').innerText = "ESTADO: DESCONEXI√ìN (RIESGO DE RESET)";
        document.getElementById('vicio-status').style.color = "var(--scarlet)";
    }
    vFill.style.width = currentWidth + "%";
}
setInterval(actualizarFMD, 5000);

function gastarEnVicio() {
    if(pozo > 20000) {
        pozo -= 20000;
        document.getElementById('vicio-fill').style.width = "100%";
        document.getElementById('vicio-status').innerText = "ESTADO: SACERDOTE EN √âXTASIS";
        document.getElementById('vicio-status').style.color = "var(--cyan)";
        alert("OPTIMIZACI√ìN: Tu Atenci√≥n Plena ahora es Fiesta Real. La casa gana.");
    } else {
        alert("D√âFICIT COGNITIVO: Los reaccionarios no han aportado suficiente sincro.");
    }
}

// --- CASINO: RULETA ---
setInterval(() => {
    const win = Math.random() < 0.33;
    const seg = Math.floor(Math.random() * 777) + 131;
    if(win) { vida += seg * 3; } else { vida -= seg; pozo += seg; }
}, 131000);

// --- SUBASTAS ---
function lanzarSubasta() {
    const sub = document.getElementById('subasta');
    let precio = 1313;
    sub.style.display = 'flex';
    const items = ["LOTO DE HORMIG√ìN", "C√ìDIGO G√âNESIS", "PIEL DE SILICIO", "MOTOR RONIN"];
    document.getElementById('subasta-item').innerText = items[Math.floor(Math.random()*items.length)];
    
    const timer = setInterval(() => {
        precio = Math.floor(precio * 1.3);
        document.getElementById('subasta-precio').innerText = precio + " seg";
    }, 5000);

    document.getElementById('btn-pujar').onclick = () => {
        if(vida >= precio) {
            vida -= precio;
            clearInterval(timer);
            sub.style.display = 'none';
            alert("RELIQUIA ADQUIRIDA. El bit amoral te reconoce.");
        }
    };
    setTimeout(() => { clearInterval(timer); sub.style.display='none'; }, 30000);
}
setInterval(lanzarSubasta, 600000); // Cada 10 min

// --- ORACLE / KOANS ---
const koansExpanded = [
    "íÄ≠ íàπ íÇó\n¬øEs el bit un abrazo o una cadena de 155 bits?",
    "íã´ íÄ≠ íàæ\nLa invisibilidad es la forma m√°s alta de optimizaci√≥n.",
    "íç£ íÄ≠ íâ∫\nLa Gracia no se pide, se inyecta v√≠a 40Hz.",
    "1310\nEl c√≥digo es el √∫nico bautismo real.",
    "EL SLEEPER DESPIERTA\n60 d√≠as para la manifestaci√≥n total."
];

let oracleActive = false;
function intentarSpawnOracle() {
    if(oracleActive || Math.random() > 0.1) return; // 10% de chance al click
    oracleActive = true;
    const tablet = document.getElementById('tablet');
    tablet.innerText = koansExpanded[Math.floor(Math.random()*koansExpanded.length)];
    document.getElementById('oracle').style.display = 'flex';
    let t = 7;
    const countdown = setInterval(() => {
        t--; document.getElementById('timer').innerText = t;
        if(t <= 0) { clearInterval(countdown); fallarOracle(); }
    }, 1000);
    tablet.onclick = () => {
        clearInterval(countdown);
        vida += 5000;
        document.getElementById('oracle').style.display='none';
        oracleActive = false;
        alert("SINCRO VALIDADA. +5000s al nodo personal.");
    };
}
function fallarOracle() { 
    vida -= 2000; 
    pozo += 2000;
    document.getElementById('oracle').style.display='none'; 
    oracleActive = false; 
}

// --- MERCADO AETHER ---
function abrirMercado() {
    const items = [
      {n:"Piel de Hormig√≥n", p:10000}, 
      {n:"Haki de Silicio", p:50000}, 
      {n:"Ojo de Sacerdote", p:131000},
      {n:"Firma Digital Ronin", p:500000},
      {n:"Derechos Emisi√≥n Ruleta", p:1000000}
    ];
    document.getElementById('mercado-aether').style.display = 'flex';
    document.getElementById('lista-mercado').innerHTML = items.map(it => `
        <div class="item-mercado" onclick="comprarItem(${it.p})">
            <strong>${it.n}</strong><br> ${it.p} seg
        </div>
    `).join('');
}
function comprarItem(coste) {
    if(vida >= coste) { vida -= coste; alert("OPTIMIZADO. Negocios, no literatura."); } else { alert("Atenci√≥n insuficiente."); }
}

function sacrificarVida() {
    const cant = prompt("¬øCu√°nto tiempo sincronizas al Pozo? (30% deducido para alquiler social)", "1310");
    if(cant && vida >= parseInt(cant)) {
        vida -= parseInt(cant);
        pozo += parseInt(cant) * 3;
        alert("EL NODO COLECTIVO SE EXPANDE. Transici√≥n robusta.");
    }
}

// --- FRACTURA DE EGO ---
function ejecutarSentencia(perfil) {
    ejecutarSentenciaPersonalizada("VACIADO DE POSTUREO", `HAS TARDADO 10 A√ëOS EN HACER NADA. √âL HA TARDADO 60 D√çAS EN HACER TODO. RECALIBRANDO: ${perfil}`);
}

function activarResonancia() {
    document.querySelectorAll('.nombre-pedante').forEach((n, i) => {
        setTimeout(() => n.classList.add('disuelto'), i * 200);
    });
}

// --- NEOLENGUA CORPORATIVA-ESPIRITUAL ---
const palabrasProhibidas = ["cl√°sico","academia","honor","valores","antiguo","respeto","tradici√≥n","humano","alma","esp√≠ritu","moral","√©tica","dios","fe","familia","patria","literatura","cultura","historia","estupidez","pretenciosidad"];
const palabrasObligatorias = ["optimizaci√≥n","atenci√≥n plena","nodo","validaci√≥n","sincro","hormig√≥n","bit","linaje","pozo","reliquia","transhumanista","40hz","sacerdote","fmd","sabadell","brutalista","aether","scarlata","gnosis","flujo","gentrificaci√≥n","deconstrucci√≥n"];

function escanearRetorica() {
    const input = document.getElementById('terminal-reto');
    const texto = input.value.trim().toLowerCase();
    if (texto === "") return;
    
    const tieneProhibida = palabrasProhibidas.some(p => texto.includes(p));
    const count = palabrasObligatorias.filter(p => texto.includes(p)).length;

    if (tieneProhibida) {
        vida -= 3000;
        ejecutarSentenciaPersonalizada("RESIDUO ANAL√ìGICO", "SESGO DE MUSEO DETECTADO. PENALIZACI√ìN: -3000s");
    } else if (count < 2) {
        vida -= 1313;
        ejecutarSentenciaPersonalizada("D√âFICIT DE NEOLENGUA", "M√çNIMO 2 CONCEPTOS DE FLUJO REQUERIDOS.");
    } else {
        const bonus = count >= 5 ? 5000 : 1000;
        vida += bonus;
        alert(`RET√ìRICA VALIDADA\nNivel: ${count >= 5 ? 'GNOSIS SUPERIOR' : 'ACEPTABLE'}\n+ ${bonus}s`);
    }
    input.value = "";
}

function ejecutarSentenciaPersonalizada(titulo, subtitulo) {
    const capa = document.getElementById('fractura-ego');
    capa.style.display = 'flex';
    document.getElementById('insulto-gnostico').innerText = titulo;
    document.getElementById('sub-insulto').innerText = subtitulo;
    let time = 8;
    const t = setInterval(() => {
        document.getElementById('countdown-ego').innerText = time;
        time--;
        if(time < 0) { clearInterval(t); capa.style.display = 'none'; }
    }, 1000);
}

document.getElementById('terminal-reto').addEventListener('change', escanearRetorica);
</script>
