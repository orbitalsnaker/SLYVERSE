                'facial_mesh': '[FACIAL MESH / AGENT ID:',
                'voice_print': '[VOICE PRINT / AGENT ID:'
            }
            // Add more languages as needed for global reach (fr, de, ru, zh, ar, etc.)
        };

        function setLanguage() {
            const userLang = navigator.language.split('-')[0]; // 'en', 'es', etc.
            const lang = languageMap[userLang] || languageMap['en']; // Default to English if not found

            document.title = lang.title;
            document.querySelector('.header h1').textContent = lang.header;
            document.querySelector('.header p:nth-of-type(1) span').textContent = lang.pegasus_status.replace('[Ω]', 'Ω'); // Ensure Ω is not translated
            document.querySelector('.header p:nth-of-type(2)').textContent = lang.alert;

            document.querySelectorAll('.agent-card').forEach(card => {
                const aliasElem = card.querySelector('.data-field:nth-of-type(1) .label');
                if (aliasElem) aliasElem.textContent = lang.alias + ':';
                const locationElem = card.querySelector('.data-field:nth-of-type(2) .label');
                if (locationElem) locationElem.textContent = lang.location + ':';
                const bioIdElem = card.querySelector('.data-field:nth-of-type(3) .label');
                if (bioIdElem) bioIdElem.textContent = lang.bio_id + ':';
                const coverageElem = card.querySelector('.data-field:nth-of-type(4) .label');
                if (coverageElem) coverageElem.textContent = lang.coverage + ':';

                const bomLink = card.querySelector('.bom-link');
                if (bomLink) bomLink.textContent = lang.bom_text;

                const biometricBox = card.querySelector('.biometric-box');
                if (biometricBox) {
                    const originalText = biometricBox.textContent;
                    if (originalText.includes('RETINA SCAN')) {
                        biometricBox.textContent = lang.retinal_scan + originalText.split('AGENT ID:')[1];
                    } else if (originalText.includes('FACIAL MESH')) {
                        biometricBox.textContent = lang.facial_mesh + originalText.split('AGENT ID:')[1];
                    } else if (originalText.includes('VOICE PRINT')) {
                        biometricBox.textContent = lang.voice_print + originalText.split('AGENT ID:')[1];
                    }
                }
            });

            document.querySelector('div[style*="text-align:center"] p:nth-of-type(1)').textContent = lang.total_agents + ' 4,892 // ' + lang.countries_affected + ' 114';
            document.querySelector('div[style*="text-align:center"] p:nth-of-type(2)').textContent = lang.quote;
        }

        document.addEventListener('DOMContentLoaded', setLanguage);
        // --- END SLYVERSE Ω SCRIPT ---
    </script>
