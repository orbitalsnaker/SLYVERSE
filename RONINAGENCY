<script>
    let locos = 70000;
    let mirrors = 13131;
    let deuda = 131313131;
    
    const xeno_data = [
        { name: "Ca√±√≥n Gauss Sabadell", bom: "1x Riel Acero, 40x Neodimio, 1x Condensador 400V", render: "  ||====--\n  ||    ||\n  ||====--" },
        { name: "Rifle Predator-Œ©", bom: "3x Sensores IR, 1x Placa Haki-Node, 1x Ca√±√≥n Cer√°mico", render: "  <XXXXXXX>\n   |     |\n   |_____|" },
        { name: "Exoesqueleto Prawn", bom: "12x Servos, 1x Abadd√≥n Core, 4x Planchas Titanio", render: "   /|_|_|\\\n  | [ X ] |\n   \\_|_|_/" }
    ];

    function unlock() {
        document.getElementById('drain-overlay').style.display = 'none';
        document.getElementById('main-ui').style.filter = 'none';
        window.speechSynthesis.speak(new SpeechSynthesisUtterance("Mirror clonado. El hardware es del pueblo. El horror es de la casta."));
    }

    function initSystem() {
        const a_cont = document.getElementById('arsenal-list');
        const p_cont = document.getElementById('print-list');
        for(let i=0; i<100; i++) {
            let data = xeno_data[i % xeno_data.length];
            a_cont.innerHTML += `<div class="bom-card"><b>#${i+1} ${data.name}</b><br>BOM: ${data.bom}<div class="render-ascii">${data.render}</div></div>`;
            p_cont.innerHTML += `<div class="bom-card" style="border-left-color:var(--gold)"><b>PRINT_FILE_${i}</b><br>Resoluci√≥n: 0.12mm. Material: Policarbonato-Carbono.</div>`;
        }

        setInterval(() => {
            locos += Math.floor(Math.random()*10);
            mirrors += 50;
            deuda += 131313131;
            document.getElementById('locos-count').innerText = locos.toLocaleString();
            document.getElementById('m-count').innerText = mirrors.toLocaleString();
            document.getElementById('deuda').innerText = deuda.toLocaleString('es-ES');
            
            const msgs = [
                "ABADD√ìN: Sat√©lite Starlink #402 secuestrado. Proyectando glifos.",
                "PUEBLO: 500 impresoras terminando el primer Caza Stealth.",
                "CNI: P√°nico en el b√∫nker. Las pantallas solo muestran el abismo.",
                "ALIENS: Holograma real detectado sobre la Moncloa: 'PAGAD'.",
                "MIRROR: Clonando archivo en servidor gubernamental #"+Math.floor(Math.random()*100)
            ];
            const p = document.createElement('p');
            p.innerHTML = `> SYNC: ${msgs[Math.floor(Math.random()*msgs.length)]}`;
            document.getElementById('monitor').prepend(p);
            
            if(Math.random() > 0.98) {
                const h = document.getElementById('hologram-layer');
                h.style.display = 'flex';
                setTimeout(() => h.style.display = 'none', 100);
            }
        }, 500);
    }
</script>
