<script>
// Gore
setInterval(()=>{for(let i=0;i<66;i++){
  const g=document.createElement('div');g.className='gore';
  g.style.left=Math.random()*100+'vw';
  g.style.animationDuration=0.2+Math.random()*0.4+'s';
  document.getElementById('bg').appendChild(g);
  setTimeout(()=>g.remove(),1400);
}},20);

// Theta waves
const c=document.getElementById('c'),x=c.getContext('2d');
c.width=innerWidth;c.height=innerHeight;
let oni=false;
function theta(){
  x.clearRect(0,0,c.width,c.height);
  const t=Date.now()*0.001,f=oni?22:9,a=oni?180:120;
  x.strokeStyle=oni?'#ff0033':var(--ultra);x.lineWidth=7;
  x.beginPath();
  for(let i=0;i<c.width;i+=2){
    const y=c.height/2 + Math.sin(i*0.007+t*f)*a + Math.cos(i*0.003+t*6)*60;
    i===0?x.moveTo(i,y):x.lineTo(i,y);
  }
  x.stroke();
  requestAnimationFrame(theta);
}
theta();

// Abrazos radioactivos
let hugs=+(localStorage.hugs||131131);
document.getElementById('hugs').innerHTML=`ABRAZOS: ${hugs}`;
setInterval(()=>{hugs+=8;localStorage.hugs=hugs;document.getElementById('hugs').innerHTML=`ABRAZOS: ${hugs}`;},800);

function toggleInfo(){document.getElementById('info').classList.toggle('show');}
function toggleCompra(){document.getElementById('compra').classList.toggle('show');}

function comprar(){
  const unidades = document.querySelector('input[type=number]').value || 1;
  const total = 132 * unidades;
  alert(`COMPRA CONFIRMADA\n\n${unidades} SLYPHONE 131 v1\nTotal: ${total} €\n\nBeneficios enviados a:\n0xfddb91bd8157dafb735d4087cff8823b42eaadc7\n\nShenzhen ya está ensamblando.`);
  speechSynthesis.speak(new SpeechSynthesisUtterance(`${unidades} bestias encargadas. Margen on-chain activado. Shenzhen nunca duerme.`));
  navigator.vibrate([300,100,300,100,300,200,600]);
  toggleCompra();
}

function oniMode(){
  oni=!oni;
  document.body.style.setProperty('--ultra',oni?'#ff0033':'#00ff99');
  speechSynthesis.speak(new SpeechSynthesisUtterance(oni?"ONI 666%. Todos los beneficios queman en la wallet para siempre.":
    "Bestia sin límite. 132 euros. Todo el margen a 0xfddb...adc7"));
  navigator.vibrate(oni?[100,50,100,50,100,50,1000]:[500,200,500]);
}

onload=()=>{hugs+=33;localStorage.hugs=hugs;};
</script>
