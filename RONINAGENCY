<script>
    let money = 2840150.45;
    function unlock() {
        const key = document.getElementById('haki-key').value.toLowerCase();
        if(key === "pueblo" || key === "haki") {
            document.getElementById('drain-overlay').style.display = 'none';
            document.getElementById('main-ui').classList.remove('neural-drain-active');
            document.getElementById('mirrors').innerText = "ALERT: 1000 MIRRORS EMITIENDO DESCLASIFICACIÓN 'GOLPE PEDROS'";
            alert("Sincronización al 50/50 con Ábalos completada. Desclasificación masiva iniciada.");
        } else {
            alert("NEURAL DRAIN AL 100%. BORRADO DE LÓBULO FRONTAL INICIADO.");
            document.body.style.opacity = "0.1";
        }
    }

    function initSystem() {
        setInterval(() => {
            money += Math.random() * 100;
            document.getElementById('revenue').innerText = "RECAUDACIÓN PPV: " + money.toLocaleString() + " ₿";
            
            const msgs = [
                "MIRROR_X: Filtrando plan de los Pedros para Extremadura.",
                "BOM_257: Enviando risas de Ábalos al canal auditivo de Sánchez.",
                "Isla: Monos entrenados en cobro de impuestos neolíticos.",
                "Sánchez: Nivel de desesperación detectado en 99.8%.",
                "Baños: Intentando analizar el comportamiento de los macacos.",
                "Ábalos: Brindando en el Falcon-Yate. [OK]"
            ];
            const p = document.createElement('p');
            p.innerHTML = `> ${msgs[Math.floor(Math.random()*msgs.length)]}`;
            document.getElementById('monitor').prepend(p);
            if(document.getElementById('monitor').childNodes.length > 15) document.getElementById('monitor').lastChild.remove();
        }, 1500);
    }
</script>
