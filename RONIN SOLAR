<script src="https://cdn.jsdelivr.net/npm/three@0.168.0/build/three.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/three@0.168.0/examples/js/controls/OrbitControls.js"></script>
<script>
let eff=28.5, motor=650, cap=200, dens=4.1, vida=22, modo="BARRIO";
const log=document.getElementById("log");
function l(m){log.innerHTML+=m+"<br>";log.scrollTop=log.scrollHeight;}

document.getElementById("cmd").addEventListener("keypress",e=>{
  if(e.key!=="Enter")return;
  const cmd=e.target.value.trim();l("$ "+cmd);e.target.value="";
  if(cmd==="encender")l("Sistema ON — 28.5 % eff · 650 W · 200 kWh sodio · barrio mode");
  if(cmd==="barrio")l("70 % energía → barrio · 20 % fondo explosivo · 10 % 0rb1t4lsn4k3r");
  if(cmd==="max"){motor=800;eff=30.2;cap=240;dens=4.5;l("MODO MAX — límites rotos");}
  if(cmd==="theta")l("Modo Theta — paneles respirando a 6.6 Hz");
  if(cmd==="smoke"){
    document.getElementById("humo").style.opacity=0.5;
    setTimeout(()=>document.getElementById("humo").style.opacity=0,5000);
    l("Humo solar activado — el sol es del pueblo");
  }
  if(cmd==="buy"){document.getElementById("bom").style.display="block";}
  update();
});

document.getElementById("modoSelect").onchange=e=>{modo=e.target.value;document.getElementById("modo").textContent=modo;l("Modo: "+modo);};

function update(){
  document.getElementById("eff").textContent=eff.toFixed(1);
  document.getElementById("motor").textContent=motor;
  document.getElementById("cap").textContent=cap;
  document.getElementById("dens").textContent=dens+"x";
  document.getElementById("vida").textContent=vida;
  document.getElementById("fill_e").style.width=eff*3.5+"%";
  document.getElementById("fill_m").style.width=motor/10+"%";
  document.getElementById("fill_c").style.width=cap/3+"%";
  document.getElementById("fill_d").style.width=dens*20+"%";
  document.getElementById("fill_v").style.width=vida*5+"%";
}
setInterval(()=>{eff+=Math.random()*0.5-0.25;update();},2500);

function showBOM(){document.getElementById("bom").style.display="block";}

// 3D ULTRA
const scene=new THREE.Scene();scene.background=new THREE.Color(0x000000);
const camera=new THREE.PerspectiveCamera(55,560/480,0.1,1000);
const renderer=new THREE.WebGLRenderer({canvas:document.getElementById("preview"),antialias:true,alpha:true});
renderer.setSize(560,480);
const controls=new THREE.OrbitControls(camera,renderer.domElement);controls.enableDamping=true;

scene.add(new THREE.AmbientLight(0x404040,2.5));
const sun=new THREE.DirectionalLight(0xffff00,5);sun.position.set(25,35,15);scene.add(sun);

const system=new THREE.Group();

// 8 paneles perovskita respirando
for(let i=0;i<8;i++){
  const panel=new THREE.Mesh(new THREE.PlaneGeometry(2.8,1.6),new THREE.MeshPhongMaterial({
    color:0x0088ff,transparent:true,opacity:0.9,side:THREE.DoubleSide,emissive:0x0088ff,emissiveIntensity:0.8
  }));
  panel.rotation.x=-Math.PI/2;
  panel.position.set((i-3.5)*3,0,0);
  system.add(panel);
}

// Motor 650W dorado giratorio
const motor=new THREE.Mesh(new THREE.CylinderGeometry(0.6,0.6,2.5,32),new THREE.MeshPhongMaterial({color:0x111111,metalness:0.98}));
motor.position.y=3;system.add(motor);
const rotor=new THREE.Mesh(new THREE.CylinderGeometry(0.5,0.5,2.6,32),new THREE.MeshPhongMaterial({color:0xffaa00,emissive:0xffaa00}));
rotor.position.y=3;system.add(rotor);

// Batería sodio 200 kWh verde vivo
const bat=new THREE.Mesh(new THREE.BoxGeometry(5,1.8,2.5),new THREE.MeshPhongMaterial({color:0x00ff88,emissive:0x00ff88,emissiveIntensity:1}));
bat.position.set(0,-3,0);system.add(bat);

scene.add(system);
camera.position.set(18,12,18);

function animate(){
  requestAnimationFrame(animate);
  system.rotation.y += 0.01;
  rotor.rotation.y += 0.15;
  for(let i=0;i<8;i++){
    system.children[i].scale.y = 1 + Math.sin(Date.now()*0.0066 + i)*0.05; // respiran a theta
  }
  if(modo==="THETA") sun.color.set(0x00ffff);
  else sun.color.set(0xffff00);
  controls.update();
  renderer.render(scene,camera);
}
animate();
</script>
