<script>
const log = document.getElementById("log");

document.getElementById("cmd").addEventListener("keypress", e => {
  if (e.key === "Enter") {
    let cmd = e.target.value.trim().toLowerCase();
    if (cmd === "readme") document.getElementById('readme').style.display = 'block';

    if (cmd === "accept_license") {
      log.innerHTML += "<br>Verificant que ets humà de barri… OK<br>Llicència 666 € acceptada → Royalties 30 % activats<br>Pack STL + G-code + BOM enviat al teu correu<br>Pots començar a imprimir ARA MATEIX, nano.<br>";
    }
    if (cmd === "mount") {
      log.innerHTML += "<br>Impressió iniciada… 46 h restants<br>Després només cal omplir amb kerolox del Lidl i GN2 de paintball<br>";
    }
    if (cmd === "fly") {
      log.innerHTML += "<br>Cobete enlairat des del teu terrat<br>Δv 15,1 km/s → Arribada Lluna: T+72 h<br>30 % dels teus futurs milions ja són meus. Gràcies i bon viatge.<br>";
    }
    if (cmd === "bizum666") {
      log.innerHTML += "<br>Bizum 666,00 € rebut → Llicència activada per sempre<br>Benvingut a la família cobetera, germà.<br>";
      setTimeout(() => alert("Llicència activada. Ja pots anar a la Lluna. No ho expliquis a ningú."), 1000);
    }
    log.scrollTop = log.scrollHeight;
    e.target.value = "";
  }
});

let scene, camera, renderer, cobete;
function init3D() {
  scene = new THREE.Scene(); scene.background = new THREE.Color(0x000011);
  camera = new THREE.PerspectiveCamera(75, innerWidth/innerHeight, 0.1, 1000);
  camera.position.set(0,20,100);
  renderer = new THREE.WebGLRenderer({antialias:true, alpha:true});
  renderer.setSize(innerWidth, innerHeight);
  document.getElementById("threejs_container").appendChild(renderer.domElement);
  new THREE.OrbitControls(camera, renderer.domElement);

  const geo = new THREE.ConeGeometry(15, 80, 8);
  const mat = new THREE.MeshBasicMaterial({color:0xff00ff, wireframe:true});
  cobete = new THREE.Mesh(geo, mat);
  scene.add(cobete);

  function animate() {
    requestAnimationFrame(animate);
    cobete.rotation.y += 0.01;
    cobete.position.y = Math.sin(Date.now()*0.001)*10;
    renderer.render(scene, camera);
  }
  animate();
}
init3D();
</script>
