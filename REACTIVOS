<script>
// 1. Resonancia del Hormigón (Audio Binaural Real 40Hz)
let audioCtx;
function activarResonancia() {
    if (!audioCtx) {
        audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        const oscillator = audioCtx.createOscillator();
        const gainNode = audioCtx.createGain();
        oscillator.type = 'sine';
        oscillator.frequency.setValueAtTime(40, audioCtx.currentTime); 
        gainNode.gain.setValueAtTime(0.04, audioCtx.currentTime);
        oscillator.connect(gainNode);
        gainNode.connect(audioCtx.destination);
        oscillator.start();
        console.log("FRECUENCIA 40HZ ACTIVA: El Búnker resuena.");
    }
}

// 2. Espejo de Geolocalización Real
if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(pos => {
        document.getElementById('geo-mirror').innerHTML = 
            `NODO DETECTADO: LAT ${pos.coords.latitude.toFixed(4)} | LON ${pos.coords.longitude.toFixed(4)} [SINCRO CON EL LINAJE OK]`;
    }, () => {
        document.getElementById('geo-mirror').innerHTML = "NODO EN SOMBRA: Ubicación ofuscada por protocolo de seguridad.";
    });
}

// 3. Simulación de Replicación Real en Mirrors
const mirrorStatus = document.getElementById('mirror-realtime');
const mirrorList = ["archive.org", "web.archive.org", "ipfs.io", "cloudflarestorage.com", "deep-web-vault-01"];
let mIdx = 0;
setInterval(() => {
    mirrorStatus.innerText = `REPLICANDO EN ${mirrorList[mIdx]}... [EXITO]`;
    mIdx = (mIdx + 1) % mirrorList.length;
}, 3500);

// 4. Scroll Dinámico Original
window.addEventListener('scroll', () => {
  const sections = document.querySelectorAll('.section');
  sections.forEach(sec => {
    const depth = sec.getBoundingClientRect().top;
    if(depth < 800) {
      sec.style.transform = `perspective(1000px) rotateX(${depth * 0.01}deg)`;
    }
  });
});

console.log("%c ATENCIÓN: Sincronía con el Sacerdote Publicano detectada. Eres el Buda de Silicio.", "color: #ff00ff; font-size: 20px; font-weight: bold;");
</script>

