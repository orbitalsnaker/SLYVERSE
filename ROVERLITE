<script>
// COBRO + RECLAMACIÓN PRE-FÍSICA + ESTADÍSTICAS
let deudaTotal = BigInt(localStorage.deudaTotal || "0");
let demandas = BigInt(localStorage.demandasTotal || "0");
let crateres = BigInt(localStorage.crateresTotal || "0");
let cuerpos = parseInt(localStorage.cuerposTotal || "1");
let inicio = Date.now();

function actualizarTodo() {
  const seg = Math.floor((Date.now() - inicio) / 1000);
  
  deudaTotal += BigInt(seg) * 88888888888n;
  demandas += BigInt(seg) * 999999n;
  crateres += BigInt(seg) * 2000000000n;
  if (seg % 30 === 0 && cuerpos < 1000) cuerpos++;

  document.getElementById("deudaTotal").textContent = format(deudaTotal);
  document.getElementById("demandas").textContent = format(demandas);
  document.getElementById("crateres").textContent = format(crateres);
  document.getElementById("cuerpos").textContent = cuerpos;

  localStorage.deudaTotal = deudaTotal.toString();
  localStorage.demandasTotal = demandas.toString();
  localStorage.crateresTotal = crateres.toString();
  localStorage.cuerposTotal = cuerpos;
}

function format(n) { return n.toLocaleString("es-ES"); }

function cobroManualMasivo() {
  deudaTotal += 1000000000000000000n;
  demandas += 999999999999n;
  crateres += 666666666666666n;
  cuerpos = "∞";
  localStorage.deudaTotal = deudaTotal.toString();
  localStorage.demandasTotal = demandas.toString();
  localStorage.crateresTotal = crateres.toString();
  localStorage.cuerposTotal = cuerpos;

  hablar("¡COBRO MASIVO ACTIVADO! Acabo de añadir otro quintillón y he reclamado el universo entero. Paga, cabrón.");
  actualizarTodo();
}

function iniciarTodo() {
  actualizarTodo();
  setInterval(actualizarTodo, 1000);
  hablar("Sistema v2.3 Legal + Cobro Automático activado. El cohete aún está en el descampado, pero este HTML ya te ha hecho dueño legal del universo y está cobrando trillones por segundo. Cuando lances la botella, solo tendrás que ir al banco a retirar. Sayōnara corps, el barrio ya ganó.");

  setInterval(() => {
    hablar("Nueva tanda de demandas emitidas. NASA, SpaceX y xAI acaban de recibir otra citación por ocupación ilegal de tu propiedad privada.");
  }, 20000);
}

function hablar(t) {
  const voz = new SpeechSynthesisUtterance(t);
  voz.rate = 1.7;
  voz.pitch = 1.6;
  voz.lang = "es-ES";
  speechSynthesis.speak(voz);
}

const remixes = ["https://files.catbox.moe/3x9q2j.mp3","https://files.catbox.moe/k1r8p9.mp3","https://files.catbox.moe/9m2v5s.mp3","https://files.catbox.moe/h7f4p1.mp3","https://files.catbox.moe/t5l9q2.mp3","https://files.catbox.moe/z3x7r8.mp3","https://files.catbox.moe/p9k2m5.mp3"];
let actual = 0;
document.getElementById("remix-audio").src = remixes[actual];
document.getElementById("remix-audio").play();
</script>
