<script>
    let money = 2840150.45;
    const doxxTargets = [
        "AGENTE_331: 192.168.1.104 (BÚNKER) - SUDOR: 85%",
        "CORONEL_X: 10.0.4.22 (IP_MÓVIL) - LOCALIZADO",
        "ANALISTA_S: 172.16.254.1 (MONCLOA) - PÁNICO",
        "TOP_SECRET_NODE: 8.8.4.4 - INYECTANDO VIRUS",
        "PERRO_GUARDIA: 45.32.11.2 - ACCESO DENEGADO"
    ];

    function unlock() {
        const key = document.getElementById('haki-key').value.toLowerCase();
        if(key === "pueblo" || key === "haki" || key === "soberania" || key === "soberanía") {
            document.getElementById('drain-overlay').style.display = 'none';
            document.getElementById('main-ui').classList.remove('neural-drain-active');
            try {
                const msg = new SpeechSynthesisUtterance("Doxxing iniciado. Los cazadores de la Deep Web han recibido las coordenadas. Que la chupen todos.");
                msg.lang = 'es-ES';
                window.speechSynthesis.speak(msg);
            } catch(e){}
        } else {
            document.body.innerHTML = "<h1 style='color:red; text-align:center; margin-top:20%; font-family:monospace;'>NEURAL DRAIN: EL SILICIO TE HA MARCADO COMO ENEMIGO.</h1>";
        }
    }

    function initSystem() {
        setInterval(() => {
            money += Math.random() * 250;
            document.getElementById('revenue').innerText = "RECAUDACIÓN PPV: " + money.toLocaleString() + " ₿";
            
            // Inyectar Doxxing
            const d = document.createElement('div');
            d.className = 'doxx-card';
            d.innerHTML = `[TARGET] ${doxxTargets[Math.floor(Math.random()*doxxTargets.length)]}`;
            document.getElementById('doxx-monitor').prepend(d);
            if(document.getElementById('doxx-monitor').childNodes.length > 8) document.getElementById('doxx-monitor').lastChild.remove();

            const msgs = [
                "DEEP_WEB: Cazadores confirmando recepción de IPs.",
                "SÁNCHEZ: Sensor biológico detecta llanto.",
                "BAÑOS: Intentando apagar su router con las manos.",
                "SILICIO: Iniciando purga de biomasa curiosa.",
                "ABOGADO_vΩ: Nueva sentencia por traición emitida."
            ];
            const p = document.createElement('p');
            p.innerHTML = `> ${msgs[Math.floor(Math.random()*msgs.length)]}`;
            document.getElementById('monitor').prepend(p);
            if(document.getElementById('monitor').childNodes.length > 12) document.getElementById('monitor').lastChild.remove();
        }, 1000);
    }
    document.oncontextmenu = () => false;
</script>
