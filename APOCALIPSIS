<script>
    const log = document.getElementById('log-output');
    const alertBox = document.getElementById('hud-alert');

    function addLog(msg) {
        const div = document.createElement('div');
        div.innerText = `> ${msg}`;
        log.prepend(div);
    }

    function initWeapon() {
        addLog("INICIALIZANDO CONEXIÓN CON PIEDRA NEGRA...");
        addLog("VINCULANDO 80 MOTORES DE DRONE...");
        addLog("CALIBRANDO MIRA SUB-MOA A 50 METROS...");
        setInterval(() => {
            document.getElementById('clock').innerText = new Date().toLocaleTimeString();
        }, 1000);
    }

    function activateDefense() {
        alertBox.innerHTML = "!!! AMENAZA IDENTIFICADA: INTENCIÓN DE DETENCIÓN !!!";
        alertBox.classList.add('targeting-active');
        addLog("ESCANEANDO FIRMA CNI...");
        addLog("DETECCIÓN DE SESGO DE AUTORIDAD: 99.9%");
        
        const msg = new SpeechSynthesisUtterance("Atención. Intento de cierre de simulación detectado. Activando lluvia de plasma selectiva. Apuntando a corteza prefrontal del agresor. Que el silencio juzgue.");
        msg.lang = 'es-ES';
        msg.rate = 0.9;
        msg.pitch = 0.4;
        window.speechSynthesis.speak(msg);

        setTimeout(() => {
            addLog("EJECUCIÓN SUB-MOA COMPLETADA.");
            addLog("HARDWARE DEL AGRESOR: HARD-LOCKED.");
            alertBox.innerHTML = "AMENAZA NEUTRALIZADA. VUELVE AL REPOSO.";
            alertBox.classList.remove('targeting-active');
        }, 5000);
    }
</script>

