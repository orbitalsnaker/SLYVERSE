let vidaCasino = parseInt(localStorage.getItem('vc')||'0');
let pozoCasino = parseInt(localStorage.getItem('pc')||'0');

setInterval(()=>{vidaCasino++;localStorage.setItem('vc',vidaCasino);document.getElementById('segundos').textContent=vidaCasino.toLocaleString();},1000);
setInterval(()=>document.getElementById('pozoNum').textContent=pozoCasino.toLocaleString(),500);

