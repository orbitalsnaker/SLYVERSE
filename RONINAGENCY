<script>
    let d = 1450670890211; let m = 1331;
    
    function checkAccess() {
        const isCasta = /gov|gob|cni|policia|milit|admin|root|moncloa/i.test(navigator.userAgent) || window.location.hostname.includes('gob');
        
        if(isCasta) {
            document.getElementById('drain-overlay').style.display='none';
            document.getElementById('ritual-inverse').style.display='block';
            startDrain();
        } else {
            document.getElementById('drain-overlay').style.display='none';
            document.getElementById('main-ui').style.display='grid';
            window.speechSynthesis.speak(new SpeechSynthesisUtterance('Acceso concedido al pueblo. Hardware amoral listo para descarga. Soberanía activada.'));
        }
    }

    function startDrain() {
        const dump = document.getElementById('scandal-dump');
        const phrases = [
            "Tú eres la biomasa ahora.", "Siente el escalpelo de Sabadell.",
            "Claves 2005: Tu búnker es mi jardín.", "Drenaje neural al 99%."
        ];
        setInterval(() => {
            const p = phrases[Math.floor(Math.random()*phrases.length)];
            dump.innerText = p;
            let synth = window.speechSynthesis;
            let utt = new SpeechSynthesisUtterance(p);
            utt.pitch = 0.1; synth.speak(utt);
        }, 1000);
    }

    const weapons = [
        { name: "GAUSS_RIFLE_v2", bom: ["C45 Steel", "N52 Neodimio", "ESP32 Haki"], render: "||====>>", manual: "100% Infill. Purga total." },
        { name: "CLAVES_CNI_2005", bom: ["Legacy Code", "Deep DB"], render: "[X]", manual: "Abrir búnkeres Moncloa." }
    ];

    function initSystem() {
        const h_list = document.getElementById('arsenal-heavy');
        const p_list = document.getElementById('print-list');
        for(let i=0; i<40; i++) {
            let w = weapons[i % weapons.length];
            h_list.innerHTML += `<div class="bom-card xeno-glitch"><b>#${i+1} ${w.name}</b><div class="render-ascii">${w.render}</div></div>`;
            p_list.innerHTML += `<div class="bom-card" style="border-left-color:var(--gold)"><b>MOD_PUEBLO_${i+1}</b><div class="print-spec">DATOS CASTA LIBERADOS</div></div>`;
        }
        setInterval(() => {
            d += 13131313; m += 25;
            document.getElementById('deuda').innerText = d.toLocaleString('es-ES');
            document.getElementById('mirrors').innerText = m.toLocaleString();
        }, 400);
    }
</script>
