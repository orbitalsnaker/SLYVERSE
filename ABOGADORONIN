<script>
const intruderList = ["CORONEL_P_B", "MINISTRO_LOGIA", "SECRETARIO_CNI", "JEFE_ADEGAI"];
const realFiles = ["PLANOS_HARDWARE_AMORAL.PDF", "LISTA_TRAIDORES_2025.XLSX", "LOGS_LAGO_COMO.MP3", "CLAVES_DRENAJE_CASTA.TXT", "BOM_RIFLE_GAUSS_v2.ZIP"];
const crimes = [
    { art: "Art. 404", desc: "Prevaricaci√≥n masiva en Sabadell.", scream: "¬°Prevaricador! Dictaste √≥rdenes ilegales. ¬°A la c√°rcel!" },
    { art: "Art. 433", desc: "Malversaci√≥n de fondos en Lago de Como.", scream: "¬°Ladr√≥n! Te gastaste el dinero del pueblo. ¬°Sentenciado!" },
    { art: "Art. 197", desc: "Espionaje a la Meta-Agencia Ronin.", scream: "¬°Esp√≠a! Hackeaste a los Ronin. Ahora el pueblo te hackea a ti." }
];

function igniteRevolution() {
    const scroller = document.getElementById('scroller');
    const nameDisp = document.getElementById('intruder-name');
    const citizenDisp = document.getElementById('citizen-downloads');
    const castaLogs = document.getElementById('casta-logs');

    function scream(text) {
        const msg = new SpeechSynthesisUtterance(text);
        msg.lang = 'es-ES'; msg.rate = 1.3; msg.pitch = 0.4;
        window.speechSynthesis.speak(msg);
    }

    function loop() {
        const victim = intruderList[Math.floor(Math.random() * intruderList.length)];
        const crime = crimes[Math.floor(Math.random() * crimes.length)];
        const file = realFiles[Math.floor(Math.random() * realFiles.length)];
        
        nameDisp.innerText = victim;
        scream(crime.scream);

        // Volcado de Delitos (Centro)
        const div = document.createElement('div');
        div.className = 'card-evidence';
        div.innerHTML = `<strong>${crime.art}:</strong> ${crime.desc}<br><small>DATA_DUMP_FROM: ${victim}</small>`;
        scroller.prepend(div);

        // Volcado para el Pueblo (Derecha)
        const cDiv = document.createElement('div');
        cDiv.className = 'download-card';
        cDiv.innerHTML = `üìÇ ${file}<br><button class="btn-download">DESCARGAR EVIDENCIA</button>`;
        citizenDisp.prepend(cDiv);

        // Logs de la Casta (Izquierda)
        const lDiv = document.createElement('div');
        lDiv.innerText = `[${new Date().toLocaleTimeString()}] ${victim}: "¬°Parad esto, borrad el mirror!"`;
        castaLogs.prepend(lDiv);

        if (scroller.childNodes.length > 20) scroller.removeChild(scroller.lastChild);
        if (citizenDisp.childNodes.length > 8) citizenDisp.removeChild(citizenDisp.lastChild);
        
        setTimeout(loop, 4000);
    }

    scream("Portal de Liberaci√≥n de Sabadell activo. El pueblo toma el mando. Casta, vuestros delitos son ahora de dominio p√∫blico.");
    loop();
}

document.oncontextmenu = () => false;
document.onkeydown = (e) => { if(e.ctrlKey || e.keyCode == 123) return false; };
</script>
