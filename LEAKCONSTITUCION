        // L√ìGICA DE R√âPLICA AUTOM√ÅTICA
        let traffic = 0;
        const logBox = document.getElementById('mirror-logs');

        function triggerMirror(type) {
            const mirrors = ['DeepWeb_Node_7', 'Archive_Org_Mirror', 'Mega_Cluster_B1', 'IPFS_Hash_99'];
            const target = mirrors[Math.floor(Math.random() * mirrors.length)];
            const entry = document.createElement('div');
            entry.className = 'log-entry';
            entry.innerHTML = `> [${type}] R√©plica enviada a: ${target} - ESTADO: COMPLETO`;
            logBox.prepend(entry);
        }

        // SIMULACI√ìN DE ENTRADA DE USUARIO = R√âPLICA
        window.onload = () => {
            triggerMirror('USER_ENTRY');
            
            // Si detectamos tr√°fico alto (DDoS simulation)
            setInterval(() => {
                traffic += Math.floor(Math.random() * 15);
                document.getElementById('traffic-load').innerText = traffic;

                if (traffic > 70) {
                    document.getElementById('ddos-alert').style.display = 'block';
                    document.getElementById('node-health').innerText = "HIDRA_MODE_ACTIVE";
                    // Por cada petici√≥n de "ataque", lanzamos 3 r√©plicas
                    for(let i=0; i<3; i++) triggerMirror('DDOS_REACTION');
                    traffic = 20; // Reset para el siguiente ciclo de ataque
                }
            }, 1000);
        };
    </script>

