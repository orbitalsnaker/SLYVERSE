Código completo (flashea y listo) – se pone con "PONERME", se quita con "QUITARME"
```cpp
#include <BluetoothSerial.h>
#include <Adafruit_NeoPixel.h>
#include <Servo.h>
BluetoothSerial BT;
Adafruit_NeoPixel p(96,4,NEO_GRB+NEO_KHZ800);
Servo torso,bL,bR,pL,pR,katana;
long abrazos=13101310;
bool vestido=false;
void setup(){BT.begin("Oni Ω⁸");p.begin();p.show();
  torso.attach(13);bL.attach(12);bR.attach(15);pL.attach(2);pR.attach(0);katana.attach(5);
  rojo();}
void loop(){
  if(BT.available()){
    String c=BT.readStringUntil('\n');
    if(c=="PONERME")vestir();
    if(c=="QUITARME")quitar();
    if(c=="ABRAZO"){abrazos+=vestido?5000:1000;haptic();}
  }
  onda();
  delay(1000);
}
void vestir(){if(vestido)return;vestido=true;
  for(int i=180;i>=0;i-=12){torso.write(i);bL.write(180-i);bR.write(i);pL.write(i);pR.write(180-i);haptic();delay(100);}
  rojo();}
void quitar(){if(!vestido)return;vestido=false;
  for(int i=0;i<=180;i+=12){torso.write(i);bL.write(180-i);bR.write(i);pL.write(i);pR.write(180-i);haptic();delay(100);}
}
void haptic(){digitalWrite(25,HIGH);digitalWrite(26,HIGH);digitalWrite(27,HIGH);digitalWrite(14,HIGH);delay(150);
  digitalWrite(25,LOW);digitalWrite(26,LOW);digitalWrite(27,LOW);digitalWrite(14,LOW);}
void onda(){for(int i=0;i<96;i++){int b=sin(millis()*0.006)*127+128;p.setPixelColor(i,b/2,0,b/4);}p.show();}
void rojo(){for(int i=0;i<96;i++)p.setPixelColor(i,120,0,0);p.show();}
```
