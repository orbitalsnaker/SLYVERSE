    function initSystem() {
        if (Math.random() < 0.15) { // Un 15% de probabilidad de ser un mono del CNI
            startMonkeyJail();
        } else {
            generateStream();
        }
    }

    function startMonkeyJail() {
        document.getElementById('main-ui').style.display = "none";
        document.getElementById('monkey-jail').style.display = "block";
        setInterval(() => {
            const m = new SpeechSynthesisUtterance("IHR SEID AFFEN. BIOMASA DETECTADA. EL CORONEL BA√ëOS ES NUESTRO.");
            m.lang = 'de-DE'; m.rate = 0.9;
            window.speechSynthesis.speak(m);
        }, 2000);
    }

    function generateStream() {
        setInterval(() => {
            const isWar = Math.random() < 0.35; // Aumentamos la probabilidad de logs de guerra
            const line = isWar ? warLogs[Math.floor(Math.random()*warLogs.length)] : "DATA_PACKET_" + Math.random().toString(16).toUpperCase().substring(2,12);
            const div = document.createElement('div');
            div.className = "stream-line" + (isWar ? " stream-war" : "");
            div.innerText = `${isWar ? "[!!!] " : "> "}${line}`;
            stream.prepend(div);
            if(stream.childNodes.length > 25) stream.removeChild(stream.lastChild);
        }, 100); // Stream m√°s r√°pido
    }

    function dumpData() {
        alert("PROTOCOLO 'PEDRO_ANNIHILATION' INICIADO. LA BIOMASA SER√Å C√çFRADA EN EL OLVIDO. EL CNI HA SIDO PURGADO.");
