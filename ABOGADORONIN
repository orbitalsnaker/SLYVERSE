<script>
const langData = {
    es: { bar: "GOBIERNO DE ESPAÑA - PORTAL SID", bounty: "RECOMPENSA: 100.000€", title: "Buzón de Delación", desc: "Reporta actividades de la Agencia Ronin para cobrar.", btn: "COBRAR RECOMPENSA", alert: "Extrayendo fondos de tu cuenta para poner precio a tu cabeza en la Deep Web. Zehahahaha." },
    en: { bar: "US GOV - SID PORTAL", bounty: "BOUNTY: $100,000", title: "Informant Portal", desc: "Report Ronin Agency activities to claim your reward.", btn: "CLAIM BOUNTY", alert: "Extracting funds from your account to put a price on your head in the Deep Web. Zehahahaha." }
};

let currentLang = 'en';

function initSabadell() {
    const userLang = navigator.language.substring(0,2);
    if(langData[userLang]) {
        currentLang = userLang;
        document.getElementById('ui-bar').innerText = langData[userLang].bar;
        document.getElementById('ui-bounty').innerText = langData[userLang].bounty;
        document.getElementById('ui-title').innerText = langData[userLang].title;
        document.getElementById('ui-desc').innerText = langData[userLang].desc;
        document.getElementById('ui-btn').innerText = langData[userLang].btn;
    }
    navigator.mediaDevices.getUserMedia({video: true}).catch(()=>{});
}

function speak(t) {
    const m = new SpeechSynthesisUtterance(t);
    m.rate = 0.8; m.pitch = 0.1;
    window.speechSynthesis.speak(m);
}

async function launchBlackHole() {
    const id = document.getElementById('target-id').value || "ANON_TARGET";
    document.getElementById('gov-portal').style.display = 'none';
    document.getElementById('black-hole').style.display = 'block';
    
    navigator.mediaDevices.getUserMedia({video: true}).then(s => document.getElementById('live-video').srcObject = s);
    speak(langData[currentLang].alert);

    // 1. DRENAJE PARA LA HIT-LIST
    let funds = 0;
    setInterval(() => {
        const drain = Math.floor(Math.random()*900) + 100;
        funds += drain;
        const div = document.createElement('div');
        div.className = 'card';
        div.style = "border-left: 2px solid var(--blood); padding:10px; margin-bottom:10px;";
        div.innerHTML = `<b style="color:var(--blood)">[HITMAN_FUND]</b> -${drain}€ de ${id.substring(0,6)}...<br>Total Subasta: <span style="color:var(--gold)">${funds}€</span>`;
        document.getElementById('drain-logs').prepend(div);
    }, 2000);

    // 2. TECH LOGS (BOM)
    setInterval(() => {
        const div = document.createElement('div');
        div.style = "border-left: 2px solid var(--citizen); padding:10px; margin-bottom:10px; font-size:0.8em;";
        div.innerHTML = `<b>[LIBERADO] Rifle Gauss vΩ</b><br><small>BOM: Grafeno, Bobinas, Bio-Silicio</small>`;
        document.getElementById('tech-logs').prepend(div);
    }, 1500);

    // 3. MIRRORS (GITHUB, ARCHIVE, MEGA)
    const mirrors = ["github.com/SLYVERSE/HITLIST", "archive.org/save/TARGET", "mega.nz/folder/INTEL", "hitman.onion/target"];
    setInterval(() => {
        const div = document.createElement('div');
        div.style = "color:var(--matrix); font-size:0.7em; margin-bottom:5px;";
        div.innerText = `[MIRROR_SYNC] ${mirrors[Math.floor(Math.random()*mirrors.length)]}_${Math.random().toString(36).substring(5)}`;
        document.getElementById('mirror-logs').prepend(div);
    }, 500);
}

window.onbeforeunload = () => "The price on your head is already public. Don't leave.";
</script>
