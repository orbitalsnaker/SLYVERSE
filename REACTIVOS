  const win=Math.random()<0.28;
  const seg=Math.floor(Math.random()*999)+99;
  const mult=win?[3,7,13,21][Math.floor(Math.random()*4)]:1;
  if(win){vidaCasino += seg*mult;particles(innerWidth/2, innerHeight/2, '#ff69b4');} 
  else {vidaCasino -= seg;pozoCasino += seg*3;particles(innerWidth/2, innerHeight/2, '#8b0000');}
},13131);

function sacrificarCasino(){
  const c=prompt("¿Cuántos segundos ofreces a la Diosa en la mesa?","9999");
  if(c&&parseInt(c)>0 && parseInt(c)<=vidaCasino){
    vidaCasino -= parseInt(c);
    pozoCasino += parseInt(c)*9;
    localStorage.setItem('vc',vidaCasino);localStorage.setItem('pc',pozoCasino);
