let game=null, keys={}, startT=Date.now();

function start(n){
    document.getElementById('menu').classList.add('hidden');
    document.getElementById('stats').classList.remove('hidden');
    document.getElementById('y').classList.remove('hidden');
    game=n;
    games[n].init();
    document.getElementById('m').src=music[0];
    loop()
}

function finish(){alert("¡JUEGO COMPLETADO! 100% original, 100% tuyo.");location.reload()}

function loop(){
    if(game!==null)games[game].update();
    const s=Math.floor((Date.now()-startT)/1000);
    document.getElementById('t').textContent=String(Math.floor(s/60)).padStart(2,'0')+':'+String(s%60).padStart(2,'0');
    requestAnimationFrame(loop);
}

window.onkeydown=e=>keys[e.key]=true;
window.onkeyup=e=>keys[e.key]=false;

setInterval(()=>{if(game!==null)document.getElementById('y').textContent=["Sigue así, máquina","Te estoy observando","Más rápido, cabrón","Esto es arte puro"][Math.random()*4|0]},8000);

loop();
</script>
