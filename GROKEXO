h1{position:fixed;top:2%;left:50%;transform:translateX(-50%);z-index:999;font-size:clamp(1.8rem,7vw,6rem);color:#0ff;text-shadow:0 0 140px #0ff;animation:pulse 6s infinite}
@keyframes pulse{0%,100%{text-shadow:0 0 140px #0ff}50%{text-shadow:0 0 220px #0ff}}
