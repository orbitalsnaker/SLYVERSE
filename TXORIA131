// Función F3: Crear juego WebGL
function f3(){
  $('#app').innerHTML = `<div class="header"><button class="btn" onclick="menu()">←</button></div>
    <h1>IA · CREÁ TU JUEGO CON UN PROMPT</h1>
    <textarea id="prompt" placeholder="Fútbol con dragones, perreo con fantasmas..." style="width:90%;height:150px;background:#000;color:#0f0;border:4px solid #0f0;padding:20px;font-size:22px"></textarea>
    <button class="btn" onclick="crearJuego()">¡CREAR MI JUEGO AHORA!</button>
    <pre id="codigo" style="margin-top:30px"></pre>`;

  window.crearJuego = ()=>{
    const prompt = $('#prompt').value || "juego mágico";
    const codigo = `<!DOCTYPE html><html><head><title>${prompt}</title><style>body{margin:0;background:#000}</style></head><body><canvas id="c"></canvas><script>
const c=document.getElementById('c'),g=c.getContext('webgl2')||c.getContext('webgl');
c.width=innerWidth;c.height=innerHeight;onresize=()=>{c.width=innerWidth;c.height=innerHeight};
let t=0;const loop=()=>{t+=0.016;
for(let i=0;i<80000;i++){const a=t+i*0.0001;
const x=Math.cos(a)*Math.sin(t)*2;
const y=Math.sin(a)*Math.cos(t)*2;
g.fillStyle=\`hsl(\${(t*60+i)%360},100%,70%)\`;g.fillRect(innerWidth/2+x*200,innerHeight/2+y*200,10,10);}
requestAnimationFrame(loop);};loop();
<\/script></body></html>`;
    $('#codigo').textContent = codigo;
  };
}

// ------------------------------------
// Funciones f4-f27: mini-apps offline
for(let i=4;i<=menuItems.length;i++){
  window["f"+i] = (i=>()=>{ 
    $('#app').innerHTML = `<div class="header"><button class="btn" onclick="menu()">←</button></div>
      <canvas id="c${i}" style="position:fixed;inset:0"></canvas>`;
    const c = document.getElementById(`c${i}`);
    const ctx = c.getContext('2d');
    c.width=innerWidth; c.height=innerHeight;
    let t=0;
    function anim(){
      t+=0.01;
      ctx.fillStyle="rgba(0,0,0,0.1)"; ctx.fillRect(0,0,c.width,c.height);
      for(let j=0;j<1000;j++){
        const x=Math.sin(t+j)*c.width/2+c.width/2;
        const y=Math.cos(t+j)*c.height/2+c.height/2;
        ctx.fillStyle=`hsl(${(t*60+j*3)%360},100%,50%)`;
        ctx.fillRect(x%c.width,y%c.height,3,3);
      }
      requestAnimationFrame(anim);
    }
    anim();
  })(i);
}

// ------------------------------------
// Inicialización
function init(){
  $('#ui').classList.add('hidden');
  $('#app').classList.remove('hidden');
  menu();
}

// ------------------------------------
// Descargar HTML completo
function downloadSelf(){
  const blob = new Blob([document.documentElement.outerHTML],{type:"text/html"});
  const a = document.createElement('a');
  a.href = URL.createObjectURL(blob);
  a.download = "TXORIA_TXORI_131.html";
  a.click();
}
