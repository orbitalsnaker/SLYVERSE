const menu=()=>{ $('#app').innerHTML=`
  <div style="position:fixed;top:0;left:0;right:0;z-index:99;background:#000;padding:10px;border-bottom:2px solid #0f0">
    <button class="btn" onclick="menu()">MENÚ</button>
