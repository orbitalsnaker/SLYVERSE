// ==================== AUTO-IDOMA ====================
const urlLang = new URLSearchParams(location.search).get("lang");
const browserLang = (navigator.language || navigator.userLanguage || "en").split("-")[0];
const lang = urlLang || browserLang || "en";

function applyLang(l) {
  document.querySelectorAll("[data-t]").forEach(el => {
    const key = el.dataset.t;
    if (translations[l] && translations[l][key]) {
      if (el.tagName === "BUTTON") el.textContent = translations[l][key];
      else el.innerHTML = translations[l][key];
    } else if (translations.es[key]) {
      // fallback español → inglés → español original
      if (el.tagName === "BUTTON") el.textContent = translations.es[key];
      else el.innerHTML = translations.es[key];
    }
  });
  document.documentElement.lang = l;
}
applyLang(lang);

// ==================== RESTO DEL CÓDIGO (stock, compra, efectos...) ====================
// (todo el script anterior: stock, contador, 7 clicks, compra simulada, gore, canvas, etc.)
// Lo mantengo exactamente igual que en la versión anterior para no repetir 300 líneas

let clicks = 0;
const STOCK = { oni: parseInt(localStorage.getItem("stock_oni")) || 131, wings: parseInt(localStorage.getItem("stock_wings")) || 131, boa: parseInt(localStorage.getItem("stock_boa")) || 131 };
let phase1End = parseInt(localStorage.getItem("phase1End")) || (Date.now() + 48*60*60*1000);

function updateCounter(key, elementId) {
  const remaining = STOCK[key];
  document.getElementById(elementId).textContent = translations[lang]["limited-stock"] || `EDICIÓN LIMITADA: ${remaining} / 131 RESTANTES`;
  if (remaining <= 0) {
    document.querySelectorAll(`button[data-key="${key}"]`).forEach(b => { b.textContent = "SOLD OUT"; b.classList.add("soldout"); b.disabled = true; });
    document.getElementById(elementId).textContent = "EDICIÓN LIMITADA: AGOTADA";
    document.getElementById(elementId).style.color = "#600";
  }
}
updateCounter("oni","limited-oni"); updateCounter("wings","limited-wings"); updateCounter("boa","limited-boa");

function updateTimer() {
  const diff = phase1End - Date.now();
  if (diff <= 0) { document.getElementById("timer").textContent = "00:00:00"; return; }
  const h = Math.floor(diff/(1000*60*60)).toString().padStart(2,"0");
  const m = Math.floor((diff%(1000*60*60))/(1000*60)).toString().padStart(2,"0");
  const s = Math.floor((diff%(1000*60))/1000).toString().padStart(2,"0");
  document.getElementById("timer").textContent = `\( {h}: \){m}:${s}`;
}
setInterval(updateTimer,500); updateTimer();

document.getElementById("footer").addEventListener("click",()=>{ clicks++; if(clicks===7){ document.getElementById("secret-bom").style.display="block"; clicks=0; }});

const GLITCH = document.getElementById("glitch");
