<script>
let colas = +(localStorage.colas || 777777);

// ==== MALDICIÓN 0€ ====
const maldicion = ["venta","patente","nft","blockchain","startup","inversores","precio","suscripción","lucro"];
function verificarMaldicion() {
  const codigo = document.documentElement.outerHTML.toLowerCase();
  if (maldicion.some(p => codigo.includes(p))) {
    document.body.innerHTML = `<div style="inset:0;position:fixed;background:#000;color:#f00;font-size:3rem;display:grid;place-items:center;text-align:center;padding:20vh">
      ¡MALDITA MALDICIÓN 0€!<br>LUCRO TERRESTRE = MUERTE<br>¡GOMU GOMU NO... BOOM!
    </div>`;
    setInterval(() => hablar("¡Maldición 0€! Lucro = boom!"), 3000);
  }
}

// ==== INICIO LUFFY ABOGADO ====
function iniciarLuffyAbogado() {
  verificarMaldicion();
  actualizar();
  hablar("¡LUFFY ABOGADO activado! ¡GOMU GOMU NO... JUSTICIA 0€!");
  setInterval(() => { colas++; actualizar(); }, 1310);
}

// ==== ACCIONES PIRATA-LEGALES ====
function abrazoGomu() {
  colas += 777;
  actualizar();
  hablar(`¡GOMU GOMU NO... ABRAZO #${colas}! ¡Carne para todos!`);
  vibrar();
}

function minarCola() {
  colas += 1310;
  actualizar();
  hablar("¡GOMU GOMU NO... MINA LUNAR! +1310 colas.");
  vibrar();
}

// ==== GOMU GOMU DEFENSA (EXO-ABOGADO) ====
function gomuDefensa() {
  const defensas = [
    "¡GOMU GOMU NO... LIBERTAD! → Art. 20 CE",
    "¡GOMU GOMU NO... LUNA LIBRE! → Tratado Espacial Art. II",
    "¡GOMU GOMU NO... LUCRO ESPACIAL! → Legal y con carne",
    "¡GOMU GOMU NO... ABSOLUCIÓN! → ¡SUUUUPER!"
  ];
  const frase = defensas[Math.floor(Math.random() * defensas.length)];
  hablar(frase);
  vibrar();
}

// ==== CONTRADENUNCIA LUFFY (JUSTICIA 0€) ====
function contradenunciaLuffy() {
  hablar("¡GOMU GOMU NO... CONTRADENUNCIA 0€! Escaneando caso...");
  
  setTimeout(() => {
    const casos = [
      "Denuncia falsa → ¡GOMU GOMU NO... ART. 456 CP! → ¡Multa al acusador + 1310 colas!",
      "Patente abusiva → ¡GOMU GOMU NO... NULIDAD! → Devuelven todo",
      "Desahucio injusto → ¡GOMU GOMU NO... ART. 47 CE! → Derecho a vivienda + carne",
      "Estafa cripto → ¡GOMU GOMU NO... DEVOLUCIÓN! → +1310 colas de compensación"
    ];
    const veredicto = casos[Math.floor(Math.random() * casos.length)];
    hablar(veredicto);
  }, 1500);
  
  setTimeout(() => {
    hablar("¡CONTRADENUNCIA ENVIADA! ¡El que jode, paga con carne!");
  }, 3000);
  
  vibrar();
}

// ==== UTILIDADES ====
function hablar(texto) {
  const voz = new SpeechSynthesisUtterance(texto);
  voz.lang = "es-ES";
  voz.rate = 1.1;
  voz.pitch = 1.2; // Voz de Luffy: alta, enérgica
  speechSynthesis.speak(voz);
  document.getElementById("status").textContent = texto.substring(0,30) + "...";
}

function actualizar() {
  document.getElementById("cola").textContent = "Colas: " + colas;
  localStorage.colas = colas;
}

function vibrar() {
  if (navigator.vibrate) navigator.vibrate([100, 50, 100]);
}
</script>
