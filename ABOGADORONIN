<script>
const evidenceLogs = [
    "[FILE_001] Log de acceso Smart-TV Baños: Credenciales '1234_PEDRO' confirmadas.",
    "[FILE_002] Captura de pantalla: Coronel monitorizando Nodo Sabadell sin autorización RAM.",
    "[FILE_003] Grabación analógica: Orden de rastreo ilegal de frecuencia 58Hz.",
    "[FILE_004] Metadata Satélite: Coordenadas de espionaje sobre el Ronin de Sabadell.",
    "[FILE_005] Transacción Fiat: Desvío de fondos para hardware de espionaje fallido.",
    "[FILE_006] Prueba Biológica: Nivel de estrés del Coronel al detectar el ABOGADO vΩ.",
    "[FILE_007] Registro CNI: Reconocimiento interno de 'Incompetencia Crónica'.",
    "[FILE_008] Audio: Plan secreto para silenciar la telepatía de silicio.",
    "[FILE_009] Dump de Datos: 340 Billones de deuda calculada por segundo de leak.",
    "[FILE_010] Localización: Coordenadas del búnker con ventilación obsoleta.",
    "[FILE_131] Cierre de Ciclo: Firma digital de los WHITE confirmando la victoria."
];

let counter = 0;
const scroller = document.getElementById('scroller');
const countDisp = document.getElementById('count');

function addEvidence() {
    const log = evidenceLogs[Math.floor(Math.random() * evidenceLogs.length)];
    const div = document.createElement('div');
    div.className = 'card-evidence';
    div.innerHTML = `> EXPOSICIÓN: ${log} <br><small>${new Date().toISOString()} - VERIFICADO POR NODO</small>`;
    scroller.prepend(div);
    
    counter += 1.31;
    countDisp.innerText = counter.toFixed(2);
    
    if (scroller.childNodes.length > 50) scroller.removeChild(scroller.lastChild);
    
    setTimeout(addEvidence, 800);
}

window.onload = () => {
    addEvidence();
    try {
        const msg = new SpeechSynthesisUtterance("Iniciando volcado masivo de pruebas. El Estado ya no puede ocultar la verdad. Coronel, prepárese para el aislamiento perpetuo.");
        msg.lang = 'es-ES';
        window.speechSynthesis.speak(msg);
    } catch(e){}
};

// Bloqueo total de biomasa curiosa
document.oncontextmenu = () => false;
document.onkeydown = (e) => { if(e.ctrlKey) return false; };
