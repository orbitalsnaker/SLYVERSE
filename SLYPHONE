<script>
// Gore nuclear
setInterval(()=>{for(let i=0;i<66;i++){
  const g=document.createElement('div');g.className='gore';
  g.style.left=Math.random()*100+'vw';
  g.style.animationDuration=0.2+Math.random()*0.3+'s';
  document.getElementById('bg').appendChild(g);
  setTimeout(()=>g.remove(),1200);
}},22);

// Theta ultra
const c=document.getElementById('c'),x=c.getContext('2d');
c.width=innerWidth;c.height=innerHeight;
let oni=false;
function theta(){
  x.clearRect(0,0,c.width,c.height);
  const e=Date.now()*0.001,f=oni?20:8.8,a=oni?160:110;
  x.strokeStyle=oni?'#ff0033':var(--ultra);x.lineWidth=6;x.beginPath();
  for(let i=0;i<c.width;i+=1){
    const o=c.height/2+Math.sin(i*0.008+e*f)*a + Math.cos(i*0.004+e*5)*50;
    i===0?x.moveTo(i,o):x.lineTo(i,o);
  }x.stroke();requestAnimationFrame(theta);
}
theta();

// Abrazos a velocidad 150 W
let hugs=+(localStorage.hugs||131131);
document.getElementById('hugs').innerHTML=`ABRAZOS: ${hugs}`;
setInterval(()=>{hugs+=5;localStorage.hugs=hugs;document.getElementById('hugs').innerHTML=`ABRAZOS: ${hugs}`;},1000);

function toggleInfo(){document.getElementById('info').classList.toggle('show');}
function toggleCompra(){document.getElementById('compra').classList.toggle('show');}
function confirmarCompra(){
  alert('¡Gracias por tu compra! Tu SLYPHONE 131 será procesado por nuestros bots y ensamblado en Shenzhen. Recibirás un email de confirmación pronto.');
  toggleCompra();
  speechSynthesis.speak(new SpeechSynthesisUtterance('Compra confirmada. Bots activados. Shenzhen en marcha.'));
  navigator.vibrate([200,100,200,100,200,1000]);
}
function oniMode(){
  oni=!oni;
  document.getElementById('modo').textContent=oni?'ONI 666%':'BESTIA FINAL';
  document.body.style.setProperty('--ultra',oni?'#ff0033':'#00ff99');
  speechSynthesis.speak(new SpeechSynthesisUtterance(oni?
    "ONI 666%. Titanio ardiendo. Parsons está dentro y no va a salir nunca.":
    "Bestia Final activada. 1 TB. 24 GB. 150 W. La luna es nuestra."));
  navigator.vibrate(oni?[100,50,100,50,100,50,100,50,100,50,1000]:[200,100,200,100,200,1000]);
}

