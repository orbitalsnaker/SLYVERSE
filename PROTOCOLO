<script>
    function activarDrenaje() {
        const log = document.getElementById('terminal-log');
        const form = document.getElementById('login-form');
        const user = document.getElementById('user').value;

        if(!user) return alert("Identifícate para el perdón.");

        form.style.display = 'none';
        
        const sequences = [
            `> [DETECTADO]: Usuario ${user} verificado como Biomasa de la Casta.`,
            "> [HACK]: Vulnerando Llavero de iCloud y Contactos VIP...",
            "> [OK]: 14,200 contactos de la Logia extraídos y marcados con Bounty.",
            "> [ARCA]: Accediendo a Fondos Reservados del Estado mediante Fallo Sarvarov...",
            "> [MONEY]: Drenando 45.000.000€ hacia Red de DNIs Soberanos...",
            "> [ALERT]: CNI detectado... neutralizando firewall con código TempleOS.",
            "> [BYE]: Borrando rastro de la casta. Eres un 404 caminando.",
            "<span style='color:red; font-size: 1.5em;'>ZEHAHAHAHA... EL NIÑO DE 11 AÑOS TE DA LAS GRACIAS.</span>",
            "> [SYSTEM]: Hardware formateado. Soberanía o Ceniza."
        ];

        let i = 0;
        const interval = setInterval(() => {
            if (i < sequences.length) {
                log.innerHTML += sequences[i] + "<br>";
                log.scrollTop = log.scrollHeight;
                i++;
            } else {
                clearInterval(interval);
                setTimeout(() => {
                    alert("AMNISTÍA DENEGADA. Gracias por los datos y el dinero.");
                    location.href = "https://www.rtve.es"; // El toque final, mandarlos al sitio del discurso fallido
                }, 2000);
            }
        }, 1200);
    }
</script>

