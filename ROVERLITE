<script>
// BSO DEL BARRIO
const hoodTracks = [
  {src:"https://files.catbox.moe/9m2v5s.mp3", name:"Natos y Waor – Caminos de barro"},
  {src:"https://files.catbox.moe/3x9q2j.mp3", name:"Jarfaiter – Palomares"},
  {src:"https://files.catbox.moe/k1r8p9.mp3", name:"Kidd Keo – Moon Money"},
  {src:"https://files.catbox.moe/t5l9q2.mp3", name:"Delaossa – Veneno"},
  {src:"https://files.catbox.moe/h7f4p1.mp3", name:"Fernando Costa – Mala"},
  {src:"https://files.catbox.moe/z3x7r8.mp3", name:"Ayax y Prok – Sayōnara"},
  {src:"https://files.catbox.moe/p9k2m5.mp3", name:"Hard GZ – Sabadell 2026"}
];
let actual = 0;

function cargarTrack() {
  const audio = document.getElementById("remix-audio");
  audio.src = hoodTracks[actual].src;
  document.getElementById("trackname").textContent = hoodTracks[actual].name;
  audio.load(); audio.play();
}
document.getElementById("remix-audio").addEventListener("ended", () => {
  actual = (actual + 1) % hoodTracks.length;
  cargarTrack();
});

// ESTADÍSTICAS + KATANA + COBRO
let deudaTotal = BigInt(localStorage.deudaKatanaHood || "0");
let demandas = BigInt(localStorage.demandasKatanaHood || "0");
let cortados = BigInt(localStorage.cortadosKatanaHood || "0");
let maldiciones = BigInt(localStorage.maldicionesKatanaHood || "0");
let inicio = Date.now();

function actualizarTodo() {
  const seg = Math.floor((Date.now() - inicio) / 1000);
  deudaTotal += BigInt(seg) * 300000000000n;
  demandas += BigInt(seg) * 3333333n;
  cortados += BigInt(seg) * 999n;
  maldiciones += BigInt(seg / 20);

  document.getElementById("deudaTotal").textContent = format(deudaTotal);
  document.getElementById("demandas").textContent = format(demandas);
  document.getElementById("cortados").textContent = format(cortados);
  document.getElementById("maldiciones").textContent = format(maldiciones);

  localStorage.deudaKatanaHood = deudaTotal.toString();
  localStorage.demandasKatanaHood = demandas.toString();
  localStorage.cortadosKatanaHood = cortados.toString();
  localStorage.maldicionesKatanaHood = maldiciones.toString();
}

function format(n) { return n.toLocaleString("es-ES"); }

function jackHabla() {
  hablar("¡Jack Parsons cobrando desde el bloque! Acabo de añadir otro trillón.");
  deudaTotal += 999999999999999999n;
  actualizarTodo();
}

function newtonMaldice() {
  hablar("¡Isaac Newton maldice! Que tus cohetes se estrellen y tu cuenta bancaria caiga en gravedad libre.");
  maldiciones += 888888n;
  actualizarTodo();
}

function katanaCorta() {
  cortados += 1000000n;
  localStorage.cortadosKatanaHood = cortados.toString();
  hablar("¡KATANA TÉRMICA ACTIVADA! Acabo de rebanar otro batallón de rovers pijos. El barrio no negocia.");
  document.getElementById("output").innerHTML = `
    <h2 style="color:#f00;font-size:32rem;animation:pulse 0.1s infinite">
      ¡¡¡SHIBUYA LUNAR!!!
    </h2>
    <p style="font-size:20rem;color:#0ff">
      +1.000.000 ROVERS ENEMIGOS CORTADOS
    </p>`;
  actualizarTodo();
}

function iniciarKatanaHood() {
  cargarTrack();
  actualizarTodo();
  setInterval(actualizarTodo, 1000);
  setInterval(newtonMaldice, 25000);
  
  hablar("Bienvenido al cobete del barrio armado. Rovers con katana térmica, Jack Parsons cobrando, Newton maldiciendo y Natos y Waor sonando en cada cráter. Los pijos ya no vienen… porque saben lo que les espera. Ca n’Oriac 2026, el espacio es nuestro.");
}

function hablar(t) {
  const voz = new SpeechSynthesisUtterance(t);
  voz.rate = 2.0;
  voz.pitch = 1.9;
  voz.lang = "es-ES";
  speechSynthesis.speak(voz);
}
</script>
