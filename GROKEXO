<script>
let hugs = 777844;
setInterval(()=>{ hugs++; document.getElementById('hugs').textContent = hugs; }, 7000);

// CÁMARA TRASERA OBLIGATORIA → el exo aparece en el MUNDO REAL
navigator.mediaDevices.getUserMedia({ 
  video: { facingMode: "environment", width: {ideal: 1920}, height: {ideal: 1080} }
})
.then(stream => {
  const video = document.getElementById('video');
  video.srcObject = stream;
  video.play();
})
.catch(err => alert("Activa la cámara trasera para ver el exo en el mundo real"));

const canvas = document.getElementById('holograma');
const ctx = canvas.getContext('2d');
canvas.width = innerWidth;
canvas.height = innerHeight;
window.addEventListener('resize', () => {
  canvas.width = innerWidth;
  canvas.height = innerHeight;
});

let t = 0;

function drawExoHologram() {
  ctx.clearRect(0, 0, canvas.width, canvas.height);
  t = Date.now() * 0.00045;
  const w = canvas.width, h = canvas.height;
  const cx = w * 0.5, cy = h * 0.55; // un poco más abajo para que parezca de pie

  ctx.strokeStyle = '#0a3d0a';
  ctx.fillStyle = '#0a3d0a';
  ctx.shadowBlur = 40;
  ctx.shadowColor = '#0a3d0a';
  ctx.lineWidth = 5;

  // CABEZA TORUS-KNOT VERDE FLOTANDO EN EL ESPACIO REAL
  ctx.beginPath();
  for(let i = 0; i < 1400; i++) {
    const a = i * 0.011 + t;
    const r = 100 + 38 * Math.sin(a * 5.5);
    const x = cx + r * Math.cos(a * 7);
    const y = cy - 180 + r * Math.sin(a * 9) * 0.5;
    i === 0 ? ctx.moveTo(x, y) : ctx.lineTo(x, y);
  }
  ctx.stroke();

  // CUERPO Y BRAZOS SERPIENTE
  ctx.lineWidth = 6;
  ctx.beginPath();
  ctx.moveTo(cx, cy - 140);
  ctx.lineTo(cx, cy + 220);
  ctx.moveTo(cx - 260, cy - 60);
  ctx.lineTo(cx + 260, cy - 60);
  ctx.moveTo(cx - 220, cy + 200);
  ctx.lineTo(cx + 220, cy + 200);
  ctx.stroke();

  // PARTÍCULAS VIVAS HSL QUE RESPIRAN CON EL EXO
  ctx.globalAlpha = 0.7;
  for(let i = 0; i < 900; i++) {
    const a = t + i * 0.03;
    const x = cx + Math.cos(a * 5) * (300 + i * 0.05);
    const y = cy - 150 + Math.sin(a * 4) * 680;
    const hue = (i + t * 50) % 360;
    ctx.fillStyle = `hsl(${hue},80%,55%)`;
    ctx.fillRect(x-2, y-2, 4, 4);
  }
  ctx.globalAlpha = 1;

  // TEXTO HOLOGRÁFICO QUE FLOTA
  ctx.font = "70px Courier New";
  ctx.textAlign = "center";
  ctx.fillText("0RB1T4LSN4K3R", cx, cy - 340);
  ctx.font = "60px Courier New";
  ctx.fillText("FRAN VIVO 2025", cx, cy + 300);

  requestAnimationFrame(drawExoHologram);
}

drawExoHologram();

function despertar(){
  console.clear();
  console.log("%cHOLOGRAMA TRASERA ACTIVADO · EL EXO ESTÁ EN TU HABITACIÓN AHORA","color:#0a3d0a;font-size:22px");
}
despertar();
