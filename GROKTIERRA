<body class="gear5" onload="iniciarSistema()">

<div class="sol" onclick="activarGear5()" title="Gear 5 · Nika"></div>
<div class="luna" onclick="roadPoneglyph()" title="Archive Eterno · Poneglyph"></div>
<div class="franky" onclick="toggleExo()" title="¡EXOESQUELETO SUPERRR!"></div>

<div>
  <h1 id="titulo">LUFFY ABOGADO Ω</h1>
  <p id="subtitulo" style="text-align:center;font-size:1.9rem;color:#ff9900;text-shadow:0 0 20px #ff9900">
    Gear 5 · Dios del Sol · Joy Boy · Nika
  </p>
  <div id="cola">Colas del Sol: 7,777,777</div>
</div>

<div class="status" id="status">¡Sistema cargado! ¡La libertad nunca duerme, shishishi!</div>

<script>
let colas = parseInt(localStorage.getItem('colas') || '7777777');
let modoExo = false;

// === INICIO DEL SISTEMA ===
function iniciarSistema() {
  actualizar();
  hablar("¡LUFFY ABOGADO Ω TRIPLE MODE ACTIVADO! Gear 5 listo. Exoesqueleto SUPERRR en espera. ¡Soy el más libre del mar!");
  setInterval(aumentarColas, modoExo ? 666 : 1111);
  setInterval(revisarWifiLibre, 5000);
  setInterval(vigilarAtaquesYDoxxing, 15000);
  setInterval(buscarNakamasEnPeligro, 20000);
}

function aumentarColas() {
  colas += modoExo ? 666 : 77;
  actualizar();
}

// === MODO GEAR 5 ===
function activarGear5() {
  modoExo = false;
  document.body.className = "gear5";
  document.getElementById("titulo").textContent = "LUFFY ABOGADO Ω";
  document.getElementById("subtitulo").innerHTML = "Gear 5 · Dios del Sol · Joy Boy · Nika";
  document.getElementById("subtitulo").style.color = "#ff9900";
  hablar("¡Buahahahaha! ¡Vuelvo a ser libre como el viento y el caucho! ¡Gear 5 full power!");
  vibrar([200,100,200,100,500]);
}

// === MODO EXOESQUELETO SUPERRR ===
function toggleExo() {
  modoExo = !modoExo;
  if (modoExo) {
    document.body.className = "exo";
    const frases = [
      "¡EXOESQUELETO SUPERRR ACTIVADO! Franky Shogun + Germa 66 + Seraphim S-Shark + Ashura Zoro + Gamma Knife Law",
      "¡Nanocolas al 666%! ¡Modo sigilo máximo! ¡Nadie me detecta!",
      "¡FRANKY POSE ÉPICA! ¡SUUUUPEEERRR! ¡COLA-COLA! ¡RADICAL BEAM!",
      "¡Lunarian Flames + Judge Stealth + King Punch + Ope Ope Room = IMPARABLE!"
    ];
    const frase = frases[Math.floor(Math.random() * frases.length)];
    document.getElementById("titulo").textContent = "S-ABOGADO Ω";
    document.getElementById("subtitulo").innerHTML = "Franky Shogun × Germa 66 × Seraphim × Ashura × Ope Ope";
    document.getElementById("subtitulo").style.color = "#00ffff";
    hablar(frase);
    vibrar([100,50,100,50,300,100,300,100,500]);
  } else {
    activarGear5();
  }
  actualizar();
}

// === ACTUALIZAR CONTADOR ===
function actualizar() {
  const prefijo = modoExo ? "NANOCOLAS 666" : "Colas del Sol";
  const color = modoExo ? "#00ffcc" : "#ffff33";
  document.getElementById("cola").textContent = `${prefijo}: ${colas.toLocaleString()}`;
  document.getElementById("cola").style.color = color;
  document.getElementById("cola").style.textShadow = `0 0 40px ${color}`;
  localStorage.setItem('colas', colas);
}

// === VOZ + VIBRACIÓN ===
function hablar(texto) {
  if ('speechSynthesis' in window) {
    speechSynthesis.cancel();
    const u = new SpeechSynthesisUtterance(texto);
    u.lang = "es-ES";
    u.rate = modoExo ? 1.5 : 1.2;
    u.pitch = modoExo ? 0.6 : 1.1;
    u.volume = 1;
    speechSynthesis.speak(u);
  }
  document.getElementById("status").textContent = texto;
}

function vibrar(pattern = [300,100,300]) {
  if ('vibrate' in navigator) navigator.vibrate(pattern);
}

function roadPoneglyph() {
  hablar("¡Subiendo al Archive Eterno! El Poneglyph digital es indestructible. ¡La verdad nunca muere!");
  vibrar([500,200,500,200,1000]);
  window.open("https://github.com/tu-usuario/tu-repo", "_blank"); // Cambia por tu repo si quieres
}

/* === TUS FUNCIONES ULTRA PESADAS (ejemplos reales) === */
function revisarWifiLibre() {
  // Simulación de detección de redes abiertas
  if (Math.random() > 0.95) {
    hablar("¡WIFI LIBRE DETECTADO A 4 KM! ¡Todos a navegar, nakamas!");
    vibrar([200,200,200,200,600]);
  }
}

function vigilarAtaquesYDoxxing() {
  if (Math.random() > 0.98) {
    hablar("¡ALERTA! Intento de doxxing detectado. Contraatacando con Haki del Rey...");
    vibrar([100,100,100,100,100,500]);
  }
}

function buscarNakamasEnPeligro() {
  if (Math.random() > 0.97) {
    hablar("¡Un nakama está en peligro! ¡Voy para allá con Gear 5!");
    vibrar([300,100,300,100,300]);
  }
}
</script>
