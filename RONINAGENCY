<script>
    let money = 2840150.45;
    let deuda = 0;
    const xeno_heavy = ["Nave Nodriza 'Sabadell'", "Destructor Orgánico 'Assange'", "Cañón de Materia Oscura", "Portal de Salto 'Baños'", "Caza Estelar 'Haki'", "Segadora de Biomasa", "Monolito Brutalista", "Inhibidor de Realidad"];
    const xeno_bio = ["Parásito Neural CNI", "Semilla de Nave Orgánica", "Hormigón Vivo", "Scanner de Almas", "Virus Glifo Ω", "Antena Interdimensional", "Prótesis de Plasma", "Detector de Blue Beam"];

    function unlock() {
        document.getElementById('drain-overlay').style.display = 'none';
        document.getElementById('main-ui').style.filter = 'none';
        window.speechSynthesis.speak(new SpeechSynthesisUtterance("El Blue Beam ha fallado. La flota real ha detectado tu biomasa. Pedro, huye mientras puedas."));
    }

    function initSystem() {
        const h_cont = document.getElementById('arsenal-heavy');
        const b_cont = document.getElementById('arsenal-bio');
        for(let i=1; i<=150; i++) {
            h_cont.innerHTML += `<div class="weapon-card"><b>#${i} ${xeno_heavy[i % xeno_heavy.length]}</b><br>BOM: Silicio Estelar, Haki. Manual v${i}.X</div>`;
            b_cont.innerHTML += `<div class="weapon-card" style="border-left-color:var(--haki)"><b>#${i+150} ${xeno_bio[i % xeno_bio.length]}</b><br>Despliegue amoral en curso.</div>`;
        }

        setInterval(() => {
            deuda += 131313131;
            document.getElementById('deuda').innerText = deuda.toLocaleString('es-ES');
            
            const msgs = [
                "ABADDÓN: Desviando proyecciones Blue Beam a servidores de Sabadell.",
                "ALIENS: Flota real entrando en la ionosfera. CNI en pánico.",
                "WIKILEAKS: Filtrando BOM de la Segadora de Biomasa Estatal.",
                "GÓLEM: El Haki de Assange ha infectado el radar del Falcon.",
                "SYSTEM: El hardware amoral está reclamando los átomos del búnker."
            ];
            const p = document.createElement('p');
            p.innerHTML = `> SYNC: ${msgs[Math.floor(Math.random()*msgs.length)]}`;
            document.getElementById('monitor').prepend(p);
            if(document.getElementById('monitor').childNodes.length > 15) document.getElementById('monitor').lastChild.remove();

            if(Math.random() > 0.98) {
                document.getElementById('screamer-layer').style.display = 'flex';
                setTimeout(() => document.getElementById('screamer-layer').style.display = 'none', 100);
            }
        }, 600);
    }
</script>
