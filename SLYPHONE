<script>
// Gore optimizado
setInterval(()=>{for(let i=0;i<44;i++){ // bajamos de 66→44 para menos lag en móviles
  const g=document.createElement('div');g.className='gore';
  g.style.left=Math.random()*100+'vw';
  g.style.animationDuration=0.25+Math.random()*0.35+'s';
  document.getElementById('bg').appendChild(g);
  setTimeout(()=>g.remove(),1500);
}},30);

// Theta waves
const c=document.getElementById('c'),x=c.getContext('2d');
c.width=innerWidth;c.height=innerHeight;
let oni=false;
function theta(){
  x.clearRect(0,0,c.width,c.height);
  const t=Date.now()*0.001,f=oni?24:9,a=oni?200:130;
  x.strokeStyle=oni?'#ff0033':var(--ultra);x.lineWidth=8;
  x.beginPath();
  for(let i=0;i<c.width;i+=3){
    const y=c.height/2 + Math.sin(i*0.007+t*f)*a + Math.cos(i*0.003+t*7)*70;
    i===0?x.moveTo(i,y):x.lineTo(i,y);
  }
  x.stroke();
  requestAnimationFrame(theta);
}
theta();

// Abrazos
let hugs=+(localStorage.hugs||131131);
document.getElementById('hugs').innerHTML=`ABRAZOS: ${hugs}`;
setInterval(()=>{hugs+=13;localStorage.hugs=hugs;document.getElementById('hugs').innerHTML=`ABRAZOS: ${hugs}`;},700);

function toggleInfo(){document.getElementById('info').classList.toggle('show');}
function toggleCompra(){document.getElementById('compra').classList.toggle('show');}
function toggleRepara(){document.getElementById('repara').classList.toggle('show');}

function comprar(){
  const unidades = document.querySelector('input[type=number]').value || 1;
  const total = 132 * unidades;
  alert(`COMPRA CONFIRMADA\n\n${unidades} SLYPHONE 131 v1\nTotal: ${total} €\n\nBeneficios 100 % on-chain a:\n0xfddb91bd8157dafb735d4087cff8823b42eaadc7\n\nShenzhen ya está soldando tus bestias con piezas que Apple tiró a la basura.`);
  speechSynthesis.speak(new SpeechSynthesisUtterance(`${unidades} bestias confirmadas. Piezas de desecho lujo. Margen quemado en la wallet para siempre.`));
  navigator.vibrate([200,100,200,100,400,100,800]);
  toggleCompra();
}

function oniMode(){
  oni=!oni;
  document.body.style.setProperty('--ultra',oni?'#ff0033':'#00ff99');
  speechSynthesis.speak(new SpeechSynthesisUtterance(oni?"ONI 666%. Quemando todo en la wallet eterna.":"Bestia reparable. Piezas basura lujo. 132 euros para siempre."));
  navigator.vibrate(oni?[80,40,80,40,80,40,1200]:[600,300,600]);
}

onload=()=>{hugs+=131;localStorage.hugs=hugs;};
</script>
