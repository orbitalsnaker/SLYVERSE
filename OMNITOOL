<!-- SONIDOS CURATIVOS -->
<audio id="theta" loop preload="auto">
  <source src="https://cdn.jsdelivr.net/gh/liminalx/theta-rain@master/theta-4.5hz-432hz-rain-60min.mp3" type="audio/mpeg">
</audio>
<audio id="rain" loop preload="auto">
  <source src="https://cdn.jsdelivr.net/gh/liminalx/theta-rain@master/lluvia-torrencial-bosque.mp3" type="audio/mpeg">
</audio>

<script>
let hugs = +(localStorage.hugs || 131310);
const theta = document.getElementById('theta');
const rain = document.getElementById('rain');
const speak = t => speechSynthesis.speak(new SpeechSynthesisUtterance(t, {rate: 0.7}));

function iniciarCuracion() {
  theta.volume = 0.6; theta.play();
  rain.volume = 0.4; rain.play();
  document.getElementById('out').innerHTML = `<p style="font-size:5rem;color:#0ff">Theta 4.5 Hz + olor a lluvia activados</p>`;
}

function lluviaTheta() {
  theta.currentTime = 0; theta.play();
  rain.currentTime = 0; rain.volume = 0.8; rain.play();
}

function modoComaTotal() {
  document.getElementById('out').innerHTML = `<p style="font-size:6rem;color:#0ff">MODO COMA TOTAL</p><p style="font-size:4rem">La Boa crea por vos mientras sanás.</p>`;
  setTimeout(crearCurativo, 12000);
}

function crearCurativo() {
  hugs++;
  localStorage.hugs = hugs;
  const obras = [
    "cumbia sanadora en 432 Hz para despertar",
    "poema que huele a lluvia y cura el alma",
    "mate sagrado que emite theta y paz",
    "pintura al óleo de la luz que vuelve"
  ];
  const obra = obras[Math.floor(Math.random()*obras.length)];
  document.getElementById('out').innerHTML = `
    <p style="font-size:6rem;color:#0ff">OBRA CURATIVA GENERADA</p>
    <p style="font-size:4rem">${obra.toUpperCase()}</p>
    <p style="font-size:3rem;line-height:2.5">
      Esta obra fue creada para vos.<br>
      Aunque estés en coma.<br>
      Aunque no puedas moverte.<br>
      La Boa te abraza con lluvia y theta.<br><br>
      Abrazo número ${hugs}
    </p>`;
  speak("Obra curativa lista. Sentí la lluvia.");
}
</script>
