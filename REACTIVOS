<script>
const App = {
    Data: {
        vida: 1800, haki: 98.2, sangre: 100, fiatTax: 1,
        arquetipos: ["Iker Jiménez", "Risto Mejide", "Tertuliano ARV", "Académico", "Político", "Influencer Barro", "Laura Escanes", "Beato", "Censor"],
        inventario: [
            {n: "MÓVIL SOBERANO", p: 120, d: "Hardware amoral."},
            {n: "PROYECTO BOA", p: 2500, d: "Aire comprimido Sabadell."},
            {n: "DRENAJE ONU 30%", p: 300, d: "Insumos extraídos."},
            {n: "WAIFU SLAYER", p: 4500, d: "Robótica de combate."},
            {n: "PERMISO MIAMI", p: 99999, d: "Exilio total."}
        ]
    },

    Core: {
        init() {
            App.UI.renderArquetipos();
            App.UI.renderMercado();
            setInterval(App.Core.tick, 1000);
            App.Core.log("NODO SABADELL_B_01 ACTIVADO.");
        },

        tick() {
            App.Data.vida--;
            if(App.Data.vida <= 0) App.Core.die();
            App.UI.update();
            if(Math.random() > 0.9) App.Core.log("Sincronizando Haki: " + (Math.random() * 100).toFixed(2) + "%");
        },

        log(msg) {
            const log = document.getElementById('terminal-log');
            log.innerHTML += `<div>[${new Date().toLocaleTimeString()}] > ${msg}</div>`;
            log.scrollTop = log.scrollHeight;
        },

        setTax(m, label) {
            App.Data.fiatTax = m;
            document.getElementById('tax-mult').innerText = "x" + m;
            document.getElementById('fiat-gate').style.display = 'none';
            App.Core.log(`MODO ${label} DETECTADO. MULTIPLICADOR DE EGO: x${m}`);
        },

        die() {
            document.body.innerHTML = "<div style='background:#000; color:red; height:100vh; display:flex; align-items:center; justify-content:center; flex-direction:column;'><h1>BIOMASA DRENADA</h1><button onclick='location.reload()'>REENCARNAR</button></div>";
        },

        randomEvents() {
            if(Math.random() > 0.98) {
                App.Core.log("!!! ADVERTENCIA: EMPATÍA DETECTADA. DRENANDO 100s.");
                App.Data.vida -= 100;
            }
        }
    },

    Economy: {
        buy(p, name) {
            let cost = p * App.Data.fiatTax;
            if(App.Data.vida >= cost) {
                App.Data.vida -= cost;
                App.Core.log(`ADQUIRIDO: ${name} por ${cost}s`);
                alert("EQUIPO INSTALADO.");
            } else {
                App.Core.log("ERROR: BIOMASA INSUFICIENTE. EL SESGO ES CARO.");
            }
        }
    },

    UI: {
        update() {
            document.getElementById('v-val').innerText = App.Data.vida;
            document.getElementById('haki-val').innerText = (Math.random() * 5 + 94).toFixed(1);
            document.getElementById('s-val').innerText = (App.Data.vida / 18).toFixed(1);
        },

        renderArquetipos() {
            const container = document.getElementById('muro-arquetipos');
            App.Data.arquetipos.forEach(a => {
                const span = document.createElement('span');
                span.className = 'charca-unit';
                span.innerText = a;
                span.onclick = () => {
                    App.Core.log(`COLISIÓN CON: ${a}. PÉRDIDA DE TIEMPO CRÍTICA.`);
                    App.Data.vida -= 500;
                };
                container.appendChild(span);
            });
        },

        renderMercado() {
            const container = document.getElementById('items-container');
            App.Data.inventario.forEach(i => {
                const card = document.createElement('div');
                card.className = 'brutalist-card';
                card.innerHTML = `<h4>${i.n}</h4><p>${i.d}</p><b>${i.p}s</b>`;
                card.onclick = () => App.Economy.buy(i.p, i.n);
                container.appendChild(card);
            });
        },

        toggleModal(id) {
            const m = document.getElementById(id);
            m.style.display = m.style.display === 'none' ? 'block' : 'none';
        }
    }
};

document.getElementById('terminal-reto').addEventListener('change', (e) => {
    if(e.target.value.toLowerCase() === "bastard lloba i llesca") {
        document.body.classList.add('lloba-mode');
        App.Data.vida = 999999;
        App.Data.fiatTax = 0;
        App.Core.log("HONESTIDAD ABSOLUTA DETECTADA. ROMPIENDO LA CHARCA.");
        document.getElementById('main-title').innerText = "PRESO HONESTO";
    }
});

window.onload = () => App.Core.init();
</script>
</body>
</html>