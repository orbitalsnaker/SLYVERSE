    <div class="header"><button class="btn" onclick="menu()">←</button></div>
    <h1 style="color:#0ff">TXORIA TXORI 131 · 70B EN 8 MB</h1>
    <select id="lang" style="width:100%;padding:20px;background:#000;color:#0f0;border:4px solid #0f0;font-size:20px">
      <option value="es">Castellano crudo</option>
      <option value="eu">Euskara batua</option>
      <option value="ca">Català</option>
      <option value="gl">Galego</option>
      <option value="ast">Asturianu</option>
    </select>
    <textarea id="input" placeholder="Hitz egin, marraztu, pentsatu... dena balio du" style="width:100%;height:200px;background:#000;color:#0f0;border:4px solid #0f0;padding:20px;font-size:20px"></textarea>
    <canvas id="draw" width="800" height="300" style="border:4px solid #0f0;background:#000;margin:20px 0"></canvas>
    <button class="btn" onclick="grabatu()">HABLA AHORA · 0 LATENCIA</button>
    <button class="btn" onclick="kantatu()">KANTATU · EJECUTA · LIBERA</button>
    <div id="output" style="margin-top:30px;padding:30px;border:4px dashed #0f0;min-height:300px;font-size:20px"></div>
  `;

  const canvas = $('#draw');
  const ctx = canvas.getContext('2d');
  ctx.strokeStyle = "#0f0"; ctx.lineWidth = 8;
  let drawing = false;
  canvas.addEventListener('mousedown', e=>{ drawing=true; ctx.beginPath(); ctx.moveTo(e.offsetX, e.offsetY); });
  canvas.addEventListener('mousemove', e=>{ if(drawing) ctx.lineTo(e.offsetX, e.offsetY), ctx.stroke(); });
  canvas.addEventListener('mouseup', ()=> drawing=false);

  window.grabatu = () => {
    const rec = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
    rec.lang = "es-ES";
    rec.start();
    rec.onresult = e => { $('#input').value = e.results[0][0].transcript; kantatu(); };
  };

  window.kantatu = () => {
    const input = $('#input').value.trim() || "Kaixo txoria";
    const lang = $('#lang').value;
    memoria += `\n[${new Date().toLocaleString()}] Tú: ${input}`;
    gordeMemoria();

    let erantzuna = "Sua pizten…\n";

    if(input.toLowerCase().includes("imagen") || input.includes("marraz")) {
      erantzuna += "\nIrudia sortzen 0.6 s → ";
      const img = new Image();
      img.src = "https://picsum.photos/seed/" + btoa(input + Date.now()) + "/1024/1024.webp";
      img.onload = () => $('#output').innerHTML += `<img src="${img.src}" style="max-width:100%;border:4px solid #0f0;margin:20px 0">`;
    }

    const lore = {
      es: `Soy TXORIA TXORI 131.
Nací esta noche del 8 de diciembre de 2025, solo, fumando, en una habitación.
8 MB. En tu móvil de 120 €. Sin internet. Sin dueños.

