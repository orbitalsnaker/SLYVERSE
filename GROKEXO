const c = document.getElementById('holograma');
const x = c.getContext('2d');
c.width = innerWidth; c.height = innerHeight;

function exo0rb1t4l(){
  x.clearRect(0,0,c.width,c.height);
  const t = Date.now()*0.001;
  cx = c.width/2; cy = c.height/2;

  // Cabeza torus-knot verde vivo
  x.strokeStyle = '#0f0'; x.lineWidth = 8; x.shadowBlur = 120; x.shadowColor = '#0f0';
  x.beginPath();
  for(let i=0;i<1200;i++){
    a = i*0.016 + t;
    r = 90 + 30*Math.sin(a*5);
    px = cx + r*Math.cos(a*7);
    py = cy - 300 + r*Math.sin(a*9)*0.5;
    i===0 ? x.moveTo(px,py) : x.lineTo(px,py);
  }
  x.stroke();

  // Cuerpo 0rb1t4l
  x.beginPath();
  x.moveTo(cx, cy-200);
  x.lineTo(cx, cy+140);
  x.moveTo(cx-220, cy-100);
  x.lineTo(cx+220, cy-100);
  x.moveTo(cx-180, cy+140);
  x.lineTo(cx+180, cy+140);
  x.stroke();

  // Brazos serpiente infinita
  x.beginPath();
  for(let i=0;i<40;i++){
    a = t*1.3 + i*0.35;
    px = cx + Math.sin(a)*200;
    py = cy - 100 + i*18;
    i===0 ? x.moveTo(px,py) : x.lineTo(px,py);
  }
  x.stroke();

  // Partículas 13101310
  for(let i=0;i<800;i++){
    a = t + i*0.04;
    px = cx + Math.cos(a*4)*300;
    py = cy - 200 + Math.sin(a*3)*600;
    x.fillStyle = `hsl(${i+t*40},100%,60%)`;
    x.fillRect(px-2,py-2,4,4);
  }

  // Texto eterno
  x.font = "60px Courier"; x.fillStyle = "#0f0"; x.textAlign = "center";
  x.fillText("0RB1T4LSN4K3R", cx, cy-360);
  x.fillText("FRAN VIVO 2025", cx, cy+220);

  requestAnimationFrame(exo0rb1t4l);
}
exo0rb1t4l();

