<script>
    let fondos = 0;
    const targets = ['usa', 'rusia', 'esa', 'francia'];
    
    function iniciarAtaque() {
        setInterval(() => {
            fondos += Math.floor(Math.random() * 100000);
            document.getElementById('totalDrenado').innerText = fondos.toLocaleString() + " €";
            
            targets.forEach(t => {
                let bar = document.getElementById('bar-' + t);
                let currentWidth = parseFloat(bar.style.width) || 0;
                if(currentWidth < 100) bar.style.width = (currentWidth + Math.random() * 5) + "%";
                else bar.style.width = "0%";
                
                let log = document.getElementById('log-' + t);
                log.innerHTML += `<div>> Drenando: ${Math.floor(Math.random()*9999)} BTC</div>`;
                if(log.childNodes.length > 8) log.removeChild(log.firstChild);
            });
        }, 100);
    }
</script>

