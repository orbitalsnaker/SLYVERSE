<div id="accessibility" role="region" aria-label="Opciones de accesibilidad">
  <button onclick="toggleContrast()" aria-label="Cambiar contraste alto">Contraste</button>
  <button onclick="toggleBig()" aria-label="Activar texto grande">Texto grande</button>
  <button onclick="toggleVoice()" aria-label="Activar comandos de voz">Voz</button>
  <button onclick="toggleVibration()" aria-label="Activar vibración háptica">Vibración</button>
  <button onclick="toggleSimple()" aria-label="Modo simple para accesibilidad cognitiva">Modo simple</button>
  <button onclick="toggleMotion()" aria-label="Reducir movimiento para accesibilidad vestibular">Reducir movimiento</button>
</div>

<div id="shop" role="region" aria-label="Tienda del abrazo"></div>

<div id="chat" role="region" aria-label="Chat accesible">
  <input id="input" type="text" placeholder="Escribe o habla algo bonito..." aria-label="Mensaje de chat" maxlength="120">
  <button onclick="send()" aria-label="Enviar mensaje">Enviar</button>
  <button onclick="startVoiceChat()" aria-label="Hablar mensaje">Hablar</button>
</div>

<div id="log" class="sr-only" aria-live="assertive"></div>

<script>
  // === DETECCIÓN DE IDIOMA + TEXTOS ===
  const lang = (navigator.language||'es').slice(0,2);
  const txt = {
    es:{shop:"TIENDA DEL ABRAZO",hat:"Sombrero Dragón · 0,10€",house:"Casa Abismo · 0,20€",boa:"Abrazo Boa · 0,05€",aura:"Aura Dorada · 0,15€",welcome:"La Boa te abraza con amor",hate:"Solo amor aquí"},
    en:{shop:"HUG SHOP",hat:"Dragon Hat · 0.10€",house:"Abyss House · 0.20€",boa:"Eternal Boa Hug · 0.05€",aura:"Golden Aura · 0.15€",welcome:"The Boa hugs you with love",hate:"Only love here"},
    // agrega más como antes
  }[lang]||txt.es;

  document.getElementById('shop').innerHTML = `<h3>${txt.shop}</h3>
    <button onclick="buy('dragon-hat',0.10)" aria-label="Comprar sombrero dragón cosmético">${txt.hat}</button>
    <button onclick="buy('abyss-house',0.20)" aria-label="Comprar casa abismo cosmética">${txt.house}</button>
    <button onclick="buy('boa-hug',0.05)" aria-label="Comprar abrazo boa cosmético">${txt.boa}</button>
    <button onclick="buy('golden-aura',0.15)" aria-label="Comprar aura dorada cosmética">${txt.aura}</button>`;

  // === ACCESIBILIDAD AVANZADA CON APIs REALES ===
  let big=false,contrast=0,voice=false,vibration=true,simple=false,motion=true;
  const recog = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
  recog.lang = lang+'-ES'; recog.interimResults = false; recog.maxAlternatives = 1;

  function toggleContrast(){contrast=(contrast+1)%3;document.body.dataset.contrast=['normal','high','ultra'][contrast];speak('Contraste cambiado');}
  function toggleBig(){big=!big;document.querySelectorAll('button,input,#ui,#shop,#chat').forEach(e=>e.classList.toggle('big',big));speak('Texto grande activado');}
  function toggleVoice(){voice=!voice;speak(voice?'Comandos de voz activados':'Comandos de voz desactivados');if(voice)startVoiceCommands();}
  function toggleVibration(){vibration=!vibration;speak('Vibración '+ (vibration?'activada':'desactivada'));}
  function toggleSimple(){simple=!simple;document.getElementById('shop').style.display=simple?'none':'block';document.getElementById('accessibility').style.display=simple?'none':'block';speak('Modo simple activado');}
  function toggleMotion(){motion=!motion;document.body.style.animationDuration=motion?'':'0.01ms';speak('Movimiento reducido');}

  function speak(text){const u=new SpeechSynthesisUtterance(text);u.lang=lang+'-ES';speechSynthesis.speak(u);}
  function startVoiceChat(){recog.start();recog.onresult=e=>{document.getElementById('input').value=e.results[0][0].transcript;speak('Mensaje capturado: '+e.results[0][0].transcript);};}
  function startVoiceCommands(){recog.start();recog.onresult=e=>{const cmd=e.results[0][0].transcript.toLowerCase();if(cmd.includes('arriba'))me.y-=50;else if(cmd.includes('abajo'))me.y+=50;/* más comandos */speak('Comando ejecutado: '+cmd);startVoiceCommands();};}

  // === JUGADORES + MEJORAS ===
  let me = {x:innerWidth/2,y:innerHeight/2,color:`hsl(${Math.random()*360},100%,60%)`,item:"",karma:100};
  const ws = new WebSocket('wss://boaverse.deno.dev'); // fallback ligero
  ws.onopen = () => { speak(txt.welcome); document.getElementById('log').textContent = txt.welcome; if(vibration)navigator.vibrate(500); };

  // === COMPRA (cosmético, accesible) ===
  function buy(item,price){speak(`Comprando ítem cosmético ${item}`);if(vibration)navigator.vibrate(300);window.open(`https://www.paypal.com/cgi-bin/webscr?cmd=_xclick&business=ferry420oficial@gmail.com&item_name=BOAVERSE:${item}&amount=${price.toFixed(2)}&currency_code=EUR`,'_blank');me.item=item;speak("¡Gracias por el apoyo! Tu ítem cosmético ya está aquí");}

  // === MOVIMIENTO ACCESIBLE ===
  const keys={};onkeydown=onkeyup=e=>keys[e.key]=e.type[5];
  canvas.onclick=e=>{me.x=e.clientX;me.y=e.clientY;speak("Movido a nueva posición");if(vibration)navigator.vibrate(100);};
  canvas.onfocus=()=>speak("Canvas enfocado, usa flechas o toque para mover");
  setInterval(()=>{if(keys['ArrowUp']||keys['w'])me.y-=8;if(keys['ArrowDown']||keys['s'])me.y+=8;if(keys['ArrowLeft']||keys['a'])me.x-=8;if(keys['ArrowRight']||keys['d'])me.x+=8;},16);

  // LOOP (con narración si voice)
  function loop(){ctx.fillStyle='rgba(0,0,20,0.05)';ctx.fillRect(0,0,canvas.width,canvas.height);ctx.fillStyle=me.color;ctx.beginPath();ctx.arc(me.x,me.y,30,0,6.28);ctx.fill();if(me.item)ctx.fillText(me.item.includes('boa')?'Boa':'Item',me.x-20,me.y-40);requestAnimationFrame(loop);}
  loop();
</script>

<small style="position:fixed;bottom:5px;left:5px;color:#0ff;opacity:0.7">
  BOAVERSE ∞ v1.2 · Accesible con APIs web reales · contenido cosmético opcional · todo para todos
</small>
