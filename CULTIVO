# Sensores simulados / reales
ph = ADC(Pin(34))
ec = ADC(Pin(35))
temp = ADC(Pin(36))

def auto_adjust():
    # Lectura y ajuste automático pH/EC/luz
    ph_val = ph.read() / 4095 * 14
    if ph_val > 6.5:
        bomba_acido.on(5)  # segundos
    # ML simple predict deficiencias
    # ... (reglas + histórico local)

while True:
    data = {"ph": ph_val, "ec": ec_val, "temp": temp_val}
    mqtt.publish("grow/status", json.dumps(data))
