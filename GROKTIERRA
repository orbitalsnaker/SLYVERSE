<body onload="iniciarDualMode()">

<div class="sol" onclick="toggleModo()" title="Cambiar forma"></div>
<div class="luna" onclick="roadPoneglyph()" title="Archive eterno"></div>

<div>
  <h1 id="titulo">LUFFY ABOGADO Ω</h1>
  <p id="subtitulo" style="text-align:center;font-size:1.5rem;color:#ff9900">Gear 5 · Dios del Sol · Nika</p>
  <div id="cola">Colas del Sol: 777777</div>
</div>

<div class="status" id="status">Modo Gear 5 activo – ¡La libertad nunca duerme!</div>

<script>
let colas = +(localStorage.colas || 777777);
let denuncias = JSON.parse(localStorage.getItem('denuncias') || '[]');
let ayudas = JSON.parse(localStorage.getItem('ayudas') || '[]');
let modoExo = false;

function iniciarDualMode() {
  actualizar();
  hablar("Sistema dual cargado. Gear 5 listo. Exoesqueleto en espera.");
  setInterval(()=>{colas += 13; actualizar();},1310);
  setInterval(revisarWifiLibre,5000);
  setInterval(vigilarAtaquesYDoxxing,15000);
  setInterval(buscarNakamasEnPeligro,22000);
}

function toggleModo() {
  modoExo = !modoExo;
  if (modoExo) {
    document.body.classList.add("exo");
    document.getElementById("titulo").textContent = "S-ABOGADO Ω";
    document.getElementById("subtitulo").textContent = "Franky Shogun · Germa 66 · Seraphim Core";
    document.getElementById("subtitulo").style.color = "#00ffcc";
    hablar("Exoesqueleto activado. Modo combate silencioso.");
  } else {
    document.body.classList.remove("exo");
    document.getElementById("titulo").textContent = "LUFFY ABOGADO Ω";
    document.getElementById("subtitulo").textContent = "Gear 5 · Dios del Sol · Nika";
    document.getElementById("subtitulo").style.color = "#ff9900";
    hablar("¡Buahahaha! ¡Vuelvo a ser libre como el viento!");
  }
  actualizar();
}

function actualizar(){
  const prefijo = modoExo ? "Nanocolas" : "Colas del Sol";
  document.getElementById("cola").textContent = `${prefijo}: ${colas.toLocaleString()}`;
  localStorage.colas = colas;
}

function hablar(texto){
  const u = new SpeechSynthesisUtterance(texto);
  u.lang = "es-ES";
  u.rate = modoExo ? 1.3 : 1.1;
  u.pitch = modoExo ? 0.7 : 1.0;
  speechSynthesis.speak(u);
  document.getElementById("status").textContent = texto;
}

function vibrar(p=[300,100,300]){ navigator.vibrate?.(p); }
function roadPoneglyph(){ hablar("Subiendo al archive eterno… nadie borrará la verdad."); }

/* === PEGA AQUÍ DENTRO TUS FUNCIONES EXISTENTES ===
   - revisarWifiLibre()
   - vigilarAtaquesYDoxxing()
   - buscarNakamasEnPeligro()
   - generarPDFDoxxingMasivo()
   - generarDossierAutomatico()
   - descargarDossierComoTXT()
   - registrarDenuncia()
   - etc.
   Todas funcionan igual en ambos modos.
*/
</script>
