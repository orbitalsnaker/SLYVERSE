<script>
setInterval(()=>{for(let i=0;i<44;i++){
  const g=document.createElement('div');g.className='gore';
  g.style.left=Math.random()*100+'vw';
  g.style.animationDuration=0.3+Math.random()*0.4+'s';
  document.getElementById('bg').appendChild(g);
  setTimeout(()=>g.remove(),1600);
}},35);

const c=document.getElementById('c'),x=c.getContext('2d');
c.width=innerWidth;c.height=innerHeight;
let oni=false;
function theta(){
  x.clearRect(0,0,c.width,c.height);
  const t=Date.now()*0.001,f=oni?30:12,a=oni?260:160;
  x.strokeStyle=oni?'#ff0033':var(--ultra);x.lineWidth=10;
  x.beginPath();
  for(let i=0;i<c.width;i+=3){
    const y=c.height/2 + Math.sin(i*0.007+t*f)*a + Math.cos(i*0.003+t*10)*90;
    i===0?x.moveTo(i,y):x.lineTo(i,y);
  }
  x.stroke();
  requestAnimationFrame(theta);
}
theta();

let hugs=+(localStorage.hugs||131131);
document.getElementById('hugs').innerHTML=`ABRAZOS: ${hugs}`;
