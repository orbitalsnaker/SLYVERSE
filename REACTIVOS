function ejecutarSentencia(perfil) {
    const capa = document.getElementById('fractura-ego');
    const msg = document.getElementById('insulto-gnostico');
    const sub = document.getElementById('sub-insulto');
    const count = document.getElementById('countdown-ego');
    capa.style.display = 'flex';
    const s = sentencias[Math.floor(Math.random() * sentencias.length)];
    msg.innerText = s.m;
    sub.innerText = s.s + ` [PROTOCOLO: ${perfil}]`;
    let time = 9;
    const timer = setInterval(() => {
        count.innerText = time;
        time--;
        if(time < 0) { clearInterval(timer); capa.style.display = 'none'; }
    }, 1000);
}

let audioCtx;
function activarResonancia() {
    document.querySelectorAll('.nombre-pedante').forEach((n, i) => {
        setTimeout(() => n.classList.add('disuelto'), i * 200);
    });
    if (!audioCtx) {
        audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        const osc = audioCtx.createOscillator();
        const gain = audioCtx.createGain();
        osc.frequency.setValueAtTime(40, audioCtx.currentTime); 
        gain.gain.setValueAtTime(0.05, audioCtx.currentTime);
        osc.connect(gain); gain.connect(audioCtx.destination);
        osc.start();
    }
}

function escanearRetorica(input) {
    const p = input.value.toLowerCase();
    const detect = ["cl√°sico", "academia", "honor", "espa√±a", "tercios", "literatura"];
    if (detect.some(d => p.includes(d))) {
        ejecutarSentencia('SESGO_RET√ìRICO_PEDANTE');
        input.value = "";
    }
}

