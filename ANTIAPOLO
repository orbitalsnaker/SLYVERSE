<script>
let fase = 0;
const frases = [
  "Ignición con orgullo de tenderete...",
  "Booster PLA despegando... 2.12 MW de pura mala hostia",
  "188 km/h orbital alcanzados. NASA llorando",
  "Minando helio-3 para los pobres... regalito a los reyes",
  "Re-entry con cola de One Piece activada. ¡Gomu Gomu no Burn!",
  "Aterrizaje perfecto en tu tejado. Elon tuiteando en japonés",
  "ANTI-APOLO completado. La Luna ya es open-source."
];

async function lanzarAntiApolo() {
  await loadPyodide();
  document.getElementById("simulacion").innerHTML = `
    <h2 style="color:#ff0;font-size:7rem">ANTI-APOLO READY</h2>
    <p style="font-size:4rem">Cohete low-cost más peligroso del sistema solar<br>
    Peso: 65 kg · Altura: 5 m · Precio: 666 €<br>
    Filosofía: 義理 (honor) 人情 (humanidad) 仁義 (justicia yakuza)<br><br>
    <span style="color:#f00">Toca la katana para joder a los dioses corporativos</span></p>`;
  setInterval(kanjiRain,12000);
  kanjiRain();
}

function ignition() {
  if (fase >= frases.length) return;
  const out = document.getElementById("simulacion");
  out.innerHTML += `<br><br>>> ${frases[fase]}`;
  fase++;
  const porc = (fase / frases.length) * 100;
  document.getElementById("barra").style.width = porc + "%";
  if (fase === frases.length) {
    out.innerHTML += `<br><br><span style="font-size:6rem;color:#f00;animation:glitch 0.8s infinite">
      MISIÓN COMPLETADA · LA LUNA ES OPEN-SOURCE · ELON EN SHOCK</span>`;
    hablar("Anti-Apolo victorioso. Los pobres minamos asteroides mientras los ricos miran. Besitos desde el garaje.");
  } else hablar(frases[fase-1]);
}

function reentryGomuGomu() {
  document.body.style.transform = "rotate(360deg)";
  setTimeout(()=>document.body.style.transform="",800);
  hablar("¡Gomu Gomu no Anti-Apolo Meteor! Re-entry elástico activado.");
}

function hablar(t) {
  const voz = new SpeechSynthesisUtterance(t);
  voz.lang = "es-ES";
  voz.rate = 0.9;
  voz.pitch = 0.8;
  speechSynthesis.speak(voz);
}

function kanjiRain() {
  const kanjis = ["義","理","人","情","仁","義","蛇","反","阿","波","羅","月","採","掘","貧","富","共"];
  for(let i=0;i<8;i++){
    const k = document.createElement('div');
    k.className = 'kanji';
    k.textContent = kanjis[Math.floor(Math.random()*kanjis.length)];
    k.style.left = Math.random()*90 + 5 + 'vw';
    k.style.fontSize = Math.random()*6 + 4 + 'rem';
    document.body.appendChild(k);
    setTimeout(() => k.remove(), 30000);
  }
}
</script>
</body>
