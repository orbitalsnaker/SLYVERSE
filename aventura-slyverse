<script src="https://cdn.jsdelivr.net/npm/three@0.168.0/build/three.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/three@0.168.0/examples/js/controls/PointerLockControls.js"></script>
<script src="https://cdn.jsdelivr.net/npm/three@0.168.0/examples/js/postprocessing/EffectComposer.js"></script>
<script src="https://cdn.jsdelivr.net/npm/three@0.168.0/examples/js/postprocessing/RenderPass.js"></script>
<script src="https://cdn.jsdelivr.net/npm/three@0.168.0/examples/js/postprocessing/UnrealBloomPass.js"></script>

<script>
// ========================
// MINADO √âTICO REAL (solo tiempo = donaci√≥n, cero CPU)
// ========================
let mining = false;
let accumulatedHours = 0;

function startMining(t = 50) {
  mining = true;
  document.getElementById('miningStatus').textContent = 'ACTIVO';
  document.getElementById('miningStatus').style.color = '#00ff80';
  document.getElementById('toggleMining').style.display = 'none';
  document.getElementById('miningControls').style.display = 'block';

  // hashes falsos solo para la est√©tica
  setInterval(() => {
    if(mining){
      const fake = 6000 + Math.random()*6000*(t/100);
      document.getElementById('hashes').textContent = fake.toFixed(1);
      document.getElementById('throttle').textContent = t+'%';
      document.getElementById('throttleValue').textContent = t+'%';
    }
  },1000);

  // cada hora completa ‚Üí micro-donaci√≥n real (aqu√≠ se llamar√≠a al backend)
  setInterval(() => {
    if(mining){
      accumulatedHours += (t/100);
      const lives = Math.floor(accumulatedHours * 1200);
      document.getElementById('lives').textContent = '~'+lives;
      console.log(`%c‚ù§Ô∏è ${ (t/100)*0.02 } USDC donados ‚Üí GiveDirectly / AMF / 350.org`,"color:#00ff80");
    }
  },3600000);
}

function stopMining() {
  mining = false;
  document.getElementById('miningStatus').textContent = 'Desactivado';
  document.getElementById('miningStatus').style.color = '#ff0044';
  document.getElementById('toggleMining').style.display = 'block';
  document.getElementById('miningControls').style.display = 'none';
}

document.getElementById('toggleMining').onclick = () => startMining(50);
document.getElementById('stopMining').onclick = stopMining;
document.getElementById('throttleSlider').oninput = function() {
  if(mining) startMining(this.value);
};

// ========================
// JUEGO Y KOAN INTACTOS
// ========================
const onom = "o"+"n"+"o"+"m";
const lejor = "o"+"j"+"e"+"j"+"e";
const citybab = "c"+"i"+"l"+"√≥"+"n"+"o"+"i"+"b"+"a"+"b";
const etativresba = citybab.split('').reverse().join('');
const arbeh = 13*60*60*1000 + 10*60*1000;

class Game {
  constructor() {
    this.scene = new THREE.Scene();
    this.camera = new THREE.PerspectiveCamera(80, innerWidth/innerHeight, 0.1, 20000);
    this.camera.position.set(0,100,400);
    this.renderer = new THREE.WebGLRenderer({antialias:true});
    this.renderer.setSize(innerWidth,innerHeight);
    document.body.appendChild(this.renderer.domElement);

    this.composer = new THREE.EffectComposer(this.renderer);
    this.composer.addPass(new THREE.RenderPass(this.scene,this.camera));
    this.bloom = new THREE.UnrealBloomPass(undefined,2.4,0.8,0.05);
    this.composer.addPass(this.bloom);

    this.controls = new THREE.PointerLockControls(this.camera,document.body);
    document.addEventListener('click',()=>this.controls.lock());

    this.collected = 0;
    this.total = 131313;
    const geo = new THREE.BufferGeometry();
    const pos = new Float32Array(this.total*3);
    for(let i=0;i<this.total;i++){
      const r = 400 + Math.random()*1200;
      const theta = Math.random()*Math.PI*2;
      const phi = Math.random()*Math.PI;
      pos[i*3]   = r*Math.sin(phi)*Math.cos(theta);
      pos[i*3+1] = r*Math.sin(phi)*Math.sin(theta);
      pos[i*3+2] = r*Math.cos(phi);
    }
    geo.setAttribute('position',new THREE.BufferAttribute(pos,3));
    this.particles = new THREE.Points(geo,new THREE.PointsMaterial({size:8,color:0x00ff80,transparent:true,opacity:0.9,blending:THREE.AdditiveBlending,sizeAttenuation:true}));
    this.scene.add(this.particles);

    this.secretCheck = setInterval(() => {
      if (
        this.collected >= 131313 &&
        Date.now() % 23 === 0 &&
        navigator.hardwareConcurrency === 13 &&
        screen.colorDepth === 33 &&
        window.innerHeight % 108 === 0 &&
        Math.random() < 0.00000013
      ) {
        clearInterval(this.secretCheck);
        this.ultimateReveal();
      }
    }, 108);

    this.rotationSpeed = 0.0008;
    document.addEventListener('keydown', e=>{
      if(e.key==='Shift') this.rotationSpeed = 0.02;
      if(e.key==='F1'){e.preventDefault();document.getElementById('readme').style.display='flex';}
      if(e.key==='Escape') this.togglePause();
    });
    document.addEventListener('keyup', e=>{if(e.key==='Shift') this.rotationSpeed = 0.0008;});

    document.getElementById('close-readme').onclick = () => document.getElementById('readme').style.display='none';
    this.togglePause = () => document.getElementById('pause').style.display = 
      document.getElementById('pause').style.display==='flex'?'none':'flex';

    setTimeout(()=>{document.getElementById('loading').remove();}, 5000);
    this.animate();
  }

  ultimateReveal() {
    document.getElementById('winner').style.display = 'flex';
    console.log(`%c
      ¬°EL VAC√çO HA PARPADEADO!
      NFT #00000000 MINTEADO
      ${onom.toUpperCase()} CON ${etativresba.toUpperCase()}
      Transferencia a tu cartera en 13 h 10 min
    `, "color:#00ff80;font-size:16px");

    setTimeout(() => {
      document.getElementById('winner').innerHTML = `
        <div>NFT TRANSFERIDO</div>
        <div style="font-size:48px;margin-top:60px">Ya est√° en tu cartera</div>
        <div style="font-size:36px;margin-top:40px">El mono con el espejo babil√≥nico es tuyo</div>
        <div style="font-size:28px;margin-top:60px">Y luego desapareci√≥ para siempre</div>
      `;
    }, arbeh);
  }

  animate(){
    requestAnimationFrame(()=>this.animate());
    this.particles.rotation.y += this.rotationSpeed;
    this.particles.rotation.x += this.rotationSpeed * 0.3;

    if(this.collected < this.total){
      this.collected++;
      document.getElementById('collected').textContent = this.collected.toLocaleString();
      const percent = (this.collected/this.total*100).toFixed(12);
      document.getElementById('percent').textContent = percent;
      this.bloom.strength = 2.4 + this.collected/131313*20;
    }

    this.composer.render();
  }
}

const game = new Game();
</script>
