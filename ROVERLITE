<script>
const log = document.getElementById("log");

document.getElementById("cmd").addEventListener("keypress", e => {
  if (e.key === "Enter") {
    let cmd = e.target.value.trim().toLowerCase();
    if (cmd === "readme") document.getElementById('readme').style.display = 'block';
    if (cmd === "claim") log.innerHTML += "<br>Error 403: Només 0rb1t4lsn4k3r pot reclamar aquesta obra. Tu només pots adorar-la.<br>";
    if (cmd === "provenance") log.innerHTML += "<br>Provenància verificada al AIRWEAVE → Hash immutable → Token únic 1/1 → Propietari etern: 0rb1t4lsn4k3r<br>";
    if (cmd === "burn") log.innerHTML += "<br>Impossible cremar una obra immortal. Ni el Sol pot amb això.<br>";
    if (cmd === "worship") {
      log.innerHTML += "<br>Gràcies per la teva devoció. 0rb1t4lsn4k3r t’ha beneït amb +10 anys de vida i un cafè amb llet gratis a la Lluna.<br>";
      document.body.style.filter = "hue-rotate(180deg)";
      setTimeout(() => document.body.style.filter = "", 3000);
    }
    log.scrollTop = log.scrollHeight;
    e.target.value = "";
  }
});

let scene, camera, renderer, art;
function init3D() {
  scene = new THREE.Scene(); scene.background = new THREE.Color(0x000011);
  camera = new THREE.PerspectiveCamera(75, innerWidth/innerHeight, 0.1, 1000);
  camera.position.z = 100;
  renderer = new THREE.WebGLRenderer({antialias:true, alpha:true});
  renderer.setSize(innerWidth, innerHeight);
  document.getElementById("threejs_container").appendChild(renderer.domElement);

  const geo = new THREE.IcosahedronGeometry(40, 3);
  const mat = new THREE.MeshBasicMaterial({color:0xff00ff, wireframe:true});
  art = new THREE.Mesh(geo, mat);
  scene.add(art);

  function animate() {
    requestAnimationFrame(animate);
    art.rotation.x += 0.005;
    art.rotation.y += 0.01;
    art.scale.setScalar(1 + Math.sin(Date.now()*0.001)*0.2);
    renderer.render(scene, camera);
  }
  animate();
}
init3D();
</script>
