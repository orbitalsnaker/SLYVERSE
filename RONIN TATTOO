<script src="https://cdn.jsdelivr.net/npm/web3@latest/dist/web3.min.js"></script>
<script>
// Bot de venta 100 % automático (Mainnet + contrato Shenzhen)
const wallet = "0xfddb91bd8157dafb735d4087cff8823b42eaadc7";
const priceETH = "0.022"; // ~59 € al cambio real del momento
const log = document.getElementById("log");

async function buy(){
  if(!window.ethereum){
    alert("Instala MetaMask, zorro");
    return;
  }
  
  const accounts = await ethereum.request({method:'eth_requestAccounts'});
  const tx = await ethereum.request({
    method:'eth_sendTransaction',
    params:[{
      from:accounts[0],
      to:wallet,
      value:Web3.utils.toHex(Web3.utils.toWei(priceETH,"ether"))
    }]
  });

  log.innerHTML += `• ${new Date().toJSON().slice(0,19).replace("T"," ")} → 1 uds → procesando… +18 €<br>`;
  log.scrollTop = log.scrollHeight;

  // Aquí el webhook real que ya tienes con Shenzhen (Telegram bot → fábrica)
  fetch("https://api.shenzhen131.is/order", {
    method:"POST",
    headers:{"Content-Type":"application/json"},
    body:JSON.stringify({
      product:"kitsune_v5",
      qty:1,
      tx:tx,
      wallet:accounts[0],
      price_eur:59
    })
  });

  setTimeout(()=>alert("Orden enviada a fábrica.\nRecibirás tracking DHL en <24 h.\nGracias, demonio."),1500);
}
</script>
