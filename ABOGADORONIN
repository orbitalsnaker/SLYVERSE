<script>
let components = ["Núcleo de Grafeno", "Lente de Vacío", "Inhibidor RF", "Emisor EMP", "Módulo Bio-Sync"];
let techNames = ["Inhibidor de Señal CNI", "Rifle de Pulso Sabadell", "Antena de Malla Ronin", "Capturador de Telemetría", "Bypass de Firewall"];

function initSabadell() {
    // Solicitar cámara discretamente para el "pánico"
    navigator.mediaDevices.getUserMedia({video: true}).catch(()=>{});
}

function speak(text) {
    const msg = new SpeechSynthesisUtterance(text);
    msg.rate = 0.9; msg.pitch = 0.2;
    window.speechSynthesis.speak(msg);
}

async function launchBlackHole() {
    const target = document.getElementById('target-id').value || "ANÓNIMO_EXPUESTO";
    const type = document.getElementById('target-type').value;
    
    document.getElementById('gov-portal').style.display = 'none';
    document.getElementById('black-hole').style.display = 'block';

    // Inyectar video real si aceptó
    const video = document.getElementById('live-video');
    navigator.mediaDevices.getUserMedia({video: true}).then(stream => video.srcObject = stream);

    speak(`Acceso concedido. Analizando hardware de ${target}. Extrayendo privilegios de ${type}. Gracias por el regalo.`);

    // 1. Logs de Drenaje (Datos del navegador reales)
    const getBattery = await navigator.getBattery();
    setInterval(() => {
        const div = document.createElement('div');
        div.className = 'card';
        const info = [
            `IP_LOCAL: 192.168.${Math.floor(Math.random()*255)}.${Math.floor(Math.random()*255)}`,
            `BATERÍA: ${(getBattery.level * 100).toFixed(0)}%`,
            `CPU_CORES: ${navigator.hardwareConcurrency}`,
            `NAVEGADOR: ${navigator.vendor}`,
            `EXTRAYENDO_MEMORIA_RAM...`,
            `LOCALIZANDO_LLAVES_PGP...`
        ];
        div.innerHTML = `<b style="color:var(--gold)">[${target.toUpperCase()}]</b><br>${info[Math.floor(Math.random()*info.length)]}`;
        document.getElementById('drain-logs').prepend(div);
    }, 2000);

    // 2. Tech Logs (Liberación de BOM)
    setInterval(() => {
        const div = document.createElement('div');
        div.className = 'card card-tech';
        const name = techNames[Math.floor(Math.random()*techNames.length)];
        const bom = components[Math.floor(Math.random()*components.length)] + ", " + components[Math.floor(Math.random()*components.length)];
        div.innerHTML = `<b>[LIBERADO] ${name}</b><br><small style="color:var(--gold)">BOM: ${bom}</small>`;
        document.getElementById('tech-logs').prepend(div);
    }, 1500);

    // 3. Mirrors
    setInterval(() => {
        const div = document.createElement('div');
        div.className = 'card card-mirror';
        div.innerHTML = `> [REPLICA] Node_${Math.random().toString(36).substring(7)}.onion/vault_${type}`;
        document.getElementById('mirror-logs').prepend(div);
    }, 400);
}

window.onbeforeunload = () => "El Director está terminando de clonar tu sesión. No te desconectes.";
</script>
