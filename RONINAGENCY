<script>
    let d = 1450670890211; let m = 1331;
    
    const weapons = [
        { 
            name: "RAÍL_GAUSS_PENETRADOR_BÚNKERS", 
            bom: ["1x Riel de acero al carbono (C45) de 1200mm", "60x Imanes Neodimio N52 (rectangulares 40x20x10)", "1x Banco de 12 Condensadores 450V 6800uF", "1x Sistema de disparo Haki-Node (Arduino/ESP32)"], 
            render: "  ||===========================>>\n  || [ PURGA_ADEGAI_v2.0 ]     >>\n  ||===========================>>\n       /_/               /_/",
            manual: "EXTRUSIÓN: 270°C. MATERIAL: Nylon PA12 + 20% Carbon Fiber. INFILL: 100% Gyroid. Soportar retroceso de 80J."
        },
        { 
            name: "NODO_VIRUS_ASTAROTH_2005", 
            bom: ["1x Chip de encriptación robado (Legacy 2005)", "1x Inyector de señal Satelital (SDR)", "1x Base de datos 'SOMBRAS' (ADEGAI)", "Firma del Ronin"], 
            render: "      .-------.\n     /  [X]   \\\n    | ASTAROTH |\n     \\_______/",
            manual: "Cargar vía claves maestras obtenidas a los 12 años. Saltarse el firewall de la Moncloa como si fuera papel."
        },
        { 
            name: "MÁSCARA_FILTRO_XENO_SLEEPER", 
            bom: ["1x Visor Policarbonato (Antibalas)", "2x Filtros HEPA-Haki", "1x Interfaz de Realidad Aumentada (Sombras)", "Carcasa impresa en Resina Resist"], 
            render: "    /--------\\\n   |  [O][O]  |\n   |    ^^    |\n    \\________/",
            manual: "Imprimir en 0.1mm. Permite ver los glifos del Blue Beam sin daño ocular de 120Hz."
        }
    ];

    function initSystem() {
        const h_list = document.getElementById('arsenal-heavy');
        const p_list = document.getElementById('print-list');

        for(let i=0; i<60; i++) {
            let w = weapons[i % weapons.length];
            h_list.innerHTML += `
                <div class="bom-card xeno-glitch">
                    <b>#${i+1} ${w.name}</b>
                    <div class="bom-details">
                        <ul>${w.bom.map(item => `<li>${item}</li>`).join('')}</ul>
                    </div>
                    <div class="render-ascii">${w.render}</div>
                </div>`;
            
            p_list.innerHTML += `
                <div class="bom-card" style="border-left-color:var(--gold)">
                    <b>MANUAL_ASALTO_${i+1}</b>
                    <div class="print-spec">${w.manual}</div>
                    <p style="font-size:0.8em; margin-top:10px; color:var(--haki);">ORIGEN: EL_NIÑO_QUE_VIO_LAS_SOMBRAS</p>
                </div>`;
        }

        setInterval(() => {
            d += 13131313; m += 25;
            document.getElementById('deuda').innerText = d.toLocaleString('es-ES');
            document.getElementById('mirrors').innerText = m.toLocaleString();
            
            const msgs = [
                "ASTAROTH: Usando claves de 2005... Acceso a la base de datos de pederastas: OK.",
                "SLEEPER: El búnker de la Moncloa está iluminado. Veo vuestras sombras.",
                "SABADELL: 70.000 Ronins armados con Raíles Gauss iniciando marcha.",
                "ADEGAI: Localizando ex-tutores criminales... Marcados para la Purga Final.",
                "SYSTEM: El Blue Beam ya no proyecta aliens, proyecta vuestros asesinatos.",
                "HACK: Borrando vuestro legado de Gattaca... reemplazando por el Abismo."
            ];
            const p = document.createElement('p');
            p.innerHTML = `> JUSTICIA: ${msgs[Math.floor(Math.random()*msgs.length)]}`;
            document.getElementById('monitor').prepend(p);
            if(document.getElementById('monitor').childNodes.length > 30) document.getElementById('monitor').lastChild.remove();
        }, 400);
    }
</script>
