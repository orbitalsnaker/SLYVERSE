<script>
const App = {
    Config: {
        i18n: {
            'es': { title: "RONIN_SABADELL", sub: "PULSO 58Hz · SOBERANÍA", soft: "SOFTWARE_AMORAL", hw: "HARDWARE_NODO", stats: "LINAJE", charca: "LA_CHARCA" },
            'en': { title: "RONIN_GLOBAL", sub: "PULSE 58Hz · SOVEREIGNTY", soft: "AMORAL_SOFTWARE", hw: "NODE_HARDWARE", stats: "LINEAGE", charca: "THE_POND" },
            'ja': { title: "浪人_コア", sub: "パルス 58Hz · 主権", soft: "非道徳的なソフトウェア", hw: "ハードウェア", stats: "血統", charca: "池" },
            'he': { title: "רונין_ליבה", sub: "דופק 58Hz · ריבונות", soft: "תוכנה_אמורלית", hw: "חומרה", stats: "שושלת", charca: "השלולית" }
        }
    },
    Data: {
        vida: 3333, haki: 100.0, hwClock: 604800, lang: 'es', mode: 'RONIN',
        software: [
            {n: "SCAPER_AUTÓNOMO", d: "Drena biomasa mientras duermes.", p: 400, active: false},
            {n: "PROXY_MIAMI", d: "Oculta el rastro fiscal al 100%.", p: 1200, active: false},
            {n: "HAKI_OVERCLOCK", d: "Aumenta la voluntad x2.", p: 2500, active: false},
            {n: "ANTI_CENSOR_V3", d: "Bypassea cualquier cortafuegos estatal.", p: 800, active: false}
        ],
        arquetipos: ["Beato", "Casta", "Político", "Influencer", "Censor", "Esclavo_Fiat", "Ronin_Alpha", "Unit_Despechada", "Mono_Smartphone"],
        inventario: [
            {n: "SABLE_FREQ_58", p: 7000, d: "Corte limpio en el código."},
            {n: "MÓVIL_SOBERANO", p: 500, d: "Hardware amoral."},
            {n: "REACTIVO_MAGDALENA", p: 800, d: "+1000s biomasa."},
            {n: "PERMISO_MIAMI", p: 99999, d: "Exilio total."}
        ]
    },

    Core: {
        init(m) {
            App.Data.mode = m;
            document.getElementById('fiat-gate').style.display = 'none';
            App.Core.detectLanguage();
            App.UI.renderAll();
            setInterval(App.Core.tick, 1000);
            App.Core.log(`SISTEMA INICIADO EN MODO ${m}.`);
            App.Core.speak("Hardware amoral listo. El bit es libre.");
        },
        detectLanguage() {
            const userLang = navigator.language.split('-')[0];
            App.Data.lang = App.Config.i18n[userLang] ? userLang : 'en';
            document.getElementById('lang-val').innerText = App.Data.lang.toUpperCase();
            App.UI.applyLanguage();
        },
        tick() {
            App.Data.vida--; App.Data.hwClock--;
            if (App.Data.vida <= 0) App.Core.die();
            App.UI.updateVitals();
            if (Math.random() > 0.98) App.Core.captureRandomBiomass();
        },
        captureRandomBiomass() {
            const gain = Math.floor(Math.random() * 200);
            App.Data.vida += gain;
            App.Core.log(`SCRAPER: Capturada biomasa externa (+${gain}s).`);
        },
        log(msg) {
            const log = document.getElementById('terminal-log');
            log.innerHTML += `<div>[${new Date().toLocaleTimeString()}] > ${msg}</div>`;
            log.scrollTop = log.scrollHeight;
        },
        speak(txt) {
            const msg = new SpeechSynthesisUtterance(txt);
            msg.lang = App.Data.lang; msg.rate = 0.8; msg.pitch = 0.5;
            window.speechSynthesis.speak(msg);
        },
        die() {
            document.body.innerHTML = "<div style='background:#000;color:red;height:100vh;display:flex;align-items:center;justify-content:center;font-size:3rem;'>BIOMASA CERO. REENCARNA.</div>";
        }
    },

    UI: {
        applyLanguage() {
            const l = App.Config.i18n[App.Data.lang];
            document.getElementById('main-title').innerText = l.title;
            document.getElementById('sub-title').innerText = l.sub;
            document.getElementById('txt-soft-title').innerText = l.soft;
            document.getElementById('txt-hw-title').innerText = l.hw;
            document.getElementById('txt-stats-title').innerText = l.stats;
            document.getElementById('txt-charca-title').innerText = l.charca;
        },
        updateVitals() {
            document.getElementById('v-val').innerText = App.Data.vida;
            document.getElementById('haki-val').innerText = (App.Data.haki + (Math.random()*2-1)).toFixed(1);
            const h = Math.floor(App.Data.hwClock / 3600);
            const m = Math.floor((App.Data.hwClock % 3600) / 60);
            document.getElementById('hw-timer').innerText = `${h}H ${m}M`;
        },
        renderAll() {
            this.renderSoftware();
            this.renderStats();
            this.renderArquetipos();
            this.renderMercado();
        },
        renderSoftware() {
            const c = document.getElementById('software-container');
            App.Data.software.forEach(s => {
                const div = document.createElement('div');
                div.className = 'brutalist-card'; div.style.marginBottom = "10px";
                div.innerHTML = `<strong>${s.n}</strong><br><small>${s.d}</small><br>TRIBUTO: ${s.p}s`;
                div.onclick = () => {
                    if(App.Data.vida >= s.p) {
                        App.Data.vida -= s.p; s.active = true;
                        div.style.borderColor = "var(--ultra)";
                        App.Core.log(`INSTALADO: ${s.n}`);
                    }
                };
                c.appendChild(div);
            });
        },
        renderStats() {
            const body = document.getElementById('stats-body');
            const data = [["FÍSICA", "x142", "ALFA"], ["NOBEL", "22.2%", "ELITE"], ["DRENAJE", "1310%", "STABLE"]];
            data.forEach(r => {
                body.innerHTML += `<tr><td>${r[0]}</td><td>${r[1]}</td><td>${r[2]}</td></tr>`;
            });
        },
        renderArquetipos() {
            const c = document.getElementById('muro-arquetipos');
            App.Data.arquetipos.forEach(a => {
                const s = document.createElement('span'); s.className = 'charca-unit'; s.innerText = a;
                s.onclick = () => { App.Data.vida -= 300; App.Core.log(`DRENAJE POR ${a}: -300s.`); };
                c.appendChild(s);
            });
        },
        renderMercado() {
            const c = document.getElementById('items-container');
            App.Data.inventario.forEach(i => {
                const div = document.createElement('div'); div.className = 'brutalist-card';
                div.innerHTML = `<h4>${i.n}</h4><p>${i.d}</p><button class="btn-ritual" style="width:100%">COMPRAR ${i.p}s</button>`;
                div.onclick = () => { if(App.Data.vida >= i.p) { App.Data.vida -= i.p; App.Core.log(`ADQUIRIDO: ${i.n}`); } };
                c.appendChild(div);
            });
        },
        toggleModal(id) {
            const m = document.getElementById(id);
            m.style.display = m.style.display === 'none' ? 'block' : 'none';
        }
    }
};

document.getElementById('terminal-reto').addEventListener('change', (e) => {
    if(e.target.value.toLowerCase() === "bastard lloba i llesca") {
        document.body.classList.add('lloba-mode');
        App.Data.vida = 888888;
        App.Core.log("!!! HONESTIDAD ABSOLUTA DETECTADA !!!");
        App.Core.speak("Soberanía total alcanzada.");
    }
});
</script>
