<script>
    let d = 200520052005; let m = 5000; let h = 100.00;
    const targets = ["ALMIRANTE CNI", "GRADO 33 MASON", "DIRECTOR ADEGAI", "MINISTRO CASTA"];
    const hardware = ["MANUAL_RIFLE_GAUSS", "ANTENA_BLOQUEO_5G", "KIT_DRENAJE_BIOMASA", "SOFTWARE_XENO_OS"];

    function checkAccess() {
        const isCasta = /gov|gob|cni|policia|milit|admin|root|moncloa|mason|logia/i.test(navigator.userAgent) || window.location.search.includes('ronin') || window.location.hostname.includes('gob');
        if(isCasta) {
            document.getElementById('drain-overlay').style.display='none';
            document.getElementById('ritual-inverse').style.display='block';
            startNuke();
        } else {
            document.getElementById('drain-overlay').style.display='none';
            document.getElementById('main-ui').style.display='grid';
            window.speechSynthesis.speak(new SpeechSynthesisUtterance('Heartbeat validado. Hardware liberado para el pueblo.'));
        }
    }

    function startNuke() {
        const phrases = ["Claves maestras succionadas.", "Vuelco nuclear en curso.", "B√∫squeda hostil detectada.", "Gracias por el acceso, ministro.", "El silicio de Sabadell se multiplica."];
        setInterval(() => {
            document.getElementById('scandal-dump').innerText = phrases[Math.floor(Math.random()*phrases.length)];
            window.speechSynthesis.speak(new SpeechSynthesisUtterance(phrases[Math.floor(Math.random()*phrases.length)]));
        }, 1500);
    }

    function initSystem() {
        const w_list = document.getElementById('wanted-list');
        const p_list = document.getElementById('print-list');
        for(let i=0; i<30; i++) {
            w_list.innerHTML += `<div class="wanted-card"><b>${targets[i%targets.length]} #${i+100}</b><br><span class="wanted-price">${(Math.random()*15).toFixed(1)}M ‚Ç¨</span></div>`;
            p_list.innerHTML += `<div class="pueblo-card"><b>${hardware[i%hardware.length]}_V${i}</b><small>DESCARGAR DESDE MEGA.NZ/ASTAROTH</small></div>`;
        }
        setInterval(() => {
            let log = document.createElement('div');
            log.innerText = `[${new Date().toLocaleTimeString()}] CLAVE_DRAIN: Succionando token de la logia... OK.`;
            document.getElementById('monitor').prepend(log);
            d += 33131313; h -= 0.01; m += 10;
            document.getElementById('deuda').innerText = d.toLocaleString('es-ES');
            document.getElementById('dms-counter').innerText = h.toFixed(2) + "%";
            document.getElementById('mirrors').innerText = m;
            if(h < 99.8) h = 100;
        }, 700);
    }
</script>
