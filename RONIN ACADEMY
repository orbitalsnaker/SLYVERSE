    <script>
        function showSubject(subject) {
            const content = {
                hacking: {
                    title: "Hacking Ético: El Camino del Ronin",
                    description: "Deja de estudiar la teoría del hacking. Salta al código. Rompe las reglas para aprender a hackear de verdad."
                },
                ninjas: {
                    title: "Samuráis del Código: Filosofía Ninja",
                    description: "La filosofía Ninja se basa en la invisibilidad y precisión. Tu código es tu arma, tu mente es el filo."
                },
                philosophy: {
                    title: "Código del Honor: El Camino de los Yakuza",
                    description: "No necesitas títulos ni diplomas. Si eres un Yakuza, eres un creador. Haz que tu código hable por ti."
                },
                quantum: {
                    title: "Física Cuántica: Hackeando el Vacío",
                    description: "Deja de estudiar las teorías. Entra al mundo cuántico y usa tus habilidades para hackear la realidad misma."
                },
                cryptography: {
                    title: "Criptografía: El Pulso 58 de Turing",
                    description: "Haz que tu mente sea la clave. Vive la criptografía, no solo la aprendas. El futuro está codificado en tus manos."
                },
                overclocking: {
                    title: "Overclocking: El Camino de Yuki Naja",
                    description: "Las reglas del hardware están hechas para romperse. Lleva tu sistema a sus límites sin miedo, sin límites."
                },
                engineering: {
                    title: "Ingeniería: El Camino de Gordon Murray",
                    description: "Diseña sin restricciones. Tu ingeniería no necesita universidad, solo pasión y habilidad."
                },
                frank_lucas: {
                    title: "Modelo de Negocios: La Mentalidad de Frank Lucas",
                    description: "Optimiza el negocio a tu manera. Controla los recursos, elimina a los intermediarios y convierte el sistema a tu favor."
                }
            };

            const subjectContent = content[subject];
            const contentDiv = document.getElementById("content");
            contentDiv.innerHTML = `
                <h2>${subjectContent.title}</h2>
                <p>${subjectContent.description}</p>
            `;
        }

        function initialize() {
            document.getElementById('greeting').innerHTML = 'Bienvenido, Guerreros del Código';
        }
    </script>
