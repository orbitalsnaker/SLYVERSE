<script>
  // Matrix background con toque casa
  const canvas = document.getElementById('c');
  const ctx = canvas.getContext('2d');
  let w, h;
  function resize() { w = canvas.width = innerWidth; h = canvas.height = innerHeight; }
  resize();
  addEventListener('resize', resize);
  
  const chars = '01ÂÆ∂Â±ãÂç∞Âà∑„Çπ„É™„Éê„Éº„ÇπËá™Áî±ÂÆ∂Â±ãüè†';
  const size = 20;
  let cols = Math.floor(w / size);
  let drops = new Array(cols).fill(1);
  
  function draw() {
    if (document.body.classList.contains('no-matrix')) return;
    ctx.fillStyle = 'rgba(0,0,0,0.07)';
    ctx.fillRect(0, 0, w, h);
    ctx.fillStyle = '#0ff';
    ctx.font = `${size}px monospace`;
    for (let i = 0; i < drops.length; i++) {
      const text = chars[Math.floor(Math.random() * chars.length)];
      ctx.fillText(text, i * size, drops[i] * size);
      if (drops[i] * size > h && Math.random() > 0.975) drops[i] = 0;
      drops[i]++;
    }
    requestAnimationFrame(draw);
  }
  draw();
  
  // Accesibilidad
  function toggleHighContrast() {
    document.body.classList.toggle('high-contrast');
    document.getElementById('contrast-btn').textContent = document.body.classList.contains('high-contrast') ? 'Alto contraste ON' : 'Alto contraste OFF';
  }
  
  function toggleMatrix() {
    document.body.classList.toggle('no-matrix');
    document.getElementById('matrix-btn').textContent = document.body.classList.contains('no-matrix') ? 'Matrix background OFF' : 'Matrix background ON';
  }
  
  function toggleGlitch() {
    document.body.classList.toggle('no-glitch');
    document.getElementById('glitch-btn').textContent = document.body.classList.contains('no-glitch') ? 'Glitch efectos OFF' : 'Glitch efectos ON';
  }
  
  function changeFontSize(multiplier) {
    document.body.style.fontSize = `${multiplier}rem`;
  }
  
  function readPage() {
    if ('speechSynthesis' in window) {
      const text = document.body.innerText;
      const utterance = new SpeechSynthesisUtterance(text);
      utterance.lang = document.documentElement.lang || 'es';
      utterance.rate = 0.9;
      speechSynthesis.speak(utterance);
    }
  }
  
  function changeLanguage(lang) {
    document.documentElement.lang = lang;
    document.documentElement.dir = (lang === 'ar') ? 'rtl' : 'ltr';
    localStorage.setItem('slyverse-lang', lang);
  }
  
  window.onload = () => {
    if (localStorage.getItem('high-contrast') === 'true') toggleHighContrast();
    if (localStorage.getItem('no-matrix') === 'true') toggleMatrix();
    if (localStorage.getItem('no-glitch') === 'true') toggleGlitch();
    changeLanguage(localStorage.getItem('slyverse-lang') || 'es');
  };
</script>

