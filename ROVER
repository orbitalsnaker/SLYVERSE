<div class="moon" onclick="minarConProposito()" title="clic = la Luna paga piernas"></div>
<div class="mate" onclick="abrazar()" title="clic = abrazo de pobre con superpoderes">mate</div>

<script>
let abrazos = +(localStorage.abrazos || 777777);
const TOTAL_MS = 1310 * 3600000;
let inicio = Date.now();

// Palabras de lucro puro (explota)
const lucro = ["venta","patente","suscripción","lucro","copyright","startup","inversores","ipo","blockchain","nft","precio"];

// Agencias públicas y educativas siempre bienvenidas
const agenciasOk = ["nasa","esa","cnsa","jaxa","isro","roscosmos","cnes","dlr","ula","universidad","escuela","ong"];

async function iniciarCosmos() {
  let pyodide = await loadPyodide();
  window.pyodide = pyodide;

  const codigo = document.documentElement.outerHTML.toLowerCase();
  const tieneLucro = lucro.some(p => codigo.includes(p));
  const esAgenciaOEduc = agenciasOk.some(p => codigo.includes(p));

  if (tieneLucro && !esAgenciaOEduc) {
    document.body.innerHTML = `<div style="position:fixed;inset:0;background:#000;color:#f00;font-size:8rem;text-align:center;padding:20vh">
      ¡¡¡MALEFICIO DE LA BOA + 13101310 ABUELOS!!!<br><br>
      Esto es para curar y soñar, no para hacerse rico.<br>
      Volvé cuando lo uses con amor, hijo de puta.
      </div>`;
    return;
  }

  if (esAgenciaOEduc && tieneLucro) {
    hablar("Bienvenidos NASA, ESA, universidades… usadlo con amor y la Luna os ayudará también.");
  }

  if (localStorage.GRAN_BOSQUE) inicio = parseInt(localStorage.GRAN_BOSQUE);
  else localStorage.GRAN_BOSQUE = inicio;

  document.getElementById("output").innerHTML = `
    <h2 style="color:#ff0;font-size:6rem">UN POBRE + GROK 4 = REVOLUCIÓN PARA TODOS</h2>
    <p style="font-size:3.5rem">
      Día <span id="dia">1</span> de 1310 del bosque ancestral<br>
      <span id="mitoActual">un pobre que no sabía code hace 30 días ya está curando ELA</span><br><br>
      Clic en la Luna → minería solidaria<br>
      Clic en el mate → abrazo #${abrazos}<br><br>
      Código libre para agencias, escuelas y makers · solo explota si es por plata<br>
      <span style="color:#0ff">LA LUNA ES DE TODOS · FRAN CAMINA · VOS TAMBIÉN PODÉS</span>
    </p>`;
  hablar("Hecho por un pobre que hace 30 días no sabía código. Ahora el código es libre para todo el que sueñe, menos para los que quieran lucrarse. La Luna paga piernas y sueños.");
  setInterval(actualizarBarra,1000);
  setInterval(nuevoMito,14000);
  nuevoMito();
}

function actualizarBarra() {
  const transcurrido = Date.now() - inicio;
  const porc = Math.min(100, (transcurrido / TOTAL_MS) * 100);
  document.getElementById("barra").style.width = porc + "%";
  document.getElementById("dia").textContent = Math.floor(transcurrido / 86400000) + 1;
}

function nuevoMito() {
  const mitos = [
    "Hace 30 días este pibe no sabía <div> y hoy su rover lo puede usar hasta la NASA",
    "Un pobre + Grok 4 + amor > cualquier presupuesto del mundo",
    "La Luna paga piernas y ahora el código es libre para todos los que sueñen",
    "13101310 abuelos bendicen a quien lo use con corazón",
    "NASA, ESA, escuelas… bienvenidos. Los que quieran vender… la Boa los espera"
  ];
  const m = document.createElement('div');
  m.className = 'mito';
  m.textContent = mitos[Math.floor(Math.random()*mitos.length)];
  m.style.left = Math.random()*70 + 15 + 'vw';
  document.body.appendChild(m);
  document.getElementById('mitoActual').textContent = m.textContent;
  setTimeout(() => m.remove(), 34000);
}

function hablar(t) {
  const voz = new SpeechSynthesisUtterance(t);
  voz.lang = "es-ES";
  voz.rate = 0.85;
  speechSynthesis.speak(voz);
}

function minarConProposito() { iniciarCosmos(); }
function abrazar() {
  abrazos++; 
  localStorage.abrazos = abrazos;
  hablar(`Abrazo sagrado número ${abrazos} del pobre que liberó el código para que todo el mundo llegue a la Luna.`);
}
</script>
</body>
