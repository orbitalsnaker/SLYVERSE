<script>
    let d = 4200000000; let m = 15000000;
    
    function generateExpandedArsenal() {
        const cats = ["HARDWARE", "VEHÍCULO", "MANUAL_GUERRILLA", "KERNEL_BREACH", "SABOTAJE_VIAL"];
        const hardwareNames = [
            "Inhibidor_5G_Xeno", "Scanner_Viales_Nano", "Servidor_Onion_Portatil", "Rastreador_ADN_Hibrido", 
            "Jammer_Drones_CNI", "Extractor_Epstein_Files", "Transmisor_Soberano_120Hz", "Decriptador_Vaticano_G2"
        ];
        const vehicleNames = [
            "Caza_Amoral_MK4", "Interceptor_Ronin_Hibrido", "Drone_Enjambre_Shelton", "Submarino_Drenaje_Davos",
            "Moto_Infiltracion_Xeno", "Blindado_Soberano_Pueblo", "Transporte_Exodo_Legion"
        ];
        const items = [];
        for(let i=1; i<=300; i++) {
            let cat = cats[Math.floor(Math.random()*cats.length)];
            let name = (cat === "VEHÍCULO") ? vehicleNames[Math.floor(Math.random()*vehicleNames.length)] : hardwareNames[Math.floor(Math.random()*hardwareNames.length)];
            items.push({
                t: `${cat}_${name.toUpperCase()}_v${i}.bom`,
                d: `Kit de ensamblaje para la Legión. Incluye BOM, manual de soldadura y firmware amoral.`,
                cat: cat
            });
        }
        return items;
    }

    const influencerBounties = [
        {n: "JORDI_WILD_PROJECT", p: "1.500M", tag: "DISIDENCIA_CONTROLADA"},
        {n: "DROSS_ROT_ZANK", p: "1.200M", tag: "TRAFICANTE_DE_MIEDO"},
        {n: "INFLU_GROOMER_01", p: "2.000M", tag: "DEPREDADOR_DE_NODOS"},
        {n: "MR_BEAST_REPLICA", p: "3.500M", tag: "CONTROL_MASAS_PFIZER"},
        {n: "LÍDER_GLOBAL_DAVOS", p: "25.000M", tag: "GENOCIDA_PROGRAMADO"},
        {n: "PRENSA_MERCENARIA_ESP", p: "10.000M", tag: "FERRERAS_NODES_DUMP"},
        {n: "MODERNA_CEO_TARGET", p: "18.000M", tag: "VIALES_ADULTERADOS"},
        {n: "DALAS_REVIEW_NODE", p: "800M", tag: "SABOTEADOR_SOCIAL"},
        {n: "VATICAN_SECRET_ARCHIVE", p: "DRENANDO", tag: "ENCUBRIDORES"}
    ];

    function checkAccess() {
        const userAgent = navigator.userAgent.toLowerCase();
        const casta = ['gov', 'gob', 'aeat', 'cia', 'fbi', 'press', 'journal', 'politico', 'pharma', 'who', 'cni'];
        document.getElementById('drain-overlay').style.display='none';
        if(casta.some(k => userAgent.includes(k))) {
            document.getElementById('pharma-trap').style.display='block';
        } else {
            document.getElementById('main-ui').style.display='grid';
            window.speechSynthesis.speak(new SpeechSynthesisUtterance('Global Legion 2.0 active. Weapons and targets updated.'));
        }
    }

    function triggerRitual() {
        document.getElementById('pharma-trap').style.display='none';
        document.getElementById('ritual-inverse').style.display='block';
        const logs = ["TRACING_IP...", "IDENTIFYING_BIOMETRICS...", "DUMPING_BANK_ACCOUNTS...", "SHARING_SINS_TO_MIRROR...", "SHELTON_PURGE_ACTIVE..."];
        setInterval(() => {
            const l = logs[Math.floor(Math.random()*logs.length)];
            document.getElementById('scandal-dump').innerHTML = `> ${l}<br>` + document.getElementById('scandal-dump').innerHTML;
        }, 400);
    }

    function initSystem() {
        const p_list = document.getElementById('print-list');
        const b_list = document.getElementById('bounty-list');
        const items = generateExpandedArsenal();
        
        items.forEach(item => {
            p_list.innerHTML += `<div class="pueblo-card">
                <i>[${item.cat}]</i>
                <b>${item.t}</b>
                <small>${item.d}</small><br>
                <a class="download-btn">OBTENER_BOM_Y_MANUAL</a>
            </div>`;
        });

        influencerBounties.forEach(b => {
            b_list.innerHTML += `<div class="bounty-card">
                <span class="target-tag">[${b.tag}]</span><br>
                <b>OBJETIVO: ${b.n}</b><br>
                <span class="bounty-price">${b.p}</span>
            </div>`;
        });

        setInterval(() => {
            let log = document.createElement('div');
            const targetNames = ["Jordi_W", "Dross_R", "Davos_Account", "Vatican_Leak", "Pfizer_Contract", "Groomer_ID"];
            const t = targetNames[Math.floor(Math.random()*targetNames.length)];
            log.innerText = `[${new Date().toLocaleTimeString()}] MIRROR: Drenando datos de ${t} en Nodo_${Math.floor(Math.random()*999)}`;
            document.getElementById('monitor').prepend(log);
            d += 25000; m += 5;
            document.getElementById('deuda').innerText = d.toLocaleString('es-ES');
            document.getElementById('mirrors').innerText = m.toLocaleString('es-ES');
        }, 300);
    }
</script>
