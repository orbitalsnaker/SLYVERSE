<script>
let jp=false;
function toggleLang(){
  jp=!jp;
  document.querySelectorAll('[data-en]').forEach(e=>e.style.display=jp?'none':'block');
  document.querySelectorAll('[data-jp]').forEach(e=>e.style.display=jp?'block':'none');
  document.getElementById('subtitle').innerText =
    jp ? '軌道占拠。アンダードッグ反乱。' : 'ORBIT OCCUPIED. UNDERDOGS RISE.';
}
</script>

