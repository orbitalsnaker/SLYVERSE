<script>
// Wallet
const WALLET = "0xfddb91bd8157dafb735d4087cff8823b42eaadc7";

// Stock total (se guarda en localStorage)
let stock = JSON.parse(localStorage.getItem("slystock") || JSON.stringify({
  oni:131, wings:131, boa:131, fascia:88, nb:131
}));

// Actualizar todos los contadores al cargar
document.querySelectorAll("[id^=stock-]").forEach(el => {
  const key = el.id.split("-")[1];
  el.textContent = stock[key] || 0;
});

function pay(eur, type, product) {
  // Comprobar stock numeradas
  if (type && !type.includes("base") && !type.includes("progre") && !type.includes("plus") && stock[type] <=0) {
    return alert("Agotadas para la eternidad.");
  }

  const name = type.includes("base") || type.includes("progre") ? "SLYVERSE 2026" : prompt("Nombre / alias / pronombres / hash a grabar (máx 24 caracteres):", "ANÓNIMO") || "SLYVERSE 2026";
  const email = prompt("Email para tracking:", "no-email@proton.me") || "no-email@proton.me";

  const message = `\( {product} | \){name} | ${email}`;
  
  // QR
  document.getElementById("qr").style.display = "flex";
  
  // Copia al portapapeles
  navigator.clipboard.writeText(`\( {eur}€ → \){WALLET}\nMemo: "${message}"`);
  alert("QR abierto + datos copiados.\nPaga y en 18–28 días tu carne es libre.");

  // Restar stock numeradas
  if (type && stock[type] !== undefined) {
    stock[type]--;
    localStorage.setItem("slystock", JSON.stringify(stock));
    if (document.getElementById("stock-"+type)) {
      document.getElementById("stock-"+type).textContent = stock[type];
    }
    // también actualiza fascia y nb aunque usen otro nombre
    if (type.includes("fascia")) { stock.fascia--; document.getElementById("stock-fascia").textContent = stock.fascia; }
    if (type.includes("nb")) { stock.nb--; document.getElementById("stock-nb").textContent = stock.nb; }
  }
}

// 7 clics en footer = BOM gratis
let clicks=0;
document.getElementById("footer").onclick=()=>{
  if(++clicks===7){
    document.getElementById("secret-bom").style.display="block";
    clicks=0;
  }
};

// Efectos gore + matrix + countdown
for(let i=0;i<90;i++){
  const d=document.createElement("div");d.className="gore";
  d.style.left=Math.random()*100+"vw";
  d.style.animationDuration=(Math.random()*3+2)+"s";
  d.style.animationDelay=Math.random()*5+"s";
  document.getElementById("gore").appendChild(d);
}

const c=document.getElementById("c"),x=c.getContext("2d");
c.width=innerWidth;c.height=innerHeight;
const s="01アイウエオカキクケコサシスセソタチツテトナニヌネノハヒフヘホ";
setInterval(()=>{
  x.fillStyle="rgba(0,0,0,0.05)";x.fillRect(0,0,c.width,c.height);
  x.fillStyle="#0f0";
  for(let i=0;i<200;i++){
    let t=s[Math.floor(Math.random()*s.length)];
    x.fillText(t,Math.random()*c.width,Math.random()*c.height)}
},50);

const end=new Date("2026-01-31T00:00:00Z").getTime();
setInterval(()=>{
  let d=end-new Date();
  if(d<0){document.getElementById("timer").innerHTML="CERRADA";return;}
  let str=Math.floor(d/864e5)+"d "+Math.floor(d%864e5/36e5)+"h "+Math.floor(d%36e5/6e4)+"m "+Math.floor(d%6e4/1e3)+"s";
  document.getElementById("timer").innerHTML=str
},1000);
</script>
