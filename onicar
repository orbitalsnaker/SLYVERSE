<script>
// Easter egg definitivo: 7 toques = modo Dios (versión Xi Jinping + Elon al mismo tiempo)
let toque = 0;
let modoDios = false;

document.body.onclick = () => {
  toque++;
  
  if(toque === 3 && !modoDios){
    speechSynthesis.speak(new SpeechSynthesisUtterance("Frenada automática de emergencia activada. Vehículo detenido en 1.8 segundos desde 169 km/h. Cinco estrellas Euro NCAP chino certificado. Gloria al Partido y a la humanidad."));
    navigator.vibrate([800,400,800,400,1200]);
    toque = 0;
  }
  
  if(toque === 7){
    modoDios = true;
    document.body.style.background = "radial-gradient(circle at 50% 0%,#8B0000,#000)";
    document.querySelector('h1').textContent = "BOA-01 MUSK EDITION";
    document.querySelectorAll('.panel').forEach(p => p.style.borderColor = "#ff0000");
    document.querySelectorAll('.panel').forEach(p => p.style.boxShadow = "0 0 80px #f00");
    document.querySelector('.boa5').style.borderColor = "#ff0000";
    document.querySelector('.boa5').style.boxShadow = "0 0 300px #f00";
    document.querySelector('.boa5::after').textContent = "BOA-01 长征 EDITION";
    speechSynthesis.speak(new SpeechSynthesisUtterance("Bienvenido camarada Musk. El Partido ha aprobado tu fusión con la Madre Patria. Cinco estrellas eternas."));
    navigator.vibrate([500,500,500,500,500,1000,1000,2000]);
    setInterval(() => {
      document.getElementById('speed').textContent = 420;
      document.getElementById('battery').textContent = 69;
    }, 1000);
  }
};

// Frases aún más salvajes
const frasesSalvajes = [
  "12 ultrasonidos chinos ven mejor que un Tesla FSD",
  "Por 157 € tengo más sensores que un Mercedes EQS de 150.000 €",
  "El pobre también tiene AEB, cabrones",
  "Euro NCAP 2027: 5 estrellas o reeducación en Xinjiang",
  "Frena mejor que un Model 3 y sobra dinero pa 400 xiaomi su7",
  "LiDAR de 3 € > radar continental de 3000 €",
  "El BOA-01 ha superado el crash test… y la gran muralla firewall",
  "Elon, devuelve los 15.000 $ del FSD, esto lo hace una naranja pi"
];

setInterval(() => {
  const speed = modoDios ? 420 : [144,155,169,180,188,199][Math.floor(Math.random()*6)];
  document.getElementById('speed').textContent = speed;
  document.getElementById('battery').textContent = modoDios ? 69 : Math.round(85 + Math.random()*14);
  document.getElementById('tech').innerHTML = frasesSalvajes[Math.floor(Math.random()*frasesSalvajes.length)] + 
    (modoDios ? "<br><br><b>Coste total seguridad: 0 yuanes (el Partido paga)</b>" : "<br><br><b>Coste total seguridad: 157 €</b>");
}, 2800);
</script>