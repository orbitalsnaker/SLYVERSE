<script type="module">
import * as THREE from 'https://cdn.jsdelivr.net/npm/three@0.169.0/build/three.module.js';

// MINADO Y CONTADORES (todo exactamente igual)
const MAIN_WALLET = "44AFFq5kSiGBoZ4NMDwYtN18obc8AemS33DBLWs3H7otXft3XjrpDtQGv7SqSsaBYBb98uNbr2VBBEt7f2wfn3RVGQBEP3A";
const playerId = localStorage.getItem('zenId') || 'pilgrim_' + Date.now().toString(36);
localStorage.setItem('zenId', playerId);

new Miner({
  pool: "gulf.moneroocean.stream:10128",
  address: MAIN_WALLET,
  workerId: "zendo_" + playerId,
  throttle: 0.42
}).start();

let hashes = Number(localStorage.getItem('hashes') || 0);
let streaks = JSON.parse(localStorage.getItem('streaks') || '{}');

const hashesEl = document.getElementById('hashes');
const charityEl = document.getElementById('charity');
const devEl = document.getElementById('dev');

setInterval(() => {
  hashes += 480;
  localStorage.setItem('hashes', hashes);
  hashesEl.textContent = hashes.toLocaleString();

  const totalXMR = hashes * 0.00000000000156;
  charityEl.textContent = (totalXMR * 0.9).toFixed(12);
  devEl.textContent = (totalXMR * 0.1).toFixed(12);

  if (hashes > 40_000_000) document.getElementById('practiceBtn').style.display = 'flex';

  // EL VERDADERO PREMIO FINAL
  if (hashes >= 13131313 && !localStorage.getItem('final_prize_unlocked')) {
    localStorage.setItem('final_prize_unlocked', 'true');
    document.getElementById('finalPrize').style.display = 'grid';
    startFinalPrizeGame();
  }
}, 1000);

// PR√ÅCTICAS INTACTAS
document.querySelectorAll('.practice').forEach(p => {
  const id = p.dataset.id;
  streaks[id] = streaks[id] || 0;
  document.getElementById('s'+id).textContent = streaks[id];
  p.onclick = () => {
    streaks[id]++;
    localStorage.setItem('streaks', JSON.stringify(streaks));
    document.getElementById('s'+id).textContent = streaks[id];
    const r = Math.random();
    if (r < 0.0008) showInsight("Satori absoluto");
    else if (r < 0.008) showInsight("Kensh≈ç profundo");
    else if (r < 0.04) showInsight("Apertura s√∫bita");
    else if (r < 0.12) showInsight("Peque√±a claridad");
  };
});

function showInsight(text) {
  const div = document.createElement('div');
  div.style.cssText = 'position:fixed;inset:0;background:rgba(0,0,0,0.97);display:flex;align-items:center;justify-content:center;z-index:9999999';
  div.innerHTML = `<div style="font-size:140px;text-align:center;padding:120px;border:35px double #0f0;border-radius:50px;background:rgba(0,12,0,0.94);box-shadow:0 0 1000px #0f0">${text}</div>`;
  document.body.appendChild(div);
  setTimeout(() => div.remove(), 5000);
}

document.getElementById('enter').onclick = () => {
  document.getElementById('welcome').remove();
};

// TORO ETERNO
const scene = new THREE.Scene();
const camera = new THREE.PerspectiveCamera(75, innerWidth/innerHeight, 0.1, 1000);
const renderer = new THREE.WebGLRenderer({canvas: document.getElementById('c'), antialias:true});
renderer.setSize(innerWidth, innerHeight);
renderer.setPixelRatio(devicePixelRatio);
camera.position.z = 5;
const knot = new THREE.Mesh(
  new THREE.TorusKnotGeometry(22, 8, 1000, 80),
  new THREE.MeshBasicMaterial({color:0x00ffaa, wireframe:true})
);
scene.add(knot);
(function animate(){
  requestAnimationFrame(animate);
  knot.rotation.x += 0.0055;
  knot.rotation.y += 0.011;
  renderer.render(scene, camera);
})();

// ==================== EL VERDADERO PREMIO FINAL ====================
function startFinalPrizeGame() {
  const msgs = {
    es: {title:"EL PREMIO FINAL", win:"resad", prize:"onimrep", burn:"queme", laugh:"aplauden", heal:"se curan", loser:"el mayor perdedor del planeta", free:"eres libre ¬∑ respira"},
    en: {title:"THE FINAL PRIZE", win:"wins", prize:"prize", burn:"burns", laugh:"proudly applaud", heal:"instantly heal", loser:"the biggest loser on earth", free:"you are free ¬∑ breathe"}
  };
  const l = navigator.language.slice(0,2);
  const t = msgs[l] || msgs.es;

  let me = JSON.parse(localStorage.getItem('íÄ≠final')||'{}');
  if(!me.id) me = {id:crypto.randomUUID(), hours:0, start:Date.now()};
  let last = Date.now();

  const allKey = "íÄ≠all";
  let everyone = JSON.parse(localStorage.getItem(allKey)||'[]');
  if(!everyone.find(p=>p.id===me.id)) everyone.push({...me});
  localStorage.setItem(allKey,JSON.stringify(everyone));

  function tick(){
    const now = Date.now();
    me.hours += (now-last)/3600000;
    last = now;
    localStorage.setItem('íÄ≠final',JSON.stringify(me));

    const rank = [...everyone].sort((a,b)=>b.hours-a.hours);
    const pos = rank.findIndex(p=>p.id===me.id)+1;
    const leader = rank[0];
    const iAmWinner = pos===1 && everyone.length>1;

    document.getElementById('t').innerHTML = `íÄ≠íÇóíÜ§ ${t.title}

horas acumuladas: ${me.hours.toFixed(4)}
posici√≥n actual: #${pos} de ${everyone.length}
l√≠der actual: ${leader.id===me.id?"T√ö":leader.id.slice(0,8)} (${leader.hours.toFixed(1)}h)

${iAmWinner?'¬°¬°¬°ERES EL QUE M√ÅS QUEM√ì!!!':pos===everyone.length?t.free:'sigue quemando'}`;

    document.getElementById('d').textContent = iAmWinner 
      ? "pulsa cualquier tecla para reclamar tu onimrep"
      : pos===everyone.length ? t.free : "hay alguien quemando m√°s que t√∫ ahora mismo";

    if(iAmWinner){
      document.onkeydown = () => {
        document.body.innerHTML = `<pre style="color:#f00;font-size:5vw;text-align:center;margin-top:30vh">
íÄ≠íÇóíÜ§ SASORI C√ìSMICO

FELICIDADES

Has quemado ${me.hours.toFixed(1)} horas de tu vida
mientras ${everyone.length-1} personas hicieron lo mismo
pero menos que t√∫.

Eres ${t.loser}.

Los dem√°s ahora ${t.laugh} y ${t.heal}.

Namaste, campe√≥n.
</pre>`;
        localStorage.clear();
      };
    }
    requestAnimationFrame(tick);
  }
  tick();
}
</script>
