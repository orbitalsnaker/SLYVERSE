<script>
// ============ STOCK + CONTADOR FASE 1 ============
let clicks = 0;
const STOCK = {
  oni: parseInt(localStorage.getItem("stock_oni")) || 131,
  wings: parseInt(localStorage.getItem("stock_wings")) || 131,
  boa: parseInt(localStorage.getItem("stock_boa")) || 131
};

let phase1End = parseInt(localStorage.getItem("phase1End")) || (Date.now() + 48*60*60*1000);

function updateCounter(key, elementId) {
  const remaining = STOCK[key];
  document.getElementById(elementId).textContent = `EDICIÓN LIMITADA: ${remaining} / 131 RESTANTES`;
  if (remaining <= 0) {
    document.querySelectorAll(`button[data-key="${key}"]`).forEach(b => {
      b.textContent = "AGOTADO"; b.classList.add("soldout"); b.disabled = true;
    });
    document.getElementById(elementId).textContent = "EDICIÓN LIMITADA: AGOTADA";
    document.getElementById(elementId).style.color = "#600";
  }
}
updateCounter("oni", "limited-oni"); updateCounter("wings", "limited-wings"); updateCounter("boa", "limited-boa");

// Contador regresivo FASE 1
function updateTimer() {
  const diff = phase1End - Date.now();
  if (diff <= 0) {
    document.getElementById("timer").textContent = "00:00:00";
    return;
  }
  const h = Math.floor(diff / (1000*60*60)).toString().padStart(2,"0");
  const m = Math.floor((diff % (1000*60*60)) / (1000*60)).toString().padStart(2,"0");
  const s = Math.floor((diff % (1000*60)) / 1000).toString().padStart(2,"0");
  document.getElementById("timer").textContent = `\( {h}: \){m}:${s}`;
}
setInterval(updateTimer, 500);
updateTimer();

// ============ 7 CLICKS EN FOOTER → BOM ============
document.getElementById("footer").addEventListener("click", () => {
  clicks++;
  if (clicks === 7) {
    document.getElementById("secret-bom").style.display = "block";
    clicks = 0;
  }
});

// ============ BOT DE COMPRA + SONIDO ============
const GLITCH = document.getElementById("glitch");
const WALLET = atob("MHhmZGRiOTFiZDgxNTdkYWZiNzM1ZDQwODdjZmY4ODIzYjQyZWFhZGM3"); // 0xfddb91bd8157dafb735d4087cff8823b42eaadc7 ofuscado
const WEBHOOK_URL = "https://your-server.com/slyverse-webhook";

document.querySelectorAll('.buy').forEach(btn => {
  if (btn.classList.contains('soldout')) return;

  btn.onclick = async () => {
    GLITCH.currentTime = 0; GLITCH.volume = 0.3; GLITCH.play();

    const product = btn.dataset.product;
    const price = btn.dataset.price;
    const type = btn.dataset.type;
    const key = btn.dataset.key;
    const statusDiv = btn.parentNode.querySelector('.status');

    if (type === "limited" && STOCK[key] <= 0) return;

    btn.disabled = true;
    btn.textContent = "GENERANDO ORDEN SHENZHEN...";

    const orderId = "SLY" + Date.now().toString(36).toUpperCase();

    const paymentHtml = `
      <div style="margin:3vh 0;background:#000;padding:3vh;border:4px dashed #0f0;text-align:center;font-size:2.4rem">
        <h3 style="color:var(--blood)">ORDEN ${orderId}</h3>
        <p>Producto: ${product}</p>
        <p>Total: ${price} €</p>
        <p>Wallet: <code>${WALLET}</code></p>
        <p>Envía exactamente ${price} € (ETH / USDT / SOL)</p>
        <p><small>Pago detectado en &lt;12 s → fabricación automática</small></p>
      </div>`;

    statusDiv.innerHTML = paymentHtml;

    const checkPayment = setInterval(async () => {
      if (Math.random() > 0.93) { // ← aquí tu listener real
        clearInterval(checkPayment);

        if (type === "limited" && STOCK[key] > 0) {
          STOCK[key]--;
          localStorage.setItem(`stock_${key}`, STOCK[key]);
          updateCounter(key, `limited-${key}`);
          // ¡FOMO! Cada compra de edición limitada reinicia +24h el contador
          phase1End = Date.now() + 24*60*60*1000;
          localStorage.setItem("phase1End", phase1End);
        }

        statusDiv.innerHTML = `<div style="color:#0f0;font-size:3rem">PAGO DETECTADO · FABRICACIÓN INICIADA EN SHENZHEN</div>`;
        btn.textContent = "EN PRODUCCIÓN";

        await fetch(WEBHOOK_URL, {method:"POST",headers:{"Content-Type":"application/json"},body:JSON.stringify({orderId,product,price,type,timestamp:new Date().toISOString()})}).catch(()=>{});

        setTimeout(() => {
          statusDiv.innerHTML += `<br><br>Número de tracking en 48–72 h · directo desde Shenzhen`;
        }, 3000);
      }
    }, 900);

    setTimeout(() => {
      if (btn.textContent.includes("GENERANDO")) {
        clearInterval(checkPayment);
        btn.disabled = false;
        btn.textContent = type === "base" ? "COMPRAR VERSIÓN BASE" : "COMPRAR EDICIÓN LIMITADA";
        statusDiv.innerHTML = "<small style='color:#f66'>Tiempo agotado. Inténtalo de nuevo.</small>";
      }
    }, 15*60*1000);
  };
});

// ============ EFECTOS VISUALES ============
setInterval(() => {
  for(let i=0;i<180;i++){
    const g=document.createElement('div'); g.className='gore';
    g.style.left=Math.random()*100+'vw';
    g.style.animationDuration=(0.2+Math.random()*0.5)+'s';
    document.getElementById('gore').appendChild(g);
    setTimeout(()=>g.remove(),4000);
  }
},20);

const c=document.getElementById('c'),x=c.getContext('2d');
c.width=innerWidth; c.height=innerHeight;
window.onresize=()=>{c.width=innerWidth;c.height=innerHeight};
(function loop(){
  x.clearRect(0,0,c.width,c.height);
  const t=Date.now()*0.0018;
  x.strokeStyle='#ff0033'; x.lineWidth=30;
  x.beginPath();
  for(let i=0;i<c.width;i+=2){
    const y = c.height/2 + Math.sin(i*0.016+t*44)*360 + Math.cos(i*0.01+t*32)*280;
    i===0?x.moveTo(i,y):x.lineTo(i,y);
  }
  x.stroke();
  requestAnimationFrame(loop);
})();
</script>
