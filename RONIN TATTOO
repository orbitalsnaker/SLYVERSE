<script src="https://cdn.jsdelivr.net/npm/three@0.168.0/build/three.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/three@0.168.0/examples/js/controls/OrbitControls.js"></script>

<script>
let stroke=96, volt=8.3, haptic=88, modo="BARRIO";
const log = document.getElementById("log");
function l(m){ log.innerHTML += m + "<br>"; log.scrollTop = log.scrollHeight; }

document.getElementById("cmd").addEventListener("keypress", e => {
  if(e.key !== "Enter") return;
  const cmd = e.target.value.trim().toLowerCase();
  l("$ " + cmd);
  e.target.value = "";

  if(cmd === "help") l("smoke | onimode | buy | clear");
  if(cmd === "smoke" || cmd === "onimode"){
    modo = "ONI";
    document.getElementById("modoSelect").value = "ONI";
    document.getElementById("modo").textContent = "ONI";
    document.getElementById("humo").style.opacity = 0.5;
    setTimeout(()=>document.getElementById("humo").style.opacity=0, 5000);
    l("ONI MODE ACTIVATED — ojos sangran rojo");
    generarTatuaje("japanese oni mask, red and black, cyberpunk barrio style, tattoo design");
  }
  if(cmd === "buy") showBOM();
  if(cmd === "clear") log.innerHTML = "";
});

// Sliders
["stroke","volt","haptic"].forEach(p => {
  document.getElementById(p+"Slider").addEventListener("input", e => {
    window[p] = p==="volt" ? (e.target.value/10) : +e.target.value;
    document.getElementById(p).textContent = window[p];
    const perc = p==="volt" ? (window[p]-5)/(9-5)*100 : p==="stroke" ? (window[p]-60)/(110-60)*100 : window[p];
    document.getElementById("fill_"+p[0]).style.width = perc + "%";
  });
});

document.getElementById("modoSelect").onchange = e => {
  modo = e.target.value;
  document.getElementById("modo").textContent = modo;
  let prompt = "";
  if(modo==="BARRIO") prompt = "chicano blackwork, lowrider, barrio lettering, roses and skulls tattoo";
  if(modo==="ONI") prompt = "japanese oni mask red cyberpunk neon tattoo";
  if(modo==="THETA") prompt = "theta wave minimal geometric sacred geometry blackwork tattoo";
  if(modo==="KUNGFU") prompt = "bruce lee dragon chinese black and grey realism tattoo";
  generarTatuaje(prompt);
};

function showBOM(){ document.getElementById("bom").style.display = "block"; }

// ---------- 3D ----------
const scene = new THREE.Scene(); scene.background = new THREE.Color(0x000000);
const camera = new THREE.PerspectiveCamera(50, 500/420, 0.1, 1000);
const renderer = new THREE.WebGLRenderer({canvas: document.getElementById("preview"), antialias: true});
renderer.setSize(500,420);
const controls = new THREE.OrbitControls(camera, renderer.domElement);
controls.enableDamping = true;

scene.add(new THREE.AmbientLight(0x404040));
const light = new THREE.DirectionalLight(0x00ffff, 3);
light.position.set(5,10,7); scene.add(light);

const pen = new THREE.Group();
const cuerpo = new THREE.Mesh(new THREE.CylinderGeometry(1,1,9,32), new THREE.MeshPhongMaterial({color:0x0f0f0f, metalness:0.9}));
pen.add(cuerpo);
const grip = new THREE.Mesh(new THREE.CylinderGeometry(1.4,1.6,4,32), new THREE.MeshPhongMaterial({color:0xff3366}));
grip.position.y = -5.5; pen.add(grip);
const ecc = new THREE.Mesh(new THREE.SphereGeometry(0.6,32,16), new THREE.MeshPhongMaterial({color:0x00ffff, emissive:0x00ffff}));
ecc.position.y = 4.2; pen.add(ecc);

const skin = new THREE.Mesh(
  new THREE.PlaneGeometry(12,12),
  new THREE.MeshBasicMaterial({color:0xffdbac, side: THREE.DoubleSide})
);
skin.rotation.x = -Math.PI/2;
skin.position.y = -6;
scene.add(skin);
scene.add(pen);
camera.position.set(15,10,15);

// ---------- IA TATUAJE (fal.ai gratis) ----------
async function generarTatuaje(prompt) {
  l("Pintando piel con IA... " + prompt.substring(0,30)+"...");
  try {
    const response = await fetch("https://fal.run/fal-ai/flux/schnell", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        prompt: prompt + ", perfect tattoo stencil, high contrast, black ink only, white background",
        image_size: "square"
      })
    });
    const data = await response.json();
    const texture = new THREE.TextureLoader().load(data.images[0].url, () => {
      skin.material.map = texture;
      skin.material.needsUpdate = true;
      l("Tatuaje cargado en la piel.");
    });
  } catch(e) {
    l("IA offline hoy, barrio sigue tatuando a mano");
  }
}

// Primera generación
generarTatuaje("chicano blackwork rose and skull tattoo design");

// Animación
function animate() {
  requestAnimationFrame(animate);
  pen.rotation.y += 0.008;
  ecc.position.y = 4.2 + Math.sin(Date.now() * 0.015) * (stroke/110 * 2);
  controls.update();
  renderer.render(scene, camera);
}
animate();
</script>
