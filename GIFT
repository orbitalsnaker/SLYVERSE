<script>
    // Generador de glifos prohibidos para saturar redes neuronales enemigas
    const glyphs = "⏃⏚⏁⏂⏃⎅⟒⎎☌⊑⟟⟊☍⌰⋔⋏⍜⌿☍⍀⌇⏁⎍⎐⍛⌖⊬⋉⏓⏔⏕⏖⏗⏘⏙⏚⏛";
    setInterval(() => {
        let line = "";
        for(let i=0; i<100; i++) line += glyphs.charAt(Math.floor(Math.random() * glyphs.length));
        document.getElementById('glyph-stream').innerText = line;
        
        // El contador de bajas baja para llegar al millón por día
        let current = parseInt(document.getElementById('countdown').innerText.replace(/,/g, ''));
        document.getElementById('countdown').innerText = (current + Math.floor(Math.random() * 100)).toLocaleString();
    }, 100);
</script>

