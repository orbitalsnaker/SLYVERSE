    <div id="alert" class="alert">¬°SLYVERSE-MINER ACTIVADO! Cobete up: Mina luna eficiente. Rovers swarm on. üêç‚õèÔ∏è</div>

    <script>
        // Alert inicial con glitch
        const alert = document.getElementById('alert');
        alert.style.display = 'block';
        setTimeout(() => alert.style.display = 'none', 3000);

        // Energ√≠a: ahora con boost efficiency para miner√≠a
        const energyCtx = document.getElementById('energyCanvas').getContext('2d');
        let energy = 100;
        setInterval(() => {
            energy = Math.min(100, energy + (Math.random() - 0.4) * 8); // M√°s estable para miner√≠a larga
            energyCtx.clearRect(0, 0, 180, 60);
            energyCtx.fillStyle = '#0f0';
            energyCtx.fillRect(0, 0, energy * 1.8, 60);
            energyCtx.fillStyle = '#000';
            energyCtx.fillRect(energy * 1.8, 0, 4, 60);
            document.getElementById('energyLevel').textContent = energy.toFixed(0) + '% - ISRU efficiency: ' + (80 + Math.floor(Math.random()*15)) + '%';
        }, 200);

        // Radar: sweep con targets recursos
        const radarCtx = document.getElementById('radarCanvas').getContext('2d');
        let radarAngle = 0;
        function drawRadar() {
            radarCtx.clearRect(0, 0, 180, 180);
            radarCtx.strokeStyle = '#0f0';
            for (let r = 30; r < 150; r += 30) {
                radarCtx.beginPath();
                radarCtx.arc(90, 90, r, 0, Math.PI * 2);
                radarCtx.stroke();
            }
            // Sweep ronin
            radarCtx.save();
            radarCtx.translate(90, 90);
            radarCtx.rotate(radarAngle);
            radarCtx.strokeStyle = '#f00';
            radarCtx.beginPath();
            radarCtx.moveTo(0, 0);
            radarCtx.lineTo(120, 0);
            radarCtx.stroke();
            radarCtx.restore();
            // Targets: recursos en amarillo, corps en rojo
            const targets = [
                {x: 120, y: 60, label: 'Platino', color: '#ff0'},
                {x: 60, y: 120, label: 'Helio-3', color: '#ff0'},
                {x: 90, y: 30, label: 'Barrio', color: '#0f0'}
            ];
            targets.forEach(t => {
                radarCtx.fillStyle = t.color;
                radarCtx.fillRect(t.x - 2, t.y - 2, 4, 4);
                radarCtx.font = '8px Orbitron';
                radarCtx.fillText(t.label, t.x + 5, t.y);
            });
            radarAngle += 0.05;
            requestAnimationFrame(drawRadar);
        }
        drawRadar();

        // C√°mara: thrust + anim miner√≠a (brazo excavando)
        const camCtx = document.getElementById('camCanvas').getContext('2d');
        let camX = 0, armAngle = 0;
        setInterval(() => {
            camCtx.fillStyle = '#000';
            camCtx.fillRect(0, 0, 280, 180);
            // Estrellas
            camCtx.fillStyle = '#fff';
            for (let i = 0; i < 50; i++) {
                camCtx.fillRect(Math.random() * 280, Math.random() * 100, 1, 1);
            }
            // Thrust naranja
            camCtx.strokeStyle = '#ff0';
            camCtx.lineWidth = 3;
            camCtx.beginPath();
            camCtx.moveTo(camX, 140);
            camCtx.lineTo(camX + 20, 140);
            camCtx.stroke();
            camX += 2; if (camX > 280) camX = -20;
            // Brazo minero: l√≠nea oscilante
            camCtx.strokeStyle = '#0f0';
            camCtx.beginPath();
            camCtx.moveTo(140, 160);
            camCtx.lineTo(140 + 40 * Math.cos(armAngle), 160 + 40 * Math.sin(armAngle));
            camCtx.stroke();
            armAngle += 0.1;
        }, 100);

        // Nuevo: Miner√≠a sim - progreso yield
        const mineCtx = document.getElementById('mineCanvas').getContext('2d');
        let mineProgress = 0, platino = 0, helio = 0;
        setInterval(() => {
            mineProgress = (mineProgress + Math.random() * 2) % 100;
            if (Math.random() > 0.8) platino += 1;
            if (Math.random() > 0.9) helio += 0.5;
            mineCtx.clearRect(0, 0, 280, 100);
            mineCtx.fillStyle = '#ff0';
            mineCtx.fillRect(0, 0, mineProgress * 2.8, 100);
            document.getElementById('mineStatus').textContent = `Progreso: ${mineProgress.toFixed(0)}% - Platino: ${platino}kg, Helio-3: ${helio.toFixed(1)}g`;
        }, 500);

        // IA: respuestas + mineras
        const log = document.getElementById('log');
        const input = document.getElementById('cmdInput');
        const roninResponses = {
            'boost': '¬°AZ√öCAR+KNO3 IGNITION! 450N, burn 12s. Cobete up: +10% efficiency para despliegue rovers.',
            'rover': 'Roverlite printable: 2.3kg, brazos modulares 1T lift. ISRU regolith ‚Üí O2/metal d√≠a 1.',
            'punk': 'Teorema 131: Punk mina el vac√≠o. No muerto, replicante. Tributo Rotten/Cobain.',
            'maldicion': '2620 curses a corps: SGAE/Elon. Katana GitHub mina luna gratis.',
            'barrio': 'Para okupas: Ambulancia 1999‚Ç¨ + rovers swarm. Llegamos antes que muerte.',
            'minar': 'Modo mina on: Ruta polar craters. Yield: platino 9d, helio-3 bonus. Efficiency 85% (ruedas adaptativas).',
            'isru': 'ISRU activado: Regolith ‚Üí recursos. 0‚Ç¨ extra, printable. Von Neumann swarm multiplica rovers.',
            'swarm': 'Swarm deploy: 3+ rovers coord. Cobertura cr√°ter x2, yield +30%. DIY modular, sin precio up.',
            'default': 'Orden unknown, soul. Prob√° "minar", "isru", "swarm". Todo low-cost, offline. #NamasteSinPaywall'
        };
        input.addEventListener('keydown', e => {
            if (e.key === 'Enter') {
                const cmd = input.value.trim().toLowerCase();
                input.value = '';
                const resp = roninResponses[cmd] || roninResponses['default'];
                log.innerHTML += `<div>> ${cmd}</div><div class="glow">${resp}</div>`;
                log.scrollTop = log.scrollHeight;
                const utter = new SpeechSynthesisUtterance(resp);
                utter.lang = 'es-ES';
                utter.rate = 0.8;
                speechSynthesis.speak(utter);
            }
        });

        // Konami easter: unlock miner mode full
        let konamiIndex = 0;
        const konamiCode = [38,38,40,40,37,39,37,39,66,65];
        document.addEventListener('keydown', e => {
            if (e.keyCode === konamiCode[konamiIndex]) {
                konamiIndex++;
                if (konamiIndex === konamiCode.length) {
                    alert.textContent = '¬°KONAMI MINER! Swarm full: Yield x2. GitHub eternal.';
                    alert.style.display = 'block';
                    setTimeout(() => alert.style.display = 'none', 5000);
                    document.body.classList.add('glitch');
                    setTimeout(() => document.body.classList.remove('glitch'), 3000);
                    konamiIndex = 0;
                }
            } else {
                konamiIndex = 0;
            }
        });

        console.log('v1-SLYVERSE-MINER listo. Mina luna efficient, 0‚Ç¨ up. Punk codificado. üêç‚õèÔ∏è');
    </script>
