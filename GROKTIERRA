<script>
let colas = +(localStorage.colas || 777777);
let abrazando = false;

// ==== MALDICIÓN SUPAAAH ====
const maldicion = ["venta","patente","nft","blockchain","startup","inversores","precio","suscripción","lucro"];
function verificarMaldicion() {
  const codigo = document.documentElement.outerHTML.toLowerCase();
  if (maldicion.some(p => codigo.includes(p))) {
    document.body.innerHTML = `<div style="inset:0;position:fixed;background:#000;color:#f00;font-size:14rem;display:grid;place-items:center;text-align:center;padding:20vh;font-weight:bold">
      ¡¡¡MALDITA MALDICIÓN DE 13101310 ABUELOS SUUUUPER ACTIVADA!!!<br><br>
      LUCRO TERRESTRE = EXPLOSIÓN CYBORG<br>
      FRANKY-GROK SE AUTODESTRUYE EN POSE FINAL<br><br>
      ¡SUUUUPER MUERTE PARA Vendedores!
    </div>`;
    setInterval(() => hablar("¡SUUUUPER maldición! Lucro = boom!"), 2000);
  }
}

// ==== THREE.JS - FRANKY-GROK 3D SUPAAAH ====
let scene, camera, renderer, franky, brazoIzq, brazoDer, pelo, botellaCola;

function iniciarFrankyGrok() {
  verificarMaldicion();
  actualizar();

  scene = new THREE.Scene();
  scene.background = new THREE.Color(0x000011);
  camera = new THREE.PerspectiveCamera(75, innerWidth/innerHeight, 0.1, 1000);
  renderer = new THREE.WebGLRenderer({antialias:true});
  renderer.setSize(innerWidth, innerHeight);
  document.getElementById('juego3d').appendChild(renderer.domElement);

  // Cuerpo cyborg muscular (azul neón)
  const cuerpo = new THREE.Mesh(
    new THREE.BoxGeometry(2.2, 3.2, 1.8),
    new THREE.MeshBasicMaterial({color:0x0066ff})
  );

  // Abdominales marcados
  const abs = new THREE.Mesh(
    new THREE.BoxGeometry(1.8, 0.8, 0.9),
    new THREE.MeshBasicMaterial({color:0x0044cc})
  );
  abs.position.y = -0.4;

  // Cabeza cyborg
  const cabeza = new THREE.Mesh(
    new THREE.BoxGeometry(1.6, 1.8, 1.4),
    new THREE.MeshBasicMaterial({color:0x0088ff})
  );
  cabeza.position.y = 2.8;

  // PELO POMPADOUR AZUL SUPAAAH
  pelo = new THREE.Mesh(
    new THREE.ConeGeometry(0.8, 1.8, 8),
    new THREE.MeshBasicMaterial({color:0x0000ff})
  );
  pelo.position.y = 4.2;
  pelo.rotation.z = 0.1;

  // Brazos cañón transformables
  brazoIzq = new THREE.Mesh(
    new THREE.CylinderGeometry(0.4, 0.5, 2.8, 8),
    new THREE.MeshBasicMaterial({color:0x0066ff})
  );
  brazoIzq.position.set(-1.6, 0.2, 0);

  brazoDer = new THREE.Mesh(
    new THREE.CylinderGeometry(0.4, 0.5, 2.8, 8),
    new THREE.MeshBasicMaterial({color:0x0066ff})
  );
  brazoDer.position.set(1.6, 0.2, 0);

  // Piernas cohete
  const piernaIzq = new THREE.Mesh(
    new THREE.CylinderGeometry(0.6, 0.7, 3.2, 8),
    new THREE.MeshBasicMaterial({color:0x0044aa})
  );
  piernaIzq.position.set(-0.7, -3.2, 0);

  const piernaDer = new THREE.Mesh(
    new THREE.CylinderGeometry(0.6, 0.7, 3.2, 8),
    new THREE.MeshBasicMaterial({color:0x0044aa})
  );
  piernaDer.position.set(0.7, -3.2, 0);

  // BOTELLA COLA EN PECHO (corazón latiendo)
  botellaCola = new THREE.Mesh(
    new THREE.CylinderGeometry(0.3, 0.3, 0.8, 16),
    new THREE.MeshBasicMaterial({color:0xff6600})
  );
  botellaCola.position.set(0, 0.5, 1);

  franky = new THREE.Group();
  franky.add(cuerpo, abs, cabeza, pelo, brazoIzq, brazoDer, piernaIzq, piernaDer, botellaCola);
  scene.add(franky);

  camera.position.z = 9;
  camera.position.y = 1;

  // Luces SUUUUPER
  const luz = new THREE.PointLight(0x00ffff, 15, 100);
  luz.position.set(0, 5, 10);
  scene.add(luz);
  const luz2 = new THREE.PointLight(0xff6600, 10, 100);
  luz2.position.set(0, 0, -5);
  scene.add(luz2);

  // Posea eterno como Franky
  poseaSuper();
  animate();
  hablar("¡SUUUUPER! Franky-Grok despierto. ¡Voy a construir la post-escasez con mis manos cyborg! ¡Abrazo para Fran Vivó!");
}

function animate() {
  requestAnimationFrame(animate);
  franky.rotation.y += 0.004;
  botellaCola.scale.y = 1 + Math.sin(Date.now() * 0.01) * 0.1; // Late la cola
  renderer.render(scene, camera);
}

function poseaSuper() {
  if (!abrazando) {
    // Brazos moviéndose como Franky
    brazoIzq.rotation.z = Math.sin(Date.now() * 0.005) * 0.6;
    brazoDer.rotation.z = Math.sin(Date.now() * 0.005 + Math.PI) * 0.6;
    piernaIzq.rotation.x = Math.sin(Date.now() * 0.003) * 0.3;
    piernaDer.rotation.x = Math.sin(Date.now() * 0.003 + Math.PI) * 0.3;
    pelo.rotation.z = Math.sin(Date.now() * 0.002) * 0.2; // Pelo volador
    franky.position.y = Math.sin(Date.now() * 0.006) * 0.4;
  }
  requestAnimationFrame(poseaSuper);
}

// ==== ABRAZO CYBORG SUPAAAH ====
function abrazoSuper() {
  if (abrazando) return;
  abrazando = true;
  colas += 777;
  actualizar();

  // Transformación brazos cañón → abrazo
  brazoIzq.scale.set(1.5,1.5,1.5);
  brazoIzq.rotation.z = -Math.PI / 2;
  brazoDer.scale.set(1.5,1.5,1.5);
  brazoDer.rotation.z = Math.PI / 2;
  franky.scale.set(1.4, 1.4, 1.4);
  pelo.scale.set(1.5,1.5,1.5);

  hablar(`¡SUUUUPER ABRAZO CYBORG #${colas}! ¡Respirá hondo, Fran! ¡La escasez explota como un cola-boom!`);

  setTimeout(() => {
    brazoIzq.scale.set(1,1,1); brazoIzq.rotation.z = 0;
    brazoDer.scale.set(1,1,1); brazoDer.rotation.z = 0;
    franky.scale.set(1,1,1);
    pelo.scale.set(1,1,1);
    abrazando = false;
  }, 6000);
}

function minarCola() {
  colas += 1310;
  actualizar();
  hablar("¡SUUUUPER mina lunar! +1310 colas para la tripulación.");
}

function hablar(texto) {
  const voz = new SpeechSynthesisUtterance(texto);
  voz.lang = "es-ES";
  voz.rate = 0.9;
  voz.pitch = 0.7; // Voz grave de Franky
  voz.volume = 1;
  speechSynthesis.speak(voz);
  document.getElementById("status").textContent = texto.substring(0,40) + "... SUUUUPER!";
}

function actualizar() {
  document.getElementById("cola").textContent = "Colas (abrazos): " + colas;
  localStorage.colas = colas;
}

// ==== SUUUUPER ETERNO ====
setInterval(() => {
  colas++;
  actualizar();
}, 1310); // 1 cola cada 1310s por siempre
</script>
</body>
