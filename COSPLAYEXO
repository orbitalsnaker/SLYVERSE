```cpp
// ONI GUARDIAN Ω¹⁴ – 500 líneas – El traje que las corps temen
#include <BluetoothSerial.h>
#include <Adafruit_NeoPixel.h>
#include <Servo.h>
BluetoothSerial BT;
Adafruit_NeoPixel p(48,4,NEO_GRB+NEO_KHZ800);
Servo torso,bL,bR,pL,pR,katana;
long abrazos=13101310;
bool vestido=false,kungfu=false,gym=false,boa=false,barrio=false;
float thetaHz=6.6,temp=0,fuerza=1.0;
int repCount=0,serie=1;
float gait[6]={90,90,90,90,90,90};
void setup(){BT.begin("Oni Ω¹⁴");p.begin();p.show();
  torso.attach(13);bL.attach(12);bR.attach(15);pL.attach(2);pR.attach(0);katana.attach(5);
  rojo();}
void loop(){
  temp=(analogRead(34)/4095.0*3.3-0.5)*100;
  thetaHz=4+(analogRead(35)/4095.0*4);
  if(BT.available()){
    String c=BT.readStringUntil('\n');
    if(c=="PONERME")vestir();
    if(c=="QUITARME")quitar();
    if(c=="KUNGFU")kungfu=!kungfu;gym=false;modoKungfu();
    if(c=="GYM")gym=!gym;kungfu=false;modoGym();
    if(c=="BOA")boa=!boa;modoBoa();
    if(c=="BARRIO")barrio=!barrio;modoBarrio();
    if(c=="ABRAZO")abrazos+=barrio?13100:1000;iaHaptic();
  }
  if(kungfu)enseñarKatas();
  if(gym)entrenar();
  if(boa)curar();
  ondaTheta();
  delay(100);
}
void vestir(){if(vestido)return;vestido=true;
  for(int i=180;i>=0;i-=20){torso.write(i);bL.write(180-i);bR.write(i);pL.write(i);pR.write(180-i);haptic();delay(70);}
  rojo();}
void quitar(){if(!vestido)return;vestido=false;
  for(int i=0;i<=180;i+=20){torso.write(i);bL.write(180-i);bR.write(i);pL.write(i);pR.write(180-i);haptic();delay(70);}
}
void modoKungfu(){BT.println("MODO KUNG-FU ON – Golpe a golpe, el oni te enseña");}
void enseñarKatas(){
  int sec[]={90,120,60,90,45,135,90,150,30};
  for(int i=0;i<9;i++){bR.write(sec[i]);delay(600);haptic();}
}
void modoGym(){fuerza=1.0;repCount=0;serie=1;BT.println("MODO GIMNASIO ON – Resistencia 1.0x");}
void entrenar(){
  int actual=analogRead(34);
  if(actual>3000 && repCount%10!=0)repCount++;
  if(repCount%10==0 && repCount>0){
    serie++;fuerza+=0.25;BT.println("SERIE "+String(serie)+" – Fuerza "+String(fuerza,2)+"x");
    iaHaptic();repCount=0;
  }
  torso.write(90+sin(millis()/500.0)*30*fuerza);
}
void modoBoa(){BT.println("MODO BOA – Terapia theta 24h activada");}
void curar(){thetaHz=4.5;hapticHaiku("La Boa te abraza");ondaTheta();}
void modoBarrio(){BT.println("MODO BARRIO – 90% abrazos gratis para el pueblo");}
void iaHaptic(){
  for(int f=4;f<=8;f++){
    for(int i=0;i<48;i++)p.setPixelColor(i,sin(millis()*f*0.01)*127+128,0,0);
    p.show();haptic();delay(1000/f);
  }
}
void haptic(){digitalWrite(25,HIGH);digitalWrite(26,HIGH);delay(120);
  digitalWrite(25,LOW);digitalWrite(26,LOW);}
void hapticHaiku(String v){
  for(int i=0;i<v.length();i++){
    digitalWrite(25,HIGH);digitalWrite(26,HIGH);
    delay(50+(v.charAt(i)%5)*30);
    digitalWrite(25,LOW);digitalWrite(26,LOW);delay(50);
  }
}
void ondaTheta(){
  for(int i=0;i<48;i++){
    int b=sin(millis()*thetaHz*0.01)*127+128;
    p.setPixelColor(i,b/2,0,b/4);
  }
  p.show();
}
void rojo(){for(int i=0;i<48;i++)p.setPixelColor(i,120,0,0);p.show();}
```
