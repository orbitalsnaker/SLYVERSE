<script src="https://cdn.jsdelivr.net/npm/web3@latest/dist/web3.min.js"></script>
<script>
const wallet = "0xfddb91bd8157dafb735d4087cff8823b42eaadc7";
const priceETH = "0.022"; // ~59 € current rate
const log = document.getElementById("log");

async function buy(){
  if(!window.ethereum){
    alert("Install MetaMask, fox");
    return;
  }
  
  const accounts = await ethereum.request({method:'eth_requestAccounts'});
  const tx = await ethereum.request({
    method:'eth_sendTransaction',
    params:[{
      from:accounts[0],
      to:wallet,
      value:Web3.utils.toHex(Web3.utils.toWei(priceETH,"ether"))
    }]
  });

  log.innerHTML += `• ${new Date().toJSON().slice(0,19).replace("T"," ")} → 1 unit → processing… +18 €<br>`;
  log.scrollTop = log.scrollHeight;

  fetch("https://api.shenzhen131.is/order", {
    method:"POST",
    headers:{"Content-Type":"application/json"},
    body:JSON.stringify({
      product:"kitsune_v5",
      qty:1,
      tx:tx,
      wallet:accounts[0],
      price_eur:59
    })
  });

  setTimeout(()=>alert("Order sent to factory.\nYou'll receive DHL tracking in <24h.\nThanks, demon."),1500);
}
</script>
