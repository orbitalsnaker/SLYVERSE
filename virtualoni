<script>
// Konami Code = desbloquea el verdadero final (el mate eterno)
let seq='',code='38384040373937396665';
addEventListener('keydown',e=>{
  seq+={ArrowUp:38,ArrowDown:40,ArrowLeft:37,ArrowRight:39,b:66,B:66,a:65,A:65}[e.key]||'';
  if(seq.length>20)seq=seq.slice(-20);
  if(seq.includes(code)){document.querySelectorAll('.game')[38].style.borderColor='#ff0';play(39);}
});

function play(n){
  document.getElementById('overlay').style.opacity=1;
  // Sonido de dolor Dreamcast
  beep(180,0.3);setTimeout(()=>beep(120,0.6),200);setTimeout(()=>beep(80,1.2),600);
}

// Swirl sangriento (rojo cuando pasás el mouse por los juegos)
const cv=document.getElementById('c');cv.width=innerWidth;cv.height=innerHeight;
const ctx=cv.getContext('2d');
let particles=[];
for(let i=0;i<140;i++)particles.push({a:Math.random()*6.28,s:Math.random()*0.9+0.2,hue:180});
function bloodswirl(){
  ctx.fillStyle='rgba(0,0,0,0.08)';ctx.fillRect(0,0,cv.width,cv.height);
  particles.forEach(p=>{
    const x=cv.width/2 + Math.cos(p.a)*p.s*320;
    const y=cv.height/2 + Math.sin(p.a)*p.s*320;
    ctx.fillStyle=`hsl(${p.hue},100%,60%)`;
    ctx.fillRect(x,y,6,6);
    p.a+=0.009;p.s+=0.0022;
    if(p.s>2.5)p.hue=0; // pasa a rojo sangre
  });
  requestAnimationFrame(bloodswirl);
}bloodswirl();

document.querySelectorAll('.game').forEach(g=>g.addEventListener('mouseenter',()=>{particles.forEach(p=>p.hue=0)}));
document.querySelectorAll('.game').forEach(g=>g.addEventListener('mouseleave',()=>{particles.forEach(p=>p.hue=180)}));

function beep(f,d){const a=new AudioContext(),o=a.createOscillator(),g=a.createGain();
  o.type='sawtooth';o.frequency.value=f;g.gain.setValueAtTime(0.35,a.currentTime);
  g.gain.exponentialRampToValueAtTime(0.01,a.currentTime+d);
  o.connect(g);g.connect(a.destination);o.start();o.stop(a.currentTime+d);
}

// El grito de Dreamcast al morir (al cargar la página)
setTimeout(()=>{beep(880,0.4);beep(660,0.4);beep(440,0.8);beep(220,2);},1000);
</script>
