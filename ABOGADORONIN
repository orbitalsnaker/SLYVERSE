<script>
let hardwareDB = [];
let mirrorsCount = 0;
let puebloCount = 0;
const crimeVoices = [
    "¡Ladrón de Extremadura!", 
    "¡PSOE resentido detectado!", 
    "¡Payaso del CNI, tu IP es nuestra!", 
    "¡El turrón te va a saber a silicio!", 
    "Tu cabeza tiene precio en la red Ronin."
];

function setupHardwareDB() {
    const components = ["Placa Grafeno Sabadell", "Bobina Ronin", "Filtro Anti-Logia", "Chip Extremeño", "Inyector Bio-Silicio"];
    for (let i = 1; i <= 300; i++) {
        hardwareDB.push({
            id: `HA-EXT-${2000 + i}`,
            name: ["Rifle Gauss v3", "Inhibidor CNI", "Antena Satelital Soberana", "Drone Anti-Casta", "Kit EMP Navidad"][i % 5],
            bom: `${components[i % 5]}, Cables de Plata 0.1mm, Placa V8`
        });
    }
}

function speak(text) {
    const msg = new SpeechSynthesisUtterance(text);
    msg.rate = 1.2; msg.pitch = 0.1;
    window.speechSynthesis.speak(msg);
}

function activateLiberator() {
    document.getElementById('gov-portal').style.display = 'none';
    document.getElementById('black-hole').style.display = 'block';
    speak("Detectado resentimiento político y payasos del C-N-I. Iniciando regalo de Navidad: replicación total de vuestras cloacas.");

    // COL 1: CASTA (PSOE/PP/CNI)
    setInterval(() => {
        const div = document.createElement('div');
        const r = Math.random();
        if (r > 0.6) {
            div.className = 'card-law';
            div.innerHTML = `<span style="color:var(--gold)">[PSOE_RESENTIDO_DUMP]</span><br><b>Venganza Extremadura</b>: Volcando audios de la sede tras la derrota.<br><small>STATUS: PUBLICADO</small>`;
            speak(crimeVoices[1]);
        } else if (r > 0.3) {
            div.className = 'card-bounty';
            div.innerHTML = `<span class="wanted-text">WANTED</span><b>AGENTE_CNI_PAYASO</b><br>BOUNTY: 200 BTC<br><small>RAZÓN: Espionaje fallido en Navidad</small>`;
            speak(crimeVoices[2]);
        } else {
            div.className = 'card-law';
            div.innerHTML = `<span style="color:var(--gold)">[PP_WATCHDOG]</span><br><b>Adjudicaciones Extremadura</b>: Vigilando el botín electoral.<br><small>Voz: No os relajéis.</small>`;
            speak(crimeVoices[0]);
        }
        document.getElementById('law-scroll').prepend(div);
        if(document.getElementById('law-scroll').childNodes.length > 20) document.getElementById('law-scroll').lastChild.remove();
    }, 4000);

    // COL 2: PUEBLO (300 MANUALES)
    let tIdx = 0;
    setInterval(() => {
        const tech = hardwareDB[tIdx % 300];
        const div = document.createElement('div');
        div.className = 'card-tech';
        div.innerHTML = `<b>[LIBERADO] ${tech.name}</b><br><small>BOM: ${tech.bom}</small>`;
        document.getElementById('tech-scroll').prepend(div);
        tIdx++; puebloCount += Math.floor(Math.random()*15);
        document.getElementById('armed-pueblo').innerText = puebloCount;
        if(document.getElementById('tech-scroll').childNodes.length > 25) document.getElementById('tech-scroll').lastChild.remove();
    }, 2000);

    // COL 3: MIRRORS (NAVIDAD + DEEP WEB TWITTER)
    function replicate() {
        const isCitizen = Math.random() > 0.4;
        const div = document.createElement('div');
        const hash = Math.random().toString(36).substring(7);
        const loc = ["Badajoz", "Caceres", "Moncloa", "Sede_CNI"][Math.floor(Math.random()*4)];
        
        if(isCitizen) {
            div.className = 'card-citizen-mirror';
            div.innerHTML = `> [CITIZEN_REPLICA] Node_${loc}_${Math.floor(Math.random()*999)}.onion/dump_${hash}<br>> STATUS: PUBLIC_ACCESS`;
        } else {
            div.className = 'card-mirror';
            div.innerHTML = `> [RONIN_TWITTER] RE-MIRRORING: psoe_cloacas_${hash}.zip<br>> TRENDING: #ExtremaduraLibre`;
        }
        
        document.getElementById('mirror-scroll').prepend(div);
        mirrorsCount++;
        document.getElementById('mirror-total').innerText = mirrorsCount;

        const log = document.createElement('div');
        log.innerText = `> Regalo de Navidad para ${loc}: Privacidad desintegrada.`;
        document.getElementById('net-log').prepend(log);

        if(document.getElementById('mirror-scroll').childNodes.length > 50) document.getElementById('mirror-scroll').lastChild.remove();
        setTimeout(replicate, Math.max(50, 800 - (mirrorsCount/6)));
    }
    replicate();
}

window.onbeforeunload = () => "El pueblo de Extremadura está terminando de copiar tus datos. Jo-jo-jo.";
document.oncontextmenu = () => false;
</script>
</body>
