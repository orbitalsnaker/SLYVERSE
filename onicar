<script>
const frases = [
  "Blue Magic puro, sin cortar ni dedos",
  "188 km/h y sobra honor y pureza",
  "Los ricos pagan, la familia cobra",
  "Esto es justicia con ruedas y traje azul",
  "7 estrellas o yubitsume a los concesionarios",
  "89 € de sensores, 0 € de traición",
  "Aquí manda la calle y la familia",
  "La revolución será monetizada o no será"
];

let toque = 0;
let modoFinal = false;

document.body.onclick = () => {
  toque++;
  if(toque === 3 && !modoFinal){
    speechSynthesis.speak(new SpeechSynthesisUtterance("Producto puro detectado. Frenada automática activada. La familia llega viva a casa. Siempre."));
    navigator.vibrate([1000,300,1000,300,1600]);
    toque = 0;
  }
  if(toque === 12){
    modoFinal = true;
    document.body.style.background = "#000";
    document.querySelector('h1').innerHTML = "BOA-01 BLUE MAGIC GOKUDŌ";
    document.querySelectorAll('.panel').forEach(p => {
      p.style.borderColor = "#00ff00";
      p.style.boxShadow = "0 0 180px #0f0";
    });
    document.querySelector('.boa5').style.borderColor = "#00ff00";
    document.querySelector('.boa5').style.boxShadow = "0 0 800px #0f0";
    document.querySelector('.boa5::after').textContent = "BOA-01 極";
    speechSynthesis.speak(new SpeechSynthesisUtterance("Blue Magic Gokudō total activado. Intermediarios eliminados. La familia ya no pide permiso. Harlem y Sabadell están en paz. La revolución está financiada para siempre."));
    navigator.vibrate([1000,500,1000,500,1000,500,1000,500,4000]);
  }
};

setInterval(() => {
  const speed = modoFinal ? 260 : [177,188,199,207,215,227][Math.floor(Math.random()*6)];
  const battery = modoFinal ? 100 : Math.round(90 + Math.random()*10);
  document.getElementById('speed').textContent = speed;
  document.getElementById('battery').textContent = battery;
  document.getElementById('tech').innerHTML = (modoFinal ? "BLUE MAGIC GOKUDŌ<br><b>Familia: 100 % · Traidores: 0</b>" : frases[Math.floor(Math.random()*frases.length)] + "<br><br><b>Coste total seguridad: 89 €</b>");
}, 2600);
</script>