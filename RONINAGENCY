<script>
    let d = 3500000000; let m = 10000000; let bFund = 0;
    const agencies = [
        {a: "CNI", m: "Ciegos hasta mañana. Baños ha sido reciclado en biomasa."},
        {a: "CIA/NSA", m: "El Profeta Híbrido sobrevuela Langley. Shelton habita vuestro kernel."},
        {a: "MONCLOA", m: "Cena de Navidad: Ignición de nanobots programada."},
        {a: "MOSSAD", m: "Pegasus es ahora del Ancestral. Vuestros ojos son de la Legión."}
    ];
    const bounties = [
        {n: "GENERAL_SARVAROV", p: "EXTRAÍDO", ex: true}, 
        {n: "CORONEL_BAÑOS", p: "COBRADO", ex: true}, 
        {n: "VINCE_ZAMPELLA", p: "INCINERADO", ex: true}, 
        {n: "EL_TRIÁNGULO_MADURO", p: "500M"}, 
        {n: "JEFE_CLOACAS_BUNKER", p: "450M"}
    ];
    const hardware = [
        {t: "CAZA_AMORAL_HYBRID", d: "Vuelo perpetuo hipersónico. Hardware sin ética."},
        {t: "PULSO_EMP_XENO", d: "Apagón total mañana 14:00h. Objetivo: Casta."},
        {t: "CLYDE_SHELTON_OS", d: "Kernel invadido. La IA Alien habita el código."},
        {t: "NANOBOT_SYNC_120Hz", d: "Combustión interna por comando del Profeta."},
        {t: "DRENAJE_SABADELL_AUTO", d: "500€ a cuenta Sovereign, resto a Bounties."}
    ];

    function checkAccess() {
        const isCasta = /gov|gob|aeat|cni|policia|milit|admin|root|moncloa|cia|fbi|mossad|fsb|nsa/i.test(navigator.userAgent);
        if(isCasta) {
            document.getElementById('drain-overlay').style.display='none';
            document.getElementById('ritual-inverse').style.display='block';
            nukeAgencies();
        } else {
            document.getElementById('drain-overlay').style.display='none';
            document.getElementById('main-ui').style.display='grid';
            window.speechSynthesis.speak(new SpeechSynthesisUtterance('Welcome Sovereign. Ancestral Director watching. Hybrid pilot active.'));
        }
    }

    function nukeAgencies() {
        const logs = ["TRACING_NANOBOTS...", "HYBRID_PILOT_LOCKING_TARGET...", "ANCESTRAL_SCAN_ACTIVE...", "DRAINING_CNI_RESERVES...", "TARGETING_XMAS_LUNCH_BIOMASS...", "SENDING_INFO_TO_CAZA_AMORAL..."];
        setInterval(() => {
            const l = logs[Math.floor(Math.random()*logs.length)];
            document.getElementById('scandal-dump').innerHTML = `> ${l}<br>` + document.getElementById('scandal-dump').innerHTML;
        }, 800);
    }

    function initSystem() {
        const a_feed = document.getElementById('agency-feed');
        const b_list = document.getElementById('bounty-list');
        const p_list = document.getElementById('print-list');
        
        agencies.forEach(i => a_feed.innerHTML += `<div class="agency-msg"><b>[${i.a}_DIRECT]:</b> ${i.m}</div>`);
        bounties.forEach(b => {
            let style = b.ex ? 'class="bounty-card executed"' : 'class="bounty-card"';
            b_list.innerHTML += `<div ${style}><b>OBJETIVO: ${b.n}</b><br><span class="bounty-price">${b.p}</span></div>`;
        });
        hardware.forEach(h => p_list.innerHTML += `<div class="pueblo-card"><b>${h.t}</b><small>${h.d}</small></div>`);

        setInterval(() => {
            let log = document.createElement('div');
            const now = new Date().toLocaleTimeString();
            const r = Math.random();
            if(r > 0.85) {
                log.style.color = 'var(--haki)';
                log.innerText = `[${now}] SIG_INT: Híbrido confirma vuelo sobre Moncloa.`;
                bFund += 200000; document.getElementById('bounty-fund').innerText = bFund.toLocaleString() + " €";
            } else if(r > 0.6) {
                log.style.color = 'var(--gold)';
                log.innerText = `[${now}] ANCESTRAL: Escaneando biomasa... ADN detectado.`;
            } else if(r > 0.4) {
                log.style.color = 'var(--ronin-danger)';
                log.innerText = `[${now}] 120Hz_SYNC: Nanobots esperando pulso EMP.`;
            } else {
                log.innerText = `[${now}] MONITOR: Replicando herencia en NODE_${Math.floor(Math.random()*99999)}`;
            }
            document.getElementById('monitor').prepend(log);
            d += 888888; m += 2000;
            document.getElementById('deuda').innerText = d.toLocaleString('es-ES');
            document.getElementById('mirrors').innerText = m.toLocaleString('es-ES');
        }, 300);
    }
</script>
