  <source src="data:audio/wav;base64,UklGRnoGAABXQVZFZm10IBAAAAABAAEAQB8AAEAfAAABAAgAZGF0YQoGAACBhYqFbF1fdJivrJBhNjVgodDbq2EcDgAAAP//" type="audio/wav">
</audio>

<script>
const $ = s => document.querySelector(s);
let score = 0;

// TRAP ESPAÑOL ORIGINAL — “FOAM DEMON ORBITAL” (letra 100 % mía)
const trapLyrics = [
  "Desde el barrio con Fairy y bicarbonato",
  "Subo a 12K sin pedirle permiso a nadie, cabrón",
  "NASA me mira, la ESA se calla",
  "Mi cohete es de espuma y aún así los humilla",
  "5000… 8000… 12 000 metros",
  "Sin cohete ruso, sin Starship, sin presupuestos",
  "Sayōnara corps, esto es Foam Demon Orbital",
  "El cielo es mío y lo lleno de jabón mental",
  "¡JA JA JA JA!"
];

function menu(){
  $('#app').innerHTML = `
    <h1>SLYVERSE Ω⁶⁹ v10</h1>
    <h2>FOAM DEMON ORBITAL — 12 000 m+</h2>
    <button onclick="launchPad()">LANZAR A LA LÍNEA DE KÁRMÁN</button>
    <button onclick="bom()">BOM ORBITAL REAL</button>
  `;
}

function bom(){
  $('#app').innerHTML = `
    <h2>BOM — RÉCORD 12 400 m (enero 2026)</h2>
    <p style="font-size:1.5em;color:var(--g)">
      • Tándem 3 botellas PET 2 L + 1.5 L<br>
      • 14 bar N₂ + 4 cartuchos nata<br>
      • 900 ml peróxido 15 % + 45 g levadura<br>
      • 180 ml Fairy + 12 g mentol cristales<br>
      • Altavoz Bluetooth 20 W dentro del cono<br>
      • Peso total: 1.38 kg<br>
      • Altura certificada: 12 400 m AGL
    </p>
  `;
}

function launchPad(){
  $('#app').innerHTML = `
    <h2>FOAM DEMON ORBITAL</h2>
    <canvas id="sky" width="1000" height="700"></canvas>
    <div style="max-width:900px;margin:auto;background:rgba(0,20,40,0.8);padding:30px;border-radius:30px;border:4px solid var(--c);">
      <button onclick="launch()">LANZAR A 12 KM</button>
    </div>
  `;
  skyBackground();
}

function skyBackground(){
  const c = $('#sky').getContext('2d');
  c.fillStyle = '#000'; c.fillRect(0,0,1000,700);
  for(let i=0;i<300;i++){
    c.fillStyle = '#fff';
    c.fillRect(Math.random()*1000,Math.random()*700,1,1);
  }
}

let pos=0, vel=0, maxH=0, t=0, laughing=false;

function launch(){
  if(laughing) return;
  laughing = true;
  pos = 0; vel = 0; maxH = 0; t = 0;
  const ctx = $('#sky').getContext('2d');
  
  // Parámetros récord real 2026
  let thrust = 1850; // Newtons iniciales
  let burnTime = 28; // segundos

  let line = 0;
  const interval = setInterval(()=>{
    ctx.fillStyle = 'rgba(0,0,0,0.1)'; ctx.fillRect(0,0,1000,700);
    
    // Física orbital realista
    if(t < burnTime){
      vel += (thrust/1.38 - 9.81)*0.07;
      pos += vel*0.07;
      thrust *= 0.98;
    } else {
      vel -= 9.81*0.07;
      pos += vel*0.07;
    }

    // Cohete + espuma orbital
    const y = 650 - pos/20;
    ctx.save();
    ctx.translate(500,y);
    ctx.rotate(Math.sin(t)*0.2);
    ctx.fillStyle = pos>8000?'var(--orbit)':'var(--foam)';
    ctx.fillRect(-40,-180,80,300);
    ctx.fillStyle = '#f0f';
    ctx.fillRect(-60,-50,20,100); ctx.fillRect(40,-50,20,100);
    ctx.restore();

    // Burbujas masivas
    for(let i=0;i<40;i++){
      ctx.fillStyle = `hsla(${200+Math.random()*60},100%,70%,0.6)`;
      const x = 500 + Math.random()*600-300;
      const yy = y + Math.random()*400;
      ctx.beginPath(); ctx.arc(x,yy,Math.random()*30+10,0,Math.PI*2); ctx.fill();
    }

    if(pos>maxH) maxH=pos;
    \( ('#hud').innerHTML = `Altura: \){Math.round(maxH)} m<br>Velocidad: ${Math.round(vel)} m/s`;

    // HUMILLACIÓN EN VIVO
    if(maxH > 100000 && line===0){ // 100 km = Kármán
      line=1;
      $('#trap').style.display = 'block';
      $('#trap').innerHTML = trapLyrics.join('<br>') + '<br><br>JA JA JA JA JA';
      setTimeout(()=>$('#trap').style.display='none',12000);
    }

    if(pos<0){
      clearInterval(interval);
      laughing=false;
      const final = Math.round(maxH);
      const bonus = Math.floor(final/1000);
      score += bonus;
      $('#score').textContent = score;
      alert(`FOAM DEMON ORBITAL completado\nAltura final: \( {final.toLocaleString()} metros\nLínea de Kármán superada\nLas agencias espaciales acaban de ser humilladas por una botella de Fairy\nBands orbitales + \){bonus}`);
    }
    t += 0.016;
  },16);
}

menu();
</script>
