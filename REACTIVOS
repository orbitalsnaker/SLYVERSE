<script>
/** * ARQUITECTURA MODULAR "RONIN_OS"
 */
const App = {
    Data: {
        vida: parseInt(localStorage.getItem('v') || '0'),
        pozo: parseInt(localStorage.getItem('p') || '0'),
        arquetipos: ["Político", "Académico", "Taxidermista", "Crítico", "Burócrata", "Magnate"],
        frasesOracle: ["La optimización es el único dios.", "El hardware amoral no pide permiso.", "Sabadell es el nodo cero.", "Tu ego es un glitch."],
        mercado: [
            {id: 1, n: "Piel de Hormigón", p: 10000},
            {id: 2, n: "Haki de Silicio", p: 50000},
            {id: 3, n: "Permiso Miami", p: 150000}
        ]
    },

    Core: {
        init() {
            App.UI.renderArquetipos();
            App.UI.renderMercado();
            App.Core.mainLoop();
            App.Core.telemetryLoop();
            console.log("RONIN_CORE: ONLINE");
        },

        mainLoop() {
            setInterval(() => {
                App.Data.vida++;
                App.UI.updateStats();
                localStorage.setItem('v', App.Data.vida);
            }, 1000);
        },

        telemetryLoop() {
            setInterval(() => {
                document.getElementById('ping').innerText = Math.floor(Math.random() * 30 + 5);
                document.getElementById('haki-val').innerText = (Math.random() * 5 + 94).toFixed(1);
            }, 3000);
        },

        randomEvents() {
            if (Math.random() > 0.95) App.UI.spawnOracle();
        },

        miamiTransfer() {
            if (App.Data.vida < 10000) return alert("INSIGNIFICANTE: Necesitas 10k segundos.");
            document.body.classList.add('miami-mode');
            alert("ESTADO OFFSHORE ACTIVADO.");
        }
    },

    Economy: {
        mine() {
            App.Data.vida += 500;
            App.UI.updateStats();
        },
        gamble() {
            let apuesta = prompt("¿Cuánta vida arriesgas?", "1000");
            if (App.Data.vida >= apuesta) {
                App.Data.vida -= apuesta;
                if (Math.random() > 0.5) {
                    App.Data.vida += apuesta * 3;
                    alert("FLUJO POSITIVO.");
                } else {
                    alert("DISOLUCIÓN.");
                }
            }
        },
        buy(price) {
            if (App.Data.vida >= price) {
                App.Data.vida -= price;
                alert("SINCRONIZADO.");
            } else {
                alert("VIDA INSUFICIENTE.");
            }
        }
    },

    UI: {
        updateStats() {
            document.getElementById('v-val').innerText = App.Data.vida.toLocaleString();
            document.getElementById('p-val').innerText = App.Data.pozo.toLocaleString();
            document.getElementById('f-val').innerText = `€ ${(App.Data.pozo * 0.00013).toFixed(2)}`;
        },

        renderArquetipos() {
            const container = document.getElementById('muro-arquetipos');
            App.Data.arquetipos.forEach(arq => {
                const span = document.createElement('button');
                span.className = 'btn-ritual';
                span.style.background = '#111';
                span.innerText = arq.toUpperCase();
                span.onclick = () => App.UI.egoSentencia(arq);
                container.appendChild(span);
            });
        },

        renderMercado() {
            const container = document.getElementById('items-container');
            App.Data.mercado.forEach(item => {
                const div = document.createElement('div');
                div.className = 'brutalist-card';
                div.innerHTML = `<h4>${item.n}</h4><p>${item.p}s</p>`;
                div.onclick = () => App.Economy.buy(item.p);
                container.appendChild(div);
            });
        },

        toggleModal(id) {
            const m = document.getElementById(id);
            m.style.display = (m.style.display === 'flex') ? 'none' : 'flex';
        },

        egoSentencia(nombre) {
            App.Data.vida -= 5000;
            const modal = document.getElementById('ego-fracture');
            modal.style.display = 'flex';
            document.getElementById('insulto-titulo').innerText = "OBSOLESCENCIA DETECTADA";
            document.getElementById('insulto-desc').innerText = `El arquetipo ${nombre} ha contaminado el nodo. Penalización: -5000s.`;
            
            let t = 5;
            const clock = setInterval(() => {
                t--;
                document.getElementById('ego-timer').innerText = t;
                if (t <= 0) {
                    clearInterval(clock);
                    modal.style.display = 'none';
                }
            }, 1000);
        },

        spawnOracle() {
            const msg = App.Data.frasesOracle[Math.floor(Math.random() * App.Data.frasesOracle.length)];
            alert(`KOAN NEURAL: ${msg}`);
            App.Data.vida += 2000;
        }
    }
};

// --- INICIALIZACIÓN ---
window.onload = () => App.Core.init();

// Terminal Retórica Logic
document.getElementById('terminal-reto').addEventListener('change', (e) => {
    const val = e.target.value.toLowerCase();
    if (val.includes('flujo') || val.includes('nodo') || val.includes('amoral')) {
        App.Data.vida += 5000;
        alert("RETÓRICA VALIDADA.");
    }
    e.target.value = "";
});
</script>

</body>
