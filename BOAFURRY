<script>
// CONFIGURACIÓN
const WALLET = "0xfddb91bd8157dafb735d4087cff8823b42eaadc7"; // Cambia por tu wallet real (Monero/USDT)
let stock = {ears:131,wings:131,oni:131,boa:131,full:131};
let savedLives = parseInt(localStorage.savedLives || "0");
let freeBOMs = parseInt(localStorage.freebom || "0");

// Cargar datos
if(localStorage.slystock) stock = JSON.parse(localStorage.slystock);
Object.keys(stock).forEach(k => { if(document.getElementById("stock-"+k)) document.getElementById("stock-"+k).textContent = stock[k]; });
document.getElementById("saved").textContent = savedLives.toLocaleString();
document.getElementById("freebom").textContent = freeBOMs.toLocaleString();

// PAGO
function pay(eur, type, product){
  const name = type==="unlimited" ? "ANÓNIMO" : prompt("Alias para grabado (opcional):","ANÓNIMO")||"ANÓNIMO";
  const contact = prompt("Telegram/email para tracking:","anon@slyverse.org")||"anon@slyverse.org";
  const memo = `${product} | ${name} | ${contact} | ${new Date().toISOString().split('T')[0]}`;
  const text = `${eur}€ → ${WALLET}\nMemo: ${memo}`;
  navigator.clipboard.writeText(text);
  alert("¡Copiado! Paga con Monero/USDT → tu paquete sale de Shenzhen <48h");

  if(type !== "unlimited"){
    stock[type]--;
    document.getElementById("stock-"+type).textContent = stock[type];
    localStorage.setItem("slystock", JSON.stringify(stock));
  }

  const vidas = Math.floor(eur / 3);
  savedLives += vidas;
  document.getElementById("saved").textContent = savedLives.toLocaleString();
  localStorage.setItem("savedLives", savedLives);
}

// BOM GRATIS 7 CLICS
function freeBOM(){
  let clicks = (parseInt(localStorage.getItem("bomclicks") || "0")) + 1;
  localStorage.setItem("bomclicks", clicks);
  if(clicks >= 7){
    const contact = prompt("Telegram o email (solo para envío):","anon@slyverse.org")||"anon@slyverse.org";
    const memo = `BOM GRATIS | ${contact} | ${new Date().toISOString().split('T')[0]}`;
    navigator.clipboard.writeText(memo);
    alert("¡BOM GRATIS confirmado! Caja negra desde Shenzhen en <18 días.");
    freeBOMs++;
    document.getElementById("freebom").textContent = freeBOMs.toLocaleString();
    localStorage.setItem("freebom", freeBOMs);
    localStorage.removeItem("bomclicks");
  } else {
    alert(`Clic ${clicks}/7 · Sigue. Nadie te pide explicaciones.`);
  }
}

// COUNTDOWN FASE 1
let deadline = new Date("2026-02-06T00:00:00").getTime();
setInterval(() => {
  let distance = deadline - new Date().getTime();
  if(distance < 0){
    document.getElementById("timer").innerHTML = "FASE 2 · PRECIO x2";
    return;
  }
  let days = Math.floor(distance / (1000*60*60*24));
  let hours = Math.floor((distance % (1000*60*60*24)) / (1000*60*60));
  let minutes = Math.floor((distance % (1000*60*60)) / (1000*60));
  document.getElementById("timer").innerHTML = days + "d " + hours + "h " + minutes + "m";
}, 1000);

// MATRIX RAIN
const c = document.getElementById('c');
const ctx = c.getContext('2d');
c.width = innerWidth; c.height = innerHeight;
const matrix = "01";
const fontSize = 16;
const columns = c.width/fontSize;
const drops = Array(Math.floor(columns)).fill(1);
function draw(){
  ctx.fillStyle = 'rgba(0,0,0,0.05)';
  ctx.fillRect(0,0,c.width,c.height);
  ctx.fillStyle = '#0f0';
  ctx.font = fontSize+'px monospace';
  for(let i=0;i<drops.length;i++){
    const text = matrix[Math.floor(Math.random()*2)];
    ctx.fillText(text,i*fontSize,drops[i]*fontSize);
    if(drops[i]*fontSize > c.height && Math.random()>0.975) drops[i]=0;
    drops[i]++;
  }
}
setInterval(draw,33);

// GORE RAIN
for(let i=0;i<80;i++){
  const div = document.createElement('div');
  div.className="gore";
  div.style.left = Math.random()*100+"vw";
  div.style.animationDuration = (Math.random()*3+2)+"s";
  div.style.animationDelay = Math.random()*5+"s";
  document.getElementById("gore").appendChild(div);
}
</script>
