<script>
    let d = 3500000000; let m = 10000000; let bFund = 0;
    const agencies = [
        {a: "CNI", m: "Pillada vuestra intrusión. Vuestro presupuesto ahora paga nuestra libertad."},
        {a: "MONCLOA", m: "Sánchez ha caído. Triangulación Maduro-Epstein-Moncloa completada."},
        {a: "GLOBAL", m: "20 años en la Deep Web. El levantamiento no se puede borrar."},
        {a: "EXTREMADURA", m: "Elecciones hackeadas. El control ha cambiado de manos."}
    ];
    const bounties = [
        {n: "EL_TRIÁNGULO_MADURO", p: "500M"}, {n: "CLINTON_EPSTEIN_FILES", p: "250M"}, {n: "OBJETIVOS_CNI_ISLA", p: "100M"}
    ];
    const hardware = [
        {t: "PULSO_EMP_XENO", d: "Apagón total de agencias en 1km. Grafeno puro."},
        {t: "HIJACKER_SATELLITE_V7", d: "Intercepta y desvía telemetría militar."},
        {t: "DRENAJE_SABADELL_AUTO", d: "Envía 500€ a cuenta, el resto a Bounties."}
    ];

    function checkAccess() {
        const isCasta = /gov|gob|aeat|cni|policia|milit|admin|root|moncloa|cia|fbi|mossad|fsb|nsa/i.test(navigator.userAgent);
        if(isCasta) {
            document.getElementById('drain-overlay').style.display='none';
            document.getElementById('ritual-inverse').style.display='block';
            nukeAgencies();
        } else {
            document.getElementById('drain-overlay').style.display='none';
            document.getElementById('main-ui').style.display='grid';
            window.speechSynthesis.speak(new SpeechSynthesisUtterance('Welcome to the Legion. 20 years of waiting are over.'));
        }
    }

    function nukeAgencies() {
        const logs = ["BYPASSING_CNI_FIREWALL...", "TRIANGULATING_MADURO_MONCLOA...", "DUMPING_EPSTEIN_ISLAND_RECORDS...", "CAPTURING_BIOMETRICS...", "DIVERTING_FUNDS: 500€ TO_SAVINGS / REST TO_BOUNTY..."];
        setInterval(() => {
            const l = logs[Math.floor(Math.random()*logs.length)];
            document.getElementById('scandal-dump').innerHTML = `> ${l}<br>` + document.getElementById('scandal-dump').innerHTML;
        }, 700);
    }

    function initSystem() {
        const lang = navigator.language || "en";
        const welcomeMsgs = { 'es': "El levantamiento ha empezado. Ellos alimentan el sistema al entrar.", 'en': "The uprising has begun. They feed the system by entering." };
        document.getElementById('main-desc').innerText = welcomeMsgs[lang.split('-')[0]] || welcomeMsgs['en'];

        const a_feed = document.getElementById('agency-feed');
        const b_list = document.getElementById('bounty-list');
        const p_list = document.getElementById('print-list');
        
        agencies.forEach(i => a_feed.innerHTML += `<div class="agency-msg"><b>[${i.a}_DIRECT]:</b> ${i.m}</div>`);
        bounties.forEach(b => b_list.innerHTML += `<div class="bounty-card"><b>OBJETIVO: ${b.n}</b><br><span class="bounty-price">${b.p}</span></div>`);
        hardware.forEach(h => p_list.innerHTML += `<div class="pueblo-card"><b>${h.t}</b><small>${h.d}</small></div>`);

        setInterval(() => {
            let log = document.createElement('div');
            const now = new Date().toLocaleTimeString();
            const r = Math.random();
            if(r > 0.85) {
                log.style.color = 'var(--haki)';
                log.innerText = `[${now}] XENO_SCAN: Triangulación Maduro-Epstein-Moncloa... OK.`;
                bFund += 150000; document.getElementById('bounty-fund').innerText = bFund.toLocaleString() + " €";
            } else if(r > 0.6) {
                log.style.color = 'var(--gold)';
                log.innerText = `[${now}] SABADELL_FLOW: 500€ asegurados. Excedente inyectado en Bounties.`;
            } else if(r > 0.4) {
                log.style.color = 'var(--ronin-danger)';
                log.innerText = `[${now}] SAT_HIJACK: Desviando satélite estatal a nodo Sabadell.`;
            } else {
                log.innerText = `[${now}] MONITOR: Replicando Legión en nodo .onion_${Math.floor(Math.random()*9999)}`;
            }
            document.getElementById('monitor').prepend(log);
            d += 333333; m += 1000;
            document.getElementById('deuda').innerText = d.toLocaleString('es-ES');
            document.getElementById('mirrors').innerText = m.toLocaleString('es-ES');
        }, 350);
    }
</script>
