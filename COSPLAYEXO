<script>
const c=document.getElementById('theta'),x=c.getContext('2d');
c.width=innerWidth;c.height=innerHeight;
function t(){x.clearRect(0,0,c.width,c.height);
  const e=Date.now()*0.001,f=6.6,a=70;
  x.strokeStyle='#f00';x.lineWidth=4;x.beginPath();
  for(let i=0;i<c.width;i+=2){
    const o=c.height/2+Math.sin(i*0.01+e*f)*a;
    i===0?x.moveTo(i,o):x.lineTo(i,o);
  }x.stroke();requestAnimationFrame(t);}
t();
setInterval(()=>{document.getElementById('h').textContent=parseInt(document.getElementById('h').textContent)+Math.floor(Math.random()*1310);
  document.getElementById('t').textContent=(20+Math.random()*5).toFixed(1);
  document.getElementById('th').textContent=(4+Math.random()*4).toFixed(1);
},5000);
let v=false;
function vestir(){if(v)return;v=true;document.getElementById('v').textContent='ON';
  document.getElementById('oni').classList.add('active');
  setTimeout(()=>document.getElementById('oni').classList.remove('active'),2000);
}
function quitar(){if(!v)return;v=false;document.getElementById('v').textContent='OFF';
  document.getElementById('oni').classList.add('active');
  setTimeout(()=>document.getElementById('oni').classList.remove('active'),2000);
}
</script>
