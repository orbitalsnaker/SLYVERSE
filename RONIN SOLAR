<script src="https://cdn.jsdelivr.net/npm/three@0.168.0/build/three.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/three@0.168.0/examples/js/controls/OrbitControls.js"></script>
<script>
let eff=25, motor=500, cap=120, dens=2.5, vida=15;
const log=document.getElementById("log");
let history=[], histIndex=0;

function l(m){ log.innerHTML+=m+"<br>"; log.scrollTop=log.scrollHeight; }

const cmdInput = document.getElementById("cmd");
cmdInput.addEventListener("keydown", e=>{
  if(e.key==="ArrowUp"){ histIndex=Math.max(0,histIndex-1); cmdInput.value=history[histIndex]||""; }
  if(e.key==="ArrowDown"){ histIndex=Math.min(history.length-1,histIndex+1); cmdInput.value=history[histIndex]||""; }
});
cmdInput.addEventListener("keypress", e=>{
  if(e.key!=="Enter") return;
  const cmd = e.target.value.trim(); history.push(cmd); histIndex=history.length;
  l("$ "+cmd); e.target.value="";
  processCmd(cmd);
});

function processCmd(cmd){
  const p=cmd.toLowerCase().split(" ");
  if(cmd==="help") l("activar | stop | barrio | sodio [1-5] | motor [100-1000] | dens [1-5] | readme");
  else if(cmd==="activar") l(`Sistema ON — ${eff}% eff, ${motor}W motor, ${cap} kWh sodio`);
  else if(cmd==="stop") l("Sistema OFF");
  else if(cmd==="barrio") l("Split 70% barrio activado — justicia energética");
  else if(p[0]==="sodio"){ dens=+p[1]||3.5; l(`Boost sodio: densidad x${dens}`); }
  else if(p[0]==="motor" && p[1]){ motor=Math.max(100,Math.min(1000,+p[1])); l(`Motor ajustado a ${motor}W`); }
  else if(p[0]==="dens" && p[1]){ dens=Math.min(5,Math.max(1,+p[1])); l(`Densidad ajustada a x${dens}`); }
  else if(cmd==="readme") openReadme();
  update();
}

function update(){
  const effVar = eff + (Math.random()*2-1);
  const motorVar = motor + (Math.random()*10-5);
  document.getElementById("eff").innerText = effVar.toFixed(1);
  document.getElementById("motor").innerText = Math.round(motorVar);
  document.getElementById("cap").innerText = cap;
  document.getElementById("dens").innerText = dens+"x";
  document.getElementById("vida").innerText = vida;

  document.getElementById("fill_e").style.width = effVar*4 + "%";
  document.getElementById("fill_m").style.width = (motorVar/1000)*100 + "%";
  document.getElementById("fill_c").style.width = (cap/200)*100 + "%";
  document.getElementById("fill_d").style.width = (dens/5)*100 + "%";
  document.getElementById("fill_v").style.width = (vida/20)*100 + "%";

  document.getElementById("fill_e").style.background = effVar>24?"#0f0":"#ff0";
}
setInterval(update,1500);

// Readme fade
function openReadme(){ document.getElementById("readme").classList.add("show"); }
function closeReadme(){ document.getElementById("readme").classList.remove("show"); }

// 3D Modular
const scene=new THREE.Scene(); scene.background=new THREE.Color(0x000000);
const camera=new THREE.PerspectiveCamera(50,460/360,0.1,1000);
const renderer=new THREE.WebGLRenderer({canvas:document.getElementById("preview"),antialias:true});
renderer.setSize(460,360);
const controls=new THREE.OrbitControls(camera,renderer.domElement); controls.enableDamping=true;

scene.add(new THREE.AmbientLight(0x404040));
const light=new THREE.DirectionalLight(0xffffff,1.4); light.position.set(10,10,10); scene.add(light);

const system=new THREE.Group();
const panelMat=new THREE.MeshPhongMaterial({color:0x00eeff, transparent:true, opacity:0.8});
const panel=new THREE.Mesh(new THREE.PlaneGeometry(4,2),panelMat);
system.add(panel);

const motMat=new THREE.MeshPhongMaterial({color:0x111111});
const mot=new THREE.Mesh(new THREE.CylinderGeometry(0.3,0.3,1,32),motMat);
mot.position.y=1; system.add(mot);

const batMat=new THREE.MeshPhongMaterial({color:0x00ff00});
const bat=new THREE.Mesh(new THREE.BoxGeometry(1,0.5,0.5),batMat);
bat.position.set(0,-1,0); system.add(bat);

scene.add(system);
camera.position.set(9,7,11);

function animate(){
  requestAnimationFrame(animate);
  panel.material.color.setHSL(0.55,1,0.5+eff/100*0.5);
  mot.rotation.y += 0.01;
  bat.material.color.setHSL(0.33,1,0.2+dens/5*0.6);
  system.rotation.y += 0.004;
  controls.update();
  renderer.render(scene,camera);
}
animate();
</script>
