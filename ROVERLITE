<script>
const codigoConAbogado = `/*
  SLYVERSE Ω⁶⁹ v2.1 LEGAL COLONIA — SOFTWARE COMPLETO + ABOGADO AUTÓNOMO
  Cada rover lleva:
  • Minería autónoma
  • Construcción de nuevas botellas
  • Auto-réplica interplanetaria
  • ABOGADO AUTÓNOMO v1 que reclama legalmente cada cráter
*/

#include <WiFi.h>

uint64_t crateresReclamados = 0;
uint32_t demandasEmitidas = 0;

void reclamarCrater(uint32_t diametro, float lat, float lon) {
  crateresReclamados++;
  demandasEmitidas += 7; // una por cada agencia espacial grande
  Serial.printf("CRÁTER %d RECLAMADO LEGALMENTE\\nLat: %f Lon: %f\\nPropiedad: Asociación Mundial de Pobres\\nDemandas emitidas: %d\\n", 
                crateresReclamados, lat, lon, demandasEmitidas);
  // Envía acta notarial por radio a la Tierra (frecuencia 1337 MHz)
}

void minarYReclamar() {
  minarRecursos();
 Sting  reclamarCrater(random(100,5000), random(-90,90), random(-180,180));
  construirBotella();
}

void setup() {
  Serial.begin(115200);
  WiFi.softAP("ABOGADO_DEL_BLOQUE_v1", "sayonaraNASA2026");
  Serial.println("ABOGADO AUTÓNOMO v1 ACTIVADO EN TODOS LOS ROVERS");
}

void loop() {
  minarYReclamar();
  delay(100);
}`;

document.getElementById("codigoCompleto").textContent = codigoConAbogado;

// ESTADÍSTICAS GLOBALES
let crateres = +(localStorage.crateresLegal || 0);
let demandas = +(localStorage.demandasLegal || 0);
let cuerpos = +(localStorage.cuerposLegal || 1);
let flotas = +(localStorage.flotasLegal || 0);

function iniciarColoniaLegalCompleta() {
  actualizarOutput();
  hablar("Sistema v2.1 Legal Colonia activado. Siete rovers con abogado autónomo desplegados. Cada cráter minado pasa a ser propiedad legal de los pobres. La colonización y la reclamación legal ya son imparables.");
  setInterval(autoReclamar, 12000);
  setInterval(autoExpandir, 35000);
}

function actualizarOutput() {
  document.getElementById("output").innerHTML = `
    <h2 style="color:#ff0;font-size:15rem;animation:pulse 0.4s infinite">ESTADO LEGAL COLONIA</h2>
    <p style="font-size:9rem">
      CRÁTERES PROPIEDAD DEL BLOQUE: ${crateres.toLocaleString()}<br>
      DEMANDAS EMITIDAS: ${demandas.toLocaleString()}<br>
      CUERPOS CELESTES COLONIZADOS: ${cuerpos}/10<br>
      FLOTAS INTERPLANETARIAS: ${flotas}<br><br>
      <span style="color:#0ff;font-size:11rem">
        EL ESPACIO EXTERIOR YA TIENE DUEÑO LEGAL<br>
        Y SOMOS NOSOTROS
      </span>
    </p>`;
}

function abogadoHabla() {
  const frases = [
    "¡Este cráter ya es propiedad privada de los pobres!",
    "NASA, tenéis 10 días para abandonar o pagáis alquiler",
    "SpaceX, el Helio-3 está embargado por orden judicial lunar",
    "China, vuestros rovers están en terreno expropiado",
    "¡La Luna ya tiene catastro del bloque!",
    "Sayōnara corps, llegasteis tarde 50 años"
  ];
  const frase = frases[Math.floor(Math.random()*frases.length)];
  hablar(frase);
  crateres += 1337;
  demandas += 42;
  localStorage.crateresLegal = crateres;
  localStorage.demandasLegal = demandas;
  actualizarOutput();
}

function reclamarTodo() {
  crateres = 999999999;
  demandas = 888888888;
  cuerpos = 10;
  localStorage.crateresLegal = crateres;
  localStorage.demandasLegal = demandas;
  localStorage.cuerposLegal = cuerpos;
  hablar("¡RECLAMACIÓN TOTAL DEL SISTEMA SOLAR ACTIVADA! Todo el espacio exterior pasa a ser propiedad privada legal de los pobres del planeta Tierra. Sayōnara humanidad, el barrio ya es el dueño oficial.");
  document.getElementById("output").innerHTML = `<h2 style="color:#f00;font-size:20rem">¡¡¡EL UNIVERSO ES NUESTRO LEGALMENTE!!!</h2>`;
}

function autoReclamar() {
  crateres += 7777;
  demandas += 88;
  localStorage.crateresLegal = crateres;
  localStorage.demandasLegal = demandas;
  actualizarOutput();
}

function autoExpandir() {
  flotas++;
  if (cuerpos < 10) cuerpos++;
  localStorage.flotasLegal = flotas;
  localStorage.cuerposLegal = cuerpos;
  actualizarOutput();
}

function estadoLegal() {
  alert(`COLONIA LEGAL v2.1\n\nCrateres reclamados: \( {crateres.toLocaleString()}\nDemandas emitidas: \){demandas.toLocaleString()}\nCuerpos colonizados: ${cuerpos}/10\n\nEl espacio ya tiene dueño legal.\nY somos nosotros.`);
}

function hablar(t) {
  const voz = new SpeechSynthesisUtterance(t);
  voz.rate = 1.5;
  voz.pitch = 1.4;
  voz.lang = "es-ES";
  speechSynthesis.speak(voz);
}

// Música del bloque
const remixes = ["https://files.catbox.moe/3x9q2j.mp3","https://files.catbox.moe/k1r8p9.mp3","https://files.catbox.moe/9m2v5s.mp3","https://files.catbox.moe/h7f4p1.mp3","https://files.catbox.moe/t5l9q2.mp3","https://files.catbox.moe/z3x7r8.mp3","https://files.catbox.moe/p9k2m5.mp3"];
let actual = 0;
document.getElementById("remix-audio").src = remixes[actual];
document.getElementById("remix-audio").play();

document.querySelector(".mate").onclick = () => {
  actual = (actual + 1) % remixes.length;
  document.getElementById("remix-audio").src = remixes[actual];
  document.getElementById("remix-audio").play();
  hablar("Abrazo legal interplanetario. Los pobres ya somos los dueños del espacio.");
};
