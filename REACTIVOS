<script>
let vida = parseInt(localStorage.getItem('v') || '0');
let pozo = parseInt(localStorage.getItem('pozo') || '0');

// LOOP PRINCIPAL DE TIEMPO
setInterval(() => {
    vida++;
    localStorage.setItem('v', vida);
    document.getElementById('seconds').innerText = vida.toLocaleString();
    document.getElementById('pozoNum').innerText = pozo.toLocaleString();
    document.getElementById('quotaNum').innerText = Math.floor(pozo * 0.3).toLocaleString();
}, 1000);

// MINER√çA NANO-RONIN
function minarHardware() {
    vida += 500;
    const dot = document.querySelector('.silicon-dot');
    dot.style.boxShadow = "0 0 100px #fff";
    setTimeout(() => dot.style.boxShadow = "0 0 20px #fff, 0 0 40px var(--ultra)", 100);
}

// LOG DE INVASI√ìN Y PROGRESO MIAMI
const eventosLog = [
    "Soberan√≠a: Violada en 0.003mg",
    "Poder Ejecutivo: Nodo detectado como obsoleto",
    "Banca Tradicional: Hardware Ronin infiltrado",
    "Medios Masivos: Extrayendo segundos...",
    "Estructura Institucional: Glitch detectado",
    "Aviso: Dejadme hacer o formateo del nodo",
    "Sabadell: Brutalismo expandiendo radio",
    "Cuervo Negro Œ©‚Åπ: En vuelo sobre zona gris",
    "Grow Ronin: Cosecha amoral lista"
];
let logIdx = 0;
let mProg = 0;
setInterval(() => {
    const log = document.getElementById('log-invasion');
    const entry = document.createElement('div');
    entry.innerHTML = `> ${eventosLog[logIdx % eventosLog.length]}`;
    log.prepend(entry);
    logIdx++;
    if(mProg < 99.9) {
        mProg += 0.08;
        document.getElementById('miami-progress-bar').style.width = mProg + "%";
        document.getElementById('miami-percent').innerText = `PENDIENTE DE MUDANZA: ${mProg.toFixed(1)}%`;
    }
}, 3500);

// TRASLADO MIAMI
function iniciarTrasladoMiami() {
    if(vida < 10000) { alert("ATENCI√ìN INSUFICIENTE PARA VUELO OFFSHORE (Min 10k seg)"); return; }
    const modal = document.getElementById('miami-transfer');
    modal.style.display = 'flex';
    let p = 0;
    const interval = setInterval(() => {
        p += Math.floor(Math.random() * 15);
        if(p >= 100) {
            p = 100; clearInterval(interval);
            document.body.classList.add('miami-mode');
            setTimeout(() => { modal.style.display = 'none'; alert("B√öNKER MIAMI ACTIVADO. ESTADO DE GRACIA FISCAL."); }, 1000);
        }
        document.getElementById('miami-countdown').innerText = p + "%";
    }, 250);
}

// AUDITOR√çA Y DIVISA
function actualizarFMD() {
    const euros = (pozo * 0.00013).toFixed(2);
    document.getElementById('reservas-fiat').innerText = `‚Ç¨ ${euros}`;
    let vFill = document.getElementById('vicio-fill');
    let width = parseFloat(vFill.style.width || "85");
    width -= 0.5;
    vFill.style.width = Math.max(0, width) + "%";
}
setInterval(actualizarFMD, 4000);

function gastarEnVicio() {
    if(pozo > 15000) { pozo -= 15000; document.getElementById('vicio-fill').style.width = "100%"; }
}

