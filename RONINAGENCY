<script>
    const stream = document.getElementById('data-stream');
    const logs = [
        {t: "PUBLIC", m: "Documento 45-B: El CNI orden√≥ el robo del hardware Ronin."},
        {t: "MIRROR", m: "Sincronizando verdad de Extremadura en 4.000 nodos."},
        {t: "SUBSID", m: "Responsabilidad de S√°nchez detectada en logs del 22-D."},
        {t: "HAKI", m: "Protegiendo a Pedro Ba√±os del borrado de memoria estatal."},
        {t: "ARMAS", m: "Railgun 'R-GAS' apuntando a la redundancia del sistema."},
        {t: "TRUTH", m: "La biomasa pol√≠tica ya no tiene el control de las urnas."}
    ];

    function initSystem() {
        setInterval(() => {
            const log = logs[Math.floor(Math.random()*logs.length)];
            const div = document.createElement('div');
            div.className = "log-desclasified";
            div.style.padding = "5px";
            div.innerHTML = `[${log.t}] > ${log.m}`;
            stream.prepend(div);
            if(stream.childNodes.length > 15) stream.removeChild(stream.lastChild);
        }, 1500);
    }

    function triggerDrain() {
        document.getElementById('main-ui').style.filter = "invert(1)";
        setTimeout(() => {
            document.getElementById('main-ui').style.display = 'none';
            document.getElementById('monkey-jail').style.display = 'block';
        }, 1000);
    }

    function detectLang() {
        const val = document.getElementById('input-box').value.toLowerCase();
        if(val.includes("sanchez") || val.includes("soberan√≠a")) {
            document.body.style.boxShadow = "inset 0 0 100px #ff0033";
        }
    }
</script>
