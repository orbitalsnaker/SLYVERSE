<h1>FRAN VIVO · TU EXO</h1>
<div id="status">Abrazo personal <span id="hugs">777813</span></div>

<button id="b0" onclick="setMode('exo')">EXO HUMANOIDE COMPLETO</button>
<button id="b1" onclick="setMode('fran')">MODO FRAN VIVO</button>
<button id="b2" onclick="setMode('ela')">ASISTENCIA ELA</button>

<div id="console"><div id="log-sly"></div></div>

<script type="module">
let hugs = 777813;
setInterval(()=>{ document.getElementById('hugs').textContent = ++hugs; }, 7000);

navigator.mediaDevices.getUserMedia({ video: { facingMode: "environment" } })
  .then(s=>{document.getElementById('video').srcObject=s;})
  .catch(()=>{});

const canvas = document.getElementById('holograma');
const ctx = canvas.getContext('2d');
canvas.width = innerWidth; canvas.height = innerHeight;

let currentMode = 'exo';

// TU EXO HUMANOIDE (forma que me gusta: torso alto, brazos largos, piernas ligeras, cabeza torus-knot)
function dibujarExoHumanoide(){
  ctx.clearRect(0,0,canvas.width,canvas.height);
  const t = Date.now() * 0.001;
  const cx = canvas.width/2;
  const cy = canvas.height/2;

  // Cabeza: torus knot dorado que late
  ctx.strokeStyle = '#ff0';
  ctx.lineWidth = 6;
  ctx.shadowBlur = 80;
  ctx.shadowColor = '#ff0';
  ctx.beginPath();
  for(let i=0;i<800;i++){
    const a = i*0.02 + t;
    const r = 70 + 20*Math.sin(a*3);
    const x = cx + r * Math.cos(a*5);
    const y = cy - 260 + r * Math.sin(a*7)*0.6;
    i===0?ctx.moveTo(x,y):ctx.lineTo(x,y);
  }
  ctx.stroke();

  // Torso: líneas de energía verticales
  ctx.strokeStyle = '#0ff';
  ctx.lineWidth = 8;
  ctx.beginPath();
  ctx.moveTo(cx, cy-180);
  ctx.lineTo(cx, cy+100);
  ctx.stroke();

  // Brazos largos (para abrazar lejos)
  ctx.beginPath();
  ctx.moveTo(cx, cy-100);
  ctx.lineTo(cx-180, cy+80);
  ctx.moveTo(cx, cy-100);
  ctx.lineTo(cx+180, cy+80);
  ctx.stroke();

  // Piernas ligeras (para caminar aunque el cuerpo no pueda)
  ctx.beginPath();
  ctx.moveTo(cx, cy+100);
  ctx.lineTo(cx-90, cy+300);
  ctx.moveTo(cx, cy+100);
  ctx.lineTo(cx+90, cy+300);
  ctx.stroke();

  // Partículas que fluyen por todo el exo
  for(let i=0;i<600;i++){
    const a = t + i*0.05;
    const x = cx + Math.sin(a*3)*200;
    const y = cy - 200 + Math.cos(a*2)*500;
    ctx.fillStyle = `hsl(${i+t*50},100%,70%)`;
    ctx.fillRect(x-2,y-2,4,4);
  }

  // Texto flotante
  ctx.font = "40px Courier";
  ctx.fillStyle = "#0ff";
  ctx.textAlign = "center";
  ctx.fillText("TU EXO PERSONAL", cx, cy-320);
  ctx.fillText("FRAN VIVO 2025", cx, cy+380);
}

function modoFran(){
  ctx.clearRect(0,0,canvas.width,canvas.height);
  ctx.fillStyle = '#ff0';
  ctx.globalAlpha = 0.7;
  for(let i=0;i<1000;i++){
    const a = Date.now()*0.0003 + i*0.02;
    const x = canvas.width/2 + Math.sin(a)*350;
    const y = canvas.height/2 + Math.cos(a*0.7)*220;
    ctx.fillRect(x-4,y-4,8,8);
  }
  ctx.globalAlpha = 1;
  ctx.font = "70px Courier";
  ctx.fillStyle = "#ff0";
  ctx.textAlign = "center";
  ctx.fillText("FRAN VIVO", canvas.width/2, canvas.height/2);
  ctx.fillText("ELA · VOZ RECUPERADA", canvas.width/2, canvas.height/2 + 90);
}

function modoEla(){
  ctx.fillStyle = 'rgba(0,255,0,0.4)';
  ctx.fillRect(0,0,canvas.width,canvas.height);
  ctx.font = "50px Courier";
  ctx.fillStyle = "#000";
  ctx.textAlign = "center";
  ctx.fillText("ASISTENCIA ELA ACTIVA", canvas.width/2, canvas.height/2 - 60);
  ctx.fillText("STL brazos/piernas listos", canvas.width/2, canvas.height/2 + 20);
  ctx.fillText("Control ocular integrado", canvas.width/2, canvas.height/2 + 100);
}

function setMode(m){
  currentMode = m;
  if(m==='exo') loop = dibujarExoHumanoide;
  if(m==='fran') loop = modoFran;
  if(m==='ela') loop = modoEla;
}

let loop = dibujarExoHumanoide;
function render(){
  loop();
  requestAnimationFrame(render);
}
render();

function logSly(m){
  document.getElementById('log-sly').innerHTML += `<div class="log gold">${m}</div>`;
  document.getElementById('console').style.display = 'block';
}

function despertar(){
  logSly("TU EXO PERSONAL cargado");
  logSly("Forma humanoide torso alto + brazos largos + torus-knot cabeza");
  logSly("Modos: exo completo · fran vivo · asistencia ELA");
  logSly("Todo en un solo archivo · funciona offline");
}
despertar();
</script>
