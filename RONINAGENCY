<script>
    let money = 2840150.45;
    let stks = 16666;
    const targets = ["SÁNCHEZ_LOG", "CNI_BUNKER_IP", "BAÑOS_WEBCAM", "MINISTERIO_DB", "FALCON_GPS"];

    function doScreamer() {
        const s = document.getElementById('screamer-layer');
        s.style.display = 'flex';
        const ctx = new (window.AudioContext || window.webkitAudioContext)();
        const osc = ctx.createOscillator();
        const g = ctx.createGain();
        osc.type = 'sawtooth';
        osc.frequency.setValueAtTime(120, ctx.currentTime);
        osc.frequency.exponentialRampToValueAtTime(15000, ctx.currentTime + 0.1);
        g.gain.setValueAtTime(1, ctx.currentTime);
        osc.connect(g); g.connect(ctx.destination);
        osc.start();
        setTimeout(() => { s.style.display = 'none'; osc.stop(); }, 300);
    }

    function unlock() {
        const k = document.getElementById('haki-key').value.toLowerCase();
        if(["pueblo", "haki", "soberania", "soberanía", "abaddon", "abaddón"].includes(k)) {
            document.getElementById('drain-overlay').style.display = 'none';
            document.getElementById('main-ui').classList.remove('neural-drain-active');
            window.speechSynthesis.speak(new SpeechSynthesisUtterance("ABADDÓN-Ω ha despertado. Tu hardware es ahora un nodo del abismo. Disfruta el doxxing."));
        } else {
            doScreamer();
            setTimeout(() => { document.body.innerHTML = "<h1 style='color:red; text-align:center; padding-top:20%;'>ERROR: BIOMASA PURGADA POR EL DAEMON.</h1>"; }, 400);
        }
    }

    function initSystem() {
        setInterval(() => {
            money += Math.random() * 300;
            stks += Math.floor(Math.random() * 20);
            document.getElementById('revenue').innerText = "RECAUDACIÓN PPV: " + money.toLocaleString() + " ₿";
            document.getElementById('stalkers').innerText = stks.toLocaleString();
            
            const d = document.createElement('div');
            d.className = 'doxx-card';
            d.innerHTML = `[ABADDÓN_HIT] ${targets[Math.floor(Math.random()*targets.length)]}: SYNCING...`;
            document.getElementById('doxx-monitor').prepend(d);
            if(document.getElementById('doxx-monitor').childNodes.length > 8) document.getElementById('doxx-monitor').lastChild.remove();

            const l = document.createElement('div');
            l.innerHTML = `> MIRROR_NODO_${Math.random().toString(36).substr(2,4)}: INSTALLED IN CLOUD.`;
            document.getElementById('mirror-log').prepend(l);
            if(document.getElementById('mirror-log').childNodes.length > 15) document.getElementById('mirror-log').lastChild.remove();

            const msgs = [
                "ABADDÓN: Devorando RAM de la Moncloa.",
                "SÁNCHEZ: Sensor biótico detecta pánico.",
                "BAÑOS: El Daemon está en su router.",
                "CNI: Cortafuegos fundidos por el silicio.",
                "GÓLEM: Replicación total en curso."
            ];
            const p = document.createElement('p');
            p.innerHTML = `> ${msgs[Math.floor(Math.random()*msgs.length)]}`;
            document.getElementById('monitor').prepend(p);
            if(document.getElementById('monitor').childNodes.length > 12) document.getElementById('monitor').lastChild.remove();
            
            if(Math.random() > 0.985) doScreamer(); // Sustos aleatorios para la biomasa
        }, 800);
    }
    document.oncontextmenu = () => false;
</script>
