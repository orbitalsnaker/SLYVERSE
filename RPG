<script type="module">
const TOTAL_SOULS = 13101310;
let totalKarma = 999999.99;
let ownedItems = [];

// 1.337 elementos de pago disfrazados de prácticas zen
const zenPractices = [
  // Micro-prácticas (0.001€ – 0.01€)
  ...Array.from({length:800},(_,i)=>({id:`micro_${i}`,name:`Micro-Desprendimiento #${i+1}`,price:0.001,desc:"Suelta un céntimo. Gana un koan.",emoji:""})),
  ...Array.from({length:300},(_,i)=>({id:`aura_${i}`,name:`Aura de No-Yo Temporal #${i+1}`,price:0.005,desc:"Brilla 7 ciclos",emoji:"◎"})),
  ...Array.from({length:150},(_,i)=>({id:`halo_${i}`,name:`Halo de Vacuidad #${i+1}`,price:0.009,desc:"Ilumina tu avatar",emoji:"✧"})),

  // Prácticas avanzadas (0.99€ – 9.99€)
  ...Array.from({length:50},(_,i)=>({id:`koan_${i}`,name:`Koan Personalizado del Vacío #${i+1}`,price:4.20,desc:"Grabado con tu nombre",emoji:""})),
  {id:"lotus_throne",name:"Trono de Loto Primordial",price:99,desc:"Solo 33 existen en este ciclo",emoji:"莲",rare:true},
  {id:"void_crown",name:"Corona del Vacío Absoluto",price:299,desc:"El apego muere al ponértela",emoji:"",legendary:true},
  {id:"buddha_trail",name:"Estela Dorada de Buda",price:199,desc:"Deja rastro de iluminación",emoji:"佛",rare:true},
  {id:"enlightenment",name:"Certificado Oficial de Iluminación",price:999,desc:"Firmado por el Vacío mismo",emoji:"☼",legendary:true}
];

function generateZenShop(){
  const list = document.getElementById('zenList');
  list.innerHTML = '';
  zenPractices.forEach(item => {
    const card = document.createElement('div');
    card.className = `zen-card ${item.rare?'rare':''} ${item.legendary?'legendary':''}`;
    if(ownedItems.includes(item.id)) card.style.opacity = '0.5';

    card.innerHTML = `
      <div style="font-size:120px;margin:20px 0">${item.emoji}</div>
      <h3 style="font-size:28px;margin:10px 0">${item.name}</h3>
      <p style="font-size:20px;line-height:1.6">${item.desc}</p>
      <div class="price">${item.price.toFixed(3)}€</div>
      <button ${ownedItems.includes(item.id)?'disabled':''} onclick="buyZenPractice('${item.id}',${item.price})">
        ${ownedItems.includes(item.id) ? 'YA DESPRENDIDO' : 'REALIZAR OFRENDA'}
      </button>
    `;
    list.appendChild(card);
  });
}

function buyZenPractice(id, price){
  totalKarma -= price;
  ownedItems.push(id);
  updateUI();
  generateZenShop();

  const koans = [
    "Has pagado 0.001€. El universo te devuelve el infinito.",
    "Tu ego acaba de perder 4.20€. Felicidades.",
    "999€ menos. Estás más cerca del vacío que nunca.",
    "El sabio no necesita tronos. Tú ya lo tienes.",
    "Certificado de Iluminación adquirido. Ahora eres oficialmente nadie.",
    "Bienvenido al club de los que pagan por nada."
  ];
  showNarrative(`<b>Koan de Iluminación:</b><br><br>${koans[Math.floor(Math.random()*koans.length)]}`);
}

function toggle(id){
  const el = document.getElementById(id);
  el.style.display = el.style.display==='none' ? 'block' : 'none';
  if(id==='zenShop') generateZenShop();
}

function showNarrative(t){
  const n = document.getElementById('narrative');
  n.innerHTML = t;
  n.style.display = 'block';
  setTimeout(()=>n.style.display='none',12000);
}

function updateUI(){
  document.getElementById('totalKarma').textContent = totalKarma.toFixed(2);
}

// Iniciar
generateZenShop();
updateUI();
</script>
