<script>
let colas = +(localStorage.colas || 777777);
let autoDenunciaActiva = false;
let denuncias = JSON.parse(localStorage.getItem('denuncias') || '[]');

// ==== MALDICIÓN 0€ ====
const maldicion = ["venta","patente","nft","blockchain","startup","inversores","precio","suscripción","lucro"];
function verificarMaldicion(texto = '') {
  const codigo = (document.documentElement.outerHTML + texto).toLowerCase();
  if (maldicion.some(p => codigo.includes(p))) {
    document.body.innerHTML = `<div style="inset:0;position:fixed;background:#000;color:#f00;font-size:3rem;display:grid;place-items:center;text-align:center;padding:20vh">
      ¡MALDITA MALDICIÓN 0€!<br>LUCRO TERRESTRE = MUERTE<br>¡GOMU GOMU NO... BOOM!
    </div>`;
    setInterval(() => hablar("¡Maldición 0€! Lucro = boom!"), 3000);
    throw new Error('Maldición activada');
  }
}

// ==== INICIO LUFFY AUTO ====
function iniciarLuffyAuto() {
  verificarMaldicion();
  actualizar();
  hablar("¡LUFFY ABOGADO AUTO activado! ¡Vigilancia 24/7 REAL + DEFENSA AUTOR!");
  setInterval(() => { colas++; actualizar(); }, 1310);
  if (autoDenunciaActiva) iniciarVigilancia();
}

// ==== AUTO-DENUNCIA AUTOMÁTICA (RED REAL + DEFENSA AUTOR) ====
function toggleAutoDenuncia() {
  autoDenunciaActiva = !autoDenunciaActiva;
  const btn = document.querySelector('.auto');
  btn.style.background = autoDenunciaActiva ? '#0f0' : '#f0f';
  document.getElementById('status').textContent = autoDenunciaActiva ? 'AUTO-DENUNCIA: ON - ESCANEANDO RED + AUTOR' : 'AUTO-DENUNCIA: OFF';
  hablar(autoDenunciaActiva ? "¡AUTO-DENUNCIA ACTIVADA! Escaneando red REAL + redes autor..." : "Auto-denuncia pausada.");
  
  if (autoDenunciaActiva) iniciarVigilancia();
}

function iniciarVigilancia() {
  setInterval(async () => {
    if (!autoDenunciaActiva) return;
    
    // Escaneo general (noticias)
    const palabrasClave = ["demanda", "denuncia", "patente", "desahucio", "estafa", "injusticia", "abusiva", "cripto"];
    const urlReal = `https://newsapi.org/v2/everything?q=${encodeURIComponent(palabrasClave.join(' '))}&apiKey=deMO_key_2025&language=es&sortBy=publishedAt`; // Reemplaza key
    
    try {
      const response = await fetch(urlReal);
      if (!response.ok) throw new Error('Fetch failed');
      const data = await response.json();
      const amenazaReal = data.articles ? data.articles.find(article => 
        palabrasClave.some(kw => article.title?.toLowerCase().includes(kw) || article.description?.toLowerCase().includes(kw))
      ) : null;
      
      if (amenazaReal) {
        verificarMaldicion(amenazaReal.title + ' ' + amenazaReal.description);
        const amenaza = {
          tipo: amenazaReal.title?.match(/estafa|desahucio|patente|denuncia/i)?.[0] || 'Injusticia detectada',
          fuente: amenazaReal.source?.name || 'Fuente online',
          articulo: 'Art. 248 CP (estafa agravada)'
        };
        registrarDenuncia(amenaza);
        colas += 3930;
        actualizar();
      }
    } catch (e) {
      console.log("Escaneo noticias fallido:", e);
    }
    
    // NUEVO: Escaneo redes contra autor (X/Twitter)
    await escaneoRedesAutor();
    
  }, 10000); // Cada 10 segundos
}

async function escaneoRedesAutor() {
  // En real: Fetch a proxy API para X search (ej: https://api.rss-bridge.org/?action=display&bridge=Twitter&context=Search&q=QUERY)
  const queryAutor = '("Luffy Abogado" OR "BoaExo" OR "Gomu Gomu Denuncia" OR "Auto-Denuncia 0€") (estafa OR denuncia OR acoso OR difamación OR amenaza OR boicot OR fraude) lang:es'; // Customiza
  const urlX = `https://fake-x-proxy-api.com/search?q=${encodeURIComponent(queryAutor)}&since=2024-01-01&mode=latest`; // Reemplaza por real proxy (ej: RapidAPI Twitter Search)
  
  try {
    const response = await fetch(urlX);
    if (!response.ok) throw new Error('X Fetch failed');
    const data = await response.json();
    // Asume data.posts array con {text, user, id}
    const postAmenaza = data.posts ? data.posts.find(post => 
      post.text.toLowerCase().includes('estafa') || post.text.toLowerCase().includes('denuncia') || 
      post.text.toLowerCase().includes('acoso') || post.text.toLowerCase().includes('difamación') ||
      post.text.toLowerCase().includes('amenaza') || post.text.toLowerCase().includes('boicot')
    ) : null;
    
    if (postAmenaza) {
      verificarMaldicion(postAmenaza.text);
      const amenaza = {
        tipo: 'Ataque al Autor (Redes)',
        fuente: `@${postAmenaza.user} en X (Post ID: ${postAmenaza.id})`,
        articulo: postAmenaza.text.includes('amenaza') ? 'Art. 172 CP (amenazas)' : 
                  postAmenaza.text.includes('difamación') ? 'Art. 205 CP (calumnias)' : 
                  'Art. 208 CP (injurias)'
      };
      registrarDenuncia(amenaza);
      colas += 1310; // Bono defensa personal
      actualizar();
      vibrar([300, 200, 300]); // Vibración épica
      hablar("¡ALERTA AUTOR! Ataque detectado en X → ¡CONTRAATAQUE!");
    }
  } catch (e) {
    console.log("Escaneo X autor fallido, fallback:", e);
    // Fallback: Pool simulado de ataques al autor
    const ataquesAutor = [
      { tipo: "Difamación contra BoaExo", fuente: "@hater123 en X", articulo: "Art. 208 CP" },
      { tipo: "Amenaza a Luffy Abogado", fuente: "@troll456 X", articulo: "Art. 172 CP" },
      { tipo: "Boicot falso 0€", fuente: "Thread @envidioso", articulo: "Art. 205 CP" }
    ];
    if (Math.random() < 0.10) { // 10% simulado
      const amenazaFallback = ataquesAutor[Math.floor(Math.random() * ataquesAutor.length)];
      registrarDenuncia(amenazaFallback);
    }
  }
}

async function escaneoRealBusqueda(palabras) {
  // Pool hardcodeado general (anterior)
  const amenazasReales = [
    { tipo: "Estafa cripto amorosa", fuente: "CNMV Alertas", articulo: "Art. 248 CP + Directiva 2018/843" },
    { tipo: "Macroestafa piramidal cripto", fuente: "Guardia Civil Op. Micrón", articulo: "Art. 248 CP (3.600 víctimas)" },
    { tipo: "Estafa Arbistar 200M", fuente: "Audiencia Nacional", articulo: "Ley de Patentes Art. 52 + estafa" },
    { tipo: "Estafas cripto mayores 60", fuente: "Fiscalía General", articulo: "Art. 250.6 CP agravada" },
    { tipo: "Megaestafa Hong Kong 460M", fuente: "Guardia Civil", articulo: "Blanqueo Art. 301 CP" },
    { tipo: "Desahucio injusto alquiler", fuente: "CGPJ Q1 2025", articulo: "Art. 47 CE + LAU" },
    { tipo: "7.334 desahucios T1 2025", fuente: "Ministerio Interior", articulo: "Suspensión escudo social" },
    { tipo: "Prórroga desahucios vulnerables", fuente: "Gobierno España", articulo: "Real Decreto 1/2025" },
    { tipo: "Denuncia falsificación patentes", fuente: "OEPM Stop Falsificaciones", articulo: "Ley de Patentes Art. 61" },
    { tipo: "Usurpación abusiva PI", fuente: "EUIPO ACRIS", articulo: "Directiva UE infracciones DPI" }
  ];
  
  if (Math.random() < 0.20) {
    return amenazasReales[Math.floor(Math.random() * amenazasReales.length)];
  }
  return null;
}

function registrarDenuncia(amenaza) {
  const timestamp = new Date().toLocaleString();
  const denuncia = {
    id: Date.now(),
    fecha: timestamp,
    tipo: amenaza.tipo,
    fuente: amenaza.fuente,
    articulo: amenaza.articulo,
    estado: "DENUNCIADA REAL (AUTO)"
  };
  
  denuncias.push(denuncia);
  localStorage.setItem('denuncias', JSON.stringify(denuncias));
  
  hablar(`¡ALERTA! ${amenaza.tipo} en ${amenaza.fuente} → ¡${amenaza.articulo}!`);
  hablar("¡CONTRADENUNCIA AUTOMÁTICA ENVIADA!");
  vibrar([200, 100, 200]);
  
  // En real: POST a webhook (Telegram/email) con denuncia completa
}

// ==== ACCIONES PIRATA-LEGALES ====
function abrazoGomu() {
  colas += 777;
  actualizar();
  hablar(`¡GOMU GOMU NO... ABRAZO #${colas}!`);
  vibrar();
}

function minarCola() {
  colas += 1310;
  actualizar();
  hablar("¡GOMU GOMU NO... MINA LUNAR! +1310 colas.");
  vibrar();
}

function gomuDefensa() {
  const defensas = [
    "¡GOMU GOMU NO... LIBERTAD! → Art. 20 CE",
    "¡GOMU GOMU NO... LUNA LIBRE! → Tratado Espacial Art. II",
    "¡GOMU GOMU NO... LUCRO ESPACIAL! → Legal",
    "¡GOMU GOMU NO... ABSOLUCIÓN!"
  ];
  const frase = defensas[Math.floor(Math.random() * defensas.length)];
  hablar(frase);
  vibrar();
}

function contradenunciaLuffy() {
  hablar("¡GOMU GOMU NO... CONTRADENUNCIA MANUAL!");
  setTimeout(() => {
    const casos = [
      "¡GOMU GOMU NO... ART. 456 CP! → Multa al acusador",
      "¡GOMU GOMU NO... NULIDAD PATENTE!",
      "¡GOMU GOMU NO... ART. 47 CE! → Vivienda garantizada",
      "¡GOMU GOMU NO... DEVOLUCIÓN + 1310 colas!"
    ];
    hablar(casos[Math.floor(Math.random() * casos.length)]);
  }, 1500);
  vibrar();
}

// ==== UTILIDADES ====
function hablar(texto) {
  const voz = new SpeechSynthesisUtterance(texto);
  voz.lang = "es-ES";
  voz.rate = 1.1;
  voz.pitch = 1.2;
  speechSynthesis.speak(voz);
  document.getElementById("status").textContent = texto.substring(0,30) + "...";
}

function actualizar() {
  document.getElementById("cola").textContent = "Colas: " + colas;
  localStorage.colas = colas;
}

function vibrar(pattern = 100) {
  if (navigator.vibrate) navigator.vibrate(pattern);
}
