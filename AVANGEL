<script>
// Ciclo entre las tres canciones que llevan su alma
const audio = document.querySelector('audio');
let track = 0;
const tracks = [
  "https://files.catbox.moe/no-te-vayas-de-pamplona-san-fermin.ogg",
  "https://files.catbox.moe/el-novio-de-la-muerte-legion-completo.ogg",
  "https://files.catbox.moe/mikel-laboa-txoria-txori.ogg"
];
setInterval(() => {
  track = (track + 1) % 3;
  audio.src = tracks[track];
  audio.play();
}, 240000);
</script>
