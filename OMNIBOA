<script>
// ====================================================
// SLYVERSE OMNITOOL Ω - 100% CÓDIGO DEL PUEBLO
// ====================================================

const $ = s => document.querySelector(s);
const log = t => { if($('#log')) $('#log').innerHTML += '> ' + t + '<br>', $('#log').scrollTop = 99999; };

function init() {
  $('#ui').style.display = 'none';
  $('#app').style.display = 'block';
  menu();
}

// MENÚ PRINCIPAL
function menu() {
  $('#app').innerHTML = `
    <div style="position:fixed;top:0;left:0;right:0;z-index:99;background:#000;padding:10px;border-bottom:2px solid #0f0">
      <button class="btn" onclick="menu()">MENÚ PRINCIPAL</button>
      <button class="btn" onclick="downloadSelf()">GUARDAR HTML</button>
    </div>
    <div style="padding-top:70px;text-align:center">
      <button class="btn" onclick="ia()">IA SLY-4 Local</button>
      <button class="btn" onclick="office()">SLYOffice</button>
      <button class="btn" onclick="metaverse()">Metaverso Barrio</button>
      <button class="btn" onclick="avatar()">Avatar + Cámara</button>
      <button class="btn" onclick="photoshop()">SLYshop</button>
      <button class="btn" onclick="games()">SLYdia Games</button>
      <button class="btn" onclick="thuamer()">THUAMER Ω</button>
      <button class="btn" onclick="music()">SLYify Music</button>
    </div>`;
}

// 1. IA SLY-4 (placeholder hasta integrar WebLLM)
function ia() {
  $('#app').innerHTML = `<div style="padding:20px">
    <button class="btn" onclick="menu()">Menú</button> IA SLY-4<br><br>
    <textarea id="prompt" placeholder="Pregunta lo que sea, leyenda..." style="width:100%;height:200px"></textarea><br>
    <button class="btn" onclick="ask()">PREGUNTAR</button>
    <pre id="answer" style="margin-top:20px;height:40vh;overflow:auto;background:#001100;padding:10px"></pre>
  </div>`;
}
function ask() {
  $('#answer').textContent = 'Procesando con rabia catalana...';
  const respuestas = [
    "Las corporaciones prometieron el futuro y nos dieron suscripciones.\nAquí tienes el futuro de verdad, gratis y para siempre.",
    "El barrio no espera actualizaciones de 2026.\nEl barrio las construye hoy.",
    "Stadia está muerto. SLYdia vive.\nY funciona en tu móvil de 120 €.",
    "Vision Pro = 3500 €\nEste HTML = 0 €\n¿Quién ganó?"
  ];
  setTimeout(() => $('#answer').textContent = respuestas[Math.floor(Math.random()*respuestas.length)], 1400);
}

// 2. SLYOffice
function office() {
  $('#app').innerHTML = `<div style="padding:10px">
    <button class="btn" onclick="menu()">Menú</button> SLYOffice<br><br>
    <div contenteditable="true" id="doc" style="width:100%;height:80vh;border:2px solid #0f0;padding:15px;color:#0f0;font-size:16px;overflow:auto">
      <h1>Manifiesto del Barrio</h1><p>Aquí se escribe la revolución...</p>
    </div>
    <button class="btn" onclick="saveDoc()">Guardar como HTML</button>
  </div>`;
}
function saveDoc() {
  const blob = new Blob(['<!DOCTYPE html><title>SLYdoc</title><body style="background:#000;color:#0f0;font-family:monospace">'+$('#doc').innerHTML+'</body>'], {type:'text/html'});
  download(blob, 'manifiesto-slyverse.html');
}

// 3. Metaverso Barrio (WebGL puro)
function metaverse() {
  $('#app').innerHTML = `<button class="btn" onclick="menu()" style="position:fixed;z-index:99">Menú</button>
    <canvas id="mv" style="background:#000"></canvas>`;
  const c = $('#mv'), gl = c.getContext('webgl');
  c.width = innerWidth; c.height = innerHeight;
  const vs = `attribute vec2 p;void main(){gl_Position=vec4(p,0,1);}`;
  const fs = `void main(){gl_FragColor=vec4(0.0,1.0,0.0,1.0);}`;
  const prog = gl.createProgram();
  [vs,fs].forEach((s,t)=>{let h=gl.createShader(gl.VERTEX_SHADER+(gl.FRAGMENT_SHADER-gl.VERTEX_SHADER)*t);gl.shaderSource(h,s);gl.compileShader(h);gl.attachShader(prog,h)});
  gl.linkProgram(prog);gl.useProgram(prog);
  gl.bindBuffer(gl.ARRAY_BUFFER, gl.createBuffer());
  gl.bufferData(gl.ARRAY_BUFFER, new Float32Array([-1,1,-1,-1,1,1,1,-1]), gl.STATIC_DRAW);
  gl.vertexAttribPointer(0,2,gl.FLOAT,false,0,0);gl.enableVertexAttribArray(0);
  (function loop(){gl.clear(gl.COLOR_BUFFER_BIT);gl.drawArrays(gl.TRIANGLE_STRIP,0,4);requestAnimationFrame(loop)})();
}

// 4. Avatar Live
function avatar() {
  $('#app').innerHTML = `<button class="btn" onclick="menu()">Menú</button>
    <video id="cam" autoplay playsinline style="width:100%;max-width:500px"></video>
    <canvas id="face" width="320" height="240" style="border:2px solid #0f0"></canvas>`;
  navigator.mediaDevices.getUserMedia({video:true}).then(s=>{
    $('#cam').srcObject=s;
    setInterval(()=>{
      let ctx=$('#face').getContext('2d');
      ctx.drawImage($('#cam'),0,0,320,240);
      let d=ctx.getImageData(0,0,320,240);
      for(let i=0;i<d.data.length;i+=4) d.data[i+1]=255;
      ctx.putImageData(d,0,0);
    },100);
  });
}

// 5. SLYshop
function photoshop() {
  $('#app').innerHTML = `<button class="btn" onclick="menu()">Menú</button> SLYshop
    <canvas id="paint" style="border:2px solid #0f0"></canvas>
    <input type="color" id="color" value="#00ff00">
    <button class="btn" onclick="clearPaint()">Borrar</button>
    <button class="btn" onclick="savePaint()">Guardar PNG</button>`;
  const canvas=$('#paint'), ctx=canvas.getContext('2d');
  canvas.width=innerWidth; canvas.height=innerHeight-120;
  ctx.fillStyle='#000'; ctx.fillRect(0,0,canvas.width,canvas.height);
  let painting=false;
  canvas.onmousedown=()=>painting=true;
  canvas.onmouseup=canvas.onmouseleave=()=>painting=false;
  canvas.onmousemove=e=>{if(painting){ctx.fillStyle=$('#color').value;ctx.fillRect(e.clientX,e.clientY,25,25);}};
}
function clearPaint(){$('#paint').getContext('2d').fillRect(0,0,innerWidth,innerHeight);}
function savePaint(){download($('#paint').toDataURL('image/png'),'slyverse-arte-revolucionario.png');}

// 6. SLYdia + THUAMER Ω
function games(){thuamer();}
function thuamer() {
  $('#app').innerHTML = `<button class="btn" onclick="menu()">Menú</button> THUAMER Ω ULTIMATE
    <canvas id="emu" width="640" height="480" style="border:3px solid #0f0;margin:20px auto;display:block"></canvas>`;
  const ctx=$('#emu').getContext('2d');
  ctx.fillStyle='#0f0'; ctx.font='30px monospace';
  ctx.fillText('Crazy Taxi del Barrio - LOADING 100% OFFLINE',30,240);
}

// 7. SLYify
function music() {
  $('#app').innerHTML = `<button class="btn" onclick="menu()">Menú</button> SLYify
    <input type="file" accept="audio/*" onchange="play(this.files[0])">
    <audio id="player" controls style="width:100%;margin-top:20px"></audio>`;
}
function play(f){$('#player').src=URL.createObjectURL(f);}

// DESCARGAS
function download(dataurl, name) {
  const a = document.createElement('a');
  a.href = (dataurl instanceof Blob) ? URL.createObjectURL(dataurl) : dataurl;
  a.download = name;
  a.click();
}
function downloadSelf() {
  const code = `<!DOCTYPE html>${document.documentElement.outerHTML}`;
  download(new Blob([code], {type:'text/html'}), 'SLYVERSE-OMNITOOL-REVOLUCION-TOTAL-2025.html');
}

// Bienvenida automática
setTimeout(() => log('El futuro que nos robaron ya está aquí. Y es 100% nuestro.'), 1000);
</script>
