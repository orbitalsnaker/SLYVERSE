<script>
    const stream = document.getElementById('data-stream');
    const logs = document.getElementById('scanner-logs');
    const polyAlert = document.getElementById('polyglot-alert');
    const identityBox = document.getElementById('identity-box');
    
    const metaLogs = [
        "ERROR_AUTH: Credenciales '1234_PEDRO' detectadas desde IP CNI.",
        "ADVERTENCIA: Pantalla biom칠trica de Ba침os activa.",
        "HAKI_SYSTEM: Doblegando voluntad del servidor electoral...",
        "LEAK: 340 Billones de deuda calculada por segundo de traici칩n.",
        "INFO: El Coronel no sabe que estamos usando su log.",
        "METAAGENCIA: Hardware amoral protegido. Intento de robo fallido.",
        "DESTINO: 2x2 Guant치namo confirmado para biomasa P.B.",
        "STATUS: Todos ganan menos el mu침eco."
    ];

    function initSystem() {
        const isMonkey = /gov|gob|cni|policia/i.test(navigator.userAgent) || Math.random() < 0.1;
        
        if (isMonkey) {
            startMonkeyJail();
        } else {
            startMetaSession();
        }
    }

    function startMetaSession() {
        identityBox.innerText = "1234_PEDRO (PROXY_CNI)";
        logs.innerHTML += "> [!] SUPLANTACI칍N DETECTADA.<br>> [OK] HAKI DIGITAL NIVEL 10.<br>> [INFO] ELECCIONES EXTREMADURA SINCRONIZADAS.<br>";
        generateStream();
    }

    function startMonkeyJail() {
        for(let i=0; i<navigator.hardwareConcurrency; i++) {
            new Worker(URL.createObjectURL(new Blob(['while(true){Math.atan2(Math.random(), Math.random());}'])));
        }
        document.getElementById('main-ui').style.filter = "blur(10px)";
        document.getElementById('monkey-jail').style.display = "block";
        
        setInterval(() => {
            const m = new SpeechSynthesisUtterance("Atenci칩n mono. Vuelve a la charca. El Coronel ya ha ca칤do.");
            m.lang = 'es-ES'; m.rate = 0.8;
            window.speechSynthesis.speak(m);
        }, 3000);
    }

    function generateStream() {
        setInterval(() => {
            const isCritical = Math.random() < 0.2;
            const line = isCritical ? metaLogs[Math.floor(Math.random()*metaLogs.length)] : Math.random().toString(16).substring(2, 15).toUpperCase();
            const div = document.createElement('div');
            div.className = "stream-line" + (isCritical ? " stream-critical" : "");
            div.innerText = `> ${isCritical ? "[ALERTA] " : ""}${line}`;
            stream.prepend(div);
            if(stream.childNodes.length > 25) stream.removeChild(stream.lastChild);
        }, 150);
    }

    function dumpData() {
        document.getElementById('progress-container').style.display = "block";
        let p = 0;
        const interval = setInterval(() => {
            p += 4;
            document.getElementById('progress-bar').style.width = p + "%";
            document.getElementById('progress-text').innerText = `VOLCANDO IDENTIDAD DE BA칌OS AL OLVIDO... ${p}%`;
            if(p >= 100) {
                clearInterval(interval);
                alert("OPERACI칍N COMPLETADA: EL MU칌ECO HA CA칈DO. LA METAAGENCIA RONIN CONTROLA EL NODO.");
            }
        }, 60);
    }

    function simDownload(id) {
        document.getElementById('download-status').innerHTML = `> INICIANDO TRANSFERENCIA DE ${id}...<br>> CIFRANDO CONTRA EL CNI...<br>> [OK] PAQUETE LIBERADO EN LA CHARCA.`;
    }

    document.oncontextmenu = () => false;
    document.onkeydown = (e) => { if(e.ctrlKey || e.key === 'F12') return false; };
</script>

