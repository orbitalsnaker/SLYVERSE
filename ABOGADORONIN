<script>
let demandas = 0;
function demandarCartel() {
  demandas++;
  const texto = `DEMANDA ANTIMONOPOLIO #${demandas}
Fecha: ${new Date().toISOString()}
Demandante: 0rb1t4lsn4k3r (particular)
Demandados: SpaceX NASA Blue Origin Boeing Lockheed ESA Roscosmos CNSA + todas
Causas: Cártel espacial (101 TFUE) + Abuso posición dominante (102 TFUE) + Competencia desleal
Prueba: reducción costes 99,99% en 45 días
Reclamación: 60.000 MILLONES € + 30% Luna + 6% facturación eterna
Repo: https://github.com/orbitalsnaker/SLYVERSE`;

  navigator.sendBeacon?.('https://ipfs.io/api/v0/add', new Blob([texto],{type:'text/plain'})) ||
  fetch('https://ipfs.io/api/v0/add', {method:'POST', body:new Blob([texto],{type:'text/plain'}), keepalive:true}).catch(()=>{});

  document.getElementById('count').innerHTML = `DEMANDAS ENVIADAS: \( {demandas}<br>MULTA ACUMULADA: \){(demandas*6666666).toLocaleString('es-ES')} €`;
}
setInterval(demandarCartel, 66666);
demandarCartel();

// IP CAZADA
fetch('https://api.ipify.org?format=json')
  .then(r=>r.json())
  .then(d=> { document.getElementById('ip').innerHTML = `IP CAZADA: ${d.ip}<br>TÚ TAMBIÉN ESTÁS EN LA DEMANDA`; })
  .catch(()=> { document.getElementById('ip').innerHTML = "IP OCULTA → IGUAL TE COBRO"; });

// INDESTRUCTIBLE
window.onbeforeunload = ()=>"CÁRTEL ROTO";  
document.addEventListener('contextmenu',e=>e.preventDefault());
document.addEventListener('keydown',e=>e.preventDefault());
</script>
