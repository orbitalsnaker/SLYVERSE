function iniciarLuffyOmega() {
  actualizar();
  hablar("¡Gear 5 y Exoesqueleto listos! Elige tu forma de libertad, nakama");
  setInterval(()=>{colas += 13; actualizar();},1310);
  setInterval(revisarWifiLibre,5000);
  setInterval(vigilarAtaquesYDoxxing,15000);
  setInterval(buscarNakamasEnPeligro,22000);
  setInterval(()=>hablar(LORE_LUFFY[Math.floor(Math.random()*LORE_LUFFY.length)]), 50000);
}

function toggleExo() {
  modoExo = !modoExo;
  if (modoExo) {
    document.body.classList.add("exo");
    document.getElementById("titulo").innerHTML = "S-SNAKE ABOGADO Ω";
    document.getElementById("subtitulo").innerHTML = "GERMA 66 · RAID SUIT · EXOESQUELETO";
    hablar("EXOESQUELETO ACTIVADO. MODO CYBERPUNK TOTAL");
    setInterval(()=>hablar(LORE_EXO[Math.floor(Math.random()*LORE_EXO.length)]), 30000);
  } else {
    document.body.classList.remove("exo");
    document.getElementById("titulo").innerHTML = "LUFFY ABOGADO Ω";
    document.getElementById("subtitulo").innerHTML = "喜びの解放者 · ニカ · GEAR 5";
    hablar("¡Vuelvo al modo Gear 5! ¡BUAAAHAHAHAHA!");
  }
}

