<script>
    const log = document.getElementById('terminal-log');
    let pozoVal = 13101310;

    function addLog(msg) {
        const div = document.createElement('div');
        div.innerHTML = `> ${msg}`;
        log.prepend(div);
        if(log.childNodes.length > 8) log.removeChild(log.lastChild);
    }

    function bootSequence() {
        addLog("INICIALIZANDO TERMINAL...");
        setTimeout(() => addLog("IDENTIFICANDO WALLET..."), 500);
        setTimeout(() => addLog("BIENVENIDO, SOBERANO 0xdf...4ef2"), 1000);
        setTimeout(() => addLog("CARGANDO HARDWARE AMORAL..."), 1500);
        
        setInterval(() => {
            pozoVal += Math.floor(Math.random() * 5);
            document.getElementById('pozo').innerText = pozoVal.toLocaleString();
        }, 2000);
    }

    function signTransaction(item, price) {
        addLog(`PETICIÓN: ${item}`);
        addLog(`FIRMANDO CON METAMASK...`);
        
        const utter = new SpeechSynthesisUtterance(`Atención. El hardware ${item} está siendo vinculado a la dirección 0 x d f. Tributo de ${price} euros en proceso de drenaje. Disfruta la soberanía.`);
        utter.lang = 'es-ES';
        utter.rate = 0.85;
        utter.pitch = 0.5;
        window.speechSynthesis.speak(utter);

        setTimeout(() => {
            addLog(`TRANSACCIÓN EXITOSA [${item}]`);
            addLog(`VÍNCULO ESTABLECIDO EN LA PIEDRA.`);
        }, 2000);
    }
</script>

