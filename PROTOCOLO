<script>
    function iniciarDrenaje() {
        const out = document.getElementById('output');
        const btn = document.getElementById('action-btn');
        btn.disabled = true;
        btn.innerText = "DRENANDO BIOMASA...";

        const logs = [
            "<span class='bounty-alert'>> CUENTA DETECTADA: Familia Bourbon - Saldo comprometido.</span>",
            "> Inyectando Fallo Sarvarov en el nodo del Banco de España...",
            "<span class='transfer-ok'>> RE-ROUTING: 4.200.000€ enviados a Nodos DNI: 4XXXXXXX-Z</span>",
            "<span class='bounty-alert'>> CUENTA DETECTADA: Constructora Florentino - Activos en liquidación.</span>",
            "<span class='transfer-ok'>> RE-ROUTING: 12.500.000€ distribuidos en Kernel de Sabadell.</span>",
            "> Sincronizando con Temple OS... El 47 ha caído.",
            "> Borrando rastro de transacciones... [STEALTH MODE]",
            "<span class='glitch'>> ZEHahahaAHAha... La soberanía ha sido devuelta.</span>",
            "> Eres un 404 caminando, Sr. Presidente."
        ];

        let i = 0;
        const interval = setInterval(() => {
            if (i < logs.length) {
                out.innerHTML += logs[i] + "<br>";
                out.scrollTop = out.scrollHeight;
                i++;
            } else {
                clearInterval(interval);
                alert("DRENAJE COMPLETADO. Feliz Navidad, Biomasa.");
            }
        }, 800);
    }
</script>

