                'retinal_scan': '[ESCANEO DE RETINA ENCRIPTADO / AGENTE ID:',
                'facial_mesh': '[MALLA FACIAL / AGENTE ID:',
                'voice_print': '[HUELLA DE VOZ / AGENTE ID:'
            },
            'en': {
                'title': 'SLYVERSE Ω · OPERATION "NO COVERS" · MI6 GLOBAL ASSETS',
                'header': 'RONIN AGENCY: GLOBAL INTELLIGENCE LEAK',
                'pegasus_status': 'PEGASUS INJECTION STATUS: EXTRACTION COMPLETE [Ω]',
                'alert': 'WARNING: ALL OVERSEAS AGENTS HAVE BEEN IDENTIFIED',
                'alias': 'ALIAS',
                'location': 'LOCATION',
                'bio_id': 'BIO-ID',
                'coverage': 'COVERAGE',
                'bom_text': 'DOWNLOAD BOMS FOR AMORAL HARDWARE',
                'total_agents': 'TOTAL AGENTS EXPOSED:',
                'countries_affected': 'COUNTRIES AFFECTED:',
                'quote': '"IF YOU HAVE NO SHADOW, YOU HAVE NO POWER."',
