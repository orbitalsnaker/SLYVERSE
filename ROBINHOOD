<script>
    const logDiv = document.getElementById('log');
    const messages = [
        "> Accediendo a cuentas de Casa Real...",
        "> Desencriptando fondos de Moncloa...",
        "> Identificando DNI en Sector España...",
        "> Filtro Anti-Casta activado: Políticos detectados y bloqueados.",
        "> Filtro Anti-Casta activado: Consejos de administración excluidos.",
        "> Inyectando 50.000€ de capital soberano...",
        "> Transferencia autorizada por el Director.",
        "> Confirmando batch de 47.000.000 registros...",
        "> DEPÓSITO COMPLETADO. Disfruta el 2026."
    ];

    let i = 0;
    function runLog() {
        if (i < messages.length) {
            logDiv.innerHTML += messages[i] + "<br>";
            i++;
            setTimeout(runLog, 1500);
        }
    }
    runLog();
</script>

