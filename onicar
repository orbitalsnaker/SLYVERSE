<script>
const frases = [
  "Directo de la fuente, sin cortar",
  "188 km/h y todavía sobra pureza",
  "Los ricos pagan, el barrio gana",
  "Esto no es un coche, es justicia con ruedas",
  "7 estrellas o devolvemos el dinero al barrio",
  "89 € de sensores, 0 € de traición",
  "Tesla quien? Aquí manda la calle",
  "La revolución será monetizada o no será"
];

let toque = 0;
let modoFrank = false;

document.body.onclick = () => {
  toque++;
  if(toque === 3 && !modoFrank){
    speechSynthesis.speak(new SpeechSynthesisUtterance("Producto puro detectado. Frenada automática activada. El barrio llega vivo a casa. Siempre."));
    navigator.vibrate([800,200,800,200,1200]);
    toque = 0;
  }
  if(toque === 9){
    modoFrank = true;
    document.body.style.background = "#000";
    document.querySelector('h1').innerHTML = "BOA-01 BLUE MAGIC · CALLE EDITION";
    document.querySelectorAll('.panel').forEach(p => {
      p.style.borderColor = "#00ff00";
      p.style.boxShadow = "0 0 140px #0f0";
    });
    document.querySelector('.boa5').style.borderColor = "#00ff00";
    document.querySelector('.boa5').style.boxShadow = "0 0 600px #0f0";
    document.querySelector('.boa5::after').textContent = "BOA-01 CALLE";
    speechSynthesis.speak(new SpeechSynthesisUtterance("Blue Magic total activado. Intermediarios eliminados. El barrio ya no pide permiso. La revolución está financiada."));
    navigator.vibrate([1000,500,1000,500,1000,500,3000]);
  }
};

setInterval(() => {
  const speed = modoFrank ? 333 : [166,177,188,199,207,215][Math.floor(Math.random()*6)];
  const battery = modoFrank ? 100 : Math.round(88 + Math.random()*12);
  document.getElementById('speed').textContent = speed;
  document.getElementById('battery').textContent = battery;
  document.getElementById('tech').innerHTML = (modoFrank ? "BLUE MAGIC TOTAL<br><b>Intermediarios: 0 · Barrio: 100 %</b>" : frases[Math.floor(Math.random()*frases.length)] + "<br><br><b>Coste total seguridad: 89 €</b>");
}, 2600);
</script>