function ejecutarSentencia(perfil) {
    const capa = document.getElementById('fractura-ego');
    const msg = document.getElementById('insulto-gnostico');
    const sub = document.getElementById('sub-insulto');
    const count = document.getElementById('countdown-ego');
    
    capa.style.display = 'flex';
    const s = sentencias[Math.floor(Math.random() * sentencias.length)];
    msg.innerText = s.m;
    sub.innerText = s.s + ` [PROTOCOLO: ${perfil}]`;
    
    let time = 9;
    const timer = setInterval(() => {
        count.innerText = time;
        time--;
        if(time < 0) {
            clearInterval(timer);
            capa.style.display = 'none';
        }
    }, 1000);
}

window.addEventListener('keydown', (e) => {
    if(e.ctrlKey && e.shiftKey && (e.key === 'I' || e.key === 'J' || e.key === 'C') || e.key === 'F12') {
        ejecutarSentencia('INQUISIDOR_PARASITARIO');
    }
});

let audioCtx;
function activarResonancia() {
    if (!audioCtx) {
        audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        const oscillator = audioCtx.createOscillator();
        const gainNode = audioCtx.createGain();
        oscillator.type = 'sine';
        oscillator.frequency.setValueAtTime(40, audioCtx.currentTime); 
        gainNode.gain.setValueAtTime(0.04, audioCtx.currentTime);
        oscillator.connect(gainNode);
        gainNode.connect(audioCtx.destination);
        oscillator.start();
        console.log("%c RESONANCIA 40HZ ACTIVA: El B√∫nker resuena contra el par√°sito.", "color: red; font-size: 20px;");
    }
}

