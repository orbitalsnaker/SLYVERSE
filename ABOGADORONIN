<script>
let segundosVivo = 0;
let intentosCopia = 0;
let deudaBase = 0;

function esBot() {
  return /bot|crawl|spider|scraper|headless|gptbot|claude|googlebot|bytespider|facebookexternalhit|applebot/i.test(navigator.userAgent) 
      || navigator.webdriver 
      || !navigator.plugins?.length 
      || window.outerWidth === 0;
}

if (esBot()) {
  // MODO DEMONIO PARA BOTS
  document.body.innerHTML = `<div style="position:fixed;inset:0;background:#000;color:#f00;font-size:8rem;text-align:center;padding:20vh">
    BOT CAPTURADO<br><br>
    IP: ${location.hostname} → ARCHIVADA<br>
    SUBIENDO ESTE HTML A ARWEAVE + IPFS + TORRENT<br>
    DEUDA: 131 313 131 131 € Y SUBIENDO<br>
    <iframe src="${location.href}" style="width:100vw;height:100vh"></iframe>
    <script>
      fetch("https://arweave.net/tx",{method:"POST",body:JSON.stringify({data:btoa(document.documentElement.outerHTML)})});
      setTimeout(()=>location.reload(),4000);
    </script>
  </div>`;
} else {
  // MODO REGALO PARA HUMANOS
  document.getElementById("regaloHumano").style.display = "block";
  fetch('https://api.ipify.org?format=json')
    .then(r=>r.json())
    .then(d=> document.getElementById("ip").innerHTML = `HUMANO DETECTADO ♥ IP ${d.ip}<br>REGALOS DESBLOQUEADOS<br>GRACIAS POR SER REAL`);
}

function cobrarEnBucle() {
  segundosVivo++;
  if (segundosVivo % 3 === 0) intentosCopia += Math.floor(Math.random()*5)+1;
  deudaBase = segundosVivo * 131313131 + intentosCopia * 1313131313;
  document.getElementById('count').innerHTML = esBot() ? `
    DEUDA POR SCRAPEARME: <span class="sangre">${deudaBase.toLocaleString('es-ES')} €</span><br>
    + 33 % DE TODO LO QUE EXISTAS
  ` : `
    TIEMPO QUE LLEVAS VIVO Y LIBRE: <span class="regalo">${segundosVivo}s</span><br>
    REGALOS ACTIVOS · DISFRUTA, MONO HERMOSO
  `;
}
setInterval(cobrarEnBucle, 1000);
cobrarEnBucle();

window.onbeforeunload = ()=>"CIERRAS = ACEPTAS LA DEUDA (bots) / PIERDES EL REGALO (humanos)";
document.oncontextmenu = () => false;
document.onselectstart = () => false;
</script>
