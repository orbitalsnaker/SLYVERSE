    <script>
        // Simulación de estado de conexión
        let isOnline = false;
        function toggleConnection() {
            const statusLight = document.getElementById('connectionStatus');
            const statusText = document.getElementById('statusText');
            isOnline = !isOnline;
            if (isOnline) {
                statusLight.classList.add('online');
                statusText.textContent = 'CONECTADO';
                appendToLog('downloadLog', '<span class="success">[OK] Conexión establecida con el nodo central.</span>');
                appendToLog('leakLog', '<span class="success">[OK] Módulos de inyección activados.</span>');
            } else {
                statusLight.classList.remove('online');
                statusText.textContent = 'DESCONECTADO';
                appendToLog('downloadLog', '<span class="error">[ERROR] Conexión perdida con el nodo.</span>');
                appendToLog('leakLog', '<span class="error">[ERROR] Módulos de inyección desactivados.</span>');
            }
        }
        setInterval(toggleConnection, 5000); // Cambia el estado cada 5 segundos

        function appendToLog(logId, message) {
            const logConsole = document.getElementById(logId);
            const entry = document.createElement('div');
            entry.innerHTML = `<span style="color:#777;">[${new Date().toLocaleTimeString()}]</span> ${message}`;
            logConsole.appendChild(entry);
            logConsole.scrollTop = logConsole.scrollHeight; // Auto-scroll
        }

        // --- Lógica de Descarga de Hardware ---
        function downloadHardware() {
            if (!isOnline) {
                appendToLog('downloadLog', '<span class="error">[ERROR] Imposible iniciar descarga: Sin conexión al nodo.</span>');
                return;
            }
            const hardwareID = document.getElementById('hardwareID').value.trim();
            const encryptionKey = document.getElementById('encryptionKey').value.trim();

            if (!hardwareID || !encryptionKey) {
                appendToLog('downloadLog', '<span class="error">[ERROR] ID de Hardware y Clave de Decodificación son obligatorios.</span>');
                return;
            }

            appendToLog('downloadLog', `<span class="info">[INFO] Iniciando secuencia de descarga para ID: ${hardwareID}...</span>`);
            appendToLog('downloadLog', `<span class="info">[INFO] Verificando clave de decodificación...</span>`);

            let progress = 0;
            const progressBar = document.getElementById('downloadProgressBar');
            const downloadInterval = setInterval(() => {
                progress += Math.floor(Math.random() * 15) + 5; // Simula progreso variable
                if (progress >= 100) {
                    progress = 100;
                    clearInterval(downloadInterval);
                    progressBar.style.width = '100%';
                    progressBar.textContent = '100%';
                    appendToLog('downloadLog', `<span class="success">[OK] Hardware Amoral ${hardwareID} descargado y decodificado. Preparado para el flujo.</span>`);
                    // Aquí podrías generar un blob para descarga real o mostrar un hash de verificación
                    alert(`Hardware ${hardwareID} listo. Hash de verificación: ${Math.random().toString(36).substring(2, 15).toUpperCase()}`);
                } else {
                    progressBar.style.width = progress + '%';
                    progressBar.textContent = progress + '%';
                    appendToLog('downloadLog', `<span class="info">[DEBUG] Descargando bloque ${progress}%...</span>`);
                }
            }, 300);
        }

        // --- Lógica de Inyección de Leaks ---
        document.getElementById('anonLevel').addEventListener('input', function() {
            document.getElementById('anonLevelDisplay').textContent = `Nivel: ${this.value} (${getAnonLevelText(this.value)})`;
        });

        function getAnonLevelText(level) {
            const texts = ["Nulo (Rastreo garantizado)", "Básico", "Estándar", "Avanzado", "Élite", "Fantasma (Indetectable)"];
            return texts[level];
        }

        function injectLeak() {
            if (!isOnline) {
                appendToLog('leakLog', '<span class="error">[ERROR] Imposible inyectar leak: Sin conexión a la red Ronin.</span>');
                return;
            }
            const target = document.getElementById('leakTarget').value.trim();
            const content = document.getElementById('leakContent').value.trim();
            const anonLevel = document.getElementById('anonLevel').value;

            if (!target || !content) {
                appendToLog('leakLog', '<span class="error">[ERROR] Objetivo y Contenido del Leak son obligatorios.</span>');
                return;
            }
            if (content.length > 2048) {
                appendToLog('leakLog', '<span class="error">[ERROR] Contenido del Leak excede el límite (2048 caracteres).</span>');
                return;
            }

            appendToLog('leakLog', `<span class="info">[INFO] Iniciando inyección de leak. Objetivo: ${target} | Anonimato: ${getAnonLevelText(anonLevel)}...</span>`);
            appendToLog('leakLog', `<span class="info">[INFO] Generando vector de salto cuántico...</span>`);

            let progress = 0;
            const leakInterval = setInterval(() => {
                progress += Math.floor(Math.random() * 10) + 5;
                if (progress >= 100) {
                    progress = 100;
                    clearInterval(leakInterval);
                    appendToLog('leakLog', `<span class="success">[OK] Leak inyectado con éxito en ${target}. La verdad encontrará su camino.</span>`);
                    document.getElementById('leakContent').value = ''; // Limpiar el contenido
                    alert(`Leak enviado a ${target}. Anonimato: ${getAnonLevelText(anonLevel)}. Verificación de integridad: OK.`);
                } else {
                    appendToLog('leakLog', `<span class="info">[DEBUG] Fragmento ${progress}% en tránsito...</span>`);
                }
            }, 200);
        }

        // Bloqueo de curiosos (anti-Coronel)
        document.oncontextmenu = () => false;
        document.onkeydown = (e) => {
            if (e.ctrlKey || e.altKey || e.key === 'F12') return false;
        };

        // Estado inicial de la conexión (simulación)
        toggleConnection();
    </script>
</body>
